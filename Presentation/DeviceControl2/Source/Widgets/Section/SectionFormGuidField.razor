@using DeviceControl2.Source.Shared.Auth.Policies

<AuthorizeView Policy="@PolicyEnum.Admin">
  <SectionFormInputWrapper
    Label="UID"
    HtmlFor="@HtmlId"
    ValueToCopy="@Value"
  >
    <InputTextField
      id="@HtmlId"
      Value="@Value"
      Disabled
    />
  </SectionFormInputWrapper>
</AuthorizeView>

@code {
  [Parameter] public string Value { get; set; } = string.Empty;

  private string HtmlId { get; set; } = $"uid-{Guid.NewGuid()}";
}