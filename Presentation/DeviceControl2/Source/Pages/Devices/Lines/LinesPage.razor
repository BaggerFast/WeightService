@using DeviceControl2.Source.Features
@using DeviceControl2.Source.Widgets.Section
@using DeviceControl2.Source.Widgets.Section.DataGridActions
@using Ws.Domain.Models.Entities.Ref

@inherits SectionDataGridPageBase<LineEntity>
@attribute [Route($"{RouteUtils.SectionLines}{RouteUtils.SectionQrlQuery}")]
@rendermode InteractiveServer


<PageHeader>
  <span>@Localizer["SectionLines"]</span>
  <ItemsCounter ItemsCount="@SectionItems.Count()" IsLoading="IsLoading"/>
  <DataGridActionReload OnClick="@UpdateData" IsLoading="IsLoading" />
  <DataGridActionCreate OnClick="@OpenSectionCreateForm" />
</PageHeader>

<DataGridWrapper>
  <DataGridContainer
    TItem="LineEntity"
    Items="SectionItems"
    OnItemSelect="@(item => OpenDataGridEntityModal(item))"
  >
    <ColumnsContent>
      <DataGridColumn
        Caption="@Localizer["DataGridColumnVersion"]"
        Field="@nameof(LineEntity.Version)"
        Width="10%"
      />
      <DataGridColumn
        Caption="@Localizer["DataGridColumnLine"]"
        Field="@nameof(LineEntity.Name)"
        Width="15%"
      />
      <DataGridColumn
        Caption="@Localizer["DataGridColumnNumber"]"
        Field="@nameof(LineEntity.Number)"
        Width="10%"
      />
      <DataGridColumn
        Caption="@Localizer["DataGridColumnPcName"]"
        Field="PcName"
        Width="15%"
      />
      <DataGridColumn
        Caption="@Localizer["DataGridColumnPrinter"]"
        Field="Printer.Name"
        Width="20%"
      />
      <DataGridColumn
        Caption="@Localizer["DataGridColumnProductionSite"]"
        Field="Warehouse.ProductionSite.Name"
        Width="20%"
      />
      <DataGridColumn
        Caption="@Localizer["DataGridColumnCounter"]"
        Field="@nameof(LineEntity.Counter)"
        Width="10%"
      />
    </ColumnsContent>
    <ContextMenuContent>
      <DataGridActionViewItem OnClick="@(() => ContextFuncWrapper(context.Item, context.CloseContextMenu, item => OpenDataGridEntityModal(item)))" />
      <DataGridActionOpenInNewTab OnClick="@(() => ContextFuncWrapper(context.Item, context.CloseContextMenu, item => OpenItemInNewTab(item)))" />
      <DataGridActionDeleteItem OnClick="@(() => ContextFuncWrapper(context.Item, context.CloseContextMenu, item => DeleteItem(item)))" />
    </ContextMenuContent>
  </DataGridContainer>
</DataGridWrapper>