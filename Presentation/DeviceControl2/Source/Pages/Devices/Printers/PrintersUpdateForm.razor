@using DeviceControl2.Source.Widgets.Section
@using DeviceControl2.Source.Widgets.Section.FormActions
@using DeviceControl2.Source.Widgets.Section.FormFields
@using Ws.Domain.Models.Entities.Ref
@using Ws.Domain.Models.Enums

@inherits SectionFormBase<PrinterEntity>

<SectionForm
  FormModel="@DialogItem"
  ChangeDate="@DialogItem.ChangeDt"
  CreateDate="@DialogItem.CreateDt"
  Validator="@(new PrintersUpdateFormValidator())"
  OnCancelAction="@OnCancelAction"
  OnSubmitAction="@UpdateItem"
>
  <FieldsContent>
    <SectionGuidField Value="@DialogItem.Uid" />

    <SectionReadOnlyField
      Label="@WsDataLocalizer["ColPort"]"
      Value="@DialogItem.Port"
    />

    <SectionTextField
      Label="@WsDataLocalizer["ColName"]"
      @bind-Value="DialogItem.Name"
      For="@(() => DialogItem.Name)"
    />

    <SectionIpField
      Label="@($"IP ${Localizer["FormPrinterControl"]}")"
      @bind-Value="@DialogItem.Ip"
      For="@(() => DialogItem.Ip)"
      Path="@($"http://{DialogItemCopy.Ip}")"
    />

    <SectionSelectSingleField
      TItem="PrinterTypeEnum"
      Label="@WsDataLocalizer["ColType"]"
      Items="PrinterTypesEntities"
      @bind-Value="@DialogItem.Type"
      ItemDisplayName="item => EnumHelper.GetEnumDescription(item)"
      For="@(() => DialogItem.Type)"
    />

    <SectionSelectSingleField
      TItem="ProductionSiteEntity"
      Label="@WsDataLocalizer["ColProductionSite"]"
      Items="ProductionSites"
      @bind-Value="@DialogItem.ProductionSite"
      ItemDisplayName="item => item.Name"
      For="@(() => DialogItem.ProductionSite)"
      Path="@Redirector.ToPath(DialogItem.ProductionSite, User)"
      IsFilterable
    />
  </FieldsContent>
  <ActionsContent>
    <SectionFormActionShare Path="@($"{RouteUtils.SectionPrinters}/{DialogItem.Uid}")" />
    <SectionFormActionReset OnClick="@ResetAction" />
    <SectionFormActionDelete OnClick="@DeleteItem" />
  </ActionsContent>
</SectionForm>