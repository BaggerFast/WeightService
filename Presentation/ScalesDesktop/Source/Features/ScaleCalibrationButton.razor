@using ScalesDesktop.Source.Shared.UI

<Button
  Variant="ButtonVariant.Secondary"
  Size="ButtonSize.Full"
  OnClick="@HandleButtonOpenScalesTerminal"
  disabled="@(!(IsScalesAvailable && !IsOnceClicked))"
  class="border disabled:!opacity-70"
>
  <div class="flex items-center flex-col">
    <span class="xl:text-xl">@LabelsLocalizer["BtnScaleCalibration"]</span>
      @if (IsOnceClicked)
      {
        <span class="xl:text-lg">@GetCooldownString()</span>
      }
  </div>
</Button>
