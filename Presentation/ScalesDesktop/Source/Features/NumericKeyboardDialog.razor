@using Blazor.Heroicons.Outline


<div class="flex w-full flex-col overflow-hidden p-4">
  <div class="flex overflow-hidden items-center justify-between w-full h-20 px-4 border rounded-md">
    <button
      type="button"
      @onclick="ClearLastNumber"
      class="flex bg-gray-100 border justify-center items-center overflow-hidden rounded-md px-14 py-4 hover:bg-gray-200"
    >
      <ArrowLeftIcon class="h-8 w-8" />
    </button>
    <div class="flex items-center h-full">
      @foreach (char digit in Number)
      {
        <span class="text-6xl font-light flex justify-center w-10">@digit</span>
      }
    </div>
  </div>
  <div class="grid grid-cols-3 grid-rows-4 mt-8 w-full gap-2">
    @foreach (CalculatorControl control in CalculatorControls)
    {
      <button
        type="button"
        class="flex justify-center items-center bg-gray-100 border rounded-md text-3xl transition-colors
                hover:bg-sky-200 w-full h-20"
        @onclick=@control.CalculatorAction
      >
        @control.Title
      </button>
    }
  </div>
</div>