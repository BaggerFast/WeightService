@using Blazor.Heroicons.Outline
@using ScalesDesktop.Source.Shared.UI
@using ScalesDesktop.Source.Shared.Utils


<div class="w-full h-fit rounded-lg flex flex-col max-h-screen bg-white border overflow-x-hidden overflow-y-auto">
  <div class="h-12 w-full shrink-0 items-center border-b px-4 flex justify-between">
    <div class="w-32">
      <a href="@RouteUtils.Pallet">
        <Button Variant="ButtonVariant.Outline" OnClick="@CloseModal">
          <ArrowLeftIcon class="h-4 w-4 mr-2" />
          @PalletLocalizer["BtnBack"]
        </Button>
      </a>
    </div>
    <Button Variant="ButtonVariant.Secondary">
      @PalletLocalizer["CreatePalletFormHeader"]
    </Button>
    <div class="w-32"></div>
  </div>
  <div class="h-full w-full p-6 grow overflow-y-auto">
    <CreateForm />
  </div>
</div>
