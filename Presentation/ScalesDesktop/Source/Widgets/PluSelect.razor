@using ScalesDesktop.Source.Shared.UI
@using Blazorise.DataGrid
@using Ws.Domain.Models.Entities.Ref1c
@inherits DataGridBase<Ws.Domain.Models.Entities.Ref1c.PluEntity>


<DialogWrapper Title="@PalletLocalizer["PluSelectHeader"]">
  <DataGridWrapper
    TItem="PluEntity"
    GridData="GridData"
    OnItemSelect="OnItemSelect"
  >
    <DataGridColumn
      Caption="@WsDataLocalizer["ColNumber"]"
      TItem="PluEntity"
      Field="@nameof(PluEntity.Number)"
      Width="15%"
    />
    <DataGridColumn
      Caption="@WsDataLocalizer["ColType"]"
      TItem="PluEntity"
      Field="@nameof(PluEntity.IsCheckWeight)"
      Width="15%"
    >
      <DisplayTemplate>
        @(context.IsCheckWeight ? WsDataLocalizer["ColPluWeight"] : WsDataLocalizer["ColPluPiece"])
      </DisplayTemplate>
    </DataGridColumn>
    <DataGridColumn
      Caption="@WsDataLocalizer["ColName"]"
      TItem="PluEntity"
      Field="@nameof(PluEntity.Name)"
      Width="70%"
    />
  </DataGridWrapper>
</DialogWrapper>
