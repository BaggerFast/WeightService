@using Blazor.Heroicons
<div class="-mx-2 flex items-start space-x-4 rounded-md p-2 transition-colors hover:bg-secondary">
  <Heroicon Name="@IconName" Type="HeroiconType.Outline" class="mt-px size-5 shrink-0" />
  <div class="space-y-1">
    <h4 class="text-sm font-medium leading-none">
      @CardTitle
    </h4>
    <p class="text-sm text-muted-foreground">
      @CardDescription
    </p>
  </div>
</div>

@code {
  [Parameter] public string IconName { get; set; } = string.Empty;
  [Parameter] public RenderFragment? CardTitle { get; set; }
  [Parameter] public RenderFragment? CardDescription { get; set; }
}