@using ButtonType = ScalesDesktop.Source.Shared.UI.ButtonType
@using ScalesDesktop.Source.Shared.UI
@using ScalesDesktop.Source.Shared.UI.Form
@using Ws.Domain.Models.Entities.Ref

<div class="rounded-lg overflow-hidden max-w-sm p-6 border shadow-sm bg-white w-full">
  <div class="w-full pb-4 border-b">
    <h2 class="text-lg font-semibold leading-none tracking-tight">
      @PalletLocalizer["PalletManFormHeader"]
    </h2>
  </div>
  <EditForm
    Model="FormModel"
    OnValidSubmit="OnSubmit"
    OnInvalidSubmit="HandleInvalidForm"
    class="space-y-4 pt-3"
  >
    <DataAnnotationsValidator />
    <InputLabelWrapper Label="@WsDataLocalizer["ColUser"]" HtmlFor="login-user">
      <SelectSingle
        TItem="PalletManEntity"
        @bind-SelectedItem="@FormModel.User"
        ItemDisplayName="@(item => item.FioShort)"
        Items="@GetAllPalletMen"
        Placeholder="@PalletLocalizer["UserSelectPlaceholder"]"
      />
    </InputLabelWrapper>
    <InputLabelWrapper Label="@WsDataLocalizer["ColPassword"]" HtmlFor="login-password">
      <InputTextField
        id="login-password"
        @bind-Value="@FormModel.Password"
        Type="TextInputType.Password"
        Placeholder="@PalletLocalizer["PasswordInputPlaceholder"]"
      />
    </InputLabelWrapper>
    <Button Type="ButtonType.Submit" Class="!mt-4">
      @PalletLocalizer["BtnLogIn"]
    </Button>
  </EditForm>
</div>