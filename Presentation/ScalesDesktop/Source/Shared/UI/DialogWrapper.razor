@using Blazor.Heroicons.Outline

<div class="rounded-md max-h-screen flex flex-col overflow-hidden">
  <div class="w-full px-4 shrink-0 grid grid-cols-4 h-14 border-b">
    <div class="flex items-center">
      <Button
        Variant="ButtonVariant.Outline"
        Size="ButtonSize.Large"
        OnClick="@CloseCurrentDialog"
      >
        <ArrowLeftIcon class="h-5 w-5 mr-2"/>
        <span class="text-lg">Назад</span>
      </Button>
    </div>
    <div class="h-full w-full col-span-2 flex items-center justify-center grow overflow-hidden">
      <div class="px-5 py-2 rounded-md overflow-hidden bg-secondary/80 hover:bg-secondary">
        <h3 class="text-xl">@Title</h3>
      </div>
    </div>
  </div>
  <div class="w-full overflow-y-auto overflow-x-hidden">
    @ChildContent
  </div>
</div>
