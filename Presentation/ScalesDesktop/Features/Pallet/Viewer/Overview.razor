@using System.Globalization
<div class="w-full h-full flex bg-neutral-50 flex-col overflow-x-hidden overflow-y-auto pt-6 pb-8 px-5 space-y-5">
  <div class="w-full border-b border-b-neutral-200 flex px-2 justify-between items-center pb-4">
    <h1 class="font-medium text-xl">Паллета №@PalletContext.CurrentPallet.Counter</h1>
    <SharedButton OnClick="@PrintPalletCard">
      Печать ПК
    </SharedButton>
  </div>
  <div class="w-full grid grid-cols-1 gap-x-10 gap-y-4 px-2 lg:grid-cols-2 items-start">
    <div class="space-y-2">
      <SharedLabel for="number">Номер</SharedLabel>
      <SharedInputText
        id="number"
        Value="@PalletContext.CurrentPallet.Counter.ToString()"
        class="disabled:opacity-100"
        disabled
      />
    </div>
    <div class="space-y-2">
      <SharedLabel for="barcode">Штрихкод</SharedLabel>
      <SharedInputText
        id="barcode"
        Value="@PalletContext.CurrentPallet.Barcode"
        class="disabled:opacity-100"
        disabled
      />
    </div>
    <div class="space-y-2">
      <SharedLabel for="line">Линия</SharedLabel>
      <SharedInputText
        id="line"
        Value="@PalletContext.CurrentPallet.Line"
        class="disabled:opacity-100"
        disabled
      />
    </div>
    <div class="space-y-2">
      <SharedLabel for="delivery">Сдатчик</SharedLabel>
      <SharedInputText
        id="delivery"
        Value="@PalletContext.CurrentPallet.PalletMan"
        class="disabled:opacity-100"
        disabled
        />
    </div>
    <div class="space-y-2">
      <SharedLabel for="count">Количество</SharedLabel>
      <SharedInputText
        id="count"
        Value="@PalletContext.CurrentPallet.LabelCount.ToString()"
        class="disabled:opacity-100"
        disabled
      />
    </div>
    <div class="space-y-2">
      <SharedLabel for="kneading">Замес</SharedLabel>
      <SharedInputText
        id="kneading"
        Value="@PalletContext.CurrentPallet.Kneading.ToString()"
        class="disabled:opacity-100"
        disabled
      />
    </div>
    <div class="space-y-2">
      <SharedLabel for="netto">Вес нетто</SharedLabel>
      <SharedInputText
        id="netto"
        Value="@PalletContext.CurrentPallet.WeightNet?.ToString(CultureInfo.InvariantCulture)"
        class="disabled:opacity-100"
        disabled
      />
    </div>
    <div class="space-y-2">
      <SharedLabel for="brutto">Вес брутто</SharedLabel>
      <SharedInputText
        id="brutto"
        Value="@PalletContext.CurrentPallet.WeightBrut?.ToString(CultureInfo.InvariantCulture)"
        class="disabled:opacity-100"
        disabled
      />
    </div>
    <div class="space-y-2">
      <SharedLabel for="plu">ПЛУ</SharedLabel>
      <SharedInputText
        id="plu"
        Value="@PalletContext.CurrentPallet.Plu"
        class="disabled:opacity-100"
        disabled
      />
    </div>
  </div>
</div>