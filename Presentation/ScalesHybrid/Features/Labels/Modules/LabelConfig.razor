@using Blazor.Heroicons.Outline


<div class="w-full h-full flex flex-col overflow-hidden">
  <div class="flex flex-col overflow-hidden items-start h-12 shrink-0 justify-center w-full px-6 border-b border-b-black/[.1] xl:px-8">
    <p class="text-xl line-clamp-1 text-center xl:text-2xl">
      Настройки
    </p>
  </div>
  <div class="flex flex-col w-full h-full pt-2 pb-5 px-6 overflow-hidden justify-around xl:px-8 xl:pt-4 xl:pb-7">
    <LineInputWithReset />
    <InputWithLabel
      Label="Склад"
      Value="@LineContext.Line.Warehouse.Name"
      IsDisabled
    />
    <InputWithLabel
      Label="ПЛУ"
      Value=@(LineContext.Plu.IsNew ? "ПЛУ не выбрана" : LineContext.Plu.DisplayName)
      OnClickAction="ShowPluSelectDialog"
      IsDisabled="LineContext.Line.IsNew"/>
    <InputWithLabel
      Label="Вложенность"
      Value=@(LineContext.PluNesting.IsNew ? "Вложенность не выбрана" : NameFormatting.GetPluNestingFormattedName(LineContext.PluNesting))
      IsDisabled/>
  </div>
</div>
