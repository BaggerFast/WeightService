<div class="flex flex-col gap-1 w-full">
  <label class="text-xl truncate xl:text-2xl">
    @Label
  </label>
  <div class="flex h-12 overflow-hidden w-full gap-2 xl:h-14">
    <button
      type="button"
      disabled="@IsDisabled"
      @onclick="OnClickAction"
      class="flex h-full px-2 w-full items-center border border-black/[.1] rounded-md overflow-hidden transition-colors
              bg-gray-100 hover:bg-sky-200 disabled:bg-gray-200"
    >
      <p class="text-xl truncate font-light xl:text-2xl">
        @Value
      </p>
    </button>
    @ChildContent
  </div>
</div>