<div class="w-full h-full flex flex-col overflow-hidden">
  @if (LineContext.Plu.IsNew)
  {
    <div class="flex w-full h-full items-center justify-center">
      <p class="text-center text-xl xl:text-3xl">
        @Localizer["ProductDisplayWarningPluSelect"]
      </p>
    </div>
  }
  else if (IsScalesDisconnected)
  {
    <div class="flex w-full h-full items-center justify-center">
      <p class="text-center text-red-500 text-xl xl:text-3xl">
        @Localizer["ProductDisplayWarningScalesDisconnected"]
      </p>
    </div>
  }
  else
  {
    <div class="flex flex-col overflow-hidden items-center h-12 shrink-0 justify-center w-full px-4 border-b border-b-black/[.1]">
      <p class="text-xl font-medium line-clamp-1 text-center xl:text-2xl">
        @LineContext.Plu.DisplayName
      </p>
    </div>
    <div class="flex overflow-hidden justify-around flex-col h-full w-full px-8 py-3 xl:py-5 xl:px-12">
      <LabelDisplayNetWeight />
      <LabelDisplayTareWeight />
      <LabelDisplayDate />
      <LabelDisplayKneading />
    </div>
    <div class="flex gap-8 w-full px-8 pb-5 shrink-0 h-24 xl:h-28 xl:px-12 xl:pb-8">
      <div class="w-1/2 h-full">
        <ScaleCalibrationButton />
      </div>
      <div class="w-1/2 h-full">
        <LabelPrintButton/>
      </div>
    </div>
  }
</div>
