<div class="flex items-center overflow-hidden w-full px-2 h-full">
  <div class="flex overflow-hidden flex-col w-full h-[30rem] border border-black/[.1] rounded-xl bg-white shadow-lg">
    @if (LineContext.Plu.IsNew)
    {
      <div class="flex w-full h-full items-center justify-center">
        <p class="text-center text-2xl">
          @Localizer["ProductDisplayWarningPluSelect"]
        </p>
      </div>
    }
    else if (LineContext.Plu.IsCheckWeight && IsScalesDisconnected)
    {
      <div class="flex w-full h-full items-center justify-center">
        <p class="text-center text-red-500 text-2xl">
          @Localizer["ProductDisplayWarningScalesDisconnected"]
        </p>
      </div>
    }
    else
    {
      <div class="flex flex-col overflow-hidden items-center justify-center w-full px-4 border-b border-b-black/[.1]">
        <p class="truncate text-center text-lg">
          @(LineContext.Plu.IsCheckWeight ? "Весовая продукция" : "Штучная продукция")
        </p>
        <p class="text-2xl pb-2 font-medium line-clamp-2 text-center">
          @LineContext.Plu.DisplayName
        </p>
      </div>
      <ul class="flex overflow-hidden justify-around flex-col h-full w-full px-8 py-4">
        @if (LineContext.Plu.IsCheckWeight)
        {
          <ProductDisplayWeight />
        }
        else
        {
          <ProductDisplayPiece />
        }
        <ProductDisplayKneading />
      </ul>
    }
  </div>
</div>