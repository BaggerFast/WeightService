@using Blazor.Heroicons.Outline

<li>
  <ProductDisplayItem Label="@Localizer["ProductDisplayNestingLabel"]">
    <p class="text-2xl font-medium text-center line-clamp-2">
      @GetFormattedPluNestingName()
    </p>
  </ProductDisplayItem>
</li>
<li>
  <ProductDisplayItem Label="@Localizer["ProductDisplayDateLabel"]">
    <div class="flex overflow-hidden w-full h-full">
      <button
        type="button"
        class="bg-gray-100 border border-black/[.1] w-[30%] flex items-center justify-center h-full rounded-md
                overflow-hidden transition-colors hover:bg-sky-200"
        @onclick="DecreaseDate"
      >
        <ChevronLeftIcon class="h-10 w-10"/>
      </button>
      <p class="text-3xl w-2/5 flex items-center justify-center font-medium truncate">
        @LineContext.KneadingModel.ProductDate.ToString("dd-MM-yyyy")
      </p>
      <div class="w-[30%] flex gap-2 h-full">
        <button
          type="button"
          class="bg-gray-100 border border-black/[.1] w-1/2 flex items-center justify-center h-full rounded-md
                  overflow-hidden transition-colors hover:bg-sky-200"
          @onclick="ResetDate">
          <ArrowPathIcon class="h-10 w-10"/>
        </button>
        <button
          type="button"
          class="bg-gray-100 border border-black/[.1] w-1/2 flex items-center justify-center h-full rounded-md
                  overflow-hidden transition-colors hover:bg-sky-200"
          @onclick="IncreaseDate">
          <ChevronRightIcon class="h-10 w-10"/>
        </button>
      </div>
    </div>
  </ProductDisplayItem>
</li>
<li>
  <ProductDisplayItem Label="@Localizer["ProductDisplayKneadingLabel"]">
    <div class="flex items-center w-full h-full">
      <div class="w-[30%] h-full"></div>
      <p class="text-3xl flex items-center justify-center w-2/5 font-medium truncate">
        @LineContext.KneadingModel.KneadingCount
      </p>
      <button
        type="button"
        @onclick="ShowCalculatorDialog"
        class="bg-gray-100 border border-black/[.1] w-[30%] flex items-center justify-center h-full rounded-md
                overflow-hidden transition-colors hover:bg-sky-200"
      >
        <p class="text-2xl">@Localizer["ButtonCalculatorEnter"]</p>
      </button>
    </div>
  </ProductDisplayItem>
</li>

