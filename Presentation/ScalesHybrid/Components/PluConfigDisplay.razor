<div class="plu-config__wrapper">
  <div class="plu-config__container">
    <div class="plu-config__header">
      <p class="plu-config__header-title">
        Площадка 16
      </p>
    </div>
    <ul class="plu-config__list">
      @foreach (PluConfigItem item in ConfigItems)
      {
        <li class="plu-config__item">
          <label class="plu-config__item-label">
            @item.Title
          </label>
          <button
            type="button"
            class="plu-config__item-button"
            @onclick="item.SelectItemAction">
            @item.SelectedItemName
          </button>
        </li>
      }
    </ul>
  </div>
</div>
