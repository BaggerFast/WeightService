<button
  class="flex flex-col overflow-hidden items-center justify-center bg-gray-100 border border-black/[.1] rounded-md w-full h-full
          hover:bg-sky-400 disabled:bg-gray-300"
  @onclick="HandleButtonOpenScalesTerminal"
  disabled="@(!(IsScalesAvailable && !IsScalesTerminalWasOpened))">
  <p class="text-2xl">@Localizer["ButtonScaleCalibration"]</p>
  @if (IsScalesTerminalWasOpened)
  {
    <p class="text-lg">Доступно через @SecToOpen</p>
  }
</button>
