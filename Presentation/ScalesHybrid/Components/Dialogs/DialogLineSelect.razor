@using Ws.StorageCore.Entities.SchemaScale.Scales
@using Blazor.Heroicons.Outline

<DialogHeader Label="@Localizer["DialogLineSelectHeaderLabel"]" />

<ModalBody Class="!p-0">
  <BlazorDataGrid
    SelectedRowChanged="OnRowSelected"
    Data="GetLineEntities()"
    TItem="SqlLineEntity"
  >
    <DataGridColumns>
      <BlazorDataGridColumn
        Caption="@Localizer["DataGridColumnNumber"]"
        TItem="SqlLineEntity"
        Field="@nameof(SqlLineEntity.Number)"
        Width="15%"
      />
      <BlazorDataGridColumn
        Caption="@Localizer["DataGridColumnName"]"
        TItem="SqlLineEntity"
        Field="@nameof(SqlLineEntity.Description)"
        Width="45%"
      />
      <BlazorDataGridColumn
        Caption="@Localizer["DataGridColumnWorkshop"]"
        TItem="SqlLineEntity"
        Field="WorkShop.Name"
        Width="40%"
      />
    </DataGridColumns>
    <PageButtonTemplate>
      <button type="button" class="h-10 w-10 text-xl">
        @context.PageNumber
      </button>
    </PageButtonTemplate>
    <NextPageButtonTemplate>
      <ChevronRightIcon class="h-6 w-6 mx-2 my-2" />
    </NextPageButtonTemplate>
    <PreviousPageButtonTemplate>
      <ChevronLeftIcon class="h-6 w-6 mx-2 my-2" />
    </PreviousPageButtonTemplate>
    <LastPageButtonTemplate>
      <ChevronDoubleRightIcon class="h-6 w-6 mx-2 my-2" />
    </LastPageButtonTemplate>
    <FirstPageButtonTemplate>
      <ChevronDoubleLeftIcon class="h-6 w-6 mx-2 my-2" />
    </FirstPageButtonTemplate>
    <TotalItemsTemplate>
      <span class="hidden"></span>
    </TotalItemsTemplate>
    <TotalItemsShortTemplate>
      <span class="hidden"></span>
    </TotalItemsShortTemplate>
  </BlazorDataGrid>
</ModalBody>
