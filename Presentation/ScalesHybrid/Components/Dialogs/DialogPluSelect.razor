@using Ws.StorageCore.Entities.SchemaRef1c.Plus
@using Blazor.Heroicons.Outline

<ModalHeader>
  <p class="text-2xl">Выбор ПЛУ</p>
  <button
    type="button"
    @onclick="CloseModal"
    class="w-10 h-10 bg-gray-100 flex overflow-hidden border border-black/[.1] rounded-md justify-center items-center"
  >
    <XMarkIcon class="h-8 w-8" />
  </button>
</ModalHeader>
<ModalBody Class="!p-0">
  <BlazorDataGrid
    TItem="SqlPluEntity"
    SelectedRowChanged="OnRowSelected"
    Data="GetPluEntities()"
  >
    <DataGridColumns>
      <DataGridColumn
        Caption="Номер"
        TItem="SqlPluEntity"
        Field="@nameof(SqlPluEntity.Number)"
        Width="15%"
      />
      <DataGridColumn
        Caption="Тип"
        TItem="SqlPluEntity"
        Field="@nameof(SqlPluEntity.IsCheckWeight)"
        Width="15%"
      >
        <DisplayTemplate>
          <p class="text-xl text-black">
            @(context.IsCheckWeight ? "Вес" : "Шт")
          </p>
        </DisplayTemplate>
      </DataGridColumn>
      <DataGridColumn
        Caption="Название"
        TItem="SqlPluEntity"
        Field="@nameof(SqlPluEntity.Name)"
        CellClass="@(_ => "truncate !w-[98%]")"
        Width="70%"
      />
    </DataGridColumns>
    <PageButtonTemplate>
      <div class="flex items-center justify-center h-10 w-10 text-xl">
        @context.PageNumber
      </div>
    </PageButtonTemplate>
    <NextPageButtonTemplate>
      <ChevronRightIcon class="h-6 w-6 mx-2 my-2" />
    </NextPageButtonTemplate>
    <PreviousPageButtonTemplate>
      <ChevronLeftIcon class="h-6 w-6 mx-2 my-2" />
    </PreviousPageButtonTemplate>
    <LastPageButtonTemplate>
      <ChevronDoubleRightIcon class="h-6 w-6 mx-2 my-2" />
    </LastPageButtonTemplate>
    <FirstPageButtonTemplate>
      <ChevronDoubleLeftIcon class="h-6 w-6 mx-2 my-2" />
    </FirstPageButtonTemplate>
    <TotalItemsTemplate>
      <span class="hidden"/>
    </TotalItemsTemplate>
    <TotalItemsShortTemplate>
      <span class="hidden"/>
    </TotalItemsShortTemplate>
  </BlazorDataGrid>
</ModalBody>