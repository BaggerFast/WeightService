@using Ws.StorageCore.Entities.SchemaRef1c.Plus
@using Blazor.Heroicons.Outline

<ModalHeader>
  <p class="text-2xl">Выбор ПЛУ</p>
  <button
    type="button"
    @onclick="CloseModal"
    class="w-10 h-10 bg-gray-100 flex overflow-hidden border border-black/[.1] rounded-md justify-center items-center"
  >
    <XMarkIcon class="h-8 w-8" />
  </button>
</ModalHeader>
<DataGrid
  SelectedRowChanged="OnRowSelected"
  Data="GetPluEntities()"
  TItem="SqlPluEntity"
  PageSize="7"
  ShowPager
  PagerPosition="DataGridPagerPosition.Bottom"
  PagerOptions="new() { PaginationPosition=PagerElementPosition.Center }"
  Class="text-xl font-semibold !text-black"
>
  <DataGridColumns>
    <DataGridColumn
      Caption="Номер"
      Field="@nameof(SqlPluEntity.Number)"
      Width="15%"
    />
    <DataGridColumn
      Caption="Тип"
      Field="@nameof(SqlPluEntity.IsCheckWeight)"
      Width="15%"
    >
      <DisplayTemplate>
        <p class="text-xl font-semibold text-black">@(context.IsCheckWeight ? "Вес" : "Шт")</p>
      </DisplayTemplate>
    </DataGridColumn>
    <DataGridColumn
      Caption="Название"
      Field="@nameof(SqlPluEntity.Name)"
      Width="70%"
    />
  </DataGridColumns>
  <PageButtonTemplate>
      <button type="button" class="h-10 w-10 text-xl">
          @context.PageNumber
      </button>
  </PageButtonTemplate>
  <NextPageButtonTemplate>
    <ChevronRightIcon class="h-6 w-6 mx-2 my-2" />
  </NextPageButtonTemplate>
  <PreviousPageButtonTemplate>
    <ChevronLeftIcon class="h-6 w-6 mx-2 my-2" />
  </PreviousPageButtonTemplate>
  <LastPageButtonTemplate>
    <ChevronDoubleRightIcon class="h-6 w-6 mx-2 my-2" />
  </LastPageButtonTemplate>
  <FirstPageButtonTemplate>
    <ChevronDoubleLeftIcon class="h-6 w-6 mx-2 my-2" />
  </FirstPageButtonTemplate>
  <TotalItemsTemplate>
    <span class="hidden"/>
  </TotalItemsTemplate>
  <TotalItemsShortTemplate>
    <span class="hidden"/>
  </TotalItemsShortTemplate>
</DataGrid>
