<div class="flex w-full flex-col overflow-hidden p-4">
  <div class="flex overflow-hidden items-center justify-end w-full h-20 px-4 border border-black/[.1] rounded-md">
    @foreach (char digit in Number)
    {
      <span class="text-6xl font-light flex justify-center w-10">@digit</span>
    }
  </div>
  <div class="grid grid-cols-3 grid-rows-4 mt-8 w-full gap-2">
    @foreach (CalculatorControl control in CalculatorControls)
    {
      <button
        type="button"
        class="flex justify-center items-center bg-gray-100 border border-black/[.1] rounded-md text-3xl transition-colors
                hover:bg-sky-200 w-full h-20"
        @onclick=@control.CalculatorAction
      >
        @control.Title
      </button>
    }
  </div>
</div>