@inherits SectionFieldBase<Guid>

<SectionInputWrapper
  Path="@Path"
  Label="@Label"
  HtmlFor="@HtmlId"
  ValueToCopy="@(IsCopyable ? Value.ToString() : string.Empty)"
>
  <InputGuidField
    id="@HtmlId"
    @bind-Value="@Value"
    @bind-Value:after="OnValueChanged"
    Placeholder="@Placeholder"
    Disabled="Disabled"
  />
  @if (For != null)
  {
    <FieldValidation For="@For" />
  }
</SectionInputWrapper>