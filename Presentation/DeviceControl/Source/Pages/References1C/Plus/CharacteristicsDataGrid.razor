@using DeviceControl.Source.Widgets.Section
@using DeviceControl.Source.Widgets.Section.DataGridActions
@using Ws.Domain.Models.Entities.Scale
@inherits DeviceControl.Source.Widgets.Section.SectionDataGridPageBase<Ws.Domain.Models.Entities.Scale.CharacteristicEntity>
@rendermode InteractiveServer

<PageHeader>
  <span>@Localizer["SectionPluNestings"]</span>
  <DataGridItemsCounter ItemsCount="@SectionItems.Count()" IsLoading="IsLoading"/>
  <DataGridActionReload OnClick="@UpdateData" IsLoading="IsLoading" />
</PageHeader>

<DataGridWrapper Class="bg-secondary/[.3] dark:bg-inherit">
  <DataGridContainer
    TItem="CharacteristicEntity"
    Items="SectionItems"
    ItemsPerPage="6"
    IsForcePagination
  >
    <ColumnsContent>
      <DataGridColumn
        Caption="@WsDataLocalizer["ColName"]"
        Field="@nameof(CharacteristicEntity.Name)"
        Width="15%"
      />
      <DataGridColumn
        Caption="@WsDataLocalizer["ColCount"]"
        Field="@nameof(CharacteristicEntity.BundleCount)"
        Width="10%"
      />
      <DataGridColumn
        Caption="@WsDataLocalizer["ColWeight"]"
        Width="15%"
        Filterable="false"
      >
        <DisplayTemplate>
          @Plu.Weight * @context.BundleCount
        </DisplayTemplate>
      </DataGridColumn>
      <DataGridColumn
        Caption="@WsDataLocalizer["ColBundle"]"
        Width="15%"
        Filterable="false"
      >
        <DisplayTemplate>
          @Plu.Bundle.Weight * @context.BundleCount
        </DisplayTemplate>
      </DataGridColumn>
      <DataGridColumn
        Caption="@WsDataLocalizer["ColClip"]"
        Width="15%"
        Filterable="false"
      >
        <DisplayTemplate>
          @Plu.Clip.Weight * @context.BundleCount
        </DisplayTemplate>
      </DataGridColumn>
      <DataGridColumn
        Caption="@WsDataLocalizer["ColBox"]"
        Field="Box.Weight"
        Width="15%"
      />
      <DataGridColumn
        Caption="@WsDataLocalizer["ColTareWeightTotal"]"
        Field="@nameof(CharacteristicEntity.WeightTare)"
        Width="15%"
      />
    </ColumnsContent>
  </DataGridContainer>
</DataGridWrapper>
