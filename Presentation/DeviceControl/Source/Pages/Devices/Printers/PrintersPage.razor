@using DeviceControl.Source.Widgets.Section
@using DeviceControl.Source.Widgets.Section.DataGridActions
@using Ws.Domain.Models.Entities.Ref
@using DeviceControl.Source.Shared.Auth.Policies
@inherits DeviceControl.Source.Widgets.Section.SectionDataGridPageBase<Ws.Domain.Models.Entities.Ref.PrinterEntity>
@attribute [Route($"{RouteUtils.SectionPrinters}{RouteUtils.SectionQrlQuery}")]
@attribute [Authorize(Policy = PolicyEnum.Support)]
@rendermode InteractiveServer


<PageHeader>
  <span>@Localizer["SectionPrinters"]</span>
  <DataGridItemsCounter ItemsCount="@SectionItems.Count()" IsLoading="IsLoading"/>
  <DataGridActionReload OnClick="@UpdateData" IsLoading="IsLoading" />
  <DataGridActionCreate OnClick="@OpenSectionCreateForm" />
  <div class="w-64">
    <SelectSingle
      TItem="ProductionSiteEntity"
      Items="ProductionSiteEntities"
      @bind-SelectedItem="ProductionSite"
      @bind-SelectedItem:after="@UpdateData"
      ItemDisplayName="item => item.Name"
      IsDisabled="@(!IsSeniorSupport)"
      IsFilterable
    />
  </div>
</PageHeader>

<DataGridWrapper>
  <DataGridContainer
    TItem="PrinterEntity"
    Items="SectionItems"
    OnItemSelect="@(item => OpenDataGridEntityModal(item))"
  >
    <ColumnsContent>
      <DataGridColumn
        Caption="@WsDataLocalizer["ColType"]"
        Field="@nameof(PrinterEntity.Type)"
        Width="4rem"
        Sortable
      />
      <DataGridColumn
        Caption="@WsDataLocalizer["ColName"]"
        Field="@nameof(PrinterEntity.Name)"
        Width="40%"/>
      <DataGridColumn
        Caption="IP"
        Field="@nameof(PrinterEntity.Ip)"
        Width="25%"
        Sortable="false"/>
      <DataGridColumn
        Caption="@WsDataLocalizer["ColProductionSite"]"
        Field="ProductionSite.Name"
        Width="25%"/>
    </ColumnsContent>
    <ContextMenuContent>
      <DataGridActionViewItem OnClick="@(() => ContextFuncWrapper(context.Item, context.CloseContextMenu, async item => await OpenDataGridEntityModal(item)))" />
      <DataGridActionOpenInNewTab OnClick="@(() => ContextFuncWrapper(context.Item, context.CloseContextMenu, async item => await OpenItemInNewTab(item)))" />
      <DataGridActionDeleteItem OnClick="@(() => ContextFuncWrapper(context.Item, context.CloseContextMenu, item => DeleteItem(item)))" />
    </ContextMenuContent>
  </DataGridContainer>
</DataGridWrapper>