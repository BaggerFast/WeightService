@using DeviceControl.Source.Widgets.Section
@using DeviceControl.Source.Widgets.Section.DataGridActions
@using Ws.Domain.Models.Entities.Ref
@using DeviceControl.Source.Shared.Auth.Policies
@using Ws.Domain.Models.Enums
@using Blazor.Heroicons.Outline

@inherits DeviceControl.Source.Widgets.Section.SectionDataGridPageBase<Ws.Domain.Models.Entities.Ref.LineEntity>
@attribute [Route($"{RouteUtils.SectionLines}{RouteUtils.SectionQrlQuery}")]
@attribute [Authorize(Policy = PolicyEnum.Support)]
@rendermode InteractiveServer


<PageHeader>
  <span>@Localizer["SectionLines"]</span>
  <DataGridItemsCounter ItemsCount="@SectionItems.Count()" IsLoading="IsLoading"/>
  <DataGridActionReload OnClick="@UpdateData" IsLoading="IsLoading" />
  <DataGridActionCreate OnClick="@OpenSectionCreateForm" />
  <div class="w-64">
    <SelectSingle
      TItem="ProductionSiteEntity"
      Items="ProductionSiteEntities"
      @bind-SelectedItem="ProductionSite"
      @bind-SelectedItem:after="@UpdateData"
      ItemDisplayName="item => item.Name"
      IsDisabled="@(!IsSeniorSupport)"
      IsFilterable
    />
  </div>
</PageHeader>

<DataGridWrapper>
  <DataGridContainer
    TItem="LineEntity"
    Items="SectionItems"
    OnItemSelect="@(item => OpenDataGridEntityModal(item))"
  >
    <ColumnsContent>
      <DataGridColumn
        Field="@(nameof(LineEntity.Type))"
        Caption="@WsDataLocalizer["ColType"]"
        Width="4rem"
      >
        <DisplayTemplate>
          <div class="size-full flex items-center justify-center">
            @switch (context.Type)
            {
              case LineTypeEnum.Pc:
                <ComputerDesktopIcon class="size-5"/>
                break;
              case LineTypeEnum.Tablet:
                <DeviceTabletIcon class="size-5"/>
                break;
              case LineTypeEnum.Universal:
                <ServerIcon class="size-5"/>
                break;
              default:
                <ExclamationTriangleIcon class="size-5 text-destructive"/>
                break;
            }
          </div>
        </DisplayTemplate>
      </DataGridColumn>
      <DataGridColumn
        Caption="@WsDataLocalizer["ColVersion"]"
        Field="@nameof(LineEntity.Version)"
        Width="6rem"
      />
      <DataGridColumn
        Caption="@WsDataLocalizer["ColLine"]"
        Field="@nameof(LineEntity.Name)"
        Width="15%"
      />
      <DataGridColumn
        Caption="@WsDataLocalizer["ColNumber"]"
        Field="@nameof(LineEntity.Number)"
        Width="10%"
      />
      <DataGridColumn
        Caption="@WsDataLocalizer["ColPcName"]"
        Field="PcName"
        Width="15%"
      />
      <DataGridColumn
        Caption="@WsDataLocalizer["ColPrinter"]"
        Field="Printer.Name"
        Width="20%"
      />
      <DataGridColumn
        Caption="@WsDataLocalizer["ColProductionSite"]"
        Field="Warehouse.ProductionSite.Name"
        Width="20%"
      />
      <DataGridColumn
        Caption="@WsDataLocalizer["ColCounter"]"
        Field="@nameof(LineEntity.Counter)"
        Width="10%"
      />
    </ColumnsContent>
    <ContextMenuContent>
      <DataGridActionViewItem OnClick="@(() => ContextFuncWrapper(context.Item, context.CloseContextMenu, item => OpenDataGridEntityModal(item)))" />
      <DataGridActionOpenInNewTab OnClick="@(() => ContextFuncWrapper(context.Item, context.CloseContextMenu, item => OpenItemInNewTab(item)))" />
      <DataGridActionDeleteItem OnClick="@(() => ContextFuncWrapper(context.Item, context.CloseContextMenu, item => DeleteItem(item)))" />
    </ContextMenuContent>
  </DataGridContainer>
</DataGridWrapper>
