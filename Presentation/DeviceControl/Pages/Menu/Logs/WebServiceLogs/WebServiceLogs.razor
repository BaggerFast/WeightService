@page "/section/logs_web_service"
@attribute [Authorize(Roles = UserAccessStr.Admin)]
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@using Ws.Shared.TypeUtils
@inherits SectionBase<SqlLogWebEntity>

<SectionTopBar
  Title="@Locale.Name"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@SqlLogWebEntity"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  IsLoading="@IsLoading"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync">
  <Columns>
    <TItemContent TItem="@SqlLogWebEntity">

      <RadzenDataGridColumn Title="@Locale.CreateDt" Property="CreateDt" Width="15%" FormatString="@StrUtils.FormatDtLong"/>
      <RadzenDataGridColumn Title="@Locale.ChangeDt" Property="StampDt" Width="15%" FormatString="@StrUtils.FormatDtLong"/>
      <RadzenDataGridColumn Title="@Locale.App" Property="Version" Width="15%"/>
      <RadzenDataGridColumn Title="@Locale.RequestUrl" Property="Url" Width="40%"/>
      <RadzenDataGridColumn Title="@Locale.Count" Property="CountAll" Width="15%"/>
      <RadzenDataGridColumn Title="@Locale.Success" Property="CountSuccess" Width="15%"/>
      <RadzenDataGridColumn Title="@Locale.Error" Property="CountErrors" Width="15%"/>
    </TItemContent>
  </Columns>
</RzDataGrid>
