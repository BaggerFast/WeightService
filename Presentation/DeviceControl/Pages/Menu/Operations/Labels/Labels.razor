@page "/section/labels"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@using Ws.Shared.TypeUtils
@using Ws.StorageCore.Entities.SchemaPrint.ViewLabels
@inherits SectionBase<Ws.StorageCore.Entities.SchemaPrint.ViewLabels.SqlViewLabel>

<SectionTopBar
  Title="@Locale.SectionLabels"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@SqlViewLabel"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  IsLoading="@IsLoading"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync"
  AllowFiltering="true"
  FilterMode="FilterMode.Simple"
  LogicalFilterOperator="@LogicalFilterOperator.And">
  <Columns>
    <TItemContent TItem="@SqlViewLabel">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@Locale.CreateDt" Property="CreateDt" Width="8%" FormatString="@StrUtils.FormatDtDefault" Filterable="false"/>
      <RadzenDataGridColumn Title="@Locale.ProductDt" Property="ProductDate" Width="8%" FormatString="@StrUtils.FormatDtDefault" Filterable="false"/>
      <RadzenDataGridColumn Title="@Locale.Line" Property="LineName" Width="10%" Filterable="false" />
      <RadzenDataGridColumn Title="@Locale.WorkShop" Property="WorkShop" Width="10%" Filterable="false" />
      <RadzenDataGridColumn Title="@Locale.PluNumber" Property="PluNumber" Width="5%" />
      <RadzenDataGridColumn Title="@Locale.Plu" Property="PluName" Width="20%"/>
      <RadzenDataGridColumn Title="@Locale.Type" Property="IsCheckWeight" Width="8%" Filterable="false" />
    </TItemContent>
  </Columns>
</RzDataGrid>
