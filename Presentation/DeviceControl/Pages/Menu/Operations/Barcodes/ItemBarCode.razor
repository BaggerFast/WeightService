@page "/section/barcodes/new"
@page "/section/barcodes/{Uid:guid}"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using DeviceControl.Components.Item
@inherits ItemBase<SqlBarCodeEntity>

<ItemTopBar TItem="@SqlBarCodeEntity" Title="@LocaleCore.DeviceControl.ItemBarcode" OnItemUpdate="@GetItemData"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <ItemTableHead HeadWidth="@(new List<int> { 20, 30, 20, 30 })"/>
  <tbody>
  <ItemTableBody SqlItem="@SqlItemCast"/>
  <tr>
    <td>
      <RadzenLink Path="@RouteService.GetItemRoute(SqlItemCast.PluLabel.PluScale.Line)" Text="@LocaleCore.Table.Line"/>
    </td>
    <td>@SqlItemCast.PluLabel.PluScale.Line.Description</td>
    <td>
      <RadzenLink Path="@RouteService.GetItemRoute(SqlItemCast.PluLabel)" Text="@LocaleCore.Table.Label"/>
    </td>
    <td>@SqlItemCast.PluLabel.IdentityValueUid</td>
  </tr>
  <tr>
    <td>
      <RadzenLink Path="@RouteService.GetItemRoute(SqlItemCast.PluLabel.PluScale.Plu)" Text="@LocaleCore.Table.Plu"/>
    </td>
    <td>@SqlItemCast.PluLabel.PluScale.Plu.DisplayName</td>
    <td/>
    <td/>
  </tr>
  @if (SqlItemCast.PluLabel.PluWeighing is not null)
  {
    <tr>
      <td>
        <RadzenLink Path="@RouteService.GetItemRoute(SqlItemCast.PluLabel.PluWeighing)" Text="@LocaleCore.Table.Weighing"/>
      </td>
      <td>@SqlItemCast.PluLabel.PluWeighing.IdentityValueUid</td>
      <td></td>
      <td></td>
    </tr>
  }
  <tr>
    <td>@LocaleCore.Table.ValueTop</td>
    <td>@SqlItemCast.ValueTop</td>
    <td></td>
    <td></td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.Description</td>
    <td colspan="3">
      <RadzenTextArea Style="width: 100%;" Disabled="true" Value="@GetBarcodeTop()" Rows="11"/>
    </td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.ValueRight</td>
    <td>@SqlItemCast.ValueRight</td>
    <td></td>
    <td></td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.Description</td>
    <td colspan="3">
      <RadzenTextArea Style="width: 100%;" Disabled="true" Value="@GetBarcodeRight()" Rows="5"/>
    </td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.ValueBottom</td>
    <td>@SqlItemCast.ValueBottom</td>
    <td></td>
    <td></td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.Description</td>
    <td colspan="3">
      <RadzenTextArea Style="width: 100%;" Disabled="true" Value="@GetBarcodeBottom()" Rows="10"/>
    </td>
  </tr>
  <ItemDates SqlItem="@SqlItemCast"/>
  </tbody>
</MudSimpleTable>

<ItemActions
  ButtonSettings="@ButtonSettings"
  OnItemSave="@SqlItemSaveAsync"
  OnItemCancel="@RedirectBackAsync"/>
