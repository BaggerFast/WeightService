@page "/section/barcodes"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@using Ws.Shared.TypeUtils
@inherits SectionBase<SqlViewBarcodeModel>

<SectionTopBar
  Title="@Locale.SectionBarCodes"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@SqlViewBarcodeModel"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  IsLoading="@IsLoading"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync"
  AllowFiltering="true"
  FilterMode="FilterMode.Simple"
  LogicalFilterOperator="@LogicalFilterOperator.And">
  <Columns>
    <TItemContent TItem="@SqlViewBarcodeModel">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@Locale.CreateDt" Property="CreateDt" Width="12%" Filterable="false"
                            FormatString="@StrUtils.FormatDtDefault"/>
      <RadzenDataGridColumn Title="@Locale.PluNumber" Property="PluNumber" Width="12%"/>
      <RadzenDataGridColumn Title="@Locale.ValueTop" Property="ValueTop" Width="28%"/>
      <RadzenDataGridColumn Title="@Locale.ValueRight" Property="ValueRight" Width="15%"/>
      <RadzenDataGridColumn Title="@Locale.ValueBottom" Property="ValueBottom" Width="28%"/>
    </TItemContent>
  </Columns>
</RzDataGrid>
