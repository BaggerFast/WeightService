@page "/section/plus_weightings"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@inherits SectionBase<SqlViewPluWeightingModel>

<SectionTopBar
  Title="@LocaleCore.DeviceControl.SectionPlusWeightings"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@SqlViewPluWeightingModel"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  IsLoading="@IsLoading"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync"
  AllowFiltering="true"
  FilterMode="FilterMode.Simple"
  LogicalFilterOperator="@LogicalFilterOperator.And">
  <Columns>
    <TItemContent TItem="@SqlViewPluWeightingModel">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.CreateDt" Property="CreateDt" Width="12%"
                            FormatString="@StrUtils.FormatDtDefault" Filterable="false"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Line" Property="Line" Width="22%" Filterable="false"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.PluNumber" Property="PluNumber" Width="10%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Plu" Property="PluName" Width="18%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.BundleFkWeightTare" Property="TareWeight" Width="10%" Filterable="false" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.WeightNetto" Property="NettoWeight" Width="10%" Filterable="false" />
    </TItemContent>
  </Columns>
</RzDataGrid>
