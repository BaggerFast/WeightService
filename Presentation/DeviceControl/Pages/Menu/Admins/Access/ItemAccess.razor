@page "/section/access/new"
@page "/section/access/{Uid:guid}"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using DeviceControl.Components.Item
@using DeviceControl.Components.Rz
@inherits ItemBase<SqlAccessEntity>

<ItemTopBar TItem="@SqlAccessEntity" Title="@LocaleCore.Strings.AccessRights" OnItemUpdate="@GetItemData"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <ItemTableHead HeadWidth="@(new List<int> { 20, 30, 20, 30 })"/>
  <tbody>
  <ItemTableBody SqlItem="@SqlItemCast"/>
  <tr>
    <td>@LocaleCore.Table.User</td>
    <td><RzTextBox @bind-Value="@SqlItemCast.Name"/></td>
    <td>@LocaleCore.Strings.AccessRights</td>
    <td>
      <RzDropDown @bind-Value="@Rights" Data="@TemplateAccessRights"/>
    </td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.LoginDt</td>
    <td>@string.Format(StrUtils.FormatDtLong, SqlItemCast.LoginDt)</td>
    <td/>
    <td/>
  </tr>
  <ItemDates SqlItem="@SqlItemCast"/>
  </tbody>
</MudSimpleTable>

<ItemActions
  ButtonSettings="@ButtonSettings"
  OnItemSave="@SqlItemSaveAsync"
  OnItemCancel="@RedirectBackAsync"/>
