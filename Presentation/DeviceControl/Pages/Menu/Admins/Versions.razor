@page "/system_sql_versions"
@attribute [Authorize(Roles = UserAccessStr.Admin)]
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@inherits SectionBase<SqlVersionEntity>

<SectionTopBar
  Title="@Locale.VersionsDb"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@SqlVersionEntity"
  @ref="@DataGrid"
  Data="@SqlSectionCast">
  <Columns>
    <TItemContent TItem="@SqlVersionEntity">
      <RadzenDataGridColumn Title="@Locale.ReleaseDt" Property="ReleaseDt" Width="15%"
                            FormatString="@StrUtils.FormatDtShort"/>
      <RadzenDataGridColumn Title="@Locale.Version" Property="Version" Width="10%"/>
      <RadzenDataGridColumn Title="@Locale.Description" Property="Description" Width="75%"/>
    </TItemContent>
  </Columns>
</RzDataGrid>
