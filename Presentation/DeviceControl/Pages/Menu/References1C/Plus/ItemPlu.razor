@page "/section/plus/new"
@page "/section/plus/{Uid:guid}"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using DeviceControl.Components.Item
@using DeviceControl.Components.Nested.PlusNestingFks
@using DeviceControl.Components.Rz
@inherits ItemBase<SqlPluEntity>

<ItemTopBar TItem="@SqlPluEntity" Title="@Locale.ItemNomenclature" OnItemUpdate="@GetItemData"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <ItemTableHead HeadWidth="@(new List<int> { 15, 35, 15, 35 })"/>
  <tbody>
  <ItemTableBody SqlItem="@SqlItemCast"/>
  <tr>
    <td>@Locale.PluNumber</td>
    <td>@SqlItemCast.Number</td>
    <td>@Locale.CheckWeight</td>
    <td>
      <RadzenCheckBox TValue="bool" ReadOnly="true" Value="@SqlItemCast.IsCheckWeight"/>
    </td>
  </tr>
  <tr>
    <td>@Locale.Name</td>
    <td>@SqlItemCast.Name</td>
    <td>@Locale.NomenclatureCode</td>
    <td>@SqlItemCast.Code</td>
  </tr>
  <tr>
    <td>
      <RadzenLink Path="@RouteService.GetItemRoute(SqlItemCast.Bundle)" Text="@Locale.Bundle"/>
    </td>
    <td>@SqlItemCast.Bundle.Name</td>
    <td>
      <RadzenLink Path="@RouteService.GetItemRoute(SqlItemCast.Brand)" Text="@Locale.Brand"/>
    </td>
    <td>@SqlItemCast.Brand.Name</td>
  </tr>
  <tr>
    <td>
      <RadzenLink Path="@RouteService.GetItemRoute(PluTemplateFk.Template)" Text="@Locale.Template"/>
    </td>
    <td>
      <RzDropDown @bind-Value="@PluTemplateFk.Template" Data="@Templates" TextProperty="Title" />
    </td>
    <td>
      <RadzenLink Path="@RouteService.GetItemRoute(StorageMethod)" Text="@Locale.PluStorage"/>
    </td>
    <td>@StorageMethod?.Name</td>
  </tr>
  <tr>
    <td>@Locale.Ean13</td>
    <td>@SqlItemCast.Ean13</td>
    <td>@Locale.Gtin</td>
    <td>@SqlItemCast.Gtin</td>
  </tr>
  <tr>
    <td>@Locale.Itf14</td>
    <td>@SqlItemCast.Itf14</td>
    <td>@Locale.ShelfLifeDays</td>
    <td>@SqlItemCast.ShelfLifeDays</td>
  </tr>
  <tr>
    <td>@Locale.FullName</td>
    <td>
      <RadzenTextArea Style="width: 100%; height: 100px;" Disabled="true" Value="@SqlItemCast.FullName"/>
    </td>
    <td>@Locale.Description</td>
    <td>
      <RadzenTextArea Style="width: 100%; height: 100px;" Disabled="true" Value="@SqlItemCast.Description" Rows="3"/>
    </td>
  </tr>
  <ItemDates SqlItem="@SqlItemCast"/>
  </tbody>
</MudSimpleTable>

<ItemActions
  ButtonSettings="@ButtonSettings"
  OnItemSave="@SqlItemSaveAsync"
  OnItemCancel="@RedirectBackAsync"/>

@if (SqlItem != null)
{
  <PlusNestingFks Plu="@SqlItemCast"/>
}
