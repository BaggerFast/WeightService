@page "/section/plus"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@inherits SectionBase<SqlPluEntity>

<SectionTopBar
  Title="@Locale.SectionPlus"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@SqlPluEntity"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync"
  AllowFiltering="true"
  FilterMode="FilterMode.Simple"
  LogicalFilterOperator="@LogicalFilterOperator.And">
  <Columns>
    <TItemContent TItem="@SqlPluEntity">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@Locale.Name" Property="Name" Width="25%"/>
      <RadzenDataGridColumn Title="@Locale.Weighted" SortProperty="IsCheckWeight" Width="5%">
        <Template Context="itemCast">
          <RadzenCheckBox ReadOnly="true" TValue="bool" @bind-Value="@itemCast.IsCheckWeight"/>
        </Template>
      </RadzenDataGridColumn>
      <RadzenDataGridColumn Title="@Locale.Number" Property="Number" Width="25%"/>
      <RadzenDataGridColumn Title="@Locale.Code" Property="Code" Width="15%"/>
      <RadzenDataGridColumn Title="@Locale.ShelfLifeDaysShort" Property="ShelfLifeDays" Width="10%"/>
    </TItemContent>
  </Columns>
</RzDataGrid>
