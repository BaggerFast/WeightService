@inherits LayoutComponentBase

@using Blazor.Heroicons.Outline
@using DeviceControl.Utils


<div class="flex w-full h-screen overflow-x-hidden">
  <div class="grid w-full h-full grid-cols-[15rem,1fr] grid-rows-1 grow">
    <NavMenu/>
    <div class="flex flex-col w-full h-full">
      <div class="flex items-center h-10 w-full px-4 gap-4 shrink-0 border-b border-b-black/[.1]">
        <a href="@RouteUtils.Profile">
          <div class="flex gap-2">
            <UserIcon class="h-5 w-5"/>
            <p>@User?.Identity?.Name</p>
          </div>
        </a>
        <div class="flex gap-2">
          <InformationCircleIcon class="h-5 w-5"/>
          <p>@VerBlazor</p>
        </div>
      </div>
      <div class="flex flex-col h-full w-full px-4 grow py-3">
        @Body
      </div>
    </div>
  </div>
</div>
