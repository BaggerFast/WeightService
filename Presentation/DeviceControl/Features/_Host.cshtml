@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace DeviceControl.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
  <title>DeviceControl</title>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <base href="~/"/>
  <link href="favicon.svg" rel="icon">

  <link href="libs/roboto-font.css" rel="stylesheet"/>
  <link href="libs/flowbite/flowbite-v1.5.4.min.css" rel="stylesheet"/>
  <link href="libs/fontawasome/css/all.min.css" rel="stylesheet"/>

  <link href="libs/blazorise.tailwind.css" rel="stylesheet" />
  <link href="_content/Blazorise.Snackbar/blazorise.snackbar.css" rel="stylesheet" />
  <link href="app.min.css" rel="stylesheet"/>

  <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered"/>
  <script>
    if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage)
    && window.matchMedia('(prefers-color-scheme: dark)').matches))
      document.documentElement.classList.add('dark')
    else
      document.documentElement.classList.remove('dark')
  </script>
</head>
<body class="h-screen w-screen overflow-hidden bg-background font-['Roboto'] [&_.b-modal-fade]:!bg-muted/[.4]">
  <component type="typeof(App)" render-mode="ServerPrerendered"/>

  <div id="blazor-error-ui" class="fixed z-50 bottom-0 left-0 hidden w-full p-2 bg-yellow-300">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss absolute top-2 right-4 cursor-pointer">ðŸ—™</a>
  </div>

  <script src="libs/flowbite/flowbite-v1.5.4.js"></script>
  <script src="_framework/blazor.server.js"></script>
</body>
</html>
