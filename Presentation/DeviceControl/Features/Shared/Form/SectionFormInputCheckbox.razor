@inherits SectionFormInputBase

<div class="h-14 w-1/2 pb-1 px-10 flex gap-5 items-end">
  <input
    type="checkbox"
    @bind-value="Value"
    @bind-value:event="oninput"
    @onchange="HandleValueChange"
    disabled="@IsDisabled"
    class="mb-[4px] border border-black/[.3] rounded focus:ring-0 focus:ring-offset-0"
  />
  <label>@Label</label>
</div>