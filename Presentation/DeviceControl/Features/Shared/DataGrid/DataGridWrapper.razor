@typeparam TItem
@using Blazor.Heroicons.Outline


<div class="w-full px-2 mb-2">
  <p class="text-2xl">
    @Title
  </p>
</div>
<div class="rounded-md w-full bg-white overflow-hidden border border-black/[.1]">
  <BlazorDataGrid
    Filterable="IsFilterable"
    Data="GridData"
    TItem="TItem"
  >
    <DataGridColumns>
      @ChildContent
    </DataGridColumns>
    <NextPageButtonTemplate>
      <ChevronRightIcon class="h-4 w-4 mx-2 my-0.5" />
    </NextPageButtonTemplate>
    <PreviousPageButtonTemplate>
      <ChevronLeftIcon class="h-4 w-4 mx-2 my-0.5" />
    </PreviousPageButtonTemplate>
    <LastPageButtonTemplate>
      <ChevronDoubleRightIcon class="h-4 w-4 mx-2 my-0.5" />
    </LastPageButtonTemplate>
    <FirstPageButtonTemplate>
      <ChevronDoubleLeftIcon class="h-4 w-4 mx-2 my-0.5" />
    </FirstPageButtonTemplate>
    <TotalItemsTemplate>
      <DataGridTotalItemsBadge Value="@($"{context.TotalItems} {Localizer["DataGridTotalItems"]}")" />
    </TotalItemsTemplate>
    <TotalItemsShortTemplate>
      <DataGridTotalItemsBadge Value="@((context.TotalItems ?? 0).ToString())" />
    </TotalItemsShortTemplate>
  </BlazorDataGrid>
</div>
