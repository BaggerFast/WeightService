@using Ws.Domain.Models.Entities.Ref
@inherits SectionFormBase<Ws.Domain.Models.Entities.Ref.UserEntity>

<SectionFormWrapper
  OnSubmitAction="() => UpdateItem(ReloginUser(SectionEntity), UserService.Update)"
  DeleteItemAction="DeleteUserWithRelogin"
  ResetItemAction="ResetItem"
  AdditionButtons="AdditionalButtons"
  ShareUrl="@($"{RouteUtils.SectionUsers}/{SectionEntity.Uid}")"
  CreateDate="SectionEntity.CreateDt"
>
  <SectionInputGuid
    Value="@SectionEntity.Uid"
  />
  <SectionFormInputText
    Value="@SectionEntity.Name"
    Label="@Localizer["DataGridColumnName"]"
    IsDisabled
  />
  <SectionFormInputMultiSelect
    TItem="ClaimEntity"
    Items="RolesEntities"
    Label="@Localizer["DataGridColumnRoles"]"
    @bind-SelectedItems="@SelectedRoles"
    ItemDisplayName="item => item.Name"
  />
  <SectionFormInputSelect
    TItem="ProductionSiteEntity"
    Items="ProductionSite"
    Label="@Localizer["DataGridColumnProductionSite"]"
    Link="@Redirector.ToProductionSite(SectionEntity.ProductionSite ?? new(), User)"
    @bind-SelectedItem="@SectionEntity.ProductionSite"
    ItemDisplayName="@(item => item != null ? item.Name : Localizer["SectionFormProductionSiteDefaultName"])"
    IsFilterable
  />
</SectionFormWrapper>
