@using System.Globalization
@inherits SectionFormBase<Ws.Domain.Models.Entities.Ref1c.ClipEntity>

<SectionFormWrapper
  ShareUrl="@($"{RouteUtils.SectionClips}/{SectionEntity.Uid}")"
  ChangeDate="SectionEntity.ChangeDt"
  CreateDate="SectionEntity.CreateDt"
>
  <SectionInputGuid
    Value="@SectionEntity.Uid"
  />
  <SectionFormInputText
    Value="@SectionEntity.Uid1C.ToString()"
    Label="@Localizer["DataGridColumnUID1C"]"
    IsDisabled
    IsCopyable
  />
  <SectionFormInputText
    Value="@SectionEntity.Name"
    Label="@Localizer["DataGridColumnName"]"
    IsDisabled
  />
  <SectionFormInputText
    Value="@SectionEntity.Weight.ToString(CultureInfo.CurrentCulture)"
    Label="@Localizer["DataGridColumnWeight"]"
    IsDisabled
  />
</SectionFormWrapper>
