@inherits SectionFormBase<SqlBoxEntity>
@using Ws.StorageCore.Entities.SchemaRef1c.Boxes
@using System.Globalization

<SectionFormWrapper
  ShareUrl="@($"{RouteUtils.SectionBoxes}/{SectionEntity.IdentityValueUid}")"
  DeleteItemAction="DeleteItem"
  ChangeDate="SectionEntity.ChangeDt"
  CreateDate="SectionEntity.CreateDt"
>
  <SectionFormInputText
    Value="@SectionEntity.IdentityValueUid.ToString()"
    Label="@Localizer["DataGridColumnUID"]"
    IsDisabled
  />
  <SectionFormInputText
    Value="@SectionEntity.Uid1C.ToString()"
    Label="@Localizer["DataGridColumnUID1C"]"
    IsDisabled
  />
  <SectionFormInputText
    Value="@SectionEntity.Name"
    Label="@Localizer["DataGridColumnName"]"
    IsDisabled
  />
  <SectionFormInputText
    Value="@SectionEntity.Weight.ToString(CultureInfo.CurrentCulture)"
    Label="@Localizer["DataGridColumnBoxWeight"]"
    IsDisabled
  />
</SectionFormWrapper>