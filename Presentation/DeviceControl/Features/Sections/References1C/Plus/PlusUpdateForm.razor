@inherits SectionFormBase<Ws.Domain.Models.Entities.Ref1c.PluEntity>


<SectionFormWrapper
  ShareUrl="@($"{RouteUtils.SectionPlus}/{SectionEntity.Uid}")"
  ChangeDate="SectionEntity.ChangeDt"
  CreateDate="SectionEntity.CreateDt"
>
  <SectionFormInputText
    Value="@SectionEntity.Uid.ToString()"
    Label="@Localizer["DataGridColumnUID"]"
    IsDisabled
    IsCopyable
  />
  <SectionFormInputText
    Value="@SectionEntity.Uid1C.ToString()"
    Label="@Localizer["DataGridColumnUID1C"]"
    IsDisabled
    IsCopyable
  />
  <SectionFormInputText
    Value="@SectionEntity.Name"
    Label="@Localizer["DataGridColumnName"]"
    IsDisabled
  />
  <SectionFormInputText
    Value="@SectionEntity.Number.ToString()"
    Label="@Localizer["DataGridColumnNumber"]"
    IsDisabled
  />
  <SectionFormInputText
    Value="@GetPluTypeTitle(SectionEntity.IsCheckWeight)"
    Label="@Localizer["DataGridColumnIsWeight"]"
    IsDisabled
  />
  <SectionFormInputText
    Value="@SectionEntity.ShelfLifeDays.ToString()"
    Label="@Localizer["DataGridColumnShelfLifeDays"]"
    IsDisabled
  />
  <SectionFormInputText
    Value="@GetMockIfEmptyInput(SectionEntity.Bundle.Name)"
    Label="@Localizer["DataGridColumnBundle"]"
    Link="@GetBundleLink()"
    IsDisabled
  />
  <SectionFormInputText
    Value="@GetMockIfEmptyInput(SectionEntity.Clip.Name)"
    Label="@Localizer["DataGridColumnClip"]"
    Link="@GetClipLink()"
    IsDisabled
  />
  <SectionFormInputText
    Value="@GetMockIfEmptyInput(SectionEntity.Brand.Name)"
    Label="@Localizer["DataGridColumnBrand"]"
    Link="@GetBrandLink()"
    IsDisabled
  />
  <SectionFormInputText
    Value="@GetMockIfEmptyInput(Template.Name)"
    Label="@Localizer["DataGridColumnTemplate"]"
    Link="@GetTemplateLink()"
    IsDisabled
  />
  <SectionFormInputText
    Value="@GetMockIfEmptyInput(SectionEntity.StorageMethod.Name)"
    Label="@Localizer["DataGridColumnStorage"]"
    Link="@GetStorageLink()"
    IsDisabled
  />
  <SectionFormInputText
    Value="@GetMockIfEmptyInput(SectionEntity.Ean13)"
    Label="Ean13"
    IsDisabled
  />
  <SectionFormInputText
    Value="@GetMockIfEmptyInput(SectionEntity.Gtin)"
    Label="Gtin"
    IsDisabled
  />
  <SectionFormInputText
    Value="@GetMockIfEmptyInput(SectionEntity.Itf14)"
    Label="Itf14"
    IsDisabled
  />
  <SectionFormInputText
    Value="@GetMockIfEmptyInput(SectionEntity.FullName)"
    Label="@Localizer["DataGridColumnFullName"]"
    Size="SectionFormInputSizeEnum.Medium"
    IsDisabled
  />
  <SectionFormInputText
    Value="@GetMockIfEmptyInput(SectionEntity.Description)"
    Label="@Localizer["DataGridColumnDescription"]"
    Size="SectionFormInputSizeEnum.Medium"
    IsDisabled
  />
</SectionFormWrapper>