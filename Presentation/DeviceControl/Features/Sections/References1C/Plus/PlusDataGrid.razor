@using Ws.StorageCore.Entities.SchemaRef1c.Plus
@inherits SectionDataGridBase<Ws.StorageCore.Entities.SchemaRef1c.Plus.SqlPluEntity>


<SectionDataGridWrapper
  TItem="SqlPluEntity"
  @ref="DataGridWrapperRef"
  Title="@Localizer["SectionPLU"]"
  GridData="SectionItems"
  GetGridData="SetSqlSectionCast"
  ReadAction="OpenDataGridEntityModal"
  OpenInTabAction="OpenItemInNewTab"
  IsLoading="IsLoading"
  IsFilterable
>
  <DataGridColumn
    Caption="@Localizer["DataGridColumnName"]"
    Field="@nameof(SqlPluEntity.Name)"
    FilterMethod="DataGridColumnFilterMethod.Contains"
    Width="35%"
  />
  <DataGridColumn
    Caption="@Localizer["DataGridColumnNumber"]"
    Field="@nameof(SqlPluEntity.Number)"
    FilterMethod="DataGridColumnFilterMethod.StartsWith"
    Width="20%"
  />
  <DataGridColumn
    Caption="@Localizer["DataGridColumnCode"]"
    Field="@nameof(SqlPluEntity.Code)"
    FilterMethod="DataGridColumnFilterMethod.Contains"
    Width="20%"
  />
  <DataGridColumn
    Caption="@Localizer["DataGridColumnIsWeight"]"
    Field="@nameof(SqlPluEntity.IsCheckWeight)"
    Filterable="false"
    Width="10%"
  >
    <DisplayTemplate>
      <p>
        @(context.IsCheckWeight ? Localizer["DataGridColumnIsWeight"] : Localizer["DataGridColumnIsPiece"])
      </p>
    </DisplayTemplate>
  </DataGridColumn>
  <DataGridColumn
    Caption="@Localizer["DataGridColumnChangeDt"]"
    Field="@nameof(SqlPluEntity.ChangeDt)"
    Filterable="false"
    Width="15%"
  />
</SectionDataGridWrapper>
