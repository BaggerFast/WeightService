@using Blazor.Heroicons.Solid
@using Ws.Domain.Models.Entities.Scale
@inherits SectionDataGridBase<Ws.Domain.Models.Entities.Scale.PluNestingEntity>


<SectionDataGridWrapper
  TItem="PluNestingEntity"
  @ref="DataGridWrapperRef"
  Title="@Localizer["SectionPluNestings"]"
  GridData="SectionItems"
  GetGridData="GetSectionData"
  ItemsPerPage="5"
  IsBorderless
>
  <DataGridColumn
    Caption="@Localizer["DataGridColumnIsDefault"]"
    Field="@nameof(PluNestingEntity.IsDefault)"
    Width="20%"
  >
    <DisplayTemplate>
      @if ((context as PluNestingEntity).IsDefault)
      {
        <StarIcon class="h-6 w-6 text-yellow-500" />
      }
    </DisplayTemplate>
  </DataGridColumn>
  <DataGridColumn
    Caption="@Localizer["DataGridColumnName"]"
    Field="Box.Name"
    Width="40%"
  />
  <DataGridColumn
    Caption="@Localizer["DataGridColumnCount"]"
    Field="@nameof(PluNestingEntity.BundleCount)"
    Width="20%"
  />
  <DataGridColumn
    Caption="@Localizer["DataGridColumnTareWeight"]"
    Field="@nameof(PluNestingEntity.WeightTare)"
    Width="20%"
  />
</SectionDataGridWrapper>