@typeparam TItem where TItem: SqlEntityBase, new()
@attribute [CascadingTypeParameter(nameof(TItem))]
@using Ws.StorageCore.Common
@using Blazor.Heroicons.Outline
@using Blazor.Heroicons


<div class="w-full flex gap-4 items-center mb-2 @(IsBorderless ? "pt-2 px-4" : "px-2")">
  <p class="text-2xl truncate">
    @Title
  </p>
  <div class="px-2 items-center py-1 bg-sky-300 border flex gap-2 border-black/[.1] rounded-md overflow-hidden transition-colors hover:bg-sky-400">
    @if (IsLoading)
    {
      <svg aria-hidden="true" class="inline w-3.5 h-3.5 text-gray-200 animate-spin fill-white" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
        <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
      </svg>
    }
    else
    {
      <p class="text-sm font-medium text-white">
        @GridData.ToList().Count
      </p>
    }
    <p class="text-sm font-medium text-white">
      @Localizer["DataGridTotalItems"]
    </p>
  </div>
  <button
    type="button"
    @onclick="ReloadData"
    class="px-6 py-1 bg-sky-300 flex group transition-colors items-center justify-center rounded-md overflow-hidden
            border border-black/[.1] hover:bg-sky-400"
  >
    <ArrowPathIcon class="h-5 w-5 text-white group-hover:animate-spin" />
  </button>
  @if (AddAction.HasDelegate)
  {
    <button
      type="button"
      @onclick="AddAction"
      class="px-6 py-1 bg-sky-300 flex group transition-colors items-center justify-center rounded-md overflow-hidden
            border border-black/[.1] hover:bg-sky-400"
    >
      <PlusIcon class="h-5 w-5 text-white transition-transform group-hover:scale-125" />
    </button>
  }
</div>
<div class="w-full bg-white overflow-hidden @(!IsBorderless ? "rounded-md border border-black/[.1]" : "")">
  @if (IsLoading)
  {
    <div class="w-full">
      <div class="w-full h-12 bg-sky-200 border-b border-gray-100"></div>
      <div class="w-full h-20 flex items-center justify-center">
      </div>
    </div>
  }
  else
  {
    <DataGrid
      TItem="TItem"
      @ref="DataGrid"
      Data="GridData"
      SelectedRow="SelectedItem"
      Filterable="IsFilterable"
      RowDoubleClicked="OnDoubleClick"
      PageSize="ItemsPerPage"
      RowStyling="CustomRowStyling"
      CellStyling="CustomCellStyling"
      HeaderRowStyling="@CustomHeaderRowStyling()"
      PagerPosition="DataGridPagerPosition.Bottom"
      PagerOptions="@(new() { PaginationPosition = PagerElementPosition.Center })"
      RowContextMenu="OnRowContextMenu"
      RowContextMenuPreventDefault
      ShowPager
    >
      <DataGridColumns>
        @ChildContent
      </DataGridColumns>
      <PageButtonTemplate>
        <div class="w-7 text-center">
          @context.PageNumber
        </div>
      </PageButtonTemplate>
      <EmptyTemplate>
        <p class="text-xl text-center">
          @Localizer["DataGridNoResult"]
        </p>
      </EmptyTemplate>
      <NextPageButtonTemplate>
        <ChevronRightIcon class="h-4 w-4 mx-2 my-0.5"/>
      </NextPageButtonTemplate>
      <PreviousPageButtonTemplate>
        <ChevronLeftIcon class="h-4 w-4 mx-2 my-0.5"/>
      </PreviousPageButtonTemplate>
      <LastPageButtonTemplate>
        <ChevronDoubleRightIcon class="h-4 w-4 mx-2 my-0.5"/>
      </LastPageButtonTemplate>
      <FirstPageButtonTemplate>
        <ChevronDoubleLeftIcon class="h-4 w-4 mx-2 my-0.5"/>
      </FirstPageButtonTemplate>
      <TotalItemsTemplate>
        <div class="hidden"></div>
      </TotalItemsTemplate>
      <TotalItemsShortTemplate>
        <div class="hidden"></div>
      </TotalItemsShortTemplate>
    </DataGrid>
  }
</div>

@if ( IsVisibleContextMenu )
{
  <div
    id="dataGridContextMenu"
    class="flex flex-col rounded-md border border-black/[.1] overflow-hidden @(IsBorderless ? "fixed" : "absolute")"
    style="@($"left:{ContextMenuPos.X}px;top:{ContextMenuPos.Y}px;")"
  >
    <ul>
      @foreach (ContextMenuEntry entry in ContextMenuEntries)
      {
        <li>
          <button
            type="button"
            class="w-full bg-gray-50 text-gray-500 items-center h-9 px-4 flex gap-3 transition-colors hover:bg-gray-200 hover:text-gray-700 @entry.CustomClass"
            @onclick="@entry.OnClickAction"
          >
            <Heroicon
              Name="@entry.IconName"
              Type="HeroiconType.Outline"
              class="h-4 w-4"
            />
            <p class="text-sm">@entry.Name</p>
          </button>
        </li>
      }
    </ul>
  </div>
}
