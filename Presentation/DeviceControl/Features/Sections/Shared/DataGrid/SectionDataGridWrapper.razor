@using Blazor.Heroicons
@using Blazor.Heroicons.Outline
@using Ignis.Utils
@typeparam TItem
@attribute [CascadingTypeParameter(nameof(TItem))]


<div class="w-full flex gap-4 bg-background backdrop-blur-sm shrink-0 sticky z-20 top-0 items-center border-b h-14 px-5 supports-[backdrop-filter]:bg-background/[.7]">
  <span class="text-lg truncate">
    @Title
  </span>
  <div class="px-3 truncate shrink-0 h-9 items-center border flex gap-2 rounded-md overflow-hidden transition-colors">
    @if (IsLoading)
    {
      <svg aria-hidden="true" class="inline size-3.5 text-secondary animate-spin fill-primary" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
        <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
      </svg>
    }
    else
    {
      <span class="text-sm">
        @GridData.ToList().Count
      </span>
    }
    <span class="text-sm">
      @Localizer["DataGridTotalItems"]
    </span>
  </div>
  @if (GetGridData.HasDelegate)
  {
    <VsButton OnClick="@ReloadData" Size="ButtonSize.Icon" disabled="@IsLoading">
      <ArrowPathIcon class="@Css.Class("size-5", IsLoading ? "animate-spin" : "")" />
    </VsButton>
  }
  @if (AddAction.HasDelegate)
  {
    <VsButton OnClick="@AddAction" Size="ButtonSize.Icon" class="group">
      <PlusIcon class="size-5 transition-transform group-hover:scale-125" />
    </VsButton>
  }
  @DataGridButtons
</div>
<div class="h-full w-full grow overflow-hidden p-4">
  <div class="w-full bg-background overflow-hidden rounded-lg border [&_.pagination-link]:!text-muted-foreground [&_.pagination-link]:!bg-inherit [&_.pagination-link]:!border-border [&_.pagination-link:hover]:!bg-secondary/[.8]">
    <DataGrid
      TItem="TItem"
      @ref="DataGrid"
      Data="GridData"
      SelectedRow="SelectedItem"
      RowDoubleClicked="OnDoubleClick"
      PageSize="@(IsGroupable ? 1000 : ItemsPerPage)"
      RowStyling="RowStyling"
      CellStyling="CellStyling"
      SelectedRowStyling="SelectedRowStyling"
      SelectedCellStyling="SelectedCellStyling"
      HeaderRowStyling="@HeaderRowStyling()"
      PagerPosition="DataGridPagerPosition.Bottom"
      PagerOptions="@(new() { PaginationPosition = PagerElementPosition.Center })"
      RowContextMenu="OnRowContextMenu"
      RowContextMenuPreventDefault
      Filterable="IsFilterable"
      Groupable="IsGroupable"
      ShowPager="@GetIsPagerNeeded()"
      Class="@Css.Class("table-fixed [&_thead_tr]:!bg-inherit [&_thead]:!bg-inherit [&_thead]:!text-primary",
             "[&_thead_tr_th_input]:!bg-secondary/[.5] [&_thead_tr_th_input]:!border-border [&_thead_tr]:!border-b",
             "[&_thead_tr]:!border-border [&_tbody_.b-table-group]:!bg-secondary/[.3] [&_tbody_.b-table-group]:!text-primary [&_tbody_.b-table-group-cell]:!py-3",
             !GetIsPagerNeeded() ? "[&>tbody>tr:last-child]:!border-b-0 !mb-0" : "")"
    >
      <DataGridColumns>
        @ChildContent
      </DataGridColumns>
      <PageButtonTemplate>
        <div class="w-7 text-center">
          @context.PageNumber
        </div>
      </PageButtonTemplate>
      <EmptyTemplate>
        <span class="@Css.Class("text-xl text-center", IsLoading ? "invisible h-14" : "")">
          @Localizer["DataGridNoResult"]
        </span>
      </EmptyTemplate>
      <NextPageButtonTemplate>
        <ChevronRightIcon class="size-4 mx-2 my-0.5"/>
      </NextPageButtonTemplate>
      <PreviousPageButtonTemplate>
        <ChevronLeftIcon class="size-4 mx-2 my-0.5"/>
      </PreviousPageButtonTemplate>
      <LastPageButtonTemplate>
        <ChevronDoubleRightIcon class="size-4 mx-2 my-0.5"/>
      </LastPageButtonTemplate>
      <FirstPageButtonTemplate>
        <ChevronDoubleLeftIcon class="size-4 mx-2 my-0.5"/>
      </FirstPageButtonTemplate>
      <TotalItemsTemplate>
        <div class="hidden"></div>
      </TotalItemsTemplate>
      <TotalItemsShortTemplate>
        <div class="hidden"></div>
      </TotalItemsShortTemplate>
    </DataGrid>
  </div>
</div>

<div
  tabindex="0"
  @ref="ContextMenuRef"
  @onfocusout="@ContextMenuClickedOutsideAction"
  class="@Css.Class("flex-col shadow-md rounded-md py-1 border bg-background overflow-hidden focus:outline-none",
                    IsVisibleContextMenu ? "flex" : "hidden", IsBorderless ? "fixed" : "absolute")"
  style="@($"left:{ContextMenuPos.X}px;top:{ContextMenuPos.Y}px;")"
>
  <ul>
    @foreach (ContextMenuEntry entry in ContextMenuEntries)
    {
      <li>
        <button
          type="button"
          class="@Css.Class("w-full text-muted-foreground items-center h-9 px-4 flex gap-3 transition-colors hover:bg-secondary/[.8]", entry.CustomClass)"
          @onclick="@entry.OnClickAction"
        >
          <Heroicon
            Name="@entry.IconName"
            Type="HeroiconType.Outline"
            class="size-4"
          />
          <span class="text-sm font-light">@entry.Name</span>
        </button>
      </li>
    }
  </ul>
</div>
