@inherits SectionFormInputBase

<div class="h-14 w-full pb-1 px-5 sm: w-1/2 sm:px-3 md:px-10 flex gap-5 items-end">
  <input
    type="checkbox"
    @bind-value="Value"
    @bind-value:after="OnValueChanged"
    disabled="@IsDisabled"
    class="mb-[4px] border border-black/[.3] rounded focus:ring-0 focus:ring-offset-0"
  />
  <label class="truncate">@Label</label>
</div>