@using Ws.StorageCore.Entities.SchemaRef.Hosts
@inherits SectionFormBase<SqlLineEntity>

<SectionFormWrapper OnSaveAction="() => SaveItem(SectionEntity)">
  <SectionFormInputText
    @bind-Value="@SectionEntity.Description"
    Label="@Localizer["DataGridColumnName"]"
  />
  <SectionFormInputNumeric
    TValue="int"
    @bind-Value="@SectionEntity.Number"
    Label="@Localizer["DataGridColumnNumber"]"
    MinValue="10000"
    MaxValue="99999"
  />
  <SectionFormInputSelect
    TItem="SqlPrinterEntity"
    Items="PrinterEntities"
    Label="@Localizer["DataGridColumnPrinter"]"
    @bind-SelectedItem="@SectionEntity.Printer"
    ItemValue="item => item.IdentityValueUid.ToString()"
    ItemDisplayName="item => item.DisplayName"
    IdentifyItemOnValueChange="item => GetPrinterByUid(item)"
  />
  <SectionFormInputSelect
    TItem="SqlWorkShopEntity"
    Items="WorkShopEntities"
    Label="@Localizer["DataGridColumnWorkshop"]"
    @bind-SelectedItem="@SectionEntity.WorkShop"
    ItemValue="item => item.IdentityValueUid.ToString()"
    ItemDisplayName="item => item.Name"
    IdentifyItemOnValueChange="item => GetWorkShopByUid(item)"
  />
  <SectionFormInputSelect
    TItem="SqlHostEntity"
    Items="HostEntities"
    Label="@Localizer["DataGridColumnHost"]"
    @bind-SelectedItem="@SectionEntity.Host"
    ItemValue="item => item.IdentityValueUid.ToString()"
    ItemDisplayName="item => item.Name"
    IdentifyItemOnValueChange="item => GetHostByUid(item)"
  />
</SectionFormWrapper>