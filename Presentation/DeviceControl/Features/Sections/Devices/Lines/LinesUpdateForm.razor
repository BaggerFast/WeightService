@inherits SectionFormBase<SqlLineEntity>
@using Ws.StorageCore.Entities.SchemaRef.Lines
@using Ws.StorageCore.Entities.SchemaRef.Hosts


<SectionFormWrapper
  OnSaveAction="() => UpdateItem(SectionEntity)"
  ResetItemAction="ResetItem"
  DeleteItemAction="DeleteItem"
  ShareUrl="@($"{RouteUtils.SectionLines}/{SectionEntity.IdentityValueUid}")"
  ChangeDate="SectionEntity.ChangeDt"
  CreateDate="SectionEntity.CreateDt"
>
  <SectionFormInputText
    Value="@SectionEntity.IdentityValueUid.ToString()"
    Label="@Localizer["DataGridColumnUID"]"
    IsDisabled
  />
  <SectionFormInputText
    Value="@SectionEntity.ComPort"
    Label="@Localizer["DataGridColumnCOM"]"
    IsDisabled
  />
  <SectionFormInputText
    @bind-Value="@SectionEntity.Description"
    Label="@Localizer["DataGridColumnName"]"
  />
  <SectionFormInputNumeric
    TValue="int"
    @bind-Value="@SectionEntity.Counter"
    Label="@Localizer["DataGridColumnCounter"]"
    MinValue="0"
  />
  <SectionFormInputNumeric
    @bind-Value="@SectionEntity.Number"
    Label="@Localizer["DataGridColumnNumber"]"
    MinValue="10000"
    MaxValue="99999"
  />
  <SectionFormInputSelect
    TItem="SqlPrinterEntity"
    Items="PrinterEntities"
    Label="@Localizer["DataGridColumnPrinter"]"
    Link="@($"{RouteUtils.SectionPrinters}/{SectionEntity.Printer.IdentityValueUid}")"
    @bind-SelectedItem="@SectionEntity.Printer"
    ItemValue="item => item.IdentityValueUid.ToString()"
    ItemDisplayName="item => item.DisplayName"
    IdentifyItemOnValueChange="item => GetPrinterByUid(item)"
  />
  <SectionFormInputSelect
    TItem="SqlWorkShopEntity"
    Items="WorkShopEntities"
    Label="@Localizer["DataGridColumnWorkshop"]"
    Link="@($"{RouteUtils.SectionWorkShops}/{SectionEntity.WorkShop.IdentityValueUid}")"
    @bind-SelectedItem="@SectionEntity.WorkShop"
    ItemValue="item => item.IdentityValueUid.ToString()"
    ItemDisplayName="item => item.DisplayName"
    IdentifyItemOnValueChange="item => GetWorkShopByUid(item)"
  />
  <SectionFormInputSelect
    TItem="SqlHostEntity"
    Items="HostEntities"
    Label="@Localizer["DataGridColumnHost"]"
    Link="@($"{RouteUtils.SectionHosts}/{SectionEntity.Host.IdentityValueUid}")"
    @bind-SelectedItem="@SectionEntity.Host"
    ItemValue="item => item.IdentityValueUid.ToString()"
    ItemDisplayName="item => item.DisplayName"
    IdentifyItemOnValueChange="item => GetHostByUid(item)"
  />
  <SectionFormInputCheckbox
    @bind-Value="@SectionEntity.IsMarked"
    Label="@Localizer["DataGridColumnIsArchival"]"
  />
</SectionFormWrapper>