@using Ws.Domain.Models.Entities.Ref
@inherits SectionDataGridBase<Ws.Domain.Models.Entities.Ref.PrinterEntity>


<SectionDataGridWrapper
  TItem="PrinterEntity"
  @ref="DataGridWrapperRef"
  Title="@Localizer["SectionPrinters"]"
  GridData="SectionItems"
  GetGridData="GetSectionData"
  ReadAction="OpenDataGridEntityModal"
  AddAction="OpenSectionCreateForm"
  DeleteAction="PrinterService.Delete"
  OpenInTabAction="OpenItemInNewTab"
  IsGroupable
>
  <DataGridColumn
    Caption="@Localizer["DataGridColumnName"]"
    Field="@nameof(PrinterEntity.Name)"
    Width="25%"
  />
  <DataGridColumn
    Caption="@Localizer["DataGridColumnType"]"
    Field="@nameof(PrinterEntity.Type)"
    Width="10%"
    Groupable
    Grouping
  />
  <DataGridColumn
    Caption="@Localizer["DataGridColumnIp"]"
    Field="@nameof(PrinterEntity.Ip)"
    Width="25%"
    Sortable="false"
  />
  <DataGridColumn
    Caption="@Localizer["DataGridColumnProductionSite"]"
    Field="ProductionSite.Name"
    Width="40%"
  />
</SectionDataGridWrapper>