@using Ws.Domain.Models.Enums
@inherits SectionFormBase<Ws.Domain.Models.Entities.Ref.PrinterEntity>

<SectionFormWrapper
  OnSubmitAction="() => UpdateItem(SectionEntity)"
  ResetItemAction="ResetItem"
  DeleteItemAction="DeleteItem"
  ShareUrl="@($"{RouteUtils.SectionPrinters}/{SectionEntity.Uid}")"
  CreateDate="@SectionEntity.CreateDt"
  ChangeDate="@SectionEntity.ChangeDt"
>
  <SectionFormInputText
    Value="@SectionEntity.Uid.ToString()"
    Label="@Localizer["DataGridColumnUID"]"
    IsDisabled
    IsCopyable
  />
  <SectionFormInputText
    Value="@SectionEntity.Port.ToString()"
    Label="@Localizer["DataGridColumnPort"]"
    IsDisabled
  />
  <SectionFormInputText
    @bind-Value="@SectionEntity.Name"
    Label="@Localizer["DataGridColumnName"]"
  />
  <SectionFormInputText
    @bind-Value="@PrinterIp"
    Link="@($"http://{SectionEntity.Ip}")"
    Label="@($"{Localizer["DataGridColumnIp"]} ({Localizer["SectionFormPrinterControl"]})")"
  />
  <SectionFormInputSelect
    TItem="PrinterTypeEnum"
    Items="PrinterTypesEntities"
    Label="@Localizer["DataGridColumnType"]"
    @bind-SelectedItem="@SectionEntity.Type"
    ItemDisplayName="item => EnumHelper.GetEnumDescription(item)"
  />
</SectionFormWrapper>