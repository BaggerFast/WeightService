@page "/section/lines"
@inherits SectionBase<SqlLineEntity>


<div class="rounded-md w-full overflow-hidden border border-black/[.1]">
  <DataGrid
    Data="SqlSectionCast"
    TItem="SqlLineEntity"
    Class="!mb-0"
  >
    <DataGridColumns>
      <DataGridColumn
        Caption="@LocaleCore.Table.Version"
        Field="@nameof(SqlLineEntity.Version)"
        Width="5%"
      />
      <DataGridColumn
        Caption="@LocaleCore.Table.Line"
        Field="@nameof(SqlLineEntity.Description)"
        Width="15%"
      />
      <DataGridColumn
        Caption="@LocaleCore.Table.Number"
        Field="@nameof(SqlLineEntity.Number)"
        Width="10%"
      />
      <DataGridColumn
        Caption="@LocaleCore.Table.Device"
        Field="Host.Name"
        Width="20%"
      />
      <DataGridColumn
        Caption="@LocaleCore.Table.Printer"
        Field="Printer.Name"
        Width="20%"
      />
      <DataGridColumn
        Caption="@LocaleCore.Table.WorkShop"
        Field="WorkShop.Name"
        Width="20%"
      />
      <DataGridColumn
        Caption="@LocaleCore.Table.Counter"
        Field="@nameof(SqlLineEntity.LabelCounter)"
        Width="10%"
      />
    </DataGridColumns>
  </DataGrid>
</div>