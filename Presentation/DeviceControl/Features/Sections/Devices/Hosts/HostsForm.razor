@inherits SectionFormBase<SqlHostEntity>
@using Ws.StorageCore.Entities.SchemaRef.Hosts

<SectionFormWrapper
  OnSaveAction="OnSaveAction"
  ChangeDate="SectionEntity.ChangeDt"
  CreateDate="SectionEntity.CreateDt"
>
  <SectionFormInputText
    Value="@SectionEntity.IdentityValueUid.ToString()"
    Title="@Localizer["DataGridColumnUID"]"
    IsDisabled
  />
  <SectionFormInputText
    Value="@SectionEntity.Name"
    Title="@Localizer["DataGridColumnName"]"
  />
  <SectionFormInputText
    Value="@SectionEntity.Ip"
    Title="@Localizer["DataGridColumnIP"]"
  />
  <SectionFormInputCheckbox
    Value="@SectionEntity.IsMarked"
    Description="@Localizer["DataGridColumnIsArchival"]"
  />
  <SectionFormInputText
    Value="@SectionEntity.LoginDt.ToString("dd.MM.yyyy HH:mm")"
    Title="@Localizer["DataGridColumnLoginDt"]"
    IsDisabled
  />
</SectionFormWrapper>