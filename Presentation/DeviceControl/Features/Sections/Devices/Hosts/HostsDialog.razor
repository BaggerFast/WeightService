@using Blazor.Heroicons.Outline

<div class="overflow-hidden">
  <ModalHeader Class="!p-0">
    <div class="w-full px-4 items-center flex justify-between h-12">
      <div class="w-32 overflow-hidden">
        <button
          type="button"
          @onclick="CloseModal"
          class="px-3 py-1 flex gap-2 items-center transition-colors justify-center border border-black/[.1] rounded-md
                  overflow-hidden hover:bg-gray-100"
        >
          <ArrowLeftIcon class="h-4 w-4"/>
          <p class="text-sm pt-[2px] text-black font-medium">Back</p>
        </button>
      </div>
      <div class="px-4 py-1 bg-gray-100 rounded-md overflow-hidden">
        <p class="text-black pt-[1px] font-normal">Hosts</p>
      </div>
      <div class="w-32"></div>
    </div>
  </ModalHeader>
  <ModalBody Class="!p-0 bg-gray-100">
    <div class="w-full flex flex-col">
      <div class="w-full flex flex-wrap gap-y-3 items-start pt-6 pb-8 px-5">
        @for(int i = 0; i < 8; i++)
        {
          <div class="h-14 w-1/2 flex flex-col px-10">
            <label>Name</label>
            <input type="text" class="w-full px-2 h-8 rounded-md overflow-hidden border border-black/[.1] disabled:bg-gray-100"/>
          </div>
        }
      </div>
    </div>
  </ModalBody>
  <ModalFooter Class="!p-0">
    <div class="w-full gap-2 py-4 flex flex-col">
      <div class="flex px-4 items-center w-full">
        <div class="w-1/2 px-10 items-center flex gap-2">
          <p class="font-normal">Создан:</p>
          <p>13.12.2023 12:44</p>
        </div>
        <div class="w-1/2 px-10 flex-items flex gap-2">
          <p class="font-normal">Изменен:</p>
          <p>13.12.2023 12:44</p>
        </div>
      </div>
      <div class="flex px-6 w-full gap-2 justify-end">
        <button
          type="button"
          class="h-9 bg-red-300 transition-colors flex items-center px-4 justify-center overflow-hidden
                  rounded-md border border-black/[.1] hover:bg-red-400"
        >
          <p class="font-normal pt-[1px]">Отмена</p>
        </button>
        <button
          type="button"
          class="h-9 bg-green-300 transition-colors flex items-center px-4 justify-center overflow-hidden
                  rounded-md border border-black/[.1] hover:bg-green-400"
        >
          <p class="font-normal pt-[1px]">Сохранить</p>
        </button>
      </div>
    </div>
  </ModalFooter>
</div>
