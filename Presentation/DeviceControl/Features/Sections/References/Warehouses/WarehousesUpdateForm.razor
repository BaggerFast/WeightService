@using Ws.Domain.Models.Entities.Ref
@inherits SectionFormBase<Ws.Domain.Models.Entities.Ref.WarehouseEntity>


<SectionFormWrapper
  OnSubmitAction="() => UpdateItem(SectionEntity)"
  ResetItemAction="ResetItem"
  ShareUrl="@($"{RouteUtils.SectionWarehouses}/{SectionEntity.Uid}")"
  ChangeDate="SectionEntity.ChangeDt"
  CreateDate="SectionEntity.CreateDt"
>
  <SectionFormInputText
    Value="@SectionEntity.Uid.ToString()"
    Label="@Localizer["DataGridColumnUID"]"
    IsDisabled
    IsCopyable
  />
  <SectionFormInputText
    @bind-Value="@SectionEntity.Name"
    Label="@Localizer["DataGridColumnName"]"
  />
  <SectionFormInputSelect
    TItem="ProductionSiteEntity"
    Items="PlatformEntities"
    Label="@Localizer["DataGridColumnProductionSite"]"
    Link="@($"{RouteUtils.SectionProductionSites}/{SectionEntity.ProductionSite.Uid}")"
    @bind-SelectedItem="@SectionEntity.ProductionSite"
    ItemDisplayName="item => item.Name"
    IsFilterable
  />
</SectionFormWrapper>