@inherits SectionFormBase<SqlTemplateEntity>
@using Ws.StorageCore.Entities.SchemaScale.Templates

<SectionFormWrapper
  OnSubmitAction="() => UpdateItem(SectionEntity)"
  ResetItemAction="ResetItem"
  DeleteItemAction="DeleteItem"
  ShareUrl="@($"{RouteUtils.SectionTemplates}/{SectionEntity.IdentityValueUid}")"
  ChangeDate="SectionEntity.ChangeDt"
  CreateDate="SectionEntity.CreateDt"
>
  <SectionFormInputText
    Value="@SectionEntity.IdentityValueId.ToString()"
    Label="@Localizer["DataGridColumnUID"]"
    IsDisabled
  />
  <SectionFormInputSelect
    TItem="TemplateCategoriesEnum"
    Items="PrinterTypesEntities"
    Label="@Localizer["DataGridColumnCategory"]"
    @bind-SelectedItem="@SelectedCategory"
    ItemValue="item => item.ToString()"
    ItemDisplayName="item => EnumHelper.GetEnumDescription(item)"
    IdentifyItemOnValueChange="item => GetTemplateCategoryByValue(item)"
  />
  <SectionFormInputText
    @bind-Value="@SectionEntity.Title"
    Label="@Localizer["DataGridColumnTitle"]"
    Size="SectionFormInputSizeEnum.Medium"
  />
  <SectionFormInputText
    @bind-Value="@SectionEntity.Data"
    Label="@Localizer["DataGridColumnData"]"
    Size="SectionFormInputSizeEnum.ExtraLarge"
    IsCopyable
  />
</SectionFormWrapper>