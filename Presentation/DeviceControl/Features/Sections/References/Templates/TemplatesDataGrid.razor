@using Ws.Domain.Models.Entities.Scale
@inherits SectionDataGridBase<Ws.Domain.Models.Entities.Scale.TemplateEntity>


<SectionDataGridWrapper
  TItem="TemplateEntity"
  @ref="DataGridWrapperRef"
  Title="@Localizer["SectionTemplates"]"
  GridData="SectionItems"
  GetGridData="SetSqlSectionCast"
  ReadAction="OpenDataGridEntityModal"
  AddAction="OpenSectionCreateForm"
  OpenInTabAction="OpenItemInNewTab"
  IsLoading="IsLoading"
>
  <DataGridColumn
    Caption="@Localizer["DataGridColumnCategory"]"
    Field="@nameof(TemplateEntity.CategoryId)"
    Width="20%"
  />
