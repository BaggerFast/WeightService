@inherits SectionFormBase<SqlPluStorageMethodEntity>


<SectionFormWrapper
  OnSaveAction="() => UpdateItem(SectionEntity)"
  ChangeDate="SectionEntity.ChangeDt"
  CreateDate="SectionEntity.CreateDt"
>
  <SectionFormInputText
    Value="@SectionEntity.IdentityValueUid.ToString()"
    Label="@Localizer["DataGridColumnUID"]"
    IsDisabled
  />
  <SectionFormInputText
    @bind-Value="@SectionEntity.Name"
    Label="@Localizer["DataGridColumnName"]"
  />
  <SectionFormInputNumeric
    TValue="short"
    @bind-Value="@SectionEntity.MinTemp"
    Label="@Localizer["DataGridColumnMinTemp"]"
    MinValue="-100"
    MaxValue="100"
  />
  <SectionFormInputNumeric
    TValue="short"
    @bind-Value="@SectionEntity.MaxTemp"
    Label="@Localizer["DataGridColumnMaxTemp"]"
    MinValue="-100"
    MaxValue="100"
  />
  <SectionFormInputCheckbox
    @bind-Value="@SectionEntity.IsMarked"
    Label="@Localizer["DataGridColumnIsArchival"]"
  />
</SectionFormWrapper>