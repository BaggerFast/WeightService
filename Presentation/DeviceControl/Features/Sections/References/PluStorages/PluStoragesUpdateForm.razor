@inherits SectionFormBase<Ws.StorageCore.Entities.SchemaScale.PlusStorageMethods.SqlPluStorageMethodEntity>


<SectionFormWrapper
  OnSubmitAction="() => UpdateItem(SectionEntity)"
  ResetItemAction="ResetItem"
  DeleteItemAction="DeleteItem"
  ShareUrl="@($"{RouteUtils.SectionPlusStorage}/{SectionEntity.IdentityValueUid}")"
  ChangeDate="SectionEntity.ChangeDt"
  CreateDate="SectionEntity.CreateDt"
>
  <SectionFormInputText
    Value="@SectionEntity.IdentityValueUid.ToString()"
    Label="@Localizer["DataGridColumnUID"]"
    IsDisabled
    IsCopyable
  />
  <SectionFormInputText
    @bind-Value="@SectionEntity.Name"
    Label="@Localizer["DataGridColumnName"]"
  />
  <SectionFormInputNumeric
    TValue="short"
    @bind-Value="@SectionEntity.MinTemp"
    Label="@Localizer["DataGridColumnMinTemp"]"
    MinValue="-100"
    MaxValue="100"
  />
  <SectionFormInputNumeric
    TValue="short"
    @bind-Value="@SectionEntity.MaxTemp"
    Label="@Localizer["DataGridColumnMaxTemp"]"
    MinValue="-100"
    MaxValue="100"
  />
</SectionFormWrapper>