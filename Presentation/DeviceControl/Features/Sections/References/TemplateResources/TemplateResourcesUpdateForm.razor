@inherits SectionFormBase<Ws.Domain.Models.Entities.Ref.ZplResourceEntity>


<SectionFormWrapper
  OnSubmitAction="() => UpdateItem(SectionEntity)"
  ResetItemAction="ResetItem"
  DeleteItemAction="DeleteItem"
  ShareUrl="@($"{RouteUtils.SectionTemplateResources}/{SectionEntity.Uid}")"
  ChangeDate="SectionEntity.ChangeDt"
  CreateDate="SectionEntity.CreateDt"
>
  <SectionFormInputText
    Value="@SectionEntity.Uid.ToString()"
    Label="@Localizer["DataGridColumnUID"]"
    IsDisabled
    IsCopyable
  />
  <SectionFormInputText
    @bind-Value="@SectionEntity.Name"
    Label="@Localizer["DataGridColumnName"]"
    Size="SectionFormInputSizeEnum.Medium"
  />
  <SectionFormInputText
    @bind-Value="@SectionEntity.Zpl"
    Label="@Localizer["DataGridColumnData"]"
    Size="SectionFormInputSizeEnum.ExtraLarge"
    IsCopyable
  />
</SectionFormWrapper>