@using Ws.StorageCore.Entities.SchemaScale.TemplatesResources
@inherits SectionDataGridBase<Ws.StorageCore.Entities.SchemaScale.TemplatesResources.SqlTemplateResourceEntity>


<SectionDataGridWrapper
  TItem="SqlTemplateResourceEntity"
  @ref="DataGridWrapperRef"
  Title="@Localizer["SectionTemplatesResources"]"
  GridData="SectionItems"
  GetGridData="GetSectionData"
  ReadAction="OpenDataGridEntityModal"
  AddAction="OpenSectionCreateForm"
  OpenInTabAction="OpenItemInNewTab"
  IsLoading="IsLoading"
>
  <DataGridColumn
    Caption="@Localizer["DataGridColumnName"]"
    Field="@nameof(SqlTemplateResourceEntity.Name)"
    Width="80%"
  />
  <DataGridColumn
    Caption="@Localizer["DataGridColumnSize"]"
    Field="@nameof(SqlTemplateResourceEntity.DataValue)"
    Width="20%"
  >
    <DisplayTemplate>
      <p>@ConvertBytes(context.DataValue.Length)</p>
    </DisplayTemplate>
  </DataGridColumn>
</SectionDataGridWrapper>