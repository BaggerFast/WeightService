@inherits SectionFormBase<Ws.Domain.Models.Entities.Ref.ProductionSiteEntity>


<SectionFormWrapper
  OnSubmitAction="() => UpdateItem(SectionEntity)"
  ResetItemAction="ResetItem"
  DeleteItemAction="DeleteItem"
  ShareUrl="@($"{RouteUtils.SectionProductionSites}/{SectionEntity.Uid}")"
  ChangeDate="SectionEntity.ChangeDt"
  CreateDate="SectionEntity.CreateDt"
>
  <SectionFormInputText
    Value="@SectionEntity.Uid.ToString()"
    Label="@Localizer["DataGridColumnUID"]"
    IsDisabled
    IsCopyable
  />
  <SectionFormInputText
    @bind-Value="@SectionEntity.Name"
    Label="@Localizer["DataGridColumnName"]"
  />
  <SectionFormInputText
    @bind-Value="@SectionEntity.Address"
    Label="@Localizer["DataGridColumnAddress"]"
    Size="SectionFormInputSizeEnum.Large"
  />
</SectionFormWrapper>