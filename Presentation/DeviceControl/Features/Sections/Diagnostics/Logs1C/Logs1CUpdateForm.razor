@using Ws.Shared.Utils
@inherits SectionFormBase<Ws.Domain.Models.Entities.Diag.LogWebEntity>

<SectionFormWrapper
  ShareUrl="@($"{RouteUtils.Section1CLogs}/{SectionEntity.Uid}")"
>
  <SectionInputGuid
    Value="@SectionEntity.Uid"
  />
  <SectionFormInputText
    Value="@SectionEntity.Version"
    Label="@Localizer["DataGridColumnVersion"]"
    IsDisabled
  />
  <SectionFormInputText
    Value="@SectionEntity.Url"
    Label="@Localizer["DataGridColumnRequestUrl"]"
    IsDisabled
  />
  <SectionFormInputText
    Value="@XmlUtil.GetPrettyXml(SectionEntity.DataRequest)"
    Label="@Localizer["DataGridColumnRequest"]"
    Size="SectionFormInputSizeEnum.ExtraLarge"
    IsDisabled
    IsCopyable
  />
  <SectionFormInputText
    Value="@XmlUtil.GetPrettyXml(SectionEntity.DataResponse)"
    Label="@Localizer["DataGridColumnResponse"]"
    Size="SectionFormInputSizeEnum.ExtraLarge"
    IsDisabled
    IsCopyable
  />
</SectionFormWrapper>