@inherits ComponentBase

<div class="side-nav-container @SidebarThemeCss">
  <div class="side-nav__label-container">
    <a href="/">
      <p class="side-nav__label">
        @LocaleCore.Strings.AppDevicesControlName
      </p>
    </a>
  </div>

  <RadzenPanelMenu>
    @foreach (var menuSection in MenuSections)
    {
      <AuthorizeView Roles="@menuSection.RequiredRole">
        <RadzenPanelMenuItem Icon="@menuSection.Icon" Text="@menuSection.Text">
          @foreach (var subMenu in menuSection.SubItems)
          {
            <RadzenPanelMenuItem Text="@subMenu.Text" Path="@subMenu.Path" />
          }
        </RadzenPanelMenuItem>
      </AuthorizeView>
    }
  </RadzenPanelMenu>
</div>
