@attribute [Authorize(Roles = WsUserAccessStr.Read)]
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@inherits SectionBase<SqlPluNestingFkEntity>

<SectionTopBar
  Title="@LocaleCore.DeviceControl.SectionPlusNestingFk"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@SqlPluNestingFkEntity"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync">
  <Columns>
    <TItemContent TItem="@SqlPluNestingFkEntity">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.IsDefault" SortProperty="IsDefault" Width="10%">
        <Template Context="itemCast">
          <RadzenCheckBox ReadOnly="true" TValue="bool" @bind-Value="@itemCast.IsDefault"/>
        </Template>
      </RadzenDataGridColumn>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Box" Property="Box.Name" Width="70%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Count" Property="BundleCount" Width="10%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Weight" Property="WeightTare" Width="10%"/>
    </TItemContent>
  </Columns>
</RzDataGrid>
