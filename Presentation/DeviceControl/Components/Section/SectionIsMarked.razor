@typeparam TItem
@inherits ComponentBase

<RadzenDataGridColumn TItem="@TItem" Width="5%" TextAlign="TextAlign.Center"
                      SortProperty="IsMarked" Title="@Locale.IsMarkedShort"
                      Visible="@(SqlCrudConfigSection.IsMarked != SqlEnumIsMarked.ShowOnlyActual)">
  <Template Context="item">
    @if (item.IsMarked)
    {
      <RadzenIcon IconStyle=@IconStyle.Primary Icon="delete"/>
    }
  </Template>
</RadzenDataGridColumn>
