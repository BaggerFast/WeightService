@* @using DeviceControl.Components.Rz *@
@* @inherits ComponentBase *@
@* *@
@* <div class="section-top-bar__wrapper"> *@
@*   <div class="section-top-bar__container"> *@
@*     <p class="section-top-bar__label"> *@
@*       @Title *@
@*     </p> *@
@*     $1$ @if (SectionCount != 0) #1# *@
@*     $1$ { #1# *@
@*     $1$   <RzDropDown #1# *@
@*     $1$     Style="margin-left: 20px; width: 15%; display: inline-block;" #1# *@
@*     $1$     @bind-Value="@SqlCrudConfigSection.SelectTopRowsCount" #1# *@
@*     $1$     Change="@OnItemsCountSelectUpdate" #1# *@
@*     $1$     Data="@_rowCountList"> #1# *@
@*     $1$     <Template> #1# *@
@*     $1$       <span>Первые: <b>@(context == 0 ? "Все" : context.ToString())</b> </span> #1# *@
@*     $1$     </Template> #1# *@
@*     $1$   </RzDropDown> #1# *@
@*     $1$ } #1# *@
@*     @if (IsGuiShowFilterMarked) *@
@*     { *@
@*       <AuthorizeView Roles="@UserAccessStr.Write"> *@
@*         <RzDropDown *@
@*           class="section-top-bar__select" *@
@*           @bind-Value="@SqlCrudConfigSection.IsMarked" *@
@*           Data="@MarkedDict" *@
@*           ValueProperty="Value" *@
@*           TextProperty="Key" *@
@*           Change="@OnReload" *@
@*         /> *@
@*       </AuthorizeView> *@
@*     } *@
@*     <button *@
@*       type="button" *@
@*       @onclick="OnReload" *@
@*       class="section-top-bar__btn" *@
@*     > *@
@*       <RadzenIcon Icon="refresh" class="section-top-bar__btn-icon" /> *@
@*     </button> *@
@*     @if (ButtonSettings.IsShowNew) *@
@*     { *@
@*       <AuthorizeView Roles="@UserAccessStr.Write"> *@
@*         <button *@
@*           type="button" *@
@*           @onclick="OnSectionAdd" *@
@*           class="section-top-bar__btn" *@
@*         > *@
@*           <RadzenIcon Icon="add" class="section-top-bar__btn-icon" /> *@
@*         </button> *@
@*       </AuthorizeView> *@
@*     } *@
@*     <p class="section-top-bar__records-count"> *@
@*       @SqlListCountResult *@
@*     </p> *@
@*   </div> *@
@* </div> *@
