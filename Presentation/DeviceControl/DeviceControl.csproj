<Project Sdk="Microsoft.NET.Sdk.Web">
    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Version>1.1.9.0</Version>
        <Authors>Владимирский стандарт</Authors>
        <Company>Владимирский стандарт</Company>
        <UserSecretsId>993a2cab-36f2-4b69-a954-68c43db890b1</UserSecretsId>
        <Product>WeightService</Product>
        <Copyright>Copyright © 2020 - 2023</Copyright>
        <AssemblyName>DeviceControl</AssemblyName>
        <RootNamespace>DeviceControl</RootNamespace>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Blazor.Heroicons" Version="2.0.1" />
        <PackageReference Include="Blazored.LocalStorage" Version="4.4.0" />
        <PackageReference Include="Blazorise.Components" Version="1.4.0" />
        <PackageReference Include="Blazorise.DataGrid" Version="1.4.0" />
        <PackageReference Include="Blazorise.Icons.FontAwesome" Version="1.4.0" />
        <PackageReference Include="Blazorise.Tailwind" Version="1.4.0" />
        <PackageReference Include="Microsoft.AspNetCore.Authentication.Negotiate" Version="7.0.14" />
        <PackageReference Include="Microsoft.Extensions.Localization" Version="8.0.0" />
        <PackageReference Include="Radzen.Blazor" Version="4.21.3" />
    </ItemGroup>
    <ItemGroup>
        <SupportedPlatform Include="browser" />
    </ItemGroup>
    <ItemGroup>
        <Watch Include="..\**\*.razor;..\**\*.css;..\**\*.html;" />
    </ItemGroup>
    <ItemGroup>
      <ProjectReference Include="..\..\DataAccess\Ws.StorageCore\Ws.StorageCore.csproj" />
      <ProjectReference Include="..\..\Domain\Ws.Services\Ws.Services.csproj" />
    </ItemGroup>
    <ItemGroup>
      <MauiAsset Include="wwwroot\libs\tailwind\tailwind-v3.3.5.js" />
    </ItemGroup>
    <ItemGroup>
      <_ContentIncludedByDefault Remove="wwwroot\css\favicon.ico" />
      <_ContentIncludedByDefault Remove="Components\Layout\MainLayout.razor" />
      <_ContentIncludedByDefault Remove="Components\Layout\NavMenu.razor" />
      <_ContentIncludedByDefault Remove="Components\Layout\NavMenuItem.razor" />
      <_ContentIncludedByDefault Remove="Pages\Default\Error.cshtml" />
      <_ContentIncludedByDefault Remove="wwwroot\packages\flowbite-v1.5.4.js" />
      <_ContentIncludedByDefault Remove="wwwroot\packages\flowbite-v1.5.4.min.css" />
      <_ContentIncludedByDefault Remove="wwwroot\packages\font.css" />
      <_ContentIncludedByDefault Remove="wwwroot\packages\fontawasome-v5.15.4.all.css" />
    </ItemGroup>
    <ItemGroup>
      <AdditionalFiles Include="Features\Layout\MainLayout.razor" />
      <AdditionalFiles Include="Features\Layout\NavMenu.razor" />
      <AdditionalFiles Include="Features\Layout\NavMenuItem.razor" />
    </ItemGroup>
    <ItemGroup>
      <EmbeddedResource Update="Resources\ApplicationResources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>ApplicationResources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\ApplicationResources.en-US.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>ApplicationResources.en-US.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\ApplicationResources.ru-RU.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>ApplicationResources.ru-RU.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>
    <ItemGroup>
      <Compile Update="Resources\ApplicationResources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>ApplicationResources.resx</DependentUpon>
      </Compile>
      <Compile Update="Resources\ApplicationResources.en-US.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>ApplicationResources.en-US.resx</DependentUpon>
      </Compile>
      <Compile Update="Resources\ApplicationResources.ru-RU.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>ApplicationResources.ru-RU.resx</DependentUpon>
      </Compile>
    </ItemGroup>
    <ItemGroup>
      <Folder Include="Features\Sections\References1C\Plus\" />
    </ItemGroup>
    <Target Name="AfterBuild" BeforeTargets="PrepareForBuild">
        <TransformXml Source="appsettings.json" Transform="appsettings.$(Configuration).json" Destination="appsettings.json" StackTrace="true" />
    </Target>
</Project>
