<Project Sdk="Microsoft.NET.Sdk.Web">
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Version>1.1.9.0</Version>
        <Authors>Владимирский стандарт</Authors>
        <Company>Владимирский стандарт</Company>
        <UserSecretsId>993a2cab-36f2-4b69-a954-68c43db890b1</UserSecretsId>
        <Product>WeightService</Product>
        <Copyright>Copyright © 2020 - 2023</Copyright>
        <AssemblyName>DeviceControl</AssemblyName>
        <RootNamespace>DeviceControl</RootNamespace>
        <NeutralLanguage>ru-RU</NeutralLanguage>
        <FileVersion>1.1.9.0</FileVersion>
        <AssemblyVersion>1.1.9.0</AssemblyVersion>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
        <Platforms>x64</Platforms>
        <Configurations>DevelopVS;ReleaseVS</Configurations>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Blazor.Heroicons" Version="2.0.1" />
        <PackageReference Include="Blazored.LocalStorage" Version="4.4.0" />
        <PackageReference Include="Blazorise.DataGrid" Version="1.3.3" />
        <PackageReference Include="Blazorise.Icons.FontAwesome" Version="1.3.3" />
        <PackageReference Include="Blazorise.Tailwind" Version="1.3.3" />
        <PackageReference Include="Microsoft.AspNetCore.Authentication.Negotiate" Version="7.0.14" />
        <PackageReference Include="Radzen.Blazor" Version="4.21.3" />
    </ItemGroup>
    <ItemGroup>
        <SupportedPlatform Include="browser" />
    </ItemGroup>
    <ItemGroup>
        <Watch Include="..\**\*.razor;..\**\*.css;..\**\*.html;" />
    </ItemGroup>
    <ItemGroup>
      <ProjectReference Include="..\..\DataAccess\Ws.StorageCore\Ws.StorageCore.csproj" />
      <ProjectReference Include="..\..\Domain\Ws.Services\Ws.Services.csproj" />
      <ProjectReference Include="..\..\Domain\WsLocalizationCore\WsLocalizationCore.csproj" />
    </ItemGroup>
    <ItemGroup>
      <MauiAsset Include="wwwroot\packages\flowbite-v1.5.4.js" />
      <MauiAsset Include="wwwroot\packages\flowbite-v1.5.4.min.css" />
      <MauiAsset Include="wwwroot\packages\font.css" />
      <MauiAsset Include="wwwroot\packages\fontawasome-v5.15.4.all.css" />
      <MauiAsset Include="wwwroot\packages\tailwind-v3.3.5.js" />
    </ItemGroup>
    <ItemGroup>
      <_ContentIncludedByDefault Remove="wwwroot\css\favicon.ico" />
      <_ContentIncludedByDefault Remove="Components\Layout\MainLayout.razor" />
      <_ContentIncludedByDefault Remove="Components\Layout\NavMenu.razor" />
      <_ContentIncludedByDefault Remove="Components\Layout\NavMenuItem.razor" />
      <_ContentIncludedByDefault Remove="Pages\Default\Error.cshtml" />
    </ItemGroup>
    <ItemGroup>
      <AdditionalFiles Include="Features\Layout\MainLayout.razor" />
      <AdditionalFiles Include="Features\Layout\NavMenu.razor" />
      <AdditionalFiles Include="Features\Layout\NavMenuItem.razor" />
    </ItemGroup>
    <Target Name="AfterBuild" BeforeTargets="PrepareForBuild">
        <TransformXml Source="appsettings.json" Transform="appsettings.$(Configuration).json" Destination="appsettings.json" StackTrace="true" />
    </Target>
</Project>
