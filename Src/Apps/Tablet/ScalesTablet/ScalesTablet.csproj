<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net8.0-android34.0</TargetFramework>

        <OutputType>Exe</OutputType>
        <UseMaui>true</UseMaui>
        <SingleProject>true</SingleProject>
        <ImplicitUsings>enable</ImplicitUsings>
        <EnableDefaultCssItems>false</EnableDefaultCssItems>
        <SelfContained>false</SelfContained>
        <SupportedOSPlatformVersion>24.0</SupportedOSPlatformVersion>

        <RootNamespace>ScalesTablet</RootNamespace>
        <ApplicationTitle>ScalesTablet</ApplicationTitle>
        <ApplicationId>ru.vladstandart.scalestablet</ApplicationId>
    </PropertyGroup>

    <ItemGroup Label="Static assets">
        <MauiIcon Include="Resources\app_icon.svg" />
        <MauiSplashScreen Include="Resources\organization_icon.svg" Color="#f5f5f6" />
    </ItemGroup>

    <ItemGroup Label="Directory.Packages.props">
        <PackageReference Include="Refit.HttpClientFactory" />
        <PackageReference Include="Microsoft.Extensions.Localization" />
        <PackageReference Include="Microsoft.Extensions.Logging.Debug" />
        <PackageReference Include="System.Configuration.ConfigurationManager" />
        <PackageReference Include="vNext.BlazorComponents.FluentValidation" />
    </ItemGroup>

    <ItemGroup Label="Packages">
        <PackageReference Include="DeepCloner" VersionOverride="0.10.4" />
        <PackageReference Include="Microsoft.Maui.Controls" VersionOverride="8.0.91"/>
        <PackageReference Include="Microsoft.Maui.Controls.Compatibility" VersionOverride="8.0.91" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebView.Maui" VersionOverride="8.0.91" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Ws.Tablet.Models\Ws.Tablet.Models.csproj" />
      <ProjectReference Include="..\..\..\Libs\Ws.Components\Ws.Components.csproj" />
      <ProjectReference Include="..\..\..\Libs\Ws.Shared\Ws.Shared.csproj" PrivateAssets="All"/>
    </ItemGroup>

    <Import Project="..\..\..\.targets\NodePackages.targets" />

    <Target Name="StaticsBuild" BeforeTargets="PreBuildEvent">
        <Exec Command="npm run build" />
    </Target>
    
    <ItemGroup Label="add settings file">
        <Content Remove="appsettings.$(ConfigurationName).json" />
        <EmbeddedResource Include="appsettings.$(ConfigurationName).json">
            <Link>appsettings.json</Link>
        </EmbeddedResource>
    </ItemGroup>
    
</Project>
