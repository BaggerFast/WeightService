@inherits SectionFieldBase<object>

<SectionInputWrapper
  Label="@Label"
  HtmlFor="@HtmlId"
  Path="@Path"
  ValueToCopy="@(IsCopyable ? ValueToCopy ?? Value?.ToString() : string.Empty)"
  Size="@(IsLarge ? SectionInputSize.Large : SectionInputSize.Default)"
>
  @if (IsLarge)
  {
    <InputTextAreaField
      id="@HtmlId"
      Value="@Value?.ToString()"
      Placeholder="@Placeholder"
      Disabled
    />
  }
  else
  {
    <InputTextField
      id="@HtmlId"
      Value="@Value?.ToString()"
      Placeholder="@Placeholder"
      Disabled
    />
  }
</SectionInputWrapper>

@code {
  [Parameter] public bool IsLarge { get; set; }
}