@inherits SectionFieldBase<string>

<SectionInputWrapper
  Path="@Path"
  Label="@Label"
  HtmlFor="@HtmlId"
  ValueToCopy="@(IsCopyable ? ValueToCopy ?? Value : string.Empty)"
  Size="SectionInputSizeType.Large"
>
  <InputTextAreaField
    id="@HtmlId"
    @bind-Value="@Value"
    @bind-Value:after="OnValueChanged"
    Placeholder="@Placeholder"
    Disabled="Disabled"
  />
  @if (For != null)
  {
    <FieldValidation For="@For" />
  }
</SectionInputWrapper>
