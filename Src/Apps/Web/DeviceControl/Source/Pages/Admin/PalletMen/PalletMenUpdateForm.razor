@using Ws.Domain.Models.Entities.Ref
@inherits SectionFormBase<Ws.Domain.Models.Entities.Users.PalletMan>

<SectionForm
  FormModel="@DialogItem"
  ChangeDate="@DialogItem.ChangeDt"
  CreateDate="@DialogItem.CreateDt"
  Validator="@(new PalletMenUpdateFormValidator(Localizer, WsDataLocalizer))"
  OnCancelAction="@OnCancelAction"
  OnSubmitAction="@UpdateItem"
>
  <FieldsContent>
    <SectionAdminGuidField Value="@DialogItem.Uid"/>

    <SectionGuidField
      Label="UID 1C"
      @bind-Value="@DialogItem.Uid1C"
      For="@(() => DialogItem.Uid1C)"
      IsCopyable
      Disabled="IsOnlyView"
    />

    <SectionSelectSingleField
      TItem="Warehouse"
      Label="@WsDataLocalizer["ColWarehouse"]"
      Items="Warehouses"
      @bind-Value="@DialogItem.Warehouse"
      ItemDisplayName="item => item.Name"
      Path="@Redirector.ToPath(DialogItem.Warehouse, UserPrincipal)"
      For="@(() => DialogItem.Warehouse)"
      IsFilterable
      Disabled="IsOnlyView"
    />

    <FormDivider></FormDivider>

    <SectionTextField
      Label="@WsDataLocalizer["ColFirstName"]"
      @bind-Value="@DialogItem.Fio.Name"
      For="@(() => DialogItem.Fio.Name)"
      Disabled="IsOnlyView"
    />

    <SectionTextField
      Label="@WsDataLocalizer["ColSurname"]"
      @bind-Value="@DialogItem.Fio.Surname"
      For="@(() => DialogItem.Fio.Surname)"
      Disabled="IsOnlyView"
    />

    <SectionTextField
      Label="@WsDataLocalizer["ColPatronymic"]"
      @bind-Value="@DialogItem.Fio.Patronymic"
      For="@(() => DialogItem.Fio.Patronymic)"
      Disabled="IsOnlyView"
    />

    <FormDivider></FormDivider>

    <SectionTextField
      Label="@WsDataLocalizer["ColPassword"]"
      @bind-Value="@DialogItem.Password"
      For="@(() => DialogItem.Password)"
      Disabled="IsOnlyView"
    />
  </FieldsContent>
  <ActionsContent>
    <SectionFormActionShare Path="@($"{RouteUtils.SectionPalletMen}/{DialogItem.Uid}")" />
    <SectionFormActionReset OnClick="@ResetAction" />
    <SectionFormActionDelete OnClick="@DeleteItem" />
  </ActionsContent>
</SectionForm>
