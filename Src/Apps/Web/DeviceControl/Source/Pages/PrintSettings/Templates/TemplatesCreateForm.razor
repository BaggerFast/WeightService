@using DeviceControl.Source.Widgets.Section.FormFields
@using DeviceControl.Source.Widgets.Section
@inherits SectionFormBase<Ws.Domain.Models.Entities.Print.Template>

<SectionForm
  FormModel="@DialogItem"
  Validator="@(new TemplatesCreateFormValidator())"
  OnCancelAction="@OnCancelAction"
  OnSubmitAction="@CreateItem"
>
  <FieldsContent>

    <FormDivider>@WsDataLocalizer["ColSize"]</FormDivider>

    <SectionNumericField
      @bind-Value="@DialogItem.Width"
      Max="255"
      Label="@WsDataLocalizer["ColWidth"]"
      For="@(() => DialogItem.Width)"
    />

    <SectionNumericField
      @bind-Value="@DialogItem.Height"
      Max="255"
      Label="@WsDataLocalizer["ColHeight"]"
      For="@(() => DialogItem.Height)"
    />

    <FormDivider>@WsDataLocalizer["ColDescription"]</FormDivider>

    <SectionTextField
      Label="@WsDataLocalizer["ColTitle"]"
      @bind-Value="@DialogItem.Name"
      For="@(() => DialogItem.Name)"
    />

    <SectionSelectSingleField
      TItem="bool"
      Items="@(new []{ false, true })"
      Label="@WsDataLocalizer["ColType"]"
      @bind-Value="DialogItem.IsWeight"
      ItemDisplayName="GetTemplateTypeName"
    />

    <SectionTextAreaField
      Label="@WsDataLocalizer["ColData"]"
      @bind-Value="@DialogItem.Body"
      For="@(() => DialogItem.Body)"
    />

  </FieldsContent>
</SectionForm>
