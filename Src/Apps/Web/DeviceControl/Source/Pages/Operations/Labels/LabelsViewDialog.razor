@using Ws.DeviceControl.Models.Features.Print.Labels
@implements IDialogContentComponent<LabelDto>

<SectionDialog>
  <Tab Id="@typeof(LabelsViewForm).ToString()" Title="@Localizer["SectionLabels"]">
    <LabelsViewForm FormModel="Content" />
  </Tab>
  <Tab Id="@typeof(LabelsPreview).ToString()" Title="@Localizer["LabelsPreviewTitle"]">
    <LabelsPreview Model="Content" />
  </Tab>
</SectionDialog>

@code {
  [Inject] private IStringLocalizer<ApplicationResources> Localizer { get; set; } = default!;

  [Parameter] public LabelDto Content { get; set; } = default!;
}
