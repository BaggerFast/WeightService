@using DeviceControl.Source.Widgets.Section.FormActions
@using DeviceControl.Source.Widgets.Section.FormFields
@using DeviceControl.Source.Widgets.Section
@inherits SectionFormBase<Ws.Domain.Models.Entities.Print.Label>

<SectionForm
  FormModel="@DialogItem"
  CreateDate="DialogItem.CreateDt"
>
  <FieldsContent>
    <SectionAdminGuidField Value="@DialogItem.Uid" />

    <FormDivider>@WsDataLocalizer["ColLine"]</FormDivider>

    <SectionReadOnlyField
      Label="@WsDataLocalizer["ColLine"]"
      Value="@DialogItem.Line.Name"
      Path="@Redirector.ToPath(DialogItem.Line, UserPrincipal)"
    />

    <SectionReadOnlyField
      Label="@WsDataLocalizer["ColWarehouse"]"
      Value="@DialogItem.Line.Warehouse.Name"
     Path="@Redirector.ToPath(DialogItem.Line.Warehouse, UserPrincipal)"
    />

    <FormDivider>@WsDataLocalizer["ColPlu"]</FormDivider>

    @if (DialogItem.Plu != null)
    {
      <SectionReadOnlyField
        Label="@WsDataLocalizer["ColPlu"]"
        Value="@DialogItem.Plu.DisplayName"
        Path="@Redirector.ToPath(DialogItem.Plu)"
      />

      <SectionReadOnlyField
        Label="@WsDataLocalizer["ColType"]"
        Value="@GetPluTypeName(DialogItem.Plu.IsCheckWeight)"
      />
    }
    else
    {
      <SectionReadOnlyField
        Label="@WsDataLocalizer["ColPlu"]"
        Value="@("Удалено")"
      />
    }

    <FormDivider>@WsDataLocalizer["ColBarcode"]</FormDivider>

    <SectionReadOnlyField
      Label="@WsDataLocalizer["ColBarcodeTop"]"
      Value="@DialogItem.BarcodeTop"
    />

    <SectionReadOnlyField
      Label="@WsDataLocalizer["ColBarcodeBottom"]"
      Value="@DialogItem.BarcodeBottom"
    />

    <SectionReadOnlyField
      Label="@WsDataLocalizer["ColBarcodeRight"]"
      Value="@DialogItem.BarcodeRight"
    />

    <FormDivider>@WsDataLocalizer["ColShelfLifeDays"]</FormDivider>

    <SectionReadOnlyField
      Label="@WsDataLocalizer["ColProductDt"]"
      Value="@DialogItem.ProductDt"
    />

    <SectionReadOnlyField
      Label="@WsDataLocalizer["ColExpirationDt"]"
      Value="@DialogItem.ExpirationDt"
    />

    <FormDivider />

    <AuthorizeView Policy="@PolicyEnum.Admin">
      <SectionTextAreaField
        Label="Zpl"
        Value="@DialogItem.Zpl"
        IsCopyable
      />
    </AuthorizeView>
  </FieldsContent>
  <ActionsContent>
    <SectionFormActionShare Path="@($"{RouteUtils.SectionLabels}/{DialogItem.Uid}")" />
  </ActionsContent>
</SectionForm>
