@using DeviceControl.Source.Widgets.Section
@inherits SectionDialogBase<Ws.Domain.Models.Entities.Print.Label>


<SectionDialog DialogItem="DialogItem" TabsList="@TabsList">
  <Tab Id="@typeof(LabelsUpdateForm).ToString()">
    <LabelsUpdateForm />
  </Tab>
  <Tab Id="@typeof(LabelsPreview).ToString()">
    <LabelsPreview />
  </Tab>
</SectionDialog>

@code {
  [Inject] private IStringLocalizer<ApplicationResources> Localizer { get; set; } = default!;

  protected override List<KeyValuePair<string, string>> InitializeTabList() =>
  [
    new(typeof(LabelsUpdateForm).ToString(), Localizer["SectionLabels"]),
    new(typeof(LabelsPreview).ToString(), Localizer["LabelsPreviewTitle"])
  ];
}
