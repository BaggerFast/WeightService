<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <NpmLastInstall>node_modules/.last-install</NpmLastInstall>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="BinaryKits.Zpl.Labelary" Version="1.0.2" />
        <PackageReference Include="Blazor.Heroicons" Version="2.1.2.2"/>
        <PackageReference Include="Blazorise" Version="1.5.3" />
        <PackageReference Include="Blazorise.DataGrid" Version="1.5.3" />
        <PackageReference Include="Blazorise.Icons.FontAwesome" Version="1.5.3" />
        <PackageReference Include="DeepCloner" Version="0.10.4"/>
        <PackageReference Include="FluentValidation" Version="11.9.2" />
        <PackageReference Include="Microsoft.AspNetCore.Authentication.OpenIdConnect" Version="8.0.6" />
        <PackageReference Include="Microsoft.FluentUI.AspNetCore.Components" Version="4.7.2" />
        <PackageReference Include="Phetch.Blazor" Version="0.7.1" />
        <PackageReference Include="Refit" Version="7.1.0" />
        <PackageReference Include="Refit.HttpClientFactory" Version="7.1.0" />
        <PackageReference Include="SixLabors.ImageSharp" Version="3.1.4" />
        <PackageReference Include="vNext.BlazorComponents.FluentValidation" Version="1.1.3"/>
    </ItemGroup>

    <ItemGroup>
      <Content Remove="package.json" />
      <None Include="package.json">
        <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      </None>
      <Content Remove="package-lock.json" />
      <None Include="package-lock.json">
        <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\..\Infrastructure\Ws.Domain.Models\Ws.Domain.Models.csproj" />
      <ProjectReference Include="..\..\..\Libs\Ws.Components\Ws.Components.csproj" />
      <ProjectReference Include="..\..\..\Services\Ws.Domain.Services\Ws.Domain.Services.csproj" />
      <ProjectReference Include="..\..\..\Services\Ws.Labels.Service\Ws.Labels.Service.csproj" />
    </ItemGroup>

    <ItemGroup>
      <_ContentIncludedByDefault Remove="wwwroot\libs\fontawasome\webfonts\fa-brands-400.eot" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\fontawasome\webfonts\fa-brands-400.svg" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\fontawasome\webfonts\fa-brands-400.ttf" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\fontawasome\webfonts\fa-brands-400.woff" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\fontawasome\webfonts\fa-brands-400.woff2" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\fontawasome\webfonts\fa-regular-400.eot" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\fontawasome\webfonts\fa-regular-400.svg" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\fontawasome\webfonts\fa-regular-400.ttf" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\fontawasome\webfonts\fa-regular-400.woff" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\fontawasome\webfonts\fa-regular-400.woff2" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\fontawasome\webfonts\fa-solid-900.eot" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\fontawasome\webfonts\fa-solid-900.svg" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\fontawasome\webfonts\fa-solid-900.ttf" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\fontawasome\webfonts\fa-solid-900.woff" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\fontawasome\webfonts\fa-solid-900.woff2" />
      <_ContentIncludedByDefault Remove="Source\Pages\Admin\Roles\RolesCreateDialog.razor" />
      <_ContentIncludedByDefault Remove="Source\Pages\Admin\Roles\RolesCreateForm.razor" />
      <_ContentIncludedByDefault Remove="Source\Pages\Admin\Roles\RolesPage.razor" />
      <_ContentIncludedByDefault Remove="Source\Pages\Admin\Roles\RolesUpdateDialog.razor" />
      <_ContentIncludedByDefault Remove="Source\Pages\Admin\Roles\RolesUpdateForm.razor" />
    </ItemGroup>

    <Target Name="CheckForNpm" BeforeTargets="RunNpmInstall">
        <Exec Command="npm -v" ContinueOnError="true">
            <Output TaskParameter="ExitCode" PropertyName="ErrorCode" />
        </Exec>
        <Error Text="Node.js is not installed. Please install it from https://nodejs.org/" Condition="'$(ErrorCode)' != '0'" />
    </Target>

    <Target Name="RunNpmInstall" BeforeTargets="CompileTailwindCss" Inputs="package.json" Outputs="$(NpmLastInstall)">
        <Exec Command="npm install" />
        <Touch Files="$(NpmLastInstall)" AlwaysCreate="true" />
    </Target>

    <Target Name="CompileTailwindCss" BeforeTargets="PreBuildEvent">
        <Exec Command="npm run build" />
    </Target>

</Project>
