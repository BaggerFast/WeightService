@using Pl.Admin.Client.Source.Shared.Api.Web.Models
@using Pl.Admin.Models.Features.Admins.Users.Commands

@implements IDialogContentComponent<UserModel>

<SectionDialog>
  <Tab Id="@typeof(UserUpdateForm).ToString()" Title="@Localizer["SectionUsers"]">
    <UserUpdateForm Model="Content" FormModel="@(new UserUpdateDto { ProductionSiteId = Content.ProductionSite.Id })" />
  </Tab>
</SectionDialog>

@code {
  [Inject] private IStringLocalizer<ApplicationResources> Localizer { get; set; } = default!;

  [Parameter] public UserModel Content { get; set; } = default!;
}
