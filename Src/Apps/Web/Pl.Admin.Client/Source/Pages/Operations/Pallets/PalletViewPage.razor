@using Pl.Admin.Client.Source.Shared.Api.Web.Endpoints
@using Pl.Admin.Client.Source.Shared.Constants

@attribute [Route(Urls.Pallets + "/{Id:guid}")]

<UseEndpoint
  Endpoint="@OperationsEndpoints.PalletEndpoint"
  Arg="@Id"
  Context="palletQuery"
>
  <Breadcrumbs Start="BreadcrumbStart.Back">
    @if (palletQuery.HasData)
    {
      <Breadcrumb Label="@("Паллета №" + palletQuery.Data.Number)" />
    }
  </Breadcrumbs>

  <ViewHeader Title="@(palletQuery.HasData ? "Паллета №" + palletQuery.Data.Number : string.Empty)">
    <ButtonsContent>
      @if (palletQuery.HasData)
      {
        <ViewButtonShare Link="@RedirectHelper.ToAbsoluteUrl(RedirectHelper.ToPallet(palletQuery.Data.Id))" />
      }
    </ButtonsContent>

    <TabsContent>
      <ViewTabButton Value="info" @bind-CurrentTab="CurrentTab">
        Информация
      </ViewTabButton>
      <ViewTabButton Value="labels" @bind-CurrentTab="CurrentTab">
        Этикетки
      </ViewTabButton>
    </TabsContent>
  </ViewHeader>
  <Tabs @bind-ActiveTabId="@CurrentTab">
    @if (palletQuery.HasData)
    {
      <Tab Id="info">
        <PalletViewInfo Model="palletQuery.Data"/>
      </Tab>
      <Tab Id="labels">
        <PalletViewLabels Model="palletQuery.Data"/>
      </Tab>
    }
  </Tabs>
</UseEndpoint>

@code {
  [Inject] private OperationsEndpoints OperationsEndpoints { get; set; } = default!;
  [Inject] private RedirectHelper RedirectHelper { get; set; } = default!;

  [Parameter] public Guid Id { get; set; }

  private string CurrentTab { get; set; } = "info";
}