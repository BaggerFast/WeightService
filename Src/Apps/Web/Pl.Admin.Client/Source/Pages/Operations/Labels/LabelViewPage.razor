@using Pl.Admin.Client.Source.Shared.Api.Web.Endpoints
@using Pl.Admin.Client.Source.Shared.Constants

@attribute [Route(Urls.Labels + "/{Id:guid}")]

<UseEndpoint
  Endpoint="@OperationsEndpoints.LabelEndpoint"
  Arg="@Id"
  Context="labelQuery"
>
  <Breadcrumbs Start="BreadcrumbStart.Back">
    @if (labelQuery.HasData)
    {
      <Breadcrumb Label="@("Этикетка №" + labelQuery.Data.Id)" />
    }
  </Breadcrumbs>

  <ViewHeader Title="@(labelQuery.HasData ? "Этикетка №" + labelQuery.Data.Id : string.Empty)">
    <ButtonsContent>
      @if (labelQuery.HasData)
      {
        <ViewButtonShare Link="@RedirectHelper.ToAbsoluteUrl(RedirectHelper.ToLabel(labelQuery.Data.Id))" />
      }
    </ButtonsContent>
    <TabsContent>
      <ViewTabButton Value="info" @bind-CurrentTab="CurrentTab">
        Информация
      </ViewTabButton>
      <ViewTabButton Value="preview" @bind-CurrentTab="CurrentTab">
        Предпросмотр
      </ViewTabButton>
    </TabsContent>
  </ViewHeader>

  <Tabs @bind-ActiveTabId="@CurrentTab">
    @if (labelQuery.HasData)
    {
      <Tab Id="info">
        <LabelViewInfo Model="labelQuery.Data"/>
      </Tab>
      <Tab Id="preview">
        <LabelViewPreview Model="labelQuery.Data"/>
      </Tab>
    }
  </Tabs>
</UseEndpoint>

@code {
  [Inject] private OperationsEndpoints OperationsEndpoints { get; set; } = default!;
  [Inject] private RedirectHelper RedirectHelper { get; set; } = default!;
  [Parameter] public Guid Id { get; set; }

  private string CurrentTab { get; set; } = "info";
}