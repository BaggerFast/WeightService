@using Blazor.Heroicons.Outline

<div class="h-14 shrink-0 w-full grid grid-cols-8 bg-background border-b px-4">
  <div class="flex items-center">
    <Button
      Variant="ButtonVariantType.Ghost"
      Size="ButtonSizeType.Icon"
      OnClick="@CloseAsync"
    >
      <ArrowLeftIcon class="size-[1.2rem]" />
    </Button>
  </div>
  <div class="h-full flex items-center justify-center w-full col-span-6 grow overflow-hidden">
    @ChildContent
  </div>
</div>

@code {
  [Inject] private IStringLocalizer<ApplicationResources> Localizer { get; set; } = default!;

  [Parameter] public RenderFragment? ChildContent { get; set; }
  [CascadingParameter] public FluentDialog Dialog { get; set; } = default!;

  private async Task CloseAsync() => await Dialog.CloseAsync();
}