@typeparam TItem where TItem : new()
@inherits SectionFieldBase<TItem>

<SectionInputWrapper
  Path="@Path"
  Label="@Label"
  HtmlFor="@HtmlId"
>
  <InputNumberField
    TValue="TItem"
    id="@HtmlId"
    @bind-Value="@Value"
    @bind-Value:after="OnValueChanged"
    Placeholder="@Placeholder"
    Step="@Step"
    Disabled="Disabled"
  />
  @if (For != null)
  {
    <FieldValidation For="@For"/>
  }
</SectionInputWrapper>

@code {
  [Parameter] public string? Min { get; set; }
  [Parameter] public string? Max { get; set; }
  [Parameter] public string Step { get; set; } = "1";
}