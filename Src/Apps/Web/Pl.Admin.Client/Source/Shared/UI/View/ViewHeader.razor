<div class="w-full border-b mb-4">
  <div class="py-2 flex w-full justify-between items-center">
    @if (!string.IsNullOrWhiteSpace(Title))
    {
      @if (TitleContent != null)
      {
        @TitleContent(Title)
      }
      else
      {
        <h2 class="font-bold text-3xl truncate tracking-tight">@Title</h2>
      }
      @if (ButtonsContent != null)
      {
        <div class="flex gap-2">
          @ButtonsContent
        </div>
      }
    }
    else
    {
      <Skeleton Class="h-8 w-40" />
    }
  </div>
  @if (TabsContent != null)
  {
    <div class="flex gap-6">
      @TabsContent
    </div>
  }
</div>

@code {
  [Parameter] public RenderFragment? TabsContent { get; set; }
  [Parameter] public RenderFragment? ButtonsContent { get; set; }
  [Parameter] public RenderFragment<string>? TitleContent { get; set; }
  [Parameter] public string Title { get; set; } = string.Empty;
}