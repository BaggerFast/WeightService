{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Ocelot": "Error"
    }
  },
  "Ocelot": {
    "GlobalConfiguration": {
      "DownstreamScheme": "https",
      "RouteIsCaseSensitive": false,
      "UpstreamHttpMethod": ["POST", "PUT", "GET", "DELETE"]
    },
    "Routes": [
      {
        "UpstreamPathTemplate": "/tablet/{everything}",
        "DownstreamPathTemplate": "/api/{everything}",
        "DownstreamHostAndPorts": [
          {
            "Host": "scales-tablet-api.local",
            "Port": 443
          }
        ],
        "DangerousAcceptAnyServerCertificateValidator": true
      },
      {
        "UpstreamPathTemplate": "/api/desktop/{everything}",
        "DownstreamPathTemplate": "/api/{everything}",
        "DownstreamHostAndPorts": [
          {
            "Host": "scales-desktop-api.local",
            "Port": 443
          }
        ],
        "DangerousAcceptAnyServerCertificateValidator": true
      },
      {
        "UpstreamPathTemplate": "/exchange/{everything}",
        "DownstreamPathTemplate": "/api/{everything}",
        "DownstreamHostAndPorts": [
          {
            "Host": "scales-exchange-api.local",
            "Port": 443
          }
        ],
        "DangerousAcceptAnyServerCertificateValidator": true
      },
      {
        "UpstreamPathTemplate": "/api/device-control/{everything}",
        "DownstreamPathTemplate": "/api/{everything}",
        "DownstreamHostAndPorts": [
          {
            "Host": "scales-device-control-api.local",
            "Port": 443
          }
        ],
        "DangerousAcceptAnyServerCertificateValidator": true
      }
    ]
  }
}
