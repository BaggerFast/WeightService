@using Ws.Shared.Utils

<div class="@Css.Class("flex items-center gap-2", Class)">
  @if (ConfigurationUtil.IsDevelop)
  {
    <Badge>Dev</Badge>
  }
  <div class="flex pb-1">
    <h2 class="text-xl font-medium">@Localizer["AppName"]</h2>
    <span class="pb-0.5 pl-1 text-sm">@VersionTracking.CurrentVersion</span>
  </div>
</div>

@code {
  [Inject] private IStringLocalizer<ApplicationResources> Localizer { get; set; } = default!;

  [Parameter] public string Class { get; set; } = string.Empty;
}
