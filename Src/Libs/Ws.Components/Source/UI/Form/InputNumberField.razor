@typeparam TValue where TValue: new()
@inherits BasicInput<TValue>

<FluentNumberField
  TValue="TValue"
  Id="@HtmlId"
  @bind-Value="Value"
  @bind-Value:after="OnValueChanged"
  Class="@Css.Class("w-full [&::part(control)]:!pl-3 [&::part(control)]:!text-sm [&::part(controls)]:py-1 [&::part(controls)]:pr-1 [&::part(root)]:!bg-none [&::part(root)]:!bg-background [&::part(root)]:!border-input [&::part(root)]:!h-10 [&::part(root)]:!rounded-md", Class)"
  Disabled="@Disabled"
  Autofocus="@AutoFocus"
  Placeholder="@Placeholder"
  ReadOnly="@ReadOnly"
  Min="@Min"
  Max="@Max"
  Step="@Step"
  AdditionalAttributes="AdditionalAttributes"
/>

@code {
  [Parameter] public string? Min { get; set; }
  [Parameter] public string? Max { get; set; }
  [Parameter] public string Step { get; set; } = "1";
}
