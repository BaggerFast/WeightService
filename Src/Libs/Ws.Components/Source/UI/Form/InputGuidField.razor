@inherits InputBase<Guid>

<InputTextField
  HtmlId="@HtmlId"
  @bind-Value="InputValue"
  Disabled="@Disabled"
  ReadOnly="@ReadOnly"
  AutoFocus="@AutoFocus"
  Placeholder="@Placeholder"
  Class="@Class"
  @attributes="@AdditionalAttributes"
/>

@code {
  private string InputValue
  {
    get => Value.ToString().ToUpper();
    set
    {
      bool result = Guid.TryParse(value, out Guid newGuid);
      Value = result ? newGuid : Value;
      ValueChanged.InvokeAsync(Value);
    }
  }
}