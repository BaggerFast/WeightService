<Project Sdk="Microsoft.NET.Sdk.Razor">
    <ItemGroup>
        <SupportedPlatform Include="browser" />
    </ItemGroup>

    <ItemGroup Label="Packages">
        <PackageReference Include="Blazor.Heroicons" VersionOverride="2.2.0" />
        <PackageReference Include="Microsoft.AspNetCore.Components.Web" VersionOverride="8.0.11" />
        <PackageReference Include="Microsoft.FluentUI.AspNetCore.Components" VersionOverride="4.10.4" />
        <PackageReference Include="TailwindMerge.NET" />
    </ItemGroup>

    <ItemGroup>
      <Content Remove="tsconfig.json" />
      <None Include="tsconfig.json">
        <CopyToOutputDirectory>Never</CopyToOutputDirectory>
