@inherits PlComponentBase

<FluentTooltip
  Id="@Id"
  AdditionalAttributes="@AdditionalAttributes"
  Position="@Position"
  Visible="@Visible"
  Anchor="@Anchor"
  Class="@Class"
>
  @ChildContent
</FluentTooltip>

@code {
  /// <summary>
  /// The control identifier associated with the tooltip.
  /// </summary>
  [Parameter, EditorRequired] public string Anchor { get; set; } = string.Empty;

  /// <summary>
  /// The content to be rendered inside the component.
  /// </summary>
  [Parameter] public RenderFragment? ChildContent { get; set; }

  /// <summary>
  /// The vertical position of component relative to the anchor element.
  /// </summary>
  [Parameter] public TooltipPosition? Position { get; set; }

  /// <summary>
  /// A value indicating whether the component is visible.
  /// </summary>
  [Parameter] public bool Visible { get; set; }
}
