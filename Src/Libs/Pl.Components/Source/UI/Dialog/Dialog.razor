@inherits PlComponentBase

<div
  @attributes="AdditionalAttributes"
  id="@Id"
  class="@ClassMerge("bg-background overflow-hidden flex flex-col max-h-[calc(100vh_-_2px)] w-screen border shadow-lg rounded-lg", Class)"
>
  @ChildContent
</div>

<FluentDialogHeader Visible="false"></FluentDialogHeader>
<FluentDialogBody Class="hidden"></FluentDialogBody>
<FluentDialogFooter Visible="false"></FluentDialogFooter>

@code {
  [Parameter] public RenderFragment? ChildContent { get; set; }
}
