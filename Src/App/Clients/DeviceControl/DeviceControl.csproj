<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Blazor.Heroicons" Version="2.1.2.2"/>
        <PackageReference Include="Blazorise" Version="1.5.2" />
        <PackageReference Include="Blazorise.DataGrid" Version="1.5.2" />
        <PackageReference Include="Blazorise.Icons.FontAwesome" Version="1.5.2" />
        <PackageReference Include="DeepCloner" Version="0.10.4"/>
        <PackageReference Include="FluentValidation" Version="11.9.1" />
        <PackageReference Include="Microsoft.AspNetCore.Authentication.Negotiate" Version="8.0.4"/>
        <PackageReference Include="Microsoft.FluentUI.AspNetCore.Components" Version="4.7.1" />
        <PackageReference Include="vNext.BlazorComponents.FluentValidation" Version="1.1.3"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\Domain\Ws.Domain.Models\Ws.Domain.Models.csproj"/>
        <ProjectReference Include="..\..\Libs\Ws.Components\Ws.Components.csproj" />
        <ProjectReference Include="..\..\Libs\Ws.Shared\Ws.Shared.csproj"/>
        <ProjectReference Include="..\..\Services\Ws.Domain.Services\Ws.Domain.Services.csproj"/>
        <ProjectReference Include="..\..\Services\Ws.Labels.Service\Ws.Labels.Service.csproj"/>
    </ItemGroup>
    
    <ItemGroup>
      <Content Remove="package.json" />
      <None Include="package.json">
        <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      </None>
      <Content Remove="package-lock.json" />
      <None Include="package-lock.json">
        <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
        <Exec Command="npm run build" ContinueOnError="true"/>
    </Target>

</Project>
