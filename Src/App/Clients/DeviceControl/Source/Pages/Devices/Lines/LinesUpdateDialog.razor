@using DeviceControl.Source.Widgets.Section
@using Microsoft.Extensions.Localization
@inherits DeviceControl.Source.Widgets.Section.SectionDialogBase<Ws.Domain.Models.Entities.Ref.LineEntity>


<SectionDialog DialogItem="DialogItem" TabsList="@TabsList">
  <Tab Id="@typeof(LinesUpdateForm).ToString()">
    <LinesUpdateForm />
  </Tab>
  <Tab Id="@typeof(LinePluDataGrid).ToString()">
    <LinePluDataGrid />
  </Tab>
</SectionDialog>

@code {
  [Inject] private IStringLocalizer<ApplicationResources> Localizer { get; set; } = default!;

  protected override List<KeyValuePair<string, string>> InitializeTabList() =>
  [
    new(typeof(LinesUpdateForm).ToString(), Localizer["SectionLines"]),
    new(typeof(LinePluDataGrid).ToString(), Localizer["SectionLinePLU"])
  ];
}