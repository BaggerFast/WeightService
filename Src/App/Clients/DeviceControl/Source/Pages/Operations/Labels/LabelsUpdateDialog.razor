@using DeviceControl.Source.Widgets.Section
@using Microsoft.Extensions.Localization
@inherits DeviceControl.Source.Widgets.Section.SectionDialogBase<Ws.Domain.Models.Entities.Print.LabelEntity>


<SectionDialog DialogItem="DialogItem" TabsList="@TabsList">
  <Tab Id="typeof(LabelsUpdateForm)">
    <LabelsUpdateForm />
  </Tab>
  <Tab Id="typeof(LabelsPreview)">
    <LabelsPreview ZplCode="@DialogItem.Zpl" />
  </Tab>
</SectionDialog>

@code {
  [Inject] private IStringLocalizer<ApplicationResources> Localizer { get; set; } = default!;

  protected override List<KeyValuePair<Type, string>> InitializeTabList() =>
  [
    new(typeof(LabelsUpdateForm), Localizer["SectionLabels"]),
    new(typeof(LabelsPreview), Localizer["LabelsPreviewTitle"])
  ];
}
