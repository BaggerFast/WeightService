@using DeviceControl.Source.Pages.References1C.Plus.Characteristics
@using DeviceControl.Source.Widgets.Section
@using Microsoft.Extensions.Localization
@inherits DeviceControl.Source.Widgets.Section.SectionDialogBase<Ws.Domain.Models.Entities.Ref1c.PluEntity>


<SectionDialog DialogItem="DialogItem" TabsList="@TabsList">
  <Tab Id="typeof(PlusUpdateForm)">
    <PlusUpdateForm />
  </Tab>
  <Tab Id="typeof(PieceCharacteristicsDataGrid)">
    @if (!DialogItem.IsCheckWeight)
    {
      <PieceCharacteristicsDataGrid/>
    }
    else
    {
      <WeightCharacteristicsDataGrid />
    }
  </Tab>
</SectionDialog>

@code {
  [Inject] private IStringLocalizer<ApplicationResources> Localizer { get; set; } = default!;

  protected override List<KeyValuePair<Type, string>> InitializeTabList() =>
  [
    new(typeof(PlusUpdateForm), Localizer["SectionPLU"]),
    new(typeof(PieceCharacteristicsDataGrid), Localizer["SectionPluCharacteristics"])
  ];
}
