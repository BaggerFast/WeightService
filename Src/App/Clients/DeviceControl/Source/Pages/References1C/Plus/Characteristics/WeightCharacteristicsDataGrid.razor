@using DeviceControl.Source.Widgets.Section
@using DeviceControl.Source.Widgets.Section.DataGridActions
@using Ws.Domain.Models.Entities.Ref1c
@inherits DeviceControl.Source.Widgets.Section.SectionDataGridPageBase<Ws.Domain.Models.Entities.Ref1c.CharacteristicEntity>
@rendermode InteractiveServer

<PageHeader>
  <span>@Localizer["SectionPluCharacteristics"]</span>
  <DataGridItemsCounter ItemsCount="@SectionItems.Count()" IsLoading="IsLoading"/>
  <DataGridActionReload OnClick="@UpdateData" IsLoading="IsLoading" />
</PageHeader>

<DataGridWrapper Class="bg-secondary/[.3] dark:bg-inherit">
  <DataGridContainer
    TItem="CharacteristicEntity"
    Items="SectionItems"
    ItemsPerPage="6"
    IsForcePagination
  >
    <ColumnsContent>
      <DataGridColumn
        Caption="@WsDataLocalizer["ColName"]"
        Field="@nameof(CharacteristicEntity.Name)"
        Sortable="false"
        Width="15%"
      />
      <DataGridColumn
        Caption="@WsDataLocalizer["ColCount"]"
        Field="@nameof(CharacteristicEntity.BundleCount)"
        Width="10%"
      />
      <DataGridColumn
        Caption="@WsDataLocalizer["ColBundle"]"
        Width="15%"
        Sortable="false"
      >
        <DisplayTemplate>
          @Plu.Bundle.Weight * @context.BundleCount
        </DisplayTemplate>
      </DataGridColumn>
      <DataGridColumn
        Caption="@WsDataLocalizer["ColClip"]"
        Width="15%"
        Sortable="false"
      >
        <DisplayTemplate>
          @Plu.Clip.Weight * @context.BundleCount
        </DisplayTemplate>
      </DataGridColumn>
      <DataGridColumn
        Caption="@WsDataLocalizer["ColBox"]"
        Field="@($"{nameof(CharacteristicEntity.Box)}.{nameof(BoxEntity.Weight)}")"
        Width="15%"
        Sortable="false"
      />
      <DataGridColumn
        Caption="@WsDataLocalizer["ColTareWeightTotal"]"
        Width="15%"
      >
        <DisplayTemplate>
          @Plu.GetWeightWithNesting
        </DisplayTemplate>
      </DataGridColumn>
    </ColumnsContent>
  </DataGridContainer>
</DataGridWrapper>
