@using DeviceControl.Source.Widgets.Section
@using Microsoft.Extensions.Localization
@inherits DeviceControl.Source.Widgets.Section.SectionDialogBase<Ws.Domain.Models.Entities.Ref1c.BundleEntity>


<SectionDialog DialogItem="DialogItem" TabsList="@TabsList">
  <Tab Id="@typeof(BundlesUpdateForm).ToString()">
    <BundlesUpdateForm />
  </Tab>
</SectionDialog>

@code {
  [Inject] private IStringLocalizer<ApplicationResources> Localizer { get; set; } = default!;

  protected override List<KeyValuePair<string, string>> InitializeTabList() =>
    [
      new(typeof(BundlesUpdateForm).ToString(), Localizer["SectionBundles"])
    ];
}
