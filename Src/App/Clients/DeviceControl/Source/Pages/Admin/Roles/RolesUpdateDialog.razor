@using DeviceControl.Source.Widgets.Section
@using Microsoft.Extensions.Localization
@inherits DeviceControl.Source.Widgets.Section.SectionDialogBase<Ws.Domain.Models.Entities.Ref.ClaimEntity>


<SectionDialog DialogItem="DialogItem" TabsList="@TabsList">
  <Tab Id="typeof(RolesUpdateForm)">
    <RolesUpdateForm />
  </Tab>
</SectionDialog>

@code {
  [Inject] private IStringLocalizer<ApplicationResources> Localizer { get; set; } = default!;

  protected override List<KeyValuePair<Type, string>> InitializeTabList() =>
  [
    new(typeof(RolesUpdateForm), Localizer["SectionRoles"])
  ];
}
