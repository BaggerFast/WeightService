@using DeviceControl.Source.Widgets.Section
@using Microsoft.Extensions.Localization
@using Ws.Shared.Resources
@inherits DeviceControl.Source.Widgets.Section.SectionDialogBase<Ws.Domain.Models.Entities.Print.Template>


<SectionDialog DialogItem="DialogItem" TabsList="@TabsList">
  <Tab Id="@typeof(TemplatesUpdateForm).ToString()">
    <TemplatesUpdateForm />
  </Tab>
  <Tab Id="@typeof(TemplatesBarcodeForm).ToString()">
    <TemplatesBarcodeForm />
  </Tab>
</SectionDialog>

@code {
  [Inject] private IStringLocalizer<ApplicationResources> Localizer { get; set; } = default!;
  [Inject] private IStringLocalizer<WsDataResources> WsDataLocalizer { get; set; } = default!;

  protected override List<KeyValuePair<string, string>> InitializeTabList() =>
  [
    new(typeof(TemplatesUpdateForm).ToString(), Localizer["SectionTemplates"]),
    new(typeof(TemplatesBarcodeForm).ToString(), WsDataLocalizer["ColBarcode"])
  ];
}
