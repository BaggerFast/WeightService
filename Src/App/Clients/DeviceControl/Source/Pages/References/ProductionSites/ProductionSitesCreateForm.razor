@using DeviceControl.Source.Widgets.Section
@using DeviceControl.Source.Widgets.Section.FormFields
@inherits DeviceControl.Source.Widgets.Section.SectionFormBase<Ws.Domain.Models.Entities.Ref.ProductionSite>

<SectionForm
  FormModel="@DialogItem"
  Validator="@(new ProductionSitesCreateFormValidator())"
  OnCancelAction="@OnCancelAction"
  OnSubmitAction="@CreateItem"
>
  <FieldsContent>
    <SectionTextField
      Label="@WsDataLocalizer["ColName"]"
      @bind-Value="@DialogItem.Name"
      For="@(() => DialogItem.Name)"
    />

    <SectionTextAreaField
      Label="@WsDataLocalizer["ColAddress"]"
      @bind-Value="@DialogItem.Address"
      For="@(() => DialogItem.Address)"
    />
  </FieldsContent>
</SectionForm>
