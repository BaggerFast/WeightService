<pages:XamlPageBase 
	x:Class="WeightCore.Gui.XamlPages.PageDevice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:pages="clr-namespace:WeightCore.Gui.XamlPages"
    mc:Ignorable="d" 
    d:DesignWidth="600" d:DesignHeight="300" FontSize="20"
	DataContext="{DynamicResource UserSession}" >

	<pages:XamlPageBase.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="XamlResourceDictionary.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</pages:XamlPageBase.Resources>

	<Border
	    BorderBrush="Blue" BorderThickness="1" Margin="2" >
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label 
	            Margin="2" Grid.Column="0" Grid.Row="0" 
                Content="{Binding Source={StaticResource LocaleTable}, Path=Host, Mode=OneTime}"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ></Label>
            <Label 
	            Margin="2" Grid.Column="1" Grid.Row="0" 
                Content="{Binding Path=Host.Name, Mode=OneWay}" 
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ></Label>
            <Label 
	            Margin="2" Grid.Column="0" Grid.Row="1" 
                Content="{Binding Source={StaticResource LocaleTable}, Path=Number, Mode=OneWay}" 
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
            <Label 
	            Margin="2" Grid.Column="1" Grid.Row="1" 
                Content="{Binding Path=Scale.Number, Mode=OneWay}" 
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
            <Label 
	            Margin="2" Grid.Column="0" Grid.Row="2" 
                Content="{Binding Source={StaticResource LocaleTable}, Path=Arm, Mode=OneWay}" 
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ></Label>
            <ComboBox 
	            Margin="2" Grid.Column="1" Grid.Row="2" x:Name="comboBoxScale"
                HorizontalContentAlignment="Left" VerticalContentAlignment="Center" 
	            ItemsSource="{Binding Path=Scales, Mode=OneWay}" 
	            DisplayMemberPath="Description"
	            SelectedValuePath="Description"
	            SelectedValue="{Binding Path=Scale.Description, Mode=OneWay}" 
	            SelectedItem="{Binding Path=Scale, Mode=TwoWay}" 
	            />
            <Label 
	            Margin="2" Grid.Column="0" Grid.Row="3" 
                Content="{Binding Source={StaticResource LocaleTable}, Path=Area, Mode=OneWay}" 
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ></Label>
            <ComboBox 
	            Margin="2" Grid.Column="1" Grid.Row="3" x:Name="comboBoxArea"
                HorizontalContentAlignment="Left" VerticalContentAlignment="Center" 
                ItemsSource="{Binding Path=Areas, Mode=OneWay}" 
	            DisplayMemberPath="Name"
	            SelectedValuePath="Name"
	            SelectedValue="{Binding Path=Area.Name, Mode=OneWay}" 
	            SelectedItem="{Binding Path=Area, Mode=TwoWay}" 
	            />
                
            <Button 
	            Margin="2" Grid.Column="0" Grid.Row="4"
                Content="{Binding Source={StaticResource LocaleButtons}, Path=Apply, Mode=OneWay}"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                Click="ButtonApply_OnClick" />
            <Button 
	            Margin="2" Grid.Column="1" Grid.Row="4" 
                Content="{Binding Source={StaticResource LocaleButtons}, Path=Cancel, Mode=OneWay}" 
                Click="ButtonClose_OnClick" />
        </Grid>
    </Border>
            
</pages:XamlPageBase>
