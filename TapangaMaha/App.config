<?xml version="1.0" encoding="utf-8"?>
<configuration>

  

  <configSections>

    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net" />



    <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
            <section name="TapangaMaha.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
        </sectionGroup>
        <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
            <section name="TapangaMaha.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
        </sectionGroup>
    </configSections>
    <connectionStrings>
        <add name="TapangaMaha.Properties.Settings.ConnectionString" connectionString="Data Source=DEV1C.kolbasa-vs.local\DVLP;Initial Catalog=ScalesDB;Persist Security Info=True;User ID=scale01;Password=scale01" providerName="System.Data.SqlClient" />
    </connectionStrings>
  
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
    <userSettings>
        <TapangaMaha.Properties.Settings>
            <setting name="ProductDate" serializeAs="String">
                <value />
            </setting>
            <setting name="Kneading" serializeAs="String">
                <value>1</value>
            </setting>
        </TapangaMaha.Properties.Settings>
    </userSettings>
    <applicationSettings>
        <TapangaMaha.Properties.Settings>
            <setting name="CurrentScaleId" serializeAs="String">
                <value>4</value>
            </setting>
        </TapangaMaha.Properties.Settings>
    </applicationSettings>

  <log4net>

    <appender name="TextBoxAppender" type="TapangaMaha.Common.TextBoxAppender" />

    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level: %message%newline" />
      </layout>
    </appender>

    <appender name="FileAppender" type="log4net.Appender.FileAppender">
      <param name="File" value="D:\tmp\#logs\TapangaMaha.log" />
      <param name="AppendToFile" value="true" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="5MB" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] - %m%n" />
      </layout>
    </appender>

    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="D:\tmp\#logs\TapangaMaha.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %level [%thread] %type.%method - %message%n" />
      </layout>
    </appender>

    <root>
      <level value="ALL" />
      <appender-ref ref="TextBoxAppender" />
      <appender-ref ref="RollingFileAppender" />
    </root>
  </log4net>


  <runtime>


    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">


      <dependentAssembly>


        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />


        <bindingRedirect oldVersion="0.0.0.0-11.0.0.0" newVersion="11.0.0.0" />


      </dependentAssembly>


    </assemblyBinding>


  </runtime>
</configuration>