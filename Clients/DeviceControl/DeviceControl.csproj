<Project Sdk="Microsoft.NET.Sdk.Web">
    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Version>1.0.3.0</Version>
        <Authors>Владимирский стандарт</Authors>
        <Company>Владимирский стандарт</Company>
        <UserSecretsId>993a2cab-36f2-4b69-a954-68c43db890b1</UserSecretsId>
        <Product>WeightService</Product>
        <Copyright>Copyright © 2020 - 2023</Copyright>
        <AssemblyName>DeviceControl</AssemblyName>
        <RootNamespace>DeviceControl</RootNamespace>
        <NeutralLanguage>ru-RU</NeutralLanguage>
        <FileVersion>1.0.3.0</FileVersion>
        <AssemblyVersion>1.0.3.0</AssemblyVersion>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
        <Platforms>AnyCPU;x64;x86</Platforms>
        <Configurations>DevelopVS;ReleaseVS;ReleaseAleksandrov;DevelopMorozov;DevelopAleksandrov;ReleaseMorozov</Configurations>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Authentication.Negotiate" Version="7.0.12" />
        <PackageReference Include="Microsoft.AspNetCore.Authorization" Version="7.0.12" />
        <PackageReference Include="Microsoft.AspNetCore.Components" Version="7.0.12" />
        <PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="7.0.12" />
        <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.12" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.12" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Authentication" Version="7.0.12" />
        <PackageReference Include="MudBlazor" Version="6.11.0" />
        <PackageReference Include="Radzen.Blazor" Version="4.17.1" />
    </ItemGroup>
    <ItemGroup>
        <SupportedPlatform Include="browser" />
    </ItemGroup>
    <ItemGroup>
        <Watch Include="..\**\*.razor;..\**\*.scss;..\**\*.css;..\**\*.html;" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\..\Core\WsLocalizationCore\WsLocalizationCore.csproj" />
        <ProjectReference Include="..\..\Core\WsStorageCore\WsStorageCore.csproj" />
    </ItemGroup>
    <ItemGroup>
      <None Remove=".gitignore" />
    </ItemGroup>
    <Target Name="AfterBuild" BeforeTargets="PrepareForBuild">
        <TransformXml Source="appsettings.json" Transform="appsettings.$(Configuration).json" Destination="appsettings.json" StackTrace="true" />
    </Target>
</Project>
