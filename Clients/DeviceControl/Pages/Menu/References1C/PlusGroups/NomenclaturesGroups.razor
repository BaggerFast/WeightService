@page "/section/nomenclatures_groups"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using WsStorageCore.TableScaleModels.PlusGroups
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@inherits RazorComponentSectionBase<WsStorageCore.TableScaleModels.PlusGroups.WsSqlPluGroupModel>

<SectionTopBar
  Title="@LocaleCore.DeviceControl.SectionNomenclaturesGroups"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  @bind-Value="@SelectedRow"
  TItem="@WsSqlPluGroupModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowRender="@RowRender"
  LoadChildData="@LoadChildData"
  RowDoubleClick="@SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@WsSqlPluGroupModel">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Name" Property="Name" Width="45%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Code" Width="20%" Property="Code"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Group" Width="30%" Sortable="false">
        <Template Context="itemCast">
          @ContextManager.ContextItem.GetItemNomenclatureGroupParentNotNullable(itemCast).Name
        </Template>
      </RadzenDataGridColumn>
    </TItemContent>
  </Columns>
</RzDataGrid>