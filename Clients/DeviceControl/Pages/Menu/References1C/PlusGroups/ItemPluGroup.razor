@page "/section/nomenclatures_groups/new"
@page "/section/nomenclatures_groups/{Uid:guid}"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using WsStorageCore.TableScaleModels.PlusGroups
@using DeviceControl.Components.Item
@using DeviceControl.Services
@inherits ItemBase<WsStorageCore.TableScaleModels.PlusGroups.WsSqlPluGroupModel>

<ItemTopBar TItem="@WsSqlPluGroupModel" Title="@WsLocaleCore.DeviceControl.ItemNomenclatureGroup" OnItemUpdate="@GetItemData"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <ItemTableHead CssTableStyleHead="@RzComponentUtils.GetTableHeadStyle(new() { 20, 30, 20, 30 })"/>
  <tbody>
  <ItemTableBody SqlItem="@SqlItemCast"/>
  <tr>
    <td>@WsLocaleCore.Table.Name</td>
    <td>@SqlItemCast.Name</td>
    <td>@WsLocaleCore.Table.Code</td>
    <td>@SqlItemCast.Code</td>
  </tr>
  @if (ParentGroup is {IsNotNew: true })
  {
    <tr>
      <td>
        <RadzenLink Path="@RouteService.GetItemRoute(ParentGroup)" Text="@WsLocaleCore.Table.Parent"/>
      </td>
      <td>@ParentGroup.Name</td>
      <td/>
      <td/>
    </tr>
  }
  <ItemDates SqlItem="@SqlItemCast"/>
  </tbody>
</MudSimpleTable>

<ItemActions
  TItem="@WsSqlPluGroupModel"
  ButtonSettings="@ButtonSettings"
  OnItemSave="@SqlItemSaveAsync"
  OnItemCancel="@RedirectBackAsync"/>