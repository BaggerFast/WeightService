@page "/section/plus_groups"
@attribute [Authorize(Roles = WsUserAccessStr.Read)]
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@using DeviceControl.Utils
@using WsStorageCore.Tables.TableScaleModels.PlusGroups
@inherits SectionBase<WsStorageCore.Tables.TableScaleModels.PlusGroups.WsSqlPluGroupModel>

<SectionTopBar
  Title="@WsLocaleCore.DeviceControl.SectionPlusGroups"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@WsSqlPluGroupModel"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowRender="@RowRender"
  LoadChildData="@LoadChildData"
  RowDoubleClick="@SqlItemOpenAsync">
  <Columns>
    <TItemContent TItem="@WsSqlPluGroupModel">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Name" Property="Name" Width="45%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Code" Width="20%" Property="Code"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Group" Width="30%" Sortable="false">
        <Template Context="itemCast">
          @PluGroupRepository.GetItemParentFromChildGroup(itemCast).Name
        </Template>
      </RadzenDataGridColumn>
    </TItemContent>
  </Columns>
</RzDataGrid>
