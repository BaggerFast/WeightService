@page "/section/boxes"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using WsStorageCore.TableScaleModels.Boxes
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@inherits SectionBase<WsStorageCore.TableScaleModels.Boxes.WsSqlBoxModel>


<SectionTopBar
  Title="@LocaleCore.DeviceControl.SectionBoxes"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  @bind-Value="@SelectedRow"
  TItem="@WsSqlBoxModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@WsSqlBoxModel">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Name" Property="Name" Width="75%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.BoxWeight" Property="Weight"/>
    </TItemContent>
  </Columns>
</RzDataGrid>