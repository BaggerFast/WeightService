@page "/section/plus_bundles"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@using WsStorageCore.Tables.TableScaleFkModels.PlusBundlesFks
@inherits SectionBase<WsStorageCore.Tables.TableScaleFkModels.PlusBundlesFks.WsSqlPluBundleFkModel>

<SectionTopBar
  Title="@WsLocaleCore.DeviceControl.SectionPlusBundlesFk"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@WsSqlPluBundleFkModel"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  IsLoading="@IsLoading"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync">
  <Columns>
    <TItemContent TItem="@WsSqlPluBundleFkModel">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn TItem="WsSqlPluBundleFkModel" Title="@WsLocaleCore.Table.Weighted" SortProperty="Plu.IsCheckWeight" Width="7%">
        <Template Context="itemCast">
          <RadzenCheckBox ReadOnly="true" TValue="bool" @bind-Value="@itemCast.Plu.IsCheckWeight"/>
        </Template>
      </RadzenDataGridColumn>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.PluNumber" Property="Plu.Number" Width="7%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Plu" Property="Plu.Name" Width="23%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Bundle" Property="Bundle.Name" Width="15%"/>
    </TItemContent>
  </Columns>
</RzDataGrid>