@page "/section/production_facilities"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using WsStorageCore.TableScaleModels.ProductionFacilities
@using DeviceControl.Pages.SectionComponents
@using DeviceControl.Pages.CustomComponents
@inherits RazorComponentSectionBase<WsStorageCore.TableScaleModels.ProductionFacilities.WsSqlProductionFacilityModel>

<SectionReload
  Title="@LocaleCore.DeviceControl.SectionProductionFacilities"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"/>

<RzDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@WsSqlProductionFacilityModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@WsSqlProductionFacilityModel">
      <SectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Name" Property="Name" Width="25%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Address" Property="Address" Width="70%"/>
    </TItemContent>
  </Columns>
</RzDataGridLocal>