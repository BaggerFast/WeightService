@page "/section/plus_storage"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@using DeviceControl.Utils
@using WsStorageCore.Tables.TableScaleModels.PlusStorageMethods
@inherits SectionBase<WsStorageCore.Tables.TableScaleModels.PlusStorageMethods.WsSqlPluStorageMethodModel>

<SectionTopBar
  Title="@WsLocaleCore.DeviceControl.SectionPlusStorage"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@WsSqlPluStorageMethodModel"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync">
  <Columns>
    <TItemContent TItem="@WsSqlPluStorageMethodModel">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Name" Property="Name" Width="33%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.TempMinimal" Property="MinTemp" Width="33%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.TempMaximal" Property="MaxTemp" Width="33%"/>
    </TItemContent>
  </Columns>
</RzDataGrid>