@page "/section/access/new"
@page "/section/access/{Uid:guid}"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using WsStorageCore.TableScaleModels.Access
@using WsDataCore.Utils
@using DeviceControl.Components.Item
@using DeviceControl.Components.Rz
@inherits ItemBase<WsStorageCore.TableScaleModels.Access.WsSqlAccessModel>

<ItemTopBar TItem="@WsSqlAccessModel" Title="@WsLocaleCore.Strings.AccessRights" OnItemUpdate="@GetItemData"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <ItemTableHead CssTableStyleHead="@RzComponentUtils.GetTableHeadStyle(new() { 20, 30, 20, 30 })"/>
  <tbody>
  <ItemTableBody SqlItem="@SqlItemCast"/>
  <tr>
    <td>@WsLocaleCore.Table.User</td>
    <td>@SqlItemCast.Name</td>
    <td>@WsLocaleCore.Strings.AccessRights</td>
    <td>
      <RzDropDown @bind-Value="@Rights" Data="@TemplateAccessRights" ValueProperty="Value" TextProperty="Name"/>
    </td>
  </tr>
  <tr>
    <td>@WsLocaleCore.Table.LoginDt</td>
    <td>@string.Format(StrUtils.FormatDtLong, SqlItemCast.LoginDt)</td>
    <td/>
    <td/>
  </tr>
  <ItemDates SqlItem="@SqlItemCast"/>
  </tbody>
</MudSimpleTable>

<ItemActions
  TItem="@WsSqlAccessModel"
  ButtonSettings="@ButtonSettings"
  OnItemSave="@SqlItemSaveAsync"
  OnItemCancel="@SqlItemCancelAsync"/>