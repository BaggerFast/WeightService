@page "/section/plu_weighings"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using WsStorageCore.ViewScaleModels
@using WsDataCore.Utils
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@inherits RazorComponentSectionBase<WsStorageCore.ViewScaleModels.PluWeightingView>

<SectionTopBar
  Title="@LocaleCore.DeviceControl.SectionPlusWeightings"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  @bind-Value="@SelectedRow"
  TItem="@PluWeightingView"
  Data="@SqlSectionCast"
  IsLoading="@IsLoading"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@PluWeightingView">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.CreateDt" Property="CreateDt" Width="12%" FormatString="@StrUtils.FormatDtDefault"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Line" Property="Line" Width="22%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.PluNumber" Property="PluNumber" Width="10%" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.Plu" Property="PluName" Width="18%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.BundleFkWeightTare" Property="TareWeight" Width="10%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.WeightNetto" Property="NettoWeight" Width="10%"/>
      @* @itemCast.NettoWeight.ToString(CultureInfo.InvariantCulture) *@
    </TItemContent>
  </Columns>
</RzDataGrid>