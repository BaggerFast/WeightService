@page "/section/barcodes/new"
@page "/section/barcodes/{Uid:guid}"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using WsStorageCore.TableScaleModels.BarCodes
@using WsDataCore.Enums
@using DeviceControl.Components.Item
@using DeviceControl.Services
@inherits ItemBase<WsStorageCore.TableScaleModels.BarCodes.WsSqlBarCodeModel>

<ItemTopBar TItem="@WsSqlBarCodeModel" Title="@WsLocaleCore.DeviceControl.ItemBarcode" OnItemUpdate="@GetItemData"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <ItemTableHead CssTableStyleHead="@RzComponentUtils.GetTableHeadStyle(new() { 20, 30, 20, 30 })"/>
  <tbody>
  <ItemTableBody SqlItem="@SqlItemCast"/>
  <tr>
    <td>
      <RadzenLink Path="@RouteService.GetItemRoute(SqlItemCast.PluLabel.PluScale.Line)" Text="@WsLocaleCore.Table.Line"/>
    </td>
    <td>@SqlItemCast.PluLabel.PluScale.Line.Description</td>
    <td>
      <RadzenLink Path="@RouteService.GetItemRoute(SqlItemCast.PluLabel)" Text="@WsLocaleCore.Table.Label"/>
    </td>
    <td>@SqlItemCast.PluLabel.IdentityValueUid</td>
  </tr>
  <tr>
    <td>
      <RadzenLink Path="@RouteService.GetItemRoute(SqlItemCast.PluLabel.PluScale.Plu)" Text="@WsLocaleCore.Table.Plu"/>
    </td>
    <td>@SqlItemCast.PluLabel.PluScale.Plu.DisplayName</td>
    <td/>
    <td/>
  </tr>
  @if (SqlItemCast.PluLabel.PluWeighing is not null)
  {
    <tr>
      <td>@WsLocaleCore.Table.ProductSeries</td>
      <td>@SqlItemCast.PluLabel.PluWeighing.Series?.Sscc</td>
      <td>
        <RadzenLink Path="@RouteService.GetItemRoute(SqlItemCast.PluLabel.PluWeighing)" Text="@WsLocaleCore.Table.Weighing"/>
      </td>
      <td>@SqlItemCast.PluLabel.PluWeighing.IdentityValueUid</td>
    </tr>
  }
  <tr>
    <td>@WsLocaleCore.Table.TypeTop</td>
    <td>@SqlItemCast.TypeTop</td>
    <td>@WsLocaleCore.Table.ValueTop</td>
    <td>@SqlItemCast.ValueTop</td>
  </tr>
  <tr>
    <td>@WsLocaleCore.Table.Description</td>
    <td colspan="3">
      <RadzenTextArea Style="width: 100%;" Disabled="true" Value="@GetBarcodeTop(WsEnumFormatType.Xml)" Rows="11"/>
    </td>
  </tr>
  <tr>
    <td>@WsLocaleCore.Table.TypeRight</td>
    <td>@SqlItemCast.TypeRight</td>
    <td>@WsLocaleCore.Table.ValueRight</td>
    <td>@SqlItemCast.ValueRight</td>
  </tr>
  <tr>
    <td>@WsLocaleCore.Table.Description</td>
    <td colspan="3">
      <RadzenTextArea Style="width: 100%;" Disabled="true" Value="@GetBarcodeRight(WsEnumFormatType.Xml)" Rows="5"/>
    </td>
  </tr>
  <tr>
    <td>@WsLocaleCore.Table.TypeBottom</td>
    <td>@SqlItemCast.TypeBottom</td>
    <td>@WsLocaleCore.Table.ValueBottom</td>
    <td>@SqlItemCast.ValueBottom</td>
  </tr>
  <tr>
    <td>@WsLocaleCore.Table.Description</td>
    <td colspan="3">
      <RadzenTextArea Style="width: 100%;" Disabled="true" Value="@GetBarcodeBottom(WsEnumFormatType.Xml)" Rows="10"/>
    </td>
  </tr>
  <ItemDates SqlItem="@SqlItemCast"/>
  </tbody>
</MudSimpleTable>

<ItemActions
  TItem="@WsSqlBarCodeModel"
  ButtonSettings="@ButtonSettings"
  OnItemSave="@SqlItemSaveAsync"
  OnItemCancel="@SqlItemCancelAsync"/>