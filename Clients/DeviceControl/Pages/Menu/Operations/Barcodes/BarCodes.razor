@page "/section/barcodes"
@attribute [Authorize(Roles = WsUserAccessStr.Read)]
@using WsDataCore.Utils
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@using DeviceControl.Utils
@using WsStorageCore.Views.ViewScaleModels.Barcodes
@inherits SectionBase<WsStorageCore.Views.ViewScaleModels.Barcodes.WsSqlViewBarcodeModel>

<SectionTopBar
  Title="@WsLocaleCore.DeviceControl.SectionBarCodes"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@WsSqlViewBarcodeModel"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  IsLoading="@IsLoading"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync"
  AllowFiltering="true"
  FilterMode="FilterMode.Simple"
  LogicalFilterOperator="@LogicalFilterOperator.And">
  <Columns>
    <TItemContent TItem="@WsSqlViewBarcodeModel">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.CreateDt" Property="CreateDt" Width="12%" Filterable="false"
                            FormatString="@WsStrUtils.FormatDtDefault"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.PluNumber" Property="PluNumber" Width="12%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.ValueTop" Property="ValueTop" Width="28%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.ValueRight" Property="ValueRight" Width="15%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.ValueBottom" Property="ValueBottom" Width="28%"/>
    </TItemContent>
  </Columns>
</RzDataGrid>
