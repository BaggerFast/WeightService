@page "/section/plus_weightings"
@attribute [Authorize(Roles = WsUserAccessStr.Read)]
@using WsDataCore.Utils
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@using DeviceControl.Utils
@using WsStorageCore.Views.ViewScaleModels.PluWeightings
@inherits SectionBase<WsStorageCore.Views.ViewScaleModels.PluWeightings.WsSqlViewPluWeightingModel>

<SectionTopBar
  Title="@WsLocaleCore.DeviceControl.SectionPlusWeightings"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@WsSqlViewPluWeightingModel"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  IsLoading="@IsLoading"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync"
  AllowFiltering="true"
  FilterMode="FilterMode.Simple"
  LogicalFilterOperator="@LogicalFilterOperator.And">
  <Columns>
    <TItemContent TItem="@WsSqlViewPluWeightingModel">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.CreateDt" Property="CreateDt" Width="12%"
                            FormatString="@WsStrUtils.FormatDtDefault" Filterable="false"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Line" Property="Line" Width="22%" Filterable="false"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.PluNumber" Property="PluNumber" Width="10%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Plu" Property="PluName" Width="18%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.BundleFkWeightTare" Property="TareWeight" Width="10%" Filterable="false" />
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.WeightNetto" Property="NettoWeight" Width="10%" Filterable="false" />
    </TItemContent>
  </Columns>
</RzDataGrid>
