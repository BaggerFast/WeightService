@page "/section/plus_labels"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using WsStorageCore.ViewScaleModels
@using WsDataCore.Utils
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@inherits SectionBase<WsStorageCore.ViewScaleModels.PlusLabelView>

<SectionTopBar
  Title="@WsLocaleCore.DeviceControl.SectionLabels"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@PlusLabelView"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  IsLoading="@IsLoading"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync">
  <Columns>
    <TItemContent TItem="@PlusLabelView">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.CreateDt" Property="CreateDt" Width="8%"
                            FormatString="@StrUtils.FormatDtDefault"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Weighing" Property="WeightingDate" Width="8%"
                            FormatString="@StrUtils.FormatDtDefault"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.ProductDt" Property="ProductDate" Width="8%"
                            FormatString="@StrUtils.FormatDtShort"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.ExpirationDt" Property="ExpirationDate" Width="8%"
                            FormatString="@StrUtils.FormatDtShort"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Line" Property="Line" Width="20%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.PluNumber" Property="PluNumber" Width="8%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Plu" Property="PluName" Width="25%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Template" Property="Template" Width="14%"/>
    </TItemContent>
  </Columns>
</RzDataGrid>