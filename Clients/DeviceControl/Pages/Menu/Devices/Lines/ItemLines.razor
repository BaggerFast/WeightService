@page "/section/lines/new"
@page "/section/lines/{Id:long}"
@attribute [Authorize(Roles = WsUserAccessStr.Read)]
@using DeviceControl.Services
@using DeviceControl.Components.Item
@using DeviceControl.Components.Nested.PlusLines
@using DeviceControl.Components.Rz
@using DeviceControl.Utils
@using WsStorageCore.Tables.TableScaleModels.Scales
@inherits ItemBase<WsStorageCore.Tables.TableScaleModels.Scales.WsSqlScaleModel>

<ItemTopBar TItem="@WsSqlScaleModel" Title="@WsLocaleCore.DeviceControl.ItemScale" OnItemUpdate="@GetItemData"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <ItemTableHead HeadWidth="@(new List<int> { 20, 30, 20, 30 })"/>
  <tbody>
  <ItemTableBody SqlItem="@SqlItemCast"/>
  <tr>
    <td>@WsLocaleCore.Table.Name</td>
    <td>
      <RzTextBox @bind-Value="@SqlItemCast.Description"/>
    </td>
    <td>@WsLocaleCore.Table.DeviceComPort</td>
    <td>
      <RzDropDown @bind-Value="@SqlItemCast.DeviceComPort" Data="@ComPorts" TextProperty="Name" ValueProperty="Value"/>
    </td>
  </tr>
  <tr>
    <td>
      <RadzenLink Path="@WsRouteService.GetItemRoute(SqlItemCast.Device)" Text="@WsLocaleCore.Table.Host"/>
    </td>
    <td>
      <RzDropDown @bind-Value="@SqlItemCast.Device" Data="@HostModels" TextProperty="DisplayName"/>
    </td>
    <td>
      <RadzenLink Path="@WsRouteService.GetItemRoute(SqlItemCast.PrinterMain)" Text="@WsLocaleCore.Print.NameMain"/>
    </td>
    <td>
      <RzDropDownNullable @bind-Value="@SqlItemCast.PrinterMain" Data="@PrinterModels" TextProperty="DisplayName" />
    </td>
  </tr>
  <tr>
    <td>
      <RadzenLink Path="@WsRouteService.GetItemRoute(SqlItemCast.WorkShop)" Text="@WsLocaleCore.Table.WorkShopName"/>
    </td>
    <td>
      <RzDropDownNullable @bind-Value="@SqlItemCast.WorkShop" Data="@WorkShopModels" TextProperty="DisplayName" />
    </td>
    <td>@WsLocaleCore.Table.Counter</td>
    <td>
      <RzNumeric Min="0" Max="999999" @bind-Value="@SqlItemCast.LabelCounter"/>
    </td>
  </tr>
  <tr>
    <td>@WsLocaleCore.Table.DeviceNumber</td>
    <td>
      <RzNumeric Min="1" Max="99999" @bind-Value="@SqlItemCast.Number"/>
    </td>
    <td></td>
    <td></td>
  </tr>
  <ItemDates SqlItem="@SqlItemCast"/>
  </tbody>
</MudSimpleTable>

<ItemActions
  ButtonSettings="@ButtonSettings"
  OnItemSave="@SqlItemSaveAsync"
  OnItemCancel="@RedirectBackAsync"/>

@if (SqlItemCast.IsExists)
{
  <PlusLines Scale="@SqlItemCast"/>
}

