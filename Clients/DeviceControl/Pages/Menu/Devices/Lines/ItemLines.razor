@page "/section/scales/new"
@page "/section/scales/{IdentityId:long}"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using WsStorageCore.TableScaleModels.Scales
@using DeviceControl.Components.Item
@using DeviceControl.Components.Rz
@using DeviceControl.Pages.Menu.Devices.PluScales
@inherits RazorComponentItemBase<WsStorageCore.TableScaleModels.Scales.WsSqlScaleModel>

<ItemTopBar TItem="@WsSqlScaleModel" Title="@LocaleCore.DeviceControl.ItemScale" OnItemUpdate="@GetItemData"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <ItemTableHead CssTableStyleHead="@RzComponentUtils.GetTableHeadStyle(new List<int> { 20, 30, 20, 30 })"/>
  <tbody>
  <ItemTableBody SqlItem="@SqlItemCast"/>
  <tr>
    <td>@LocaleCore.Table.Name</td>
    <td>
      <RzTextBox @bind-Value="@SqlItemCast.Description"/>
    </td>

    <td>@LocaleCore.Table.IsKneading</td>
    <td>
      <RadzenCheckBox TValue="bool" @bind-Value="@SqlItemCast.IsKneading"/>
    </td>
  </tr>
  <tr>
    <td>
      <RadzenLink Path="@GetRouteItemPath(Device)" Text="@LocaleCore.Table.Host"/>
    </td>
    <td>
      <RzDropDown @bind-Value="@Device" Data="@HostModels" TextProperty="DisplayName"/>
    </td>
    <td>@LocaleCore.Table.IsOrder</td>
    <td>
      <RadzenCheckBox @bind-Value="@SqlItemCast.IsOrder"/>
    </td>
  </tr>
  <tr>
    <td>
      <RadzenLink Path="@GetRouteItemPath(SqlItemCast.PrinterMain)" Text="@LocaleCore.Print.NameMain"/>
    </td>
    <td>
      <RzDropDown @bind-Value="@SqlItemCast.PrinterMain" Data="@PrinterModels" TextProperty="DisplayName"/>
    </td>
    <td>@LocaleCore.Table.DeviceComPort</td>
    <td>
      <RzDropDown @bind-Value="@SqlItemCast.DeviceComPort" Data="@ComPorts" TextProperty="Name" ValueProperty="Value"/>
    </td>
  </tr>
  <tr>
    <td>
      <RadzenLink Path="@GetRouteItemPath(SqlItemCast.PrinterShipping)" Text="@LocaleCore.Print.NameShipping"/>
    </td>
    <td>
      <RzDropDown @bind-Value="@SqlItemCast.PrinterShipping" Data="@PrinterModels" TextProperty="DisplayName"/>
    </td>
    <td>@LocaleCore.Table.IsShipping</td>
    <td>
      <RadzenCheckBox TValue="bool" @bind-Value="@SqlItemCast.IsShipping"/>
    </td>
  </tr>
  <tr>
    <td>
      <RadzenLink Path="@GetRouteItemPath(SqlItemCast.WorkShop)" Text="@LocaleCore.Table.WorkShopName"/>
    </td>
    <td>
      <RzDropDown @bind-Value="@SqlItemCast.WorkShop" Data="@WorkShopModels" TextProperty="Name"/>
    </td>
    <td>
      <RadzenLink Path="@GetRouteItemPath(SqlItemCast.WorkShop?.ProductionFacility)" Text="@LocaleCore.Table.ProductionFacility"/>
    </td>
    <td>@(SqlItemCast.WorkShop is not null ? SqlItemCast.WorkShop.ProductionFacility.Name : LocaleCore.Table.FieldEmpty)</td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.DeviceReceiveTimeout</td>
    <td>
      <RzNumeric Min="0" @bind-Value="@SqlItemCast.DeviceReceiveTimeout"/>
    </td>

    <td>@LocaleCore.Table.DeviceSendTimeout</td>
    <td>
      <RzNumeric Min="0" @bind-Value="@SqlItemCast.DeviceSendTimeout"/>
    </td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.DeviceNumber</td>
    <td>
      <RzNumeric Min="1" Max="99999" @bind-Value="@SqlItemCast.Number"/>
    </td>

    <td>@LocaleCore.Table.IsShippingLength</td>
    <td>
      <RzNumeric Min="@byte.MinValue" Max="@byte.MaxValue" @bind-Value="@SqlItemCast.ShippingLength"/>
    </td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.ScaleFactor</td>
    <td>
      <RzNumeric @bind-Value="@SqlItemCast.ScaleFactor"/>
    </td>

    <td>@LocaleCore.Table.Counter</td>
    <td>
      <RzNumeric Min="0" Max="99999" @bind-Value="@SqlItemCast.Counter"/>
    </td>
  </tr>
  <ItemDates SqlItem="@SqlItemCast"/>
  </tbody>
</MudSimpleTable>

<ItemActions
  TItem="@WsSqlScaleModel"
  ButtonSettings="@ButtonSettings"
  OnItemSave="@SqlItemSaveAsync"
  OnItemCancel="@SqlItemCancelAsync"/>

@if (SqlItem != null)
{
  <PlusScales Scale="@SqlItemCast"/>
}