@page "/section/lines"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using WsStorageCore.ViewScaleModels
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@using WsStorageCore.ViewScaleModels.Lines
@inherits SectionBase<WsStorageCore.ViewScaleModels.Lines.WsSqlViewLineModel>

<SectionTopBar
  Title="@WsLocaleCore.DeviceControl.SectionScales"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@WsSqlViewLineModel"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync">
  <Columns>
    <TItemContent TItem="@WsSqlViewLineModel">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Line" Property="Name" Width="20%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Number" Property="Number" Width="10%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Device" Property="HostName" Width="20%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Printer" Property="Printer" Width="20%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.WorkShop" Property="WorkShop" Width="20%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Counter" Property="Counter" Width="10%"/>
    </TItemContent>
  </Columns>
</RzDataGrid>