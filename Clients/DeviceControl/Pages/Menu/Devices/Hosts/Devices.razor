@page "/section/devices"
@attribute [Authorize(Roles = WsUserAccessStr.Read)]
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@inherits SectionBase<WsSqlViewDeviceModel>

<SectionTopBar
  Title="@WsLocaleCore.DeviceControl.SectionHosts"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@WsSqlViewDeviceModel"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync">
  <Columns>
    <TItemContent TItem="@WsSqlViewDeviceModel">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.LoginDt" Property="LoginDate" Width="10%"
                            FormatString="@WsStrUtils.FormatDtDefault"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.LogoutDt" Property="LogoutDate" Width="10%"
                            FormatString="@WsStrUtils.FormatDtDefault"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Name" Property="Name" Width="20%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Type" Property="TypeName" Width="20%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.DeviceIp" Property="Ip" Width="20%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.DeviceMac" Property="ValuePrettyLookMinus" Width="20%"/>
    </TItemContent>
  </Columns>
</RzDataGrid>
