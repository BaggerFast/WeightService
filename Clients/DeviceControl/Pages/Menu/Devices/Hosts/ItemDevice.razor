@page "/section/devices/new"
@page "/section/devices/{Uid:guid}"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using WsStorageCore.TableScaleModels.Devices
@using WsDataCore.Utils
@using DeviceControl.Components.Item
@using DeviceControl.Components.Rz
@inherits ItemBase<WsStorageCore.TableScaleModels.Devices.WsSqlDeviceModel>

<ItemTopBar TItem="@WsSqlDeviceModel" Title="@LocaleCore.DeviceControl.ItemHost" OnItemUpdate="@GetItemData"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <ItemTableHead CssTableStyleHead="@RzComponentUtils.GetTableHeadStyle(new List<int> { 15, 35, 15, 35 })"/>
  <tbody>
  <ItemTableBody SqlItem="@SqlItemCast"/>
  <tr>
    <td>@LocaleCore.Table.LoginDt</td>
    <td>@string.Format(StrUtils.FormatDtLong, SqlItemCast.LoginDt)</td>

    <td>@LocaleCore.Table.LogoutDt</td>
    <td>@string.Format(StrUtils.FormatDtLong, SqlItemCast.LogoutDt)</td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.Name</td>
    <td>
      <RzTextBox @bind-Value="@SqlItemCast.Name"/>
    </td>

    <td>@LocaleCore.Table.PrettyName</td>
    <td>
      <RzTextBox @bind-Value="@SqlItemCast.PrettyName"/>
    </td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.DeviceType</td>
    <td>
      <RzDropDown @bind-Value="@DeviceType" Data="@DeviceTypeFkModels" TextProperty="Name"/>
    </td>
    <td/>
    <td/>
  </tr>
  <ItemDates SqlItem="@SqlItemCast"/>
  </tbody>
</MudSimpleTable>

<ItemActions
  TItem="@WsSqlDeviceModel"
  ButtonSettings="@ButtonSettings"
  OnItemSave="@SqlItemSaveAsync"
  OnItemCancel="@SqlItemCancelAsync"/>