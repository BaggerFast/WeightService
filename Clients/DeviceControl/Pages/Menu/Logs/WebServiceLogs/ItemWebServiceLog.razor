@page "/section/logs_web_service/{Uid:guid}"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using WsStorageCore.TableDiagModels.LogsWebsFks
@using DeviceControl.Components.Item
@inherits ItemBase<WsStorageCore.TableDiagModels.LogsWebsFks.WsSqlLogWebFkModel>

<ItemTopBar TItem="WsSqlLogWebFkModel" Title="@WsLocaleCore.DeviceControl.ItemLog" OnItemUpdate="@GetItemData"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <ItemTableHead CssTableStyleHead="@RzComponentUtils.GetTableHeadStyle(new() { 10, 35, 15, 35 })"/>
  <tbody>
  <ItemTableBody SqlItem="@SqlItemCast"/>
  <tr>
    <td>@WsLocaleCore.Table.Host</td>
    <td>@SqlItemCast.Device.Name</td>
    <td>@WsLocaleCore.Table.App</td>
    <td>@SqlItemCast.App.Name</td>
  </tr>
  <tr>
    <td>@WsLocaleCore.Table.LogType</td>
    <td>@SqlItemCast.LogType.Icon</td>
    <td>@WsLocaleCore.Table.Version</td>
    <td>@SqlItemCast.LogWebRequest.Version</td>
  </tr>
  <tr>
    <td>@WsLocaleCore.Table.RequestUrl</td>
    <td>@SqlItemCast.LogWebRequest.Url</td>
    <td>@WsLocaleCore.Table.Request</td>
    <td>@SqlItemCast.ToString()</td>
  </tr>
  <tr>
    <td>@WsLocaleCore.Table.Request</td>
    <td colspan="3">
      <RadzenTextArea
        Style="width: 100%; text-align: left; font-size: 11px; line-height: 18px; background-color: lightgray; "
        Rows="12" ReadOnly="true"
        Value="@WsDataFormatUtils.GetPrettyXml(SqlItemCast.LogWebRequest.DataString)"/>

      <RadzenButton Click="@(_ => CopyToClipboard(SqlItemCast.LogWebRequest.DataString))"
                    class="RadzenButtonFullWidth" ButtonStyle="@ButtonStyle.Primary" Size="@ButtonSize.Small"
                    Text="@WsLocaleCore.DeviceControl.TableActionCopy"/>
    </td>
  </tr>
  <tr>
    <td>@WsLocaleCore.Table.Response</td>
    <td colspan="3">
      <RadzenTextArea
        Style="width: 100%; text-align: left; font-size: 11px; line-height: 18px; background-color: lightgray; "
        Rows="12" ReadOnly="true"
        Value="@WsDataFormatUtils.GetPrettyXml(SqlItemCast.LogWebResponse.DataString)"/>

      <RadzenButton Click="@(_ => CopyToClipboard(SqlItemCast.LogWebResponse.DataString))"
                    class="RadzenButtonFullWidth" ButtonStyle="@ButtonStyle.Primary" Size="@ButtonSize.Small"
                    Text="@WsLocaleCore.DeviceControl.TableActionCopy"/>
    </td>
  </tr>
  <ItemDates SqlItem="@SqlItemCast.LogWebRequest"/>
  </tbody>
</MudSimpleTable>

<ItemActions
  ButtonSettings="@ButtonSettings"
  OnItemSave="@SqlItemSaveAsync"
  OnItemCancel="@RedirectBackAsync"/>