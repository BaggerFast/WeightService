@page "/section/logs_web_service"
@attribute [Authorize(Roles = WsUserAccessStr.Admin)]
@using WsDataCore.Utils
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@using DeviceControl.Utils
@using WsStorageCore.Tables.TableDiagModels.LogsWebs
@using WsStorageCore.Views.ViewScaleModels.WebLogs
@inherits SectionBase<WsSqlLogWebModel>

<SectionTopBar
  Title="@WsLocaleCore.WebService.Name"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@WsSqlLogWebModel"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  IsLoading="@IsLoading"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync">
  <Columns>
    <TItemContent TItem="@WsSqlLogWebModel">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.CreateDt" Property="CreateDt" Width="15%" FormatString="@WsStrUtils.FormatDtLong"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.ChangeDt" Property="StampDt" Width="15%" FormatString="@WsStrUtils.FormatDtLong"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.App" Property="Version" Width="15%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.RequestUrl" Property="Url" Width="40%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Count" Property="CountAll" Width="15%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Success" Property="CountSuccess" Width="15%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Error" Property="CountErrors" Width="15%"/>
    </TItemContent>
  </Columns>
</RzDataGrid>
