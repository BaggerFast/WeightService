@page "/section/logs_web_service_fk"
@attribute [Authorize(Roles = UserAccessStr.Admin)]
@using WsStorageCore.ViewScaleModels
@using WsDataCore.Utils
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@inherits RazorComponentSectionBase<WsStorageCore.ViewScaleModels.LogWebView>

<SectionTopBar
  Title="@LocaleCore.WebService.Name"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  @bind-Value="@SelectedRow"
  TItem="@LogWebView"
  Data="@SqlSectionCast"
  IsLoading="@IsLoading"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@LogWebView">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.CreateDt" Property="CreateDt" Width="15%"
                            FormatString="@StrUtils.FormatDtLong"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.App" Property="AppVersion" Width="15%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.RequestUrl" Property="RequestUrl" Width="40%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Count" Property="RequestCountAll" Width="15%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Success" Property="ResponseCountSuccess" Width="15%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Error" Property="ResponseCountError" Width="15%"/>
    </TItemContent>
  </Columns>
</RzDataGrid>