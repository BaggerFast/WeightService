@page "/section/logs_screenshots"
@attribute [Authorize(Roles = UserAccessStr.Admin)]
@using WsStorageCore.TableDiagModels.ScalesScreenshots
@using WsDataCore.Utils
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@inherits SectionBase<WsStorageCore.TableDiagModels.ScalesScreenshots.WsSqlScaleScreenShotModel>

<SectionTopBar
  Title="@WsLocaleCore.DeviceControl.SectionScreenShots"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RzDataGrid
  TItem="@WsSqlScaleScreenShotModel"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  IsLoading="@IsLoading"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync">
  <Columns>
    <TItemContent TItem="@WsSqlScaleScreenShotModel">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.CreateDt" Property="CreateDt" Width="12%"
                            FormatString="@WsStrUtils.FormatDtLong"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Line" Property="Scale.Description" Width="40%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.ScreenShot" Width="43%" Sortable="false">
        <Template Context="itemCast">
          @GetByteLength(itemCast)
        </Template>
      </RadzenDataGridColumn>
    </TItemContent>
  </Columns>
</RzDataGrid>