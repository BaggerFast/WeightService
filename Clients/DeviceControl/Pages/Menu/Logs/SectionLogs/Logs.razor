@page "/section/logs"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using WsStorageCore.ViewScaleModels
@using WsDataCore.Utils
@using DeviceControl.Pages.SectionComponents
@using DeviceControl.Pages.CustomComponents
@inherits RazorComponentSectionBase<WsStorageCore.ViewScaleModels.LogView>

<SectionReload
  Title="@LocaleCore.System.SystemLogs"
  ButtonSettings="@ButtonSettings"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"/>

<div Style="display: flex; margin-bottom: 2px">
  <RzDropDownLocal Style="width: 50%; display: inline-block;"
                   @bind-Value="@CurrentLogType" 
                   Data="@LogTypes" 
                   ValueProperty="Icon" 
                   TextProperty="Icon" Change="OnSelectTypeChanged"
                   AllowClear="true" Placeholder="LogTypes: All" />
  <RzDropDownLocal Style="width: 50%; display: inline-block;"
              @bind-Value="@CurrentLine" 
               Data="@Lines" 
               FilterOperator="StringFilterOperator.Contains"
               AllowFiltering="true"
               ValueProperty="Description" 
               TextProperty="Description" Change="OnSelectTypeChanged"
               AllowClear="true"
               Placeholder="Lines: All" />
</div>

<RzDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@LogView"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@LogView">
      <SectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.CreateDt" Property="CreateDt" Width="14%" FormatString="@StrUtils.FormatDtLong"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Line" Property="Line" Width="14%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Device" Property="Host" Width="10%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.App" Property="App" Width="13%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Version" Property="Version" Width="6%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.LogType" Property="LogType" Width="10%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Message" Property="Message" Width="30%"/>
    </TItemContent>
  </Columns>
</RzDataGridLocal>