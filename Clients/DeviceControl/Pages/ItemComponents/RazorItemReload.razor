@typeparam TItem
@inherits RazorComponentItemBase<TItem>

<MudPaper Outlined="true">
  <MudToolBar Dense="true" Class="my-n1">
    <RadzenButton
      Icon="refresh"
      ButtonStyle="@ButtonStyle.Primary"
      Style="margin-right: 1%; width: 60px;"
      Size="@ButtonSize.Small"
      Disabled=@(!AccessManager.IsConnected())
      Click="OnItemUpdate" />
      <RadzenLink Style="font-weight: bold" Path="@GetRouteSectionPath(new TItem())" Text="@Title"/>
  </MudToolBar>
</MudPaper>
