@typeparam TItem
@using DeviceControl.Services
@inherits ComponentBase

<MudPaper Outlined="true">
  <MudToolBar Dense="true" Class="my-n1">
    <RadzenButton
      Icon="refresh"
      ButtonStyle="@ButtonStyle.Secondary"
      Style="margin-right: 1%; width: 60px;"
      Size="@ButtonSize.Small"
      Click="OnItemUpdate"/>
    <RadzenLink Style="font-weight: bold" Path="@WsRouteService.GetSectionRoute(new TItem())" Text="@Title"/>
  </MudToolBar>
</MudPaper>