@typeparam TItem
@inherits ItemBase<TItem>


<MudPaper Outlined="true" Class="mb-2">
  <MudToolBar Dense="true" DisableGutters="true">
    <RadzenButton
      class="RadzenButtonLong"
      Click="@OnItemSave"
      ButtonStyle="@ButtonStyle.Success"
      Shade="Shade.Dark"
      Size="@ButtonSize.Small"
      Style="width: 50%;"
      Disabled="@GetDisableStatusOfSaveBtn"
      Text="@WsLocaleCore.DeviceControl.TableActionSave"/>
      <MudSpacer/>
     <RadzenButton
        class="RadzenButtonLong"
        Click="@OnItemCancel"
        ButtonStyle="@ButtonStyle.Danger"
        Shade="Shade.Dark"
        Size="@ButtonSize.Small"
        Style="width: 50%;"
        Disabled="@GetDisableStatusOfCancelBtn"
        Text="@WsLocaleCore.DeviceControl.TableActionCancel"/>
  </MudToolBar>
</MudPaper>