@typeparam TItem
@inherits LayoutComponentBase

<RadzenDataGridColumn TItem="@TItem" Width="5%" TextAlign="TextAlign.Center"
                      SortProperty="IsMarked" Title="@WsLocaleCore.Table.IsMarkedShort"
                      Visible="@(SqlCrudConfigSection.IsMarked != WsSqlEnumIsMarked.ShowOnlyActual)">
  <Template Context="item">
    @if (item.IsMarked)
    {
      <RadzenIcon IconStyle=@IconStyle.Primary Icon="delete"/>
    }
  </Template>
</RadzenDataGridColumn>