@attribute [Authorize(Roles = UserAccessStr.Read)]
@using WsStorageCore.TableScaleModels.PlusScales
@using DeviceControl.Components.Section
@using DeviceControl.Components.Rz
@inherits SectionBase<WsStorageCore.TableScaleModels.PlusScales.WsSqlPluScaleModel>

<SectionTopBar
  Title="@WsLocaleCore.DeviceControl.SectionPlusScales"
  OnSectionUpdate="@GetSectionData"
  OnSectionAdd="@SqlItemNewAsync"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  IsGuiShowFilterMarked="@IsGuiShowFilterMarked"
  ButtonSettings="@ButtonSettings"/>

<RadzenCheckBox TValue="bool" @bind-Value="@HideNoneActivePlu" Change="@GetSectionData"
                Style="margin-top: -3px; margin-left: 20px; "/>
<RadzenLabel Style="margin-top: 0; margin-left: 5px; font-size: 11px; " Text="@WsLocaleCore.Action.ActionIsShowActivePlu"/>

<RzDataGrid
  TItem="@WsSqlPluScaleModel"
  @ref="@DataGrid"
  @bind-Value="@SelectedRow"
  Data="@SqlSectionCast"
  IsLoading="@IsLoading"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemOpenAsync">
  <Columns>
    <TItemContent TItem="@WsSqlPluScaleModel">
      <SectionIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Plu" Property="Plu.Name" Width="30%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.NumberShort" Property="Plu.Number" Width="10%"/>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.Active" SortProperty="IsActive" Width="10%">
        <Template Context="itemCast">
          <RadzenCheckBox TValue="bool" @bind-Value="@itemCast.IsActive" Change="@(_ => SetSqlSectionSave(itemCast))"/>
        </Template>
      </RadzenDataGridColumn>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.WeightShort" SortProperty="Plu.IsCheckWeight" Width="10%">
        <Template Context="itemCast">
          <RadzenCheckBox ReadOnly="true" TValue="bool" @bind-Value="@itemCast.Plu.IsCheckWeight"/>
        </Template>
      </RadzenDataGridColumn>
      <RadzenDataGridColumn Title="@WsLocaleCore.Table.ShelfLifeDaysShort" Property="Plu.ShelfLifeDays" Width="10%"/>
    </TItemContent>
  </Columns>
</RzDataGrid>

@if (SqlSectionCast.Count > 0)
{
  <SectionActions OnSectionSave="@OnSqlSectionSaveAsync" ButtonSettings="@ButtonSettings"/>
}
