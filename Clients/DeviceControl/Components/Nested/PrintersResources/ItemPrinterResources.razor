@page "/section/printers_resources/new"
@page "/section/printers_resources/{Id:long}"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@using DeviceControl.Components.Item
@using DeviceControl.Components.Rz
@using WsStorageCore.Tables.TableScaleFkModels.PrintersResourcesFks
@inherits ItemBase<WsStorageCore.Tables.TableScaleFkModels.PrintersResourcesFks.WsSqlPrinterResourceFkModel>

<ItemTopBar TItem="@WsSqlPrinterResourceFkModel" Title="@WsLocaleCore.Print.Resource" OnItemUpdate="@GetItemData"/>
<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <ItemTableHead HeadWidth="@(new List<int> { 15, 35, 15, 35 })"/>
  <tbody>
  <ItemTableBody SqlItem="@SqlItemCast"/>
  <tr>
    <td>@WsLocaleCore.Print.Name</td>
    <td>
      <RzDropDown @bind-Value="@SqlItemCast.Printer" Data="@PrinterModels" TextProperty="Name"/>
    </td>
    <td>@WsLocaleCore.Table.Resource</td>
    <td>
      <RzDropDown @bind-Value="@SqlItemCast.TemplateResource" Data="@TemplateResourceModels" TextProperty="Name"/>
    </td>
  </tr>
  <tr>
    <td>@WsLocaleCore.Table.Description</td>
    <td colspan="3">
      <RadzenTextBox Style="width: 100%; " @bind-Value="@SqlItemCast.Description"/>
    </td>
  </tr>
  <ItemDates SqlItem="@SqlItemCast"/>
  </tbody>
</MudSimpleTable>

<ItemActions
  ButtonSettings="@ButtonSettings"
  OnItemSave="@SqlItemSaveAsync"
  OnItemCancel="@RedirectBackAsync"/>