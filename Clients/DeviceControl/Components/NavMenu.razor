@using DeviceControl.Utils
@inherits ComponentBase

<div class="@SidebarCss">
  <div class="top-row pl-4 navbar">
    <a class="navbar-brand" href="">
      <RadzenLabel Style="margin-top: -7px; text-align: center; font-size: 14px; color: white"
                   Text="@WsLocaleCore.Strings.AppDevicesControlName"/>
    </a>
  </div>

  <RadzenPanelMenu class="@ItemMenuCss">
    <AuthorizeView Roles="@WsUserAccessStr.Read">
      @* Графики *@
      <RadzenPanelMenuItem Text="@LocaleBlazor.SectionCharts">
          <RadzenPanelMenuItem Icon="article" Text="@WsLocaleCore.DeviceControl.ChartMemory" Path="@WsRouteUtils.SectionChartMemory" />
          <RadzenPanelMenuItem Icon="article" Text="@WsLocaleCore.DeviceControl.ChartReports" Path="@WsRouteUtils.SectionChartReports" />
      </RadzenPanelMenuItem>
      @* Устройства *@
      <RadzenPanelMenuItem Text="@LocaleBlazor.SectionDevices">
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionScales" Path="@WsRouteUtils.SectionLines"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionHosts" Path="@WsRouteUtils.SectionDevices"/>
        <RadzenPanelMenuItem Text="@WsLocaleCore.Print.Names" Path="@WsRouteUtils.SectionPrinters"/>
      </RadzenPanelMenuItem>
      @* Операции *@
      <RadzenPanelMenuItem Text="@LocaleBlazor.SectionOperations">
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionLabels" Path="@WsRouteUtils.SectionPlusLabels"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionBarCodes" Path="@WsRouteUtils.SectionBarCodes"/>
