@using DeviceControl.Utils
@inherits RazorComponentBase

<div class="@SidebarCss">
  <div class="top-row pl-4 navbar">
    <a class="navbar-brand" href="">
      <RadzenLabel Style="margin-top: -7px; text-align: center; font-size: 14px; color: white"
                   Text="@WsLocaleCore.Strings.AppDevicesControlName"/>
    </a>
  </div>

  <RadzenPanelMenu class="@ItemMenuCss">
    <AuthorizeView Roles="@UserAccessStr.Read">
      @* Devices *@
      <RadzenPanelMenuItem Text="@LocaleBlazor.SectionDevices">
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionScales" Path="@RouteUtil.RouteSectionScales"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionHosts" Path="@RouteUtil.RouteSectionDevices"/>
        <RadzenPanelMenuItem Text="@WsLocaleCore.Print.Names" Path="@RouteUtil.RouteSectionPrinters"/>
      </RadzenPanelMenuItem>
      @* Operations *@
      <RadzenPanelMenuItem Text="@LocaleBlazor.SectionOperations">
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionLabels" Path="@RouteUtil.RouteSectionPlusLabels"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionBarCodes" Path="@RouteUtil.RouteSectionBarCodes"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionWeighings" Path="@RouteUtil.RouteSectionPlusWeighings"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionWeithingFactsAggregationShort"
                             Path="@RouteUtil.RouteSectionPlusWeighingsAggregation"/>
      </RadzenPanelMenuItem>
      @* References *@
      <RadzenPanelMenuItem Text="@LocaleBlazor.SectionReferences">
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionOrganizations" Path="@RouteUtil.RouteSectionOrganizations"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionWorkShops" Path="@RouteUtil.RouteSectionWorkShops"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionProductionFacilitiesShort" Path="@RouteUtil.RouteSectionProductionFacilities"/>
        <RadzenPanelMenuItem Text="@WsLocaleCore.Print.Types" Path="@RouteUtil.RouteSectionPrinterTypes"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionTemplates" Path="@RouteUtil.RouteSectionTemplates"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionTemplateResources" Path="@RouteUtil.RouteSectionTemplateResources"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionPlusStorage" Path="@RouteUtil.RouteSectionPlusStorage"/>
      </RadzenPanelMenuItem>
      @* References 1C *@
      <RadzenPanelMenuItem Text="@LocaleBlazor.SectionReferences1C">
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionNomenclatures" Path="@RouteUtil.RouteSectionPlus"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionNomenclaturesGroups" Path="@RouteUtil.RouteSectionNomenclaturesGroups"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionBoxes" Path="@RouteUtil.RouteSectionBoxes"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionBundles" Path="@RouteUtil.RouteSectionBundles"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionPlusBundlesFk" Path="@RouteUtil.RouteSectionPlusBundlesFks"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionBrands" Path="@RouteUtil.RouteSectionBrands"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionContragents" Path="@RouteUtil.RouteSectionContragents"/>
      </RadzenPanelMenuItem>
      @* Reports *@
      <RadzenPanelMenuItem Text="@WsLocaleCore.Menu.MenuReports">
        <RadzenPanelMenuItem Icon="article" Text="@WsLocaleCore.System.SystemLogsAll" Path="@RouteUtil.RouteSectionLogs"/>
        <RadzenPanelMenuItem Icon="article" Text="@WsLocaleCore.WebService.Name" Path="@RouteUtil.RouteSectionLogsWebService"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionScreenShots" Path="@RouteUtil.RouteSectionScalesScreenShots"/>
      </RadzenPanelMenuItem>
    </AuthorizeView>
    <AuthorizeView Roles="@UserAccessStr.Admin">
      <RadzenPanelMenuItem Text="@LocaleBlazor.SectionAdministering">
        <RadzenPanelMenuItem Icon="people" Text="@WsLocaleCore.System.Users" Path="@RouteUtil.RouteSectionAccess"/>
        <RadzenPanelMenuItem Icon="info" Text="@WsLocaleCore.System.DatabaseInfo" Path="@RouteUtil.RouteDatabaseInfo"/>
        <RadzenPanelMenuItem Icon="info" Text="@WsLocaleCore.Menu.MenuDbVersionHistory" Path="@RouteUtil.RouteSectionVersions"/>
        <RadzenPanelMenuItem Icon="info" Text="@WsLocaleCore.System.SystemInfo" Path="@RouteUtil.RouteSystemAppInfo"/>
      </RadzenPanelMenuItem>
    </AuthorizeView>
  </RadzenPanelMenu>
</div>