      @* Справочники *@
      <RadzenPanelMenuItem Text="@LocaleBlazor.SectionReferences">
        <RadzenPanelMenuItem Text="@WsLocaleCore.Strings.DeviceType" Path="@WsRouteUtils.SectionDevicesTypes"/>
        <RadzenPanelMenuItem Text="@WsLocaleCore.Print.Types" Path="@WsRouteUtils.SectionPrinterTypes"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionOrganizations" Path="@WsRouteUtils.SectionOrganizations"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionWorkShops" Path="@WsRouteUtils.SectionWorkShops"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionProductionFacilitiesShort" Path="@WsRouteUtils.SectionProductionFacilities"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionTemplates" Path="@WsRouteUtils.SectionTemplates"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionTemplateResources" Path="@WsRouteUtils.SectionTemplateResources"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionPlusStorage" Path="@WsRouteUtils.SectionPlusStorage"/>
      </RadzenPanelMenuItem>
      @* Справочники 1C *@
      <RadzenPanelMenuItem Text="@LocaleBlazor.SectionReferences1C">
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionPlus" Path="@WsRouteUtils.SectionPlus"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionPlusGroups" Path="@WsRouteUtils.SectionPlusGroups"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionBoxes" Path="@WsRouteUtils.SectionBoxes"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionClips" Path="@WsRouteUtils.SectionClips"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionBundles" Path="@WsRouteUtils.SectionBundles"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionPlusBundlesFk" Path="@WsRouteUtils.SectionPlusBundlesFks"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionBrands" Path="@WsRouteUtils.SectionBrands"/>
        <RadzenPanelMenuItem Text="@LocaleBlazor.SectionContragents" Path="@WsRouteUtils.SectionContragents"/>
      </RadzenPanelMenuItem>
      @* Диагностика *@
      <RadzenPanelMenuItem Text="@WsLocaleCore.Menu.MenuReports">
        <RadzenPanelMenuItem Icon="article" Text="@WsLocaleCore.System.SystemLogsAll" Path="@WsRouteUtils.SectionLogs"/>
        <RadzenPanelMenuItem Icon="article" Text="@WsLocaleCore.WebService.Name" Path="@WsRouteUtils.SectionLogsWebService"/>
        <RadzenPanelMenuItem Icon="article" Text="@LocaleBlazor.SectionScreenShots" Path="@WsRouteUtils.SectionScalesScreenShots"/>
        <RadzenPanelMenuItem Icon="article" Text="@WsLocaleCore.DeviceControl.LogsMemory" Path="@WsRouteUtils.SectionLogsMemory"/>
      </RadzenPanelMenuItem>
    </AuthorizeView>
    @* Администрирование *@
    <AuthorizeView Roles="@WsUserAccessStr.Admin">
      <RadzenPanelMenuItem Text="@LocaleBlazor.SectionAdministering">
        <RadzenPanelMenuItem Icon="people" Text="@WsLocaleCore.System.Users" Path="@WsRouteUtils.SectionAccess"/>
        <RadzenPanelMenuItem Icon="info" Text="@WsLocaleCore.System.DatabaseInfo" Path="@WsRouteUtils.SystemDatabaseInfo"/>
        <RadzenPanelMenuItem Icon="info" Text="@WsLocaleCore.Menu.MenuDbVersionHistory" Path="@WsRouteUtils.SectionVersions"/>
        <RadzenPanelMenuItem Icon="info" Text="@WsLocaleCore.System.SystemInfo" Path="@WsRouteUtils.SystemAppInfo"/>
      </RadzenPanelMenuItem>
    </AuthorizeView>
  </RadzenPanelMenu>
