                    <RadzenIcon Disabled=false ReadOnly=true Icon=@icon />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="AccessEntity" TextAlign=TextAlign.Center
                Title=@LocalizationData.DeviceControl.TableFieldChangeDt Type="date" Width="50%">
                <Template Context="icon">
                    <RadzenLabel Text=@icon Disabled=false ReadOnly=true />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>
