# EditorConfig is awesome: https://EditorConfig.org
# https://github.com/RehanSaeed/EditorConfig/blob/main/.editorconfig
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_size = 4
indent_style = space

[**.{html,css,js,cshtml,razor}]
indent_size = 2
trim_trailing_whitespace = true
