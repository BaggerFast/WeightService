<pages:WsBasePage
	x:Class="WsLabelCore.Pages.WsPluNestingPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:pages="clr-namespace:WsLabelCore.Pages"
	d:DataContext="{d:DesignInstance pages:WsPluNestingPage}"
	d:DesignHeight="500"
	d:DesignWidth="800"
	FontSize="26"
	mc:Ignorable="d">

	<pages:WsBasePage.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../Resources/WsWpfResourceDictionary.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</pages:WsBasePage.Resources>

	<Border
		Margin="2"
		BorderBrush="Blue"
		BorderThickness="1">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="0.5*" />
				<ColumnDefinition Width="2*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
			</Grid.RowDefinitions>
			<Label
				Margin="2"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center"
				Content="{Binding Source={StaticResource LocaleTable}, Path=Plu, Mode=OneWay}" />
			<Label
				Grid.Column="1"
				Margin="2"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center"
				Content="{Binding ViewModel.PluScale.Plu.Name, Mode=OneWay}" />
			<Label
				Grid.Row="1"
				Grid.Column="0"
				Margin="2"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center"
				Content="{Binding Source={StaticResource LocaleTable}, Path=PluNesting, Mode=OneWay}" />
			<ComboBox
				x:Name="comboBoxPluNesting"
				Grid.Row="1"
				Grid.Column="1"
				HorizontalContentAlignment="Left"
				VerticalContentAlignment="Center"
				Background="Transparent"
				DisplayMemberPath="Name"
				FontSize="26"
				ItemsSource="{Binding ViewModel.ViewPluNestings, Mode=OneWay}"
				SelectedItem="{Binding ViewModel.ViewPluNesting, Mode=TwoWay}"
				SelectedValue="{Binding ViewModel.ViewPluNesting, Mode=TwoWay}"
				SelectedValuePath="" />
			<Label
				Grid.Row="2"
				Grid.Column="0"
				Margin="2"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center"
				Content="{Binding Source={StaticResource LocaleTable}, Path=WeightTare, Mode=OneWay}" />
			<Label
				Grid.Row="2"
				Grid.Column="1"
				Margin="2"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center"
				Content="{Binding ViewModel.PagePluNestingView.ViewPluNesting.WeightTareKg, Mode=OneWay}" />
			<Button
				Grid.Row="3"
				Grid.Column="0"
				Margin="2"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center"
				Click="ButtonApply_OnClick"
				Content="{Binding Source={StaticResource LocaleButtons}, Path=Apply, Mode=OneWay}" />
			<Button
				Grid.Row="3"
				Grid.Column="1"
				Margin="2"
				Click="ButtonCancel_OnClick"
				Content="{Binding Source={StaticResource LocaleButtons}, Path=Cancel, Mode=OneWay}" />
		</Grid>
	</Border>

</pages:WsBasePage>