<common:WsXamlBasePage
	x:Class="WsLabelCore.Pages.WsXamlLinesPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:common="clr-namespace:WsLabelCore.Common"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="500"
	d:DesignWidth="800"
	FontSize="26"
	TextOptions.TextFormattingMode="Ideal"
	TextOptions.TextRenderingMode="Auto"
	mc:Ignorable="d">

	<Border
		BorderBrush="DimGray"
		BorderThickness="1"
		CornerRadius="5">
		<Grid x:Name="gridLocal">
			<Grid.RowDefinitions>
				<RowDefinition Height="2.5*" />
				<RowDefinition Height="2.5*" />
				<RowDefinition Height="1*" />
			</Grid.RowDefinitions>
			<!--  Row 1  -->
			<Border
				Grid.Row="0"
				Margin="3"
				BorderBrush="DimGray"
				BorderThickness="1"
				CornerRadius="5">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="0.5*" />
						<ColumnDefinition Width="2*" />
					</Grid.ColumnDefinitions>
					<Label
						x:Name="labelArea"
						Grid.Row="0"
						Margin="3"
						HorizontalContentAlignment="Center"
						VerticalContentAlignment="Center" />
					<ComboBox
						x:Name="comboBoxArea"
						Grid.Row="0"
						Grid.Column="1"
						Margin="3,60,3,60"
						HorizontalContentAlignment="Left"
						VerticalContentAlignment="Center"
						Background="Transparent"
						FontSize="26">
						<ComboBox.ItemContainerStyle>
							<Style TargetType="ComboBoxItem">
								<Setter Property="Padding" Value="20,0,0,0" />
							</Style>
						</ComboBox.ItemContainerStyle>
					</ComboBox>
				</Grid>
			</Border>
			<!--  Row 2  -->
			<Border
				Grid.Row="1"
				Margin="3"
				BorderBrush="DimGray"
				BorderThickness="1"
				CornerRadius="5">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="0.5*" />
						<ColumnDefinition Width="2*" />
					</Grid.ColumnDefinitions>
					<Label
						x:Name="labelLine"
						Margin="3"
						HorizontalContentAlignment="Center"
						VerticalContentAlignment="Center" />
					<ComboBox
						x:Name="comboBoxLine"
						Grid.Column="1"
						Margin="3,60,3,60"
						HorizontalContentAlignment="Left"
						VerticalContentAlignment="Center"
						Background="Transparent"
						FontSize="26">
						<ComboBox.ItemContainerStyle>
							<Style TargetType="ComboBoxItem">
								<Setter Property="Padding" Value="20,0,0,0" />
							</Style>
						</ComboBox.ItemContainerStyle>
					</ComboBox>
				</Grid>
			</Border>
		</Grid>
	</Border>
</common:WsXamlBasePage>