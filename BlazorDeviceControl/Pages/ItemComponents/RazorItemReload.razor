@typeparam TItem
@inherits RazorComponentItemBase<TItem>

<MudPaper Outlined="true">
  <MudToolBar Dense="true" Class="my-n1">
    <RadzenButton
      Icon="refresh"
      ButtonStyle="@ButtonStyle.Primary"
      Style="margin-right: 1%; width: 60px;"
      Size="@ButtonSize.Small"
      Disabled=@(!DataAccess.IsConnected())
      Click="OnItemUpdate" />
    <MudText><b>@Title</b></MudText>
  </MudToolBar>
</MudPaper>
