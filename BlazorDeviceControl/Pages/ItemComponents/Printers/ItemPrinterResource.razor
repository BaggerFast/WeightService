@page "/item/printer_resource"
@page "/item/printer_resource/new"
@page "/item/printer_resource/{IdentityId:long}"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@inherits RazorComponentItemBase<PrinterResourceFkModel>
@using DataCore.Sql.TableScaleFkModels.PrintersResourcesFks
@using DataCore.Sql.TableScaleModels.Printers
@using DataCore.Sql.TableScaleModels.TemplatesResources
@using BlazorDeviceControl.Pages.CustomComponents

<RazorItemReload TItem="@PrinterResourceFkModel" Title="@LocaleCore.Print.Resource"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <RazorItemTableHead CssTableStyleHead="@RzComponentUtils.GetTableHeadStyle(new() { 15, 35, 15, 35 })"/>
  <tbody>
  <RazorItemTableBody SqlItem="@SqlItemCast"/>
  <tr>
    <td>@LocaleCore.Print.Name</td>
    <td>
      <MudSelectLocal @bind-Value="@SqlItemCast.Printer">
        @foreach (PrinterModel item in DataContext.Printers)
        {
          <MudSelectItem Value=@item>@item.Name</MudSelectItem>
        }
      </MudSelectLocal>
    </td>
    <td>@LocaleCore.Table.Resource</td>
    <td>
      <MudSelectLocal @bind-Value="@SqlItemCast.TemplateResource">
        @foreach (TemplateResourceModel item in DataContext.TemplateResources)
        {
          <MudSelectItem Value=@item>@item.Name</MudSelectItem>
        }
      </MudSelectLocal>
    </td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.Description</td>
    <td colspan="3">
      <RadzenTextBox Style="width: 100%; " @bind-Value="@SqlItemCast.Description"/>
    </td>
  </tr>
  </tbody>
</MudSimpleTable>

<RazorItemDates SqlItem="@SqlItemCast"/>

<RazorItemActions
  TItem="@PrinterResourceFkModel"
  ButtonSettings="@ButtonSettings"
  OnItemSave="@SqlItemSaveAsync"
  OnItemCancel="@SqlItemCancelAsync"
  />
