@inherits LayoutComponentBase

@if (!string.IsNullOrEmpty(CreateDt) && !string.IsNullOrEmpty(ChangeDt))
{
  <MudPaper Outlined="true" Class="my-1">
    <MudToolBar Dense="true" DisableGutters="true" Class="my-n2">
      <MudSpacer/>
      <MudText Typo="Typo.body2">@LocaleCore.Table.CreateDt</MudText>
      <MudSpacer/>
      <MudText Typo="Typo.body2">@CreateDt</MudText>
      <MudSpacer/>
      <MudText Typo="Typo.body2">@LocaleCore.Table.ChangeDt</MudText>
      <MudSpacer/>
      <MudText Typo="Typo.body2">@ChangeDt</MudText>
      <MudSpacer/>
    </MudToolBar>
  </MudPaper>
}
