@using DataCore.Sql.TableScaleModels.PlusWeighings
@using BlazorDeviceControl.Pages.CustomComponents
@inherits RazorComponentSectionBase<PluWeighingModel>
@page "/section/plu_weighings"
@attribute [Authorize(Roles = UserAccessStr.Read)]

<SectionReload
  TItem="@PluWeighingModel"
  Title="@LocaleCore.DeviceControl.SectionPlusWeightings"
  OnSectionUpdate="@GetSectionData"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"
  />

@if (IsSqlSectionGet == false)
{
  <Preloader />
}
else
{
  <RadzenDataGridLocal
    @bind-Value="@SelectedRow"
    TItem="@PluWeighingModel"
    Data="@SqlSectionCast"
    CellContextMenu="@OnCellContextMenu"
    RowSelect="@SqlItemSet"
    RowRender="@RowRender"
    RowDoubleClick="@SqlItemEditAsync">
    <Columns>
      <TItemContent TItem="@PluWeighingModel">
        <SectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection" />
        <RadzenDataGridColumn Title="@LocaleCore.Table.CreateDt" Property="CreateDt" Width="12%"
                            FormatString="@StringUtils.FormatDtDefaultStr" />
        <RadzenDataGridColumn Title="@LocaleCore.Table.Scale" Property="PluScale.Scale.Description" Width="22%" />
        <RadzenDataGridColumn Title="@LocaleCore.Table.Host" Sortable="false" Width="13%">
          <Template Context="itemCast">
            <RadzenText Text="@GetDeviceName(itemCast)" />
          </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn Title="@LocaleCore.Table.Plu" Property="PluScale.Plu.Name" Width="18%" />
        <RadzenDataGridColumn Title="@LocaleCore.Table.BundleFkWeightTare" Property="WeightTare" Width="10%" />
        <RadzenDataGridColumn Title="@LocaleCore.Table.WeightNetto" Property="NettoWeight" Width="10%" />
        @* @itemCast.NettoWeight.ToString(CultureInfo.InvariantCulture) *@
      </TItemContent>
    </Columns>
  </RadzenDataGridLocal>
}