@page "/section/plus"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@inherits RazorComponentSectionBase<PluModel>
@using DataCore.Sql.TableScaleModels.Plus
@using BlazorDeviceControl.Pages.CustomComponents

<SectionReload
  TItem="@PluModel"
  Title="@LocaleCore.DeviceControl.SectionPlus"
  OnSectionUpdate="@GetSectionData"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"
  />

<RadzenDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@PluModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowRender="@RowRender"
  RowDoubleClick="@SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@PluModel">
      <SectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Name" Property="Name" Width="25%" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.Weighted" SortProperty="IsCheckWeight" Width="5%">
              <Template Context="itemCast">
                <RadzenCheckBox Disabled="true" ReadOnly="true" TValue="bool" @bind-Value="@itemCast.IsCheckWeight"/>
              </Template>
            </RadzenDataGridColumn>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Number" Property="Number" Width="25%" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.Code" Property="Code" Width="15%" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.ShelfLifeDaysShort" Property="ShelfLifeDays" Width="10%" />
    </TItemContent>
  </Columns>
</RadzenDataGridLocal>
