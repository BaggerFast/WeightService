@using DataCore.Sql.TableScaleModels.ProductionFacilities
@using BlazorDeviceControl.Pages.CustomComponents
@inherits RazorComponentSectionBase<ProductionFacilityModel>
@page "/section/production_facilities"
@attribute [Authorize(Roles = UserAccessStr.Read)]

<RazorSectionReload
  TItem="@ProductionFacilityModel"
  Title="@LocaleCore.DeviceControl.SectionProductionFacilities"
  OnSectionUpdate="@GetSectionData"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"
/>

<RadzenDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@ProductionFacilityModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSetAsync"
  RowRender="@RowRender"
  RowDoubleClick="SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@ProductionFacilityModel">
      <RazorSectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RazorSectionField RazorFieldConfig="@RazorFieldConfigUtils.Base.GetName()" Width="25%"/>
      <RazorSectionField RazorFieldConfig="@RazorFieldConfigUtils.ProductionFacility.GetAddress()" Width="70%"/>
    </TItemContent>
  </Columns>
</RadzenDataGridLocal>