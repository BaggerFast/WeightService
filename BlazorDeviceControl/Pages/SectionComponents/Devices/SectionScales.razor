@using DataCore.Sql.TableScaleModels.Scales
@using BlazorDeviceControl.Pages.CustomComponents
@inherits RazorComponentSectionBase<ScaleModel>
@page "/section/scales"
@attribute [Authorize(Roles = UserAccessStr.Read)]

<RazorSectionReload
  TItem="@ScaleModel"
  Title="@LocaleCore.DeviceControl.SectionScales"
  OnSectionUpdate="@GetSectionData"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"
/>

<RadzenDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@ScaleModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowRender="@RowRender"
  RowDoubleClick="@SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@ScaleModel">
      <RazorSectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Arm" Property="Description" Width="30%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Number" Property="Number" Width="20%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.WorkShop" Property="WorkShop.Name" Width="35%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Printer" Property="PrinterMain.Name" Width="35%"/>
    </TItemContent>
  </Columns>
</RadzenDataGridLocal>
