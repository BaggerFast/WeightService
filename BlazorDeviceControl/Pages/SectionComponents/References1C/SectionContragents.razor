@using DataCore.Sql.TableScaleModels.Contragents
@using BlazorDeviceControl.Pages.CustomComponents
@inherits RazorComponentSectionBase<ContragentModel>
@page "/section/contragents"
@attribute [Authorize(Roles = UserAccessStr.Read)]

<RazorSectionReload
  TItem="@ContragentModel"
  Title="@LocaleCore.DeviceControl.SectionContragents"
  OnSectionUpdate="@GetSectionData"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"
  />

<RadzenDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@ContragentModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSetAsync"
  RowRender="@RowRender"
  RowDoubleClick="@SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@ContragentModel">
      <RazorSectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn TItem="@ContragentModel" Title="@LocaleCore.Table.Name" Width="50%">
        <Template Context="itemCast">
          <RadzenLink Style="width: 100%; margin-left: 0; "
                      Path=@($"{LocaleCore.DeviceControl.RouteItemContragent}/{itemCast.IdentityValueUid}")
                      Text="@itemCast.Name" />
        </Template>
      </RadzenDataGridColumn>
      <RadzenDataGridColumn TItem="@ContragentModel" Property="FullName" TextAlign="@TextAlign.Left"
                            Title="@LocaleCore.Table.FullName"
                            Width="50%"/>
    </TItemContent>
  </Columns>
</RadzenDataGridLocal>
