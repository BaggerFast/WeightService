@using DataCore.Sql.TableScaleModels.Access
@using BlazorDeviceControl.Pages.CustomComponents
@inherits RazorComponentSectionBase<AccessModel>
@page "/section/access"
@attribute [Authorize(Roles = UserAccessStr.Read)]

<RazorSectionReload
  TItem="@AccessModel"
  Title="@LocaleCore.Strings.AccessRights"
  OnSectionUpdate="@GetSectionData"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"
/>

<RadzenDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@AccessModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="@SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@AccessModel">
      <RazorSectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.LoginDt" Property="LoginDt" Width="30%"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.User" Property="Name" Width="30%"/>
      <RadzenDataGridColumn TItem="@AccessModel" Title="@LocaleCore.Table.AccessLevel" SortProperty="Rights" Width="30%">
         <Template Context="itemCast">
            <RadzenText Text="@DataAccess.GetAccessRightsDescription(itemCast.Rights)" />
         </Template>
      </RadzenDataGridColumn>
    </TItemContent>
  </Columns>
</RadzenDataGridLocal>
