@using DataCore.Sql.TableScaleModels.Templates
@using BlazorDeviceControl.Pages.CustomComponents
@inherits RazorComponentSectionBase<TemplateModel>
@page "/section/templates"
@attribute [Authorize(Roles = UserAccessStr.Read)]

<RazorSectionReload
  TItem="@TemplateModel"
  Title="@LocaleCore.DeviceControl.SectionTemplates"
  OnSectionUpdate="@GetSectionData"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"
/>

<RadzenDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@TemplateModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowRender="@RowRender"
  RowDoubleClick="@SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@TemplateModel">
      <RazorSectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.CategoryName" Property="CategoryId" Width="15%" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.Title" Property="Title" Width="60%" />
      <RadzenGridColumn Title="@LocaleCore.Table.ImageDataInfo" Property="ImageData.Info" Width="25%"/>
    </TItemContent>
  </Columns>
</RadzenDataGridLocal>
