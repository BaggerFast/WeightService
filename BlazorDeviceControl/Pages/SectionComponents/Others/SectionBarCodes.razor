@using DataCore.Sql.TableScaleModels.BarCodes
@using BlazorDeviceControl.Pages.CustomComponents
@inherits RazorComponentSectionBase<BarCodeModel>
@page "/section/barcodes"
@attribute [Authorize(Roles = UserAccessStr.Read)]

<RazorSectionReload
  TItem="@BarCodeModel"
  Title="@LocaleCore.DeviceControl.SectionBarCodes"
  OnSectionUpdate="@GetSectionData"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"
  />

@if (IsSqlSectionGet == false)
{
  <Preloader />
}
else
{
  <RadzenDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@BarCodeModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSetAsync"
  RowRender="@RowRender"
  RowDoubleClick="@SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@BarCodeModel">
      <RazorSectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn TItem="@BarCodeModel" Title="@LocaleCore.Table.ChangeDt" Width="12%">
        <Template Context="itemCast">
          <RadzenLink Path=@($"{LocaleCore.DeviceControl.RouteItemBarCode}/{itemCast.IdentityValueUid}")
                      Text="@(StringUtils.FormatDtRus(itemCast.ChangeDt, true))" />
        </Template>
      </RadzenDataGridColumn>
      <RadzenDataGridColumn TItem="@BarCodeModel" Title="@LocaleCore.Table.ValueTop" Width="28%">
        <Template Context="itemCast">
          <RadzenLink Path=@($"{LocaleCore.DeviceControl.RouteItemBarCode}/{itemCast.IdentityValueUid}")
                      Text="@itemCast.ValueTop"/>
        </Template>
      </RadzenDataGridColumn>
      <RadzenDataGridColumn TItem="@BarCodeModel" Title="@LocaleCore.Table.ValueRight" Width="15%">
        <Template Context="itemCast">
          <RadzenLink Path=@($"{LocaleCore.DeviceControl.RouteItemBarCode}/{itemCast.IdentityValueUid}")
                      Text="@itemCast.ValueRight"/>
        </Template>
      </RadzenDataGridColumn>
      <RadzenDataGridColumn TItem="@BarCodeModel" Title="@LocaleCore.Table.ValueBottom" Width="28%">
        <Template Context="itemCast">
          <RadzenLink Path=@($"{LocaleCore.DeviceControl.RouteItemBarCode}/{itemCast.IdentityValueUid}")
                      Text="@itemCast.ValueBottom"/>
        </Template>
      </RadzenDataGridColumn>
      <RadzenDataGridColumn TItem="@BarCodeModel" Title="@LocaleCore.Table.Label" Width="12%">
        <Template Context="itemCast">
          <RadzenLink Path=@($"{LocaleCore.DeviceControl.RouteItemBarCode}/{itemCast.IdentityValueUid}")
                      Text="@(StringUtils.FormatDtRus(itemCast.PluLabel.ChangeDt, true))"/>
        </Template>
      </RadzenDataGridColumn>
    </TItemContent>
  </Columns>
  </RadzenDataGridLocal>
}
