@page "/section/logs_web_service_fk"
@attribute [Authorize(Roles = UserAccessStr.Admin)]
@inherits RazorComponentSectionBase<LogWebFkModel>
@using DataCore.Sql.TableScaleFkModels.LogsWebsFks
@using BlazorDeviceControl.Pages.CustomComponents

<SectionReload
  TItem="@LogWebFkModel"
  Title="@LocaleCore.WebService.Name"
  OnSectionUpdate="@GetSectionData"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"
  />

<RadzenDataGrid
  @bind-Value="@SelectedRow"
  TItem="@LogWebFkModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowRender="@RowRender"
  RowDoubleClick="@SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@LogWebFkModel">
      <SectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.CreateDt" Property="LogWebRequest.CreateDt" Width="15%"
                            FormatString="@StringUtils.FormatDtLongStr" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.Device" Property="Device.Name" Width="10%" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.App" Property="App.Name" Width="15%" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.LogType" Property="LogType.Icon" Width="15%" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.RequestUrl" Property="LogWebRequest.Url" Width="40%" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.Request"  Property="ToString()" Width="15%" />
    </TItemContent>
  </Columns>
</RadzenDataGrid>