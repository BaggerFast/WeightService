@page "/section/plus_scales"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@inherits RazorComponentSectionBase<PluScaleModel>
@using DataCore.Sql.TableScaleModels.PlusScales
@using BlazorDeviceControl.Pages.CustomComponents

<SectionReload
  TItem="@PluScaleModel"
  Title="@LocaleCore.DeviceControl.SectionPlusScales"
  OnSectionUpdate="@GetSectionData"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"
  />

@if (IsSqlSectionGet == false)
{
  <Preloader />
}
else
{
  <RadzenCheckBox Disabled="false" TValue="bool" @bind-Value="@HideNoneActivePlu" Change="GetSectionData"
                  Style="margin-top: -3px; margin-left: 20px; "/>
  <RadzenLabel Style="margin-top: 0; margin-left: 5px; font-size: 11px; " Text="@LocaleCore.Action.ActionIsShowActivePlu"/>

  <RadzenDataGridLocal
    @bind-Value="@SelectedRow"
    TItem="@PluScaleModel"
    Data="@SqlSectionCast"
    CellContextMenu="@OnCellContextMenu"
    RowSelect="@SqlItemSet"
    RowRender="@RowRender"
    RowDoubleClick="@SqlItemEditAsync">
    <Columns>
      <TItemContent TItem="@PluScaleModel">
        <SectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
        <RadzenDataGridColumn Title="@LocaleCore.Table.Plu" Property="Plu.Name" Width="30%" />
        <RadzenDataGridColumn Title="@LocaleCore.Table.Scale" Property="Scale.Description" Width="15%" />
        <RadzenDataGridColumn Title="@LocaleCore.Table.NumberShort" Property="Plu.Number" Width="10%" />
        <RadzenDataGridColumn Title="@LocaleCore.Table.Active" SortProperty="IsActive" Width="10%" >
          <Template Context="itemCast">
            <RadzenCheckBox Disabled="false" TValue="bool" @bind-Value="@itemCast.IsActive"
                            Change=@(_ => @SetSqlSectionSave(itemCast)) />
          </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn Title="@LocaleCore.Table.WeightShort" SortProperty="Plu.IsCheckWeight" Width="10%">
          <Template Context="itemCast">
            <RadzenCheckBox Disabled="true" TValue="bool" @bind-Value="@itemCast.Plu.IsCheckWeight" />
          </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn Title="@LocaleCore.Table.ShelfLifeDaysShort" Property="Plu.ShelfLifeDays" Width="10%" />
        <RadzenDataGridColumn Title="@LocaleCore.Table.PluPackage" Width="10%" Sortable="false">
          <Template Context="itemCast">
            <RadzenText Text="@(GetPluPackagesCount(itemCast.Plu))"/>
          </Template>
        </RadzenDataGridColumn>
      </TItemContent>
    </Columns>
  </RadzenDataGridLocal>

  <SectionActions OnSectionSave="@OnSqlSectionSaveAsync" ButtonSettings="@ButtonSettings"/>
}

