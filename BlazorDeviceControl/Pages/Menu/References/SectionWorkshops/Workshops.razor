@page "/section/workshops"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@inherits RazorComponentSectionBase<WorkShopModel>
@using DataCore.Sql.TableScaleModels.WorkShops
@using BlazorDeviceControl.Pages.SectionComponents
@using BlazorDeviceControl.Pages.CustomComponents

<SectionReload
  TItem="@WorkShopModel"
  Title="@LocaleCore.DeviceControl.SectionWorkShops"
  OnSectionUpdate="@GetSectionData"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"
/>

<RzDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@WorkShopModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowDoubleClick="SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@WorkShopModel">
      <SectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.Name" Property="Name" Width="40%" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.ProductionFacility" Property="ProductionFacility.Name" Width="40%" />
    </TItemContent>
  </Columns>
</RzDataGridLocal>
