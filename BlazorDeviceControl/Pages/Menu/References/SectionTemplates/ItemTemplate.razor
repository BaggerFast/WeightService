@page "/section/templates/new"
@page "/section/templates/{IdentityId:long}"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@inherits RazorComponentItemBase<TemplateModel>
@using DataCore.Sql.TableScaleModels.Templates
@using BlazorDeviceControl.Pages.ItemComponents
@using BlazorDeviceControl.Pages.CustomComponents

<RazorItemReload TItem="@TemplateModel" Title="@LocaleCore.DeviceControl.ItemTemplate"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <RazorItemTableHead CssTableStyleHead="@RzComponentUtils.GetTableHeadStyle(new() { 15, 35, 15, 35 })"/>
  <tbody>
  <RazorItemTableBody SqlItem="@SqlItemCast"/>
  <tr>
    <td>@LocaleCore.Table.Title</td>
    <td>
      <RadzenTextBox Style="width: 100%; text-align: left;" @bind-Value="@SqlItemCast.Title"/>
    </td>
    <td>@LocaleCore.Table.CategoryName</td>
    <td>
      @if (TemplateCategories is null)
      {
        <RadzenTextBox Style="width: 100%;" ReadOnly=true Value=""/>
        <RadzenProgressBar Value=100 ShowValue="false" Mode="ProgressBarMode.Indeterminate" Style="width: 77%; height: 15px"/>
      }
      else
      {
        <MudSelectLocal @bind-Value="@SqlItemCast.CategoryId">
          @foreach (TypeModel<string> category in TemplateCategories)
          {
            <MudSelectItem Value=@category.Value>@category.Name</MudSelectItem>
          }
        </MudSelectLocal>
      }
    </td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.ImageData</td>
    <td colspan="3">
      <RadzenTextArea
        Style="width: 100%; text-align: left; font-size: 12px; line-height: 18px;"
        Rows="18"
        @bind-Value="@(SqlItemCast.Data)"/>
    </td>
  </tr>
  <RazorItemDates SqlItem="@SqlItemCast"/>
  </tbody>
</MudSimpleTable>

<RazorItemActions
  TItem="@TemplateModel"
  ButtonSettings="@ButtonSettings"
  OnItemSave="@SqlItemSaveAsync"
  OnItemCancel="@SqlItemCancelAsync"
  />
