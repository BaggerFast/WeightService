      </RadzenDataGridColumn>
      <RadzenDataGridColumn Title="@LocaleCore.Table.PluNumber" Property="Plu.Number" Width="7%" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.Plu" Property="Plu.Name" Width="23%" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.Bundle" Property="Bundle.Name" Width="15%" />
    </TItemContent>
  </Columns>
</RzDataGridLocal>