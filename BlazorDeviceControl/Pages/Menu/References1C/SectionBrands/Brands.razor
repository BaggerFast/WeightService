@page "/section/brands"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@inherits RazorComponentSectionBase<BrandModel>
@using DataCore.Sql.TableScaleModels.Brands
@using BlazorDeviceControl.Pages.SectionComponents
@using BlazorDeviceControl.Pages.CustomComponents

<SectionReload
  TItem="@BrandModel"
  Title="@LocaleCore.DeviceControl.SectionBrands"
  OnSectionUpdate="@GetSectionData"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"
  />

<RzDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@BrandModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSet"
  RowRender="@RowRender"
  RowDoubleClick="@SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@BrandModel">
      <SectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn Title="@LocaleCore.Table.ChangeDt" Property="ChangeDt" Width="33%" FormatString="@StrUtils.FormatDtDefault" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.Name" Property="Name" Width="43%" />
      <RadzenDataGridColumn Title="@LocaleCore.Table.Code" Property="Code" Width="33%" />
    </TItemContent>
  </Columns>
</RzDataGridLocal>
