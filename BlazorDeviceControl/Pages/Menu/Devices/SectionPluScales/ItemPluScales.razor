@page "/section/plus_scales/new"
@page "/section/plus_scales/{IdentityUidStr}"
@attribute [Authorize(Roles = UserAccessStr.Read)]
@inherits RazorComponentItemBase<PluScaleModel>
@using DataCore.Sql.TableScaleModels.PlusScales
@using BlazorDeviceControl.Pages.ItemComponents
@using BlazorDeviceControl.Pages.CustomComponents

<RazorItemReload TItem="@PluScaleModel" Title="@LocaleCore.DeviceControl.ItemPluScale"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <RazorItemTableHead CssTableStyleHead="@RzComponentUtils.GetTableHeadStyle(new() { 15, 35, 15, 35 })"/>
  <tbody>
  <RazorItemTableBody SqlItem="@SqlItemCast"/>
  <tr>
    <td>@LocaleCore.Table.IsActive</td>
    <td><RadzenCheckBox TValue="bool" @bind-Value="@SqlItemCast.IsActive"/></td>
    <td/>
    <td/>
  </tr>
  <tr>
    <td><RadzenLink Path="@GetRouteItemPath(SqlItemCast.Scale)" Text="@LocaleCore.Table.Line"/></td>
    <td><RzDropDownLocal @bind-Value="@SqlItemCast.Scale" Data="@DataContext.Scales" TextProperty="Description"/></td>
    <td><RadzenLink Path="@GetRouteItemPath(SqlItemCast.Plu)" Text="@LocaleCore.Table.Plu"/></td>
    <td><RzDropDownLocal @bind-Value="@SqlItemCast.Plu" Data="@DataContext.Plus" TextProperty="DisplayName" /></td>
  </tr>
  <RazorItemDates SqlItem="@SqlItemCast"/>
  </tbody>
</MudSimpleTable>

<RazorItemActions
  TItem="@PluScaleModel"
  ButtonSettings="@ButtonSettings"
  OnItemSave="@SqlItemSaveAsync"
  OnItemCancel="@SqlItemCancelAsync"
  />
