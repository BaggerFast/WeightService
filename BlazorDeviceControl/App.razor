@using BlazorProjectsCore
@using DataShareCore
@using DataShareCore.Utils

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Shared.MainLayout)" />
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(Shared.MainLayout)">
                <MudElement HtmlTag="h3" Class="ma-0">@LocalizationCore.Strings.Main.PageError</MudElement>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
