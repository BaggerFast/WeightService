@*@page "/system/logitem"
@page "/system/logitem/{Uid:Guid}"
@using BlazorCore.Models
@using DataProjectsCore
@using DataProjectsCore.DAL.TableModels
@using DataProjectsCore.Utils
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Section
@using DataShareCore
@inherits RazorDisposable

<ActionsReload Title=@LocalizationData.DeviceControl.ItemError SetParameters=@SetParametersAsync />

@if (Item == null)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionsLoad.Loading IsShowProgress=true />
}
else
{
    <MudSimpleTable Style="overflow-x: auto; " Dense=true Bordered=true FixedHeader=false>
        <thead>
            <tr>
                <th Style="color:blue; font-weight:bold;">@LocalizationCore.Strings.Main.RecordName</th>
                <th Style="color:blue; font-weight:bold;">@LocalizationCore.Strings.Main.RecordValue</th>
                <th Style="color:blue; font-weight:bold;">@LocalizationCore.Strings.Main.RecordName</th>
                <th Style="color:blue; font-weight:bold;">@LocalizationCore.Strings.Main.RecordValue</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldUid</td>
                <td>
                    <RadzenTextBox Style="width: 100%; text-align: center;" Disabled="false" 
                        TValue="Guid" @bind-Value=@LogItem.Uid />
				</td>
                <td>@LocalizationData.DeviceControl.TableFieldVersion</td>
                <td>
                    <RadzenTextBox Style="width: 100%; text-align: center;" Disabled="false" 
                        TValue="string" @bind-Value=@LogItem.Version />
				</td>
            </tr>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldFile</td>
                <td>
                    <RadzenTextBox Style="width: 100%; text-align: center;" Disabled="false" 
                        TValue="string" @bind-Value=@LogItem.File />
				</td>
                <td>@LocalizationData.DeviceControl.TableFieldRow</td>
                <td>
                    <RadzenNumeric Style="width: 100%; text-align: center" Disabled="true" 
                        TValue="int" @bind-Value=@LogItem.Line />
				</td>
            </tr>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldMember</td>
                <td rowspan=3>
                    <RadzenNumeric Style="width: 100%; text-align: center" Disabled="true" 
                        TValue="string" @bind-Value=@LogItem.Member />
				</td>
            </tr>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldMessage</td>
                <td rowspan=3>
                    <RadzenNumeric Style="width: 100%; text-align: center" Disabled="true" 
                        TValue="string" @bind-Value=@LogItem.Message />
				</td>
            </tr>
        </tbody>
    </MudSimpleTable>
    
    <ActionsSave ParentRazor=@this />
    <ItemDates ParentRazor=@this />
}
*@