@using BlazorCore
@using BlazorCore.Utils
@using BlazorDeviceControl.Shared.Component
@inherits BlazorCore.Models.BaseRazorIdEntity

<RadzenDialog />
<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<div class="page">
    @if (AppSettings == null)
    {
        <DataLoad DataLoadItem=EnumDataLoad.None IsShowProgress=true />
    }
    else
    {
        @if (AppSettings.IsSqlServerRelease)
        {
            <div class="sidebar">
                <NavMenu />
            </div>
        }
        else if (AppSettings.IsSqlServerDebug)
        {
            <div class="sidebar" style="background: Green">
                <NavMenu />
            </div>
        }
        else
        {
            <div class="sidebar" style="background: Red">
                <NavMenu />
            </div>
        }
        <div class="main">
            <div class="top-row px-4 auth">
                <div class="col-sm-3 col-md-3 col-lg-3">
                    <RadzenLabel Text=@AppSettings.SqlServerDescription Style="text-align: left;" />
                </div>
                <div class="col-sm-3 col-md-3 col-lg-3">
                    @if (AppSettings.IdentityItem == null || !AppSettings.IdentityItem.IsAccess)
                    {
                        <DataLoad DataLoadItem=BlazorCore.EnumDataLoad.None IsShowProgress=true />
                    }
                    else 
                    {
                        <RadzenLabel Text=@AppSettings.IdentityItem.Name Style="text-align: center; margin-left: 50px; height: 10px;" />
                    }
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4">
                    <RadzenLabel Text=@AppSettings.MemoryInfo Style="text-align: center; margin-left: 50px; height: 10px;" />
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2">
                    <MudLink Icon="email" Typo="Typo.subtitle1" Href=@LocalizationStrings.DeviceControl.CallbackEmail 
                        Style="text-align: right" rel="noopener noreferrer"
                        >@LocalizationStrings.Share.CallbackTitle </MudLink>
                </div>
            </div>
            <div class="content px-4">
                @Body
            </div>
        </div>
    }
</div>
