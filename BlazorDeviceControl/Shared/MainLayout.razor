@inherits BlazorCore.Models.RazorBase
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using DataCore.Localizations
@using DataCore.Utils
@using Microsoft.AspNetCore.Authorization

<RadzenDialog />
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<AuthorizeView>
    <Authorizing>
        @UserSettings.Identity.Name = null;
    </Authorizing>
    <Authorized>
        @if (!string.IsNullOrEmpty(context.User.Identity?.Name))
        {
            UserSettings.Identity.Name = context.User.Identity.Name;
        }
        else
        {
            UserSettings.Identity.Name = string.Empty;
        }
    </Authorized>
    <NotAuthorized>
        @UserSettings.Identity.Name = null;
    </NotAuthorized>
</AuthorizeView>

<div class="page">
    @if (AppSettings == null)
    {
        <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.None IsShowProgress=true />
    }
    else
    {
        <div class=@BlazorCoreUtuls.GetCssName.Sidebar(AppSettings)>
            <NavMenu SetParameters=@SetParametersAsync />
        </div>

        <div class="main">
            <div class="top-row px-4 auth">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    @if (UserSettings.Identity.AccessRightsIsRead)
                    {
                        <RadzenMenu Style="margin-left: -20px; margin-top: 0px; align-content: center; background-color: transparent; " >
                            <RadzenMenuItem Icon="home" Style="background-color: transparent; " Text=@LocaleCore.Strings.MenuSystem >
                                <RadzenMenuItem Icon="home" Style="background-color: transparent; "
                                    Text=@LocaleCore.Strings.MenuMain Path=@LocaleData.DeviceControl.UriRouteSection.Root />
                                <RadzenMenuItem Icon="info" Style="background-color: transparent; "
                                    Text=@StringUtils.FormatCurDtRus(true) Path=@LocaleData.DeviceControl.UriRouteSection.Root />
                                <RadzenMenuItem Icon="info" Style="background-color: transparent; "
                                    Text=@AppSettings.MemoryInfo Path=@LocaleData.DeviceControl.UriRouteSection.Root 
                                    Click=@MemoryClearAsync />
                                <RadzenMenuItem Icon="people" Style="background-color: transparent; "
                                    Text=@UserSettings.Identity.NameWithRights Path=@LocaleData.DeviceControl.UriRouteSection.Access
                                    Click=@(args => SetParametersAsync(new())) />
                                <RadzenMenuItem Icon="info" Style="background-color: transparent; "
                                    Text=@LocaleCore.Strings.MenuInfo Path=@LocaleData.DeviceControl.UriRouteItem.Info />
                            </RadzenMenuItem>
                            <RadzenMenuItem Icon="article" Style="background-color: transparent; " Text=@LocaleCore.Strings.MenuReports >
                                <RadzenMenuItem Icon="info" Style="background-color: transparent; "
                                    Text=@LocaleCore.Strings.SysLogs Path=@LocaleData.DeviceControl.UriRouteSection.Logs />
                                <RadzenMenuItem Icon="error" Style="background-color: transparent; "
                                    Text=@LocaleCore.Strings.SysErrors Path=@LocaleData.DeviceControl.UriRouteSection.Errors />
                            </RadzenMenuItem>
                        </RadzenMenu>
                    }
                </div>
            </div>
            <div class="content px-4" style="margin-left: -25px; margin-top: -15px; margin-bottom: -15px; margin-right: -15px; background-color: transparent; " >
                @Body
            </div>
        </div>
    }
</div>
