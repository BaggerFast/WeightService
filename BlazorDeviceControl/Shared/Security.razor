@page "/security"
@using BlazorCore
@using DataCore.Utils
@inherits DataCore.Models.BaseRazorIdEntity

@if (AppSettings.IdentityItem.AccessLevel is true or false)
{
    <p>The current authenticated user:</p>
    <div id="jsonRender"></div>

    <p>Invoke secured api with the current identity: </p>
    <button @onclick="@InvokeSecuredApi">Invoke</button>
}
else
{
    <RadzenLabel Text=@LocalizationCore.Strings.MenuAccessDeny></RadzenLabel>
}
