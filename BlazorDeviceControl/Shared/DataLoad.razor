@page "/data_load"
@using BlazorCore
@using BlazorCore.Utils
@inherits BlazorCore.Models.BaseRazorEntity

@switch (DataLoadItem)
{
    case EnumDataLoad.Loading:
        <RadzenLabel Text=@LocalizationStrings.Share.DataLoading Style="width: 20%" />
        break;
    case EnumDataLoad.Success:
        <RadzenLabel Text=@LocalizationStrings.Share.DataLoadComplete Style="width: 20%" />
        break;
    case EnumDataLoad.Error:
        <RadzenLabel Text=@LocalizationStrings.Share.DataLoadError Style="width: 20%" />
        break;
}

@if (IsShowProgress)
{
    <RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" Style="width: 77%; height: 15px" />
}
