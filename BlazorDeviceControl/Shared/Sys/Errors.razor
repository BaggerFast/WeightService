@page "/system/errors"
@using BlazorCore.Models
@using DataProjectsCore
@using DataProjectsCore.DAL.DataModels
@using DataProjectsCore.DAL.TableSystemModels
@using DataProjectsCore.Utils
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using BlazorDeviceControl.Shared.Section
@using DataShareCore
@using DataShareCore.DAL.DataModels
@inherits RazorDisposable

<ActionsReload Title=@LocalizationCore.Strings.SysLogs SetParameters=@SetParametersAsync IsShowItemsCount=true Items=@Items />

<RadzenGrid Style="margin-top: 5px; "
    Data=@ItemsCast TItem="ErrorEntity"
    RowSelect=@(args => ItemSelectAsync(args))
    AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterMode="FilterMode.Advanced"
    AllowPaging="true" PageSize=@AppSettings.JsonAppSettings.SectionRowCount AllowSorting="true" ColumnWidth="100px">
    <Columns >
        <RadzenGridColumn 
            TItem="ErrorEntity" TextAlign="TextAlign.Center"
            Title=@LocalizationData.DeviceControl.TableFieldCreateDt Type="date" Width="15%" >
            <Template Context="errorItem" >
                <RadzenDatePicker 
                    TValue="string" Value=@errorItem.CreatedDate Disabled="true" DateFormat="yyyy-MM-dd HH:mm:ss" />
            </Template>
        </RadzenGridColumn>
        <RadzenGridColumn 
            TItem="ErrorEntity" Property="FilePath" TextAlign="TextAlign.Left"
            Title=@LocalizationData.DeviceControl.TableFieldFile Type="string" Width="12%" />
        <RadzenGridColumn 
            TItem="ErrorEntity" Property="LineNumber" TextAlign="TextAlign.Left"
            Title=@LocalizationData.DeviceControl.TableFieldLine Type="int" Width="7%" />
        <RadzenGridColumn 
            TItem="ErrorEntity" Property="MemberName" TextAlign="TextAlign.Left"
            Title=@LocalizationData.DeviceControl.TableFieldMember Type="string" Width="12%" />
        <RadzenGridColumn 
            TItem="ErrorEntity" Property="Exception" TextAlign="TextAlign.Center"
            Title=@LocalizationData.DeviceControl.TableFieldException Type="int" Width="5%">
        </RadzenGridColumn>
        <RadzenGridColumn 
            TItem="ErrorEntity" Property="InnerException" TextAlign="TextAlign.Left"
            Title=@LocalizationData.DeviceControl.TableFieldInnerException Type="string" Width="14%" />
    </Columns>
</RadzenGrid>

<ActionsButtons ParentRazor=@this />
