@page "/system/access"
@using BlazorCore.Models
@using DataProjectsCore
@using DataProjectsCore.DAL.DataModels
@using DataProjectsCore.DAL.TableModels
@using DataProjectsCore.DAL.TableSystemModels
@using DataProjectsCore.Utils
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using BlazorDeviceControl.Shared.Section
@using DataShareCore
@inherits RazorDisposable

@if (UserSettings.Identity.AccessLevel is true or false)
{
    <DataReload Title=@LocalizationCore.Strings.SysAccess SetParameters=@SetParametersAsync IsShowItemsCount=true Items=@Items />
    <RadzenGrid Style="margin-top: 5px; "
        Data=@ItemsCast TItem="AccessEntity"
        RowSelect=@(args => ItemSelectAsync(args))
        AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.JsonAppSettings.SectionRowCount AllowSorting="true" ColumnWidth="100px">
        <Columns >
            <RadzenGridColumn 
                TItem="AccessEntity" TextAlign="TextAlign.Center"
                Title=@LocalizationData.DeviceControl.TableFieldCreateDt Type="date" Width="20%">
                <Template Context="logItem">
                    <RadzenDatePicker 
                        TValue="string" Value=@logItem.CreateDt Disabled="true" DateFormat="yyyy-MM-dd HH:mm:ss" />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="AccessEntity" TextAlign="TextAlign.Center"
                    Title=@LocalizationData.DeviceControl.TableFieldChangeDt Type="date" Width="20%">
                <Template Context="logItem">
                    <RadzenDatePicker TValue="string" Value=@logItem.ChangeDt Disabled="true" DateFormat="yyyy-MM-dd HH:mm:ss" />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="AccessEntity" Property="User" TextAlign="TextAlign.Left"
                Title=@LocalizationData.DeviceControl.TableFieldUser Type="string" Width="30%" />
            <RadzenGridColumn TItem="AccessEntity" TextAlign="TextAlign.Left"
                Title=@LocalizationData.DeviceControl.TableFieldAccessLevel Type="string" Width="30%">
                <Template Context="accessItem">
                    @if (accessItem.Level == null)
                    {
                        <RadzenLabel Text=@LocalizationData.DeviceControl.TableFieldAccessLevelNo Disabled="true" />
                    }
                    else if (accessItem.Level == false)
                    {
                        <RadzenLabel Text=@LocalizationData.DeviceControl.TableFieldAccessLevelRead Disabled="true" />
                    }
                    else if (accessItem.Level == true)
                    {
                        <RadzenLabel Text=@LocalizationData.DeviceControl.TableFieldAccessLevelWrite Disabled="true" />
                    }
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>
    @if (Items == null)
    {
        <DataLoad DataLoadItem=ShareEnums.DataLoad.Loading IsShowProgress=true />
    }
    else
    {
        <SectionActions />
    }
}
else
{
    <RadzenLabel Text=@LocalizationCore.Strings.SectionAccessDeny></RadzenLabel>
}
