@inherits BlazorCore.Models.RazorBase
@using BlazorCore
@using DataCore.Localizations
@using DataCore.Utils
@using Microsoft.VisualBasic.CompilerServices
@using static DataCore.Utils.BlazorCoreUtuls

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">
        <RadzenButton 
            Style="margin-left: -10px; margin-top: -7px; align-content: center; width: 82%; font-size: 14px; background-color: transparent; "
            ButtonStyle=@ButtonStyle.Primary
            Click=@(args => SetParameters.InvokeAsync())
            MouseEnter="@(args => TooltipService?.Open(args, LocaleData.DeviceControl.TableReadData))"
            Text=@LocaleCore.Strings.AppName
        />
    </a>
    <button class="navbar-toggler" @onclick=@ToggleNavMenu>
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class=@GetCssName.NavMenu(CollapseNavMenu) @onclick=@ToggleNavMenu>
    <ul class="nav flex-column">
        @if (UserSettings.Identity.AccessRightsIsRead)
        {
            <RadzenPanelMenu class=@GetCssName.RadzenPanelMenu >
                <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuItem Text=@LocaleData.DeviceControl.Sections.Scales >
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleData.DeviceControl.Sections.AutomatedWorkplaceShort Path=@LocaleData.DeviceControl.UriRouteSection.Scales />
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleData.DeviceControl.Sections.ProductionFacilitiesShort Path=@LocaleData.DeviceControl.UriRouteSection.ProductionFacilities />
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleData.DeviceControl.Sections.WorkShops Path=@LocaleData.DeviceControl.UriRouteSection.WorkShops />
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem
                        Text=@LocaleData.DeviceControl.Sections.Hosts Path=@LocaleData.DeviceControl.UriRouteSection.Hosts />
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleCore.Print.Names Path=@LocaleData.DeviceControl.UriRouteSection.Printers />
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleCore.Print.Types Path=@LocaleData.DeviceControl.UriRouteSection.PrinterTypes />
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleData.DeviceControl.Sections.Resources Path=@LocaleData.DeviceControl.UriRouteSection.PrinterResources />
                </RadzenPanelMenuItem>

                <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuItem Text=@LocaleData.DeviceControl.Sections.Measurements >
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleData.DeviceControl.Sections.WeithingFactsAggregationShort Path=@LocaleData.DeviceControl.UriRouteSection.WeithingFactsAggregation />
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleData.DeviceControl.Sections.WeithingFacts Path=@LocaleData.DeviceControl.UriRouteSection.WeithingFacts />
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleData.DeviceControl.Sections.Labels Path=@LocaleData.DeviceControl.UriRouteSection.Labels />
                </RadzenPanelMenuItem>
                
                <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuItem Text=@LocaleData.DeviceControl.Sections.ReferencesDwh >
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleData.DeviceControl.Sections.Contragents Path=@LocaleData.DeviceControl.UriRouteSection.Contragents />
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleData.DeviceControl.Sections.Nomenclatures Path=@LocaleData.DeviceControl.UriRouteSection.Nomenclatures />
                </RadzenPanelMenuItem>
                
                <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuItem Text=@LocaleData.DeviceControl.Sections.ReferencesAdditional >
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleData.DeviceControl.Sections.Plus Path=@LocaleData.DeviceControl.UriRouteSection.Plus />
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleData.DeviceControl.Sections.Templates Path=@LocaleData.DeviceControl.UriRouteSection.Templates />
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleData.DeviceControl.Sections.TemplateResources Path=@LocaleData.DeviceControl.UriRouteSection.TemplateResources />
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleData.DeviceControl.Sections.BarCodesShort Path=@LocaleData.DeviceControl.UriRouteSection.BarCodes />
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleData.DeviceControl.Sections.BarCodeTypesShort Path=@LocaleData.DeviceControl.UriRouteSection.BarCodeTypes />
                    <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem 
                        Text=@LocaleData.DeviceControl.Sections.TaskModules Path=@LocaleData.DeviceControl.UriRouteSection.TaskModules />
                    @if (IsDebug)
                    {
                        <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem Text="Mud" Path="mud" />
                        <RadzenPanelMenuItem class=@GetCssName.RadzenPanelMenuSubItem Text="Radzen" Path="radzen" />
                    }
                </RadzenPanelMenuItem>
            </RadzenPanelMenu>
        }
    </ul>
</div>
