@inherits BlazorCore.Models.RazorBase
@page "/item/plu"
@page "/item/plu/{IdentityId:long}"
@page "/item/plu/{IdentityId:long}/{TableAction}"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Section
@using DataCore.Sql.TableDirectModels
@using DataCore.Localizations
@using DataCore.Utils
@using static DataCore.Localizations.LocaleData.DeviceControl

@if (!IsLoaded)
{
    <ActionsLoad ParentRazor=@this DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadItem ParentRazor=@this 
        Title=@LocaleData.DeviceControl.Items.Plu SetParameters=@SetParametersAsync />

    <MudSimpleTable Style="overflow-x: auto; " Dense=true Bordered=true FixedHeader=false>
        <thead>
            <tr>
                <th Style="color:blue; font-weight:bold; width: 20%; ">@LocaleCore.Strings.RecordName</th>
                <th Style="color:blue; font-weight:bold; width: 30%; ">@LocaleCore.Strings.RecordValue</th>
                <th Style="color:blue; font-weight:bold; width: 20%; ">@LocaleCore.Strings.RecordName</th>
                <th Style="color:blue; font-weight:bold; width: 30%; ">@LocaleCore.Strings.RecordValue</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@LocaleCore.Table.Id</td>
                <td>
                    <RadzenTextBox Style="width: 100%; text-align: center; background-color: lightgray; " 
                        Disabled=false ReadOnly=true Value=@ItemCast.IdentityId.ToString() />
				</td>
                <td>@LocaleCore.Table.Marked</td>
                <td>
                    <RadzenCheckBox Disabled=false TValue="bool" @bind-Value=@ItemCast.IsMarked />
                </td>
            </tr>
            <tr>
                <td>@LocaleCore.Table.PluNumber</td>
                <td>
                    <RadzenTextBox Style="width: 100%; text-align: center; background-color: lightgray; " 
                        Disabled=false ReadOnly=true Value=@ItemCast.PluNumber.ToString() />
				</td>
            </tr>
            <tr>
                <td>
                    <RadzenLink Style="width: 100%; margin-left: 0px; " 
                        Path=@GetPath(UriRouteItem.Scale, ItemCast.Scale, ItemCast.Scale.IdentityId)
                        Text=@LocaleCore.Table.Scale />
                </td>
                <td>
                    @if (ScaleItems == null || AppSettings.DataAccess?.JsonSettingsLocal == null)
                    {
                        <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.None IsShowProgress=true />
                    }
                    else
                    {
                        <RadzenDropDownDataGrid 
                            Style="width: 100%; height: 35px;" 
                            FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive
                            AllowFiltering=true AllowClear=true AllowFilteringByAllStringColumns=true AllowSorting=true
                            Data=@ScaleItems PageSize=@AppSettings.DataAccess.JsonSettingsLocal.ItemRowsCount
                            TextProperty="Description" Change=@(args => OnItemValueChange(ItemCast, nameof(ItemCast.Scale), args)) 
                            ValueProperty="IdentityId" TValue="long" Value=@ItemCast.Scale.IdentityId 
                            />
                    }
				</td>
                <td>
                    <RadzenLink Style="width: 100%; margin-left: 0px; " 
                        Path=@GetPath(UriRouteItem.Template, ItemCast.Template, ItemCast.Template.IdentityId)
                        Text=@LocaleCore.Table.Template />
                </td>
                <td>
                    @if (TemplateItems == null || AppSettings.DataAccess?.JsonSettingsLocal == null)
                    {
                        <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.None IsShowProgress=true />
                    }
                    else
                    {
                        <RadzenDropDownDataGrid 
                            Style="width: 100%; height: 35px;" 
                            FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive
                            AllowFiltering=true AllowClear=true AllowFilteringByAllStringColumns=true AllowSorting=true
                            Data=@TemplateItems PageSize=@AppSettings.DataAccess.JsonSettingsLocal.ItemRowsCount
                            TextProperty="Title" Change=@(args => OnItemValueChange(ItemCast, nameof(ItemCast.Template), args)) 
                            ValueProperty="IdentityId" TValue="long" Value=@ItemCast.Template.IdentityId
                            />
                    }
				</td>
            </tr>
            <tr>
                <td>
                    <RadzenLink Style="width: 100%; margin-left: 0px; " 
                        Path=@GetPath(UriRouteItem.Nomenclature, ItemCast.Nomenclature, ItemCast.Nomenclature.IdentityId)
                        Text=@LocaleCore.Table.NomenclatureName />
                </td>
                <td>
                    @if (NomenclatureItems == null || AppSettings.DataAccess?.JsonSettingsLocal == null)
                    {
                        <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.None IsShowProgress=true />
                    }
                    else
                    {
                        <RadzenDropDownDataGrid 
                            Style="width: 100%; height: 35px;" 
                            FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive
                            AllowFiltering=true AllowClear=true AllowFilteringByAllStringColumns=true AllowSorting=true
                            Data=@NomenclatureItems PageSize=@AppSettings.DataAccess.JsonSettingsLocal.ItemRowsCount
                            TextProperty="Name" Change=@(args => OnItemValueChange(ItemCast, nameof(ItemCast.Nomenclature), args)) 
                            ValueProperty="IdentityId" TValue="long" Value=@ItemCast.Nomenclature.IdentityId
                            />
                    }
				</td>
                <td>@LocaleCore.Table.Active</td>
                <td>
                    <RadzenCheckBox Disabled=false TValue="bool" @bind-Value=@ItemCast.Active />
				</td>
            </tr>
            <tr>
                <td>@LocaleCore.Table.UpperWeightThreshold</td>
                <td>
                    <RadzenNumeric Style="width: 100%; text-align: center; " Disabled=false 
                        TValue="decimal" @bind-Value=@ItemCast.UpperWeightThreshold />
				</td>
                <td>@LocaleCore.Table.CheckWeight</td>
                <td>
                    <RadzenCheckBox Disabled=false TValue="bool" @bind-Value=@ItemCast.IsCheckWeight />
				</td>
            </tr>
            <tr>
                <td>@LocaleCore.Table.NominalWeight</td>
                <td>
                    <RadzenNumeric Style="width: 100%; text-align: center; " Disabled=false 
                        TValue="decimal" @bind-Value=@ItemCast.NominalWeight />
				</td>
            </tr>
            <tr>
                <td>@LocaleCore.Table.LowerWeightThreshold</td>
                <td>
                    <RadzenNumeric Style="width: 100%; text-align: center; " Disabled=false 
                        TValue="decimal" @bind-Value=@ItemCast.LowerWeightThreshold />
				</td>
                <td>@LocaleCore.Table.ShelfLifeDays</td>
                <td>
                    <RadzenButton Style="width: 15%; margin-right: 1%; " Disabled=false Icon="autorenew"
                        Click=@(args => OnClickFieldsFill(nameof(ItemCast.XmlGoodsShelfLifeDays))) />
                    <RadzenNumeric Style="width: 80%; text-align: center; " Disabled=false 
                        TValue="short" @bind-Value=@ItemCast.GoodsShelfLifeDays />
				</td>
            </tr>
            <tr>
                <td colspan=2>
                    <RadzenLabel Style="width: 100%; text-align: center; font-size: 12px; " 
                        Text=@LocaleCore.Table.GoodsTareWeightDescription />
                </td>
                <td colspan=2>
                    <RadzenLabel Style="width: 100%; text-align: center; font-size: 12px; " 
                        Text=@GetWeightFormula() />
                </td>
            </tr>
            <tr>
                <td>@LocaleCore.Table.GoodsTareWeight</td>
                <td>
                    <RadzenButton Style="width: 15%; margin-right: 1%; height: 25px; " Disabled=false Icon="autorenew"
                        Click=@(args => OnClickFieldsFill(nameof(ItemCast.CalcGoodsTareWeight))) />
                    <RadzenNumeric Style="width: 80%; margin-right: 1%; text-align: center; " Disabled=false 
                        TValue="decimal" @bind-Value=@ItemCast.GoodsTareWeight />
                </td>
                <td>@LocaleCore.Table.GoodsBoxQuantly</td>
                <td>
                    <RadzenButton Style="width: 15%; margin-right: 1%; height: 25px; " Disabled=false Icon="autorenew"
                        Click=@(args => OnClickFieldsFill(nameof(ItemCast.XmlGoodsBoxQuantly))) />
                    <RadzenNumeric Style="width: 80%; margin-right: 1%; text-align: center; " Disabled=false 
                        TValue="int" @bind-Value=@ItemCast.GoodsBoxQuantly />
                </td>
            </tr>
            <tr>
                <td>@LocaleCore.Table.Ean13</td>
                <td colspan=3 >
                    <RadzenButton Style="width: 5%; margin-right: 1%; " Disabled=false Icon="autorenew"
                        Click=@(args => OnClickFieldsFill(nameof(ItemCast.XmlEan13))) />
                    <RadzenTextBox Style="width: 75%; text-align: center; " Disabled=false 
                        TValue="string" @bind-Value=@ItemCast.Ean13 />
                    <RadzenLabel Style="width: 10%; margin-right: 1%; text-align: center; " 
                        Text=@ItemCast.Ean13.Length.ToString() />
                </td>
            </tr>
            <tr>
                <td>@LocaleCore.Table.Gtin</td>
                <td colspan=3>
                    <RadzenButton Style="width: 5%; margin-right: 1%; " Disabled=false Icon="aspect_ratio"
                        ButtonStyle=@ButtonStyle.Secondary Click=@(args => OnClickFieldsFill(nameof(Barcode.GetGtin))) />
                    <RadzenButton Style="width: 5%; margin-right: 1%; " Disabled=false Icon="autorenew"
                        Click=@(args => OnClickFieldsFill(nameof(ItemCast.XmlGtin))) />
                    <RadzenTextBox Style="width: 68.5%; margin-right: 1%; text-align: center; " Disabled=false 
                        TValue="string" @bind-Value=@ItemCast.Gtin />
                    <RadzenLabel Style="width: 10%; margin-right: 1%; text-align: center; " 
                        Text=@ItemCast.Gtin.Length.ToString() />
                </td>
            </tr>
            <tr>
                <td>@LocaleCore.Table.Itf14</td>
                <td colspan=3>
                    <RadzenButton Style="width: 5%; margin-right: 1%; " Disabled=false Icon="autorenew"
                        Click=@(args => OnClickFieldsFill(nameof(ItemCast.XmlItf14))) />
                    <RadzenTextBox Style="width: 75%; text-align: center; " Disabled=false 
                        TValue="string" @bind-Value=@ItemCast.Itf14 />
                    <RadzenLabel Style="width: 10%; margin-right: 1%; text-align: center; " Text=@ItemCast.Itf14.Length.ToString() />
                </td>
            </tr>
            <tr>
                <td colspan=2>
                    <RadzenButton Style="width: 100%; " Disabled=false Icon="autorenew"
                        Text=@LocaleData.DeviceControl.TableActionFill
                        Click=@(args => OnClickFieldsFill(nameof(LocaleData.DeviceControl.TableActionFill))) />
				</td>
                <td colspan=2>
                    <RadzenButton Style="width: 100%; " Disabled=false Icon="clear" 
                        Text=@LocaleData.DeviceControl.TableActionClear
                        Click=@(args => OnClickFieldsFill(nameof(LocaleData.DeviceControl.TableActionClear))) />
				</td>
            </tr>
            <tr>
                <td>@LocaleCore.Table.Name</td>
                <td>
                    <RadzenButton Style="width: 15%; margin-right: 1%; " Disabled=false Icon="autorenew"
                        Click=@(args => OnClickFieldsFill(nameof(ItemCast.XmlGoodsName))) />
                    <RadzenTextBox Style="width: 75%; margin-right: 1%; " Disabled=false 
                        TValue="string" @bind-value=@ItemCast.GoodsName />
				</td>
                <td>@LocaleCore.Table.GoodsFullName</td>
                <td>
                    <RadzenButton Style="width: 15%; margin-right: 1%; " Disabled=false Icon="autorenew"
                        Click=@(args => OnClickFieldsFill(nameof(ItemCast.XmlGoodsFullName))) />
                    <RadzenTextBox Style="width: 75%; margin-right: 1%; " Disabled=false 
                        TValue="string" @bind-value=@ItemCast.GoodsFullName />
				</td>
            </tr>
            <tr>
                <td>@LocaleCore.Table.GoodsDescription</td>
                <td colspan=3>
                    <RadzenButton Style="width: 5%; margin-right: 1%; " Disabled=false Icon="autorenew"
                        Click=@(args => OnClickFieldsFill(nameof(ItemCast.XmlGoodsDescription))) />
                    <RadzenTextArea Style="width: 90%; text-align: left; font-size: 12px; " Disabled=false 
                        TValue="string" @bind-value=@ItemCast.GoodsDescription Rows=3 />
				</td>
            </tr>
        </tbody>
    </MudSimpleTable>
    
    <ActionsSave ParentRazor=@this ButtonSettings=@ButtonSettings />
    <ItemDates ParentRazor=@this />
}
