@page "/item/templateresource"
@page "/item/templateresource/{Id:long}"
@page "/item/templateresource/{Id:long}/{TableActionString}"
@using BlazorCore.Models
@using BlazorDeviceControl.Shared.Component
@using DataCore
@using DataCore.Utils
@using BlazorCore
@inherits RazorDisposable

@if (Item == null)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionsLoad.Loading IsShowProgress=true />
}
else
{
    <MudSimpleTable Style="overflow-x: auto; " Dense=true Bordered=true FixedHeader=false>
        <thead>
            <tr>
                <th Style="color:blue; font-weight:bold;">@LocalizationCore.Strings.Main.RecordName</th>
                <th Style="color:blue; font-weight:bold;">@LocalizationCore.Strings.Main.RecordValue</th>
                <th Style="color:blue; font-weight:bold;">@LocalizationCore.Strings.Main.RecordName</th>
                <th Style="color:blue; font-weight:bold;">@LocalizationCore.Strings.Main.RecordValue</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldId</td>
                <td>
                    <RadzenNumeric Style="width: 100%; text-align: center; background-color: lightgray; " 
                        Disabled=false ReadOnly=true
                        TValue="long" @bind-Value=@TemplateResourcesItem.Id />
				</td>
                <td>@LocalizationData.DeviceControl.TableFieldMarked</td>
                <td>
                    <RadzenCheckBox Disabled=false TValue="bool" @bind-Value=@TemplateResourcesItem.Marked />
                </td>
            </tr>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldName</td>
                <td>
                    <RadzenTextBox Style="width: 100%; text-align: center; " Disabled=false 
                        TValue="string" @bind-Value=@TemplateResourcesItem.Name />
				</td>
                <td>@LocalizationData.DeviceControl.TableFieldDescription</td>
                <td>
                    <RadzenTextBox Style="width: 100%; text-align: center; " Disabled=false 
                        TValue="string" @bind-Value=@TemplateResourcesItem.Description />
				</td>
            </tr>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldType</td>
                <td>
                    <RadzenTextBox Style="width: 100%; text-align: center; " Disabled=false 
                        TValue="string" @bind-Value=@TemplateResourcesItem.Type />
				</td>
                <td>@LocalizationData.DeviceControl.TableFieldIdRRef</td>
                <td >
                    <RadzenTextBox Style="width: 100%; text-align: center; " Disabled=false ReadOnly=true
                        TValue="string" @Value=@TemplateResourcesItem.IdRRef />
				</td>
            </tr>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldImageData</td>
                <td >
                    <RadzenTextBox Style="width: 100%; text-align: center; " Disabled=false 
                        TValue="string" @bind-Value=@TemplateResourcesItem.ImageDataInfo />
				</td>
            </tr>
        </tbody>
    </MudSimpleTable>
    
    <ActionsSave ParentRazor=@this ButtonSettings=@ButtonSettings />
    <ItemDates ParentRazor=@this />
}
