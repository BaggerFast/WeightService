@inherits BlazorCore.Models.RazorBase
@page "/item/printerresource"
@page "/item/printerresource/{IdentityId:long}"
@page "/item/printerresource/{IdentityId:long}/{TableAction}"
@using BlazorDeviceControl.Shared.Component
@using DataCore
@using DataCore.DAL.TableScaleModels
@using DataCore.Localizations
@using DataCore.Utils
@using System.Globalization

@if (!IsLoaded)
{
    <ActionsLoad ParentRazor=@this DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadItem ParentRazor=@this 
        Title=@LocaleCore.Print.Resource SetParameters=@SetParametersAsync />

    <MudSimpleTable Style="overflow-x: auto; " Dense=true Bordered=true FixedHeader=false>
        <thead>
            <tr>
                <th Style="color:blue; font-weight:bold; width: 15%; ">@LocaleCore.Strings.RecordName</th>
                <th Style="color:blue; font-weight:bold; width: 35%; ">@LocaleCore.Strings.RecordValue</th>
                <th Style="color:blue; font-weight:bold; width: 15%; ">@LocaleCore.Strings.RecordName</th>
                <th Style="color:blue; font-weight:bold; width: 35%; ">@LocaleCore.Strings.RecordValue</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@LocaleCore.Table.Id</td>
                <td>
                    <RadzenNumeric Style="width: 100%; text-align: center; background-color: lightgray; " 
                        Disabled=false ReadOnly=true
                        TValue="long" @bind-Value=@ItemCast.IdentityId />
				</td>
                <td>@LocaleCore.Table.Marked</td>
                <td>
                    <RadzenCheckBox Disabled=false TValue="bool" @bind-Value=@ItemCast.IsMarked />
                </td>
            </tr>
            <tr>
                <td>@LocaleCore.Print.Name</td>
                <td>
                    @if (PrinterItems == null)
                    {
                        <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.None IsShowProgress=true />
                    }
                    else
                    {
                        <RadzenDropDownDataGrid 
                            Style="width: 100%; height: 35px;" TValue="int" 
                            FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive
                            AllowFiltering=true AllowClear=true AllowFilteringByAllStringColumns=true
                            Data=@PrinterItems PageSize=@AppSettings.DataAccess.JsonSettings.ItemRowCount
                            TextProperty="Name" Change=@(args => OnItemValueChange(ItemCast, nameof(ItemCast.Printer), args)) 
                            ValueProperty="IdentityId" Value=@ItemCast.Printer.IdentityId
                            />
                    }
				</td>
            </tr>
            <tr>
                <td>@LocaleCore.Table.Description</td>
                <td>
                    <RadzenTextBox Style="width: 100%; text-align: center; " Disabled=false 
                        TValue="string" @bind-Value=@ItemCast.Description />
				</td>
                <td>@LocaleCore.Table.Resource</td>
                <td>
                    @if (ResourceItems == null)
                    {
                        <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.None IsShowProgress=true />
                    }
                    else
                    {
                        <RadzenDropDownDataGrid 
                            Style="width: 100%; height: 35px;" TValue="int" 
                            FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive
                            AllowFiltering=true AllowClear=true AllowFilteringByAllStringColumns=true
                            Data=@ResourceItems PageSize=@AppSettings.DataAccess.JsonSettings.ItemRowCount
                            TextProperty="Name" Change=@(args => OnItemValueChange(ItemCast, nameof(ItemCast.Resource), args)) 
                            ValueProperty="Id" Value=@ItemCast.Resource.IdentityId
                            />
                    }
				</td>
            </tr>
        </tbody>
    </MudSimpleTable>
    
    <ActionsSave ParentRazor=@this ButtonSettings=@ButtonSettings />
    <ItemDates ParentRazor=@this />
}
