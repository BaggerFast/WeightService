@inherits BlazorCore.Models.RazorBase
@page "/item/error"
@page "/item/error/{IdentityId:long}"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Section
@using DataCore
@using DataCore.Localizations
@using DataCore.Utils

@if (!IsLoaded)
{
    <ActionsLoad ParentRazor=@this DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadItem ParentRazor=@this 
        Title=@LocaleData.DeviceControl.Items.Error SetParameters=@SetParametersAsync />

    <MudSimpleTable Style="overflow-x: auto; " Dense=true Bordered=true FixedHeader=false>
        <thead>
            <tr>
                <th Style="color:blue; font-weight:bold; width: 15%; ">@LocaleCore.Strings.Main.RecordName</th>
                <th Style="color:blue; font-weight:bold; width: 35%; ">@LocaleCore.Strings.Main.RecordValue</th>
                <th Style="color:blue; font-weight:bold; width: 15%; ">@LocaleCore.Strings.Main.RecordName</th>
                <th Style="color:blue; font-weight:bold; width: 35%; ">@LocaleCore.Strings.Main.RecordValue</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@LocaleCore.Table.Id</td>
                <td>
                    <RadzenNumeric Style="width: 100%; text-align: center; background-color: lightgray; " 
                        Disabled=false ReadOnly=true
                        TValue="long" @bind-Value=@ItemCast.IdentityId />
				</td>
                <td>@LocaleCore.Table.Marked</td>
                <td>
                    <RadzenCheckBox Disabled=false TValue="bool" @bind-Value=@ItemCast.IsMarked />
                </td>
            </tr>
            <tr>
                <td>@LocaleCore.Table.FilePath</td>
                <td colspan=3>
                    <RadzenTextBox Style="width: 100%; text-align: left; background-color: lightgray; " 
                        Disabled=false ReadOnly=true
                        TValue="string" @bind-Value=@ItemCast.FilePath />
				</td>
            </tr>
            <tr>
                <td>@LocaleCore.Table.Row</td>
                <td>
                    <RadzenNumeric Style="width: 100%; text-align: center; background-color: lightgray; " 
                        Disabled=false ReadOnly=true
                        TValue="int" @bind-Value=@ItemCast.LineNumber />
				</td>
                <td>@LocaleCore.Table.Member</td>
                <td>
                    <RadzenTextBox Style="width: 100%; text-align: center; background-color: lightgray; " 
                        Disabled=false ReadOnly=true
                        TValue="string" @bind-Value=@ItemCast.MemberName />
				</td>
            </tr>
            <tr>
                <td>@LocaleCore.Table.Exception</td>
                <td colspan=3>
                    <RadzenTextArea Style="width: 100%; text-align: left; font-size: 12px; line-height: 20px; background-color: lightgray; " 
                        Disabled=false ReadOnly=true
                        TValue="string" @bind-Value=@ItemCast.Exception Rows=10 />
				</td>
            </tr>
            <tr>
                <td>@LocaleCore.Table.InnerException</td>
                <td colspan=3>
                    <RadzenTextArea Style="width: 100%; text-align: left; font-size: 12px; line-height: 20px; background-color: lightgray; " 
                        Disabled=false ReadOnly=true
                        TValue="string" @bind-Value=@ItemCast.InnerException Rows=10 />
				</td>
            </tr>
        </tbody>
    </MudSimpleTable>
    
    <ActionsSave ParentRazor=@this ButtonSettings=@ButtonSettings />
    <ItemDates ParentRazor=@this />
}
