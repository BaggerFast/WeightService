@inherits BlazorCore.Models.RazorBase
@page "/item/printer"
@page "/item/printer/{IdentityId:long}"
@page "/item/printer/{IdentityId:long}/{TableAction}"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Section
@using DataCore
@using DataCore.DAL.TableScaleModels
@using DataCore.Utils
@using static DataCore.LocalizationData.DeviceControl

@if (ItemCast == null)
{
    <ActionsLoad ParentRazor=@this DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReload ParentRazor=@this Title=@LocalizationData.DeviceControl.Items.Printer SetParameters=@SetParametersAsync 
        IsShowItemsCount=false IsShowMarkedFilter=false />

    <MudSimpleTable Style="overflow-x: auto; " Dense=true Bordered=true FixedHeader=false>
        <thead>
            <tr>
                <th Style="color:blue; font-weight:bold; width: 25%; ">@LocalizationCore.Strings.Main.RecordName</th>
                <th Style="color:blue; font-weight:bold; width: 25%; ">@LocalizationCore.Strings.Main.RecordValue</th>
                <th Style="color:blue; font-weight:bold; width: 25%; ">@LocalizationCore.Strings.Main.RecordName</th>
                <th Style="color:blue; font-weight:bold; width: 25%; ">@LocalizationCore.Strings.Main.RecordValue</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldId</td>
                <td>
                    <RadzenNumeric Style="width: 100%; text-align: center; background-color: lightgray; " 
                        Disabled=false ReadOnly=true
                        TValue="long" @bind-Value=@ItemCast.IdentityId />
				</td>
                <td>@LocalizationData.DeviceControl.TableFieldMarked</td>
                <td>
                    <RadzenCheckBox Disabled=false TValue="bool" @bind-Value=@ItemCast.IsMarked />
                </td>
            </tr>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldName</td>
                <td>
                    <RadzenTextBox Style="width: 100%; text-align: center; " Disabled=false 
                        TValue="string" @bind-Value=@ItemCast.Name />
                </td>
                <td>@LocalizationData.DeviceControl.TableFieldPrinterMac</td>
                <td>
                    <RadzenTextBox Style="width: 100%; text-align: center;" Disabled=false 
                        TValue="string" @bind-Value=@ItemCast.MacAddress.Value />
                </td>
            </tr>
            <tr>
                <td>
                    <RadzenLink Style="width: 100%; margin-left: 0px; " Target="_blank"
                        Path=@ItemCast.Link 
                        Text=@LocalizationData.DeviceControl.TableFieldPrinterControlPanel />
                </td>
                <td>
                    <RadzenTextBox Style="width: 100%; text-align: center;" Disabled=false 
                        TValue="string" @bind-Value=@ItemCast.Ip />
                </td>
                <td>
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@GetPath(UriRouteItem.PrinterType, ItemCast.PrinterType, ItemCast.PrinterType.IdentityId)
                        Text=@LocalizationData.DeviceControl.TableFieldPrinterType />
                </td>
                <td>
                    @if (PrinterTypes == null)
                    {
                        <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.None IsShowProgress=true />
                    }
                    else
                    {
                        <RadzenDropDownDataGrid 
                            Style="width: 100%;" TValue="long"
                            FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive
                            AllowFiltering=true AllowClear=true AllowFilteringByAllStringColumns=true
                            PageSize=@AppSettings.DataAccess.JsonSettings.ItemRowCount 
                            Data=@PrinterTypes Value=@ItemCast.PrinterType.IdentityId
                            ValueProperty=@nameof(ItemCast.IdentityId) TextProperty=@nameof(ItemCast.Name)
                            Change=@(args => OnItemValueChange(ItemCast, nameof(ItemCast.PrinterType), args)) >
                            <Columns>
                                <RadzenDropDownDataGridColumn Property=@nameof(ItemCast.Name) Title=@LocalizationData.DeviceControl.TableFieldName Width="100%" />
                            </Columns>
                        </RadzenDropDownDataGrid>
                    }
                </td>
            </tr>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldPrinterPort</td>
                <td>
                    <RadzenNumeric Style="width: 100%; text-align: center;" Disabled=false 
                        TValue="short" @bind-Value=@ItemCast.Port />
                </td>
                <td>@LocalizationData.DeviceControl.TableFieldPrinterPassword</td>
                <td>
                    <RadzenTextBox Style="width: 100%; text-align: center;" Disabled=false 
                        TValue="string" @bind-Value=@ItemCast.Password />
                </td>
            </tr>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldHttpStatusCode</td>
                <td>
                    <RadzenIcon Style="width: 16%; align-content: center; "
                        Icon=@(ItemCast.HttpStatusCode == System.Net.HttpStatusCode.OK ? "network_wifi_3_bar" : "signal_wifi_statusbar_null")/>
                    <RadzenLabel Disabled=false ReadOnly=true Style="width: 80%; text-align: left; " 
                        Text=@ItemCast.HttpStatusCode.ToString() />
                </td>
                @if (ItemCast.HttpStatusException != null)
                {
                    <td>@LocalizationData.DeviceControl.TableFieldHttpStatusException</td>
                    <td>
                        <RadzenLabel Style="width: 100%; " 
                            Text=@(ItemCast.HttpStatusException != null ? ItemCast.HttpStatusException.Message : "") />
                    </td>
                }
                else
                {
                    <td colspan=2>@LocalizationData.DeviceControl.TableFieldHttpStatusNoException</td>
                }
            </tr>
            <tr>
                <td>@LocalizationData.DeviceControl.Actions</td>
                <td>
                    <RadzenButton Click=@(args => PrinterResourcesClear(UserSettings, ItemCast))
                        class="radzenButtonFullWidth" ButtonStyle=@ButtonStyle.Primary
                        Text=@LocalizationData.DeviceControl.TableFieldPrinterResourcesClear Disabled=@AppSettings.DataAccess.IsDisabled />
				</td>
                <td>
                    <RadzenButton Click=@(args => PrinterResourcesLoad(UserSettings, ItemCast, "TTF"))
                        class="radzenButtonFullWidth" ButtonStyle=@ButtonStyle.Primary
                        Text=@LocalizationData.DeviceControl.TableFieldPrinterResourcesLoadTtf Disabled=@AppSettings.DataAccess.IsDisabled />
				</td>
                <td>
                    <RadzenButton Click=@(args => PrinterResourcesLoad(UserSettings, ItemCast, "GRF"))
                        class="radzenButtonFullWidth" ButtonStyle=@ButtonStyle.Primary
                        Text=@LocalizationData.DeviceControl.TableFieldPrinterResourcesLoadGrf Disabled=@AppSettings.DataAccess.IsDisabled />
				</td>
            </tr>
        </tbody>
    </MudSimpleTable>
    
    <SectionPrinterResources Table=@Table ItemFilter=@ItemCast IsShowMarkedFilter=true />
    
    <ActionsSave ParentRazor=@this ButtonSettings=@ButtonSettings />
    <ItemDates ParentRazor=@this />
}
