@page "/item/taskmodule"
@page "/item/taskmodule/{Uid:guid}"
@page "/item/taskmodule/{Uid:guid}/{TableActionString}"
@using BlazorCore.Models
@using DataCore
@using DataCore.Utils
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Section
@using BlazorCore
@inherits RazorDisposable

@if (ItemCast == null)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReload Title=@LocalizationData.DeviceControl.ItemTaskModule SetParameters=@SetParametersAsync 
        IsShowItemsCount=false IsShowMarkedFilter=false />

    <TaskModules Uid=@ItemCast?.Uid />
    <ActionsSave ParentRazor=@this ButtonSettings=@ButtonSettings />
}
