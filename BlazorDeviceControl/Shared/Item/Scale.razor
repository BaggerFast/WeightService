@page "/item/scale"
@page "/item/scale/{Id:long}"
@page "/item/scale/{Id:long}/{TableActionString}"
@using BlazorCore.Models
@using DataCore
@using DataCore.Utils
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Section
@using BlazorCore
@inherits RazorDisposable

@if (ItemCast == null)
{
    <ActionsLoad ParentRazor=@this DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReload ParentRazor=@this Title=@LocalizationData.DeviceControl.ItemScale SetParameters=@SetParametersAsync 
        IsShowItemsCount=false IsShowMarkedFilter=false IsMarked=@ItemCast.IsMarked />

    <MudSimpleTable Style="overflow-x: auto; " Dense=true Bordered=true FixedHeader=false>
        <thead>
            <tr>
                <th Style="color:blue; font-weight:bold; width: 20%; ">@LocalizationCore.Strings.Main.RecordName</th>
                <th Style="color:blue; font-weight:bold; width: 30%; ">@LocalizationCore.Strings.Main.RecordValue</th>
                <th Style="color:blue; font-weight:bold; width: 20%; ">@LocalizationCore.Strings.Main.RecordName</th>
                <th Style="color:blue; font-weight:bold; width: 30%; ">@LocalizationCore.Strings.Main.RecordValue</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldId</td>
                <td>
                    <RadzenNumeric Style="width: 100%; text-align: center; background-color: lightgray; " 
                        Disabled=false ReadOnly=true
                        TValue="long" @bind-Value=@ItemCast.Id />
				</td>
                <td>@LocalizationData.DeviceControl.TableFieldMarked</td>
                <td>
                    <RadzenCheckBox Disabled=false TValue="bool" @bind-Value=@ItemCast.IsMarked />
                </td>
            </tr>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldDescription</td>
                <td>
                    <RadzenTextBox Style="width: 100%; text-align: center; " Disabled=false 
                        TValue="string" @bind-Value=@ItemCast.Description />
				</td>
                <td>@LocalizationData.DeviceControl.TableFieldDeviceSendTimeout</td>
                <td>
                    <RadzenNumeric Style="width: 100%; text-align: center; " Disabled=false 
                        TValue="short?" @bind-Value=@ItemCast.DeviceSendTimeout />
				</td>
            </tr>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldDeviceComPort</td>
                <td>
                    @if (ComPorts == null)
                    {
                        <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.None IsShowProgress=true />
                    }
                    else
                    {
                        <RadzenDropDown Style="width: 100%;" TValue="string" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                            AllowFiltering="true" AllowClear="true" AllowFilteringByAllStringColumns="true"
                            Data=@ComPorts PageSize="5" TextProperty="Name" ValueProperty="Value"
                            Value=@ItemCast.DeviceComPort Change=@(args => OnChange(args, "DeviceComPort")) />
                    }
				</td>
                <td>@LocalizationData.DeviceControl.TableFieldDeviceReceiveTimeout</td>
                <td>
                    <RadzenNumeric Style="width: 100%; text-align: center;" 
                        Disabled=false TValue="short?" @bind-Value=@ItemCast.DeviceReceiveTimeout />
				</td>
            </tr>
            <tr>
                <td>
                    <NavLink class="nav-link" href=@PagePrinter Style="width: 100%; text-align: left; margin-left: -15px; "  >
                        @LocalizationData.DeviceControl.TableFieldPrinter
                    </NavLink>
                </td>
                <td>
                    @if (PrinterItems == null)
                    {
                        <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.None IsShowProgress=true />
                    }
                    else
                    {
                        <RadzenDropDownDataGrid Style="width: 100%;" TValue="int" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                            AllowFiltering="true" AllowClear="true" AllowFilteringByAllStringColumns="true"
                            Data=@PrinterItems PageSize="5"
                            TextProperty="Name" ValueProperty="Id"
                            Value=@ItemCast.Printer?.Id
                            Change=@(args => OnChange(args, "Printers")) />
                    }
				</td>
                <td>
                    <NavLink class="nav-link" href=@PageHost Style="width: 100%; text-align: left; margin-left: -15px; "  >
                        @LocalizationData.DeviceControl.TableFieldHost
                    </NavLink>
                </td>
                <td>
                    @if (HostItems == null)
                    {
                        <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.None IsShowProgress=true />
                    }
                    else
                    {
                        <RadzenDropDownDataGrid Style="width: 100%;" TValue="int" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                            AllowFiltering="true" AllowClear="true" AllowFilteringByAllStringColumns="true"
                            Data=@HostItems PageSize="5"
                            TextProperty="Name" ValueProperty="Id"
                            Value=@ItemCast.Host?.Id
                            Change=@(args => OnChange(args, "Hosts"))>
                            <Columns>
                                <RadzenDropDownDataGridColumn Property="Name" Title=@LocalizationData.DeviceControl.TableFieldName Width="100%" />
                            </Columns>
                        </RadzenDropDownDataGrid>
                    }
				</td>
            </tr>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldDeviceNumber</td>
                <td>
                    <RadzenNumeric Style="width: 100%; text-align: center;" Disabled=false 
                        TValue="int?" Name="fieldDeviceNumber" @bind-Value=@ItemCast.DeviceNumber />
                    <RadzenNumericRangeValidator 
                        Component="fieldDeviceNumber" Min="0"
                        Text=@LocalizationCore.Strings.InputControlMuchZero Popup=true Style="position: absolute;" />
				</td>
                <td>@LocalizationData.DeviceControl.TableFieldUseOrder</td>
                <td>
                    <RadzenCheckBox Disabled=false TValue="bool?" @bind-Value=@ItemCast.UseOrder />
				</td>
            </tr>
            <tr>
                <td>
                    <NavLink class="nav-link" href=@PageTemplateDefault Style="width: 100%; text-align: left; margin-left: -15px; "  >
                        @LocalizationData.DeviceControl.TableFieldTemplateDefault
                    </NavLink>
                </td>
                <td>
                    @if (TemplatesDefaultItems == null)
                    {
                        <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.None IsShowProgress=true />
                    }
                    else
                    {
                        <RadzenDropDownDataGrid Style="width: 100%;" TValue="int" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                            AllowFiltering="true" AllowClear="true" AllowFilteringByAllStringColumns="true"
                            Data=@TemplatesDefaultItems PageSize="5"
                            TextProperty="Title" ValueProperty="Id"
                            Value=@ItemCast.TemplateDefault?.Id
                            Change=@(args => OnChange(args, "TemplatesDefault")) />
                    }
				</td>
                <td>
                    <NavLink class="nav-link" href=@PageTemplateSeries Style="width: 100%; text-align: left; margin-left: -15px; "  >
                        @LocalizationData.DeviceControl.TableFieldTemplateSeries
                    </NavLink>
                </td>
                <td>
                    @if (TemplatesSeriesItems == null)
                    {
                        <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.None IsShowProgress=true />
                    }
                    else
                    {
                        <RadzenDropDownDataGrid Style="width: 100%;" TValue="int" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                            AllowFiltering="true" AllowClear="true" AllowFilteringByAllStringColumns="true"
                            Data=@TemplatesSeriesItems PageSize="5"
                            TextProperty="Title" ValueProperty="Id"
                            Value=@ItemCast.TemplateSeries?.Id
                            Change=@(args => OnChange(args, "TemplatesSeries")) />
                    }
				</td>
            </tr>
            <tr>
                <td>@LocalizationData.DeviceControl.TableFieldWorkShopName</td>
                <td>
                    @if (WorkshopItems == null)
                    {
                        <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.None IsShowProgress=true />
                    }
                    else
                    {
                        <RadzenDropDownDataGrid Style="width: 100%;" TValue="int" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                            AllowFiltering="true" AllowClear="true" AllowFilteringByAllStringColumns="true"
                            Data=@WorkshopItems PageSize="5"
                            TextProperty="Name" ValueProperty="Id"
                            Value=@ItemCast.WorkShop?.Id
                            Change=@(args => OnChange(args, "WorkShops")) />
                    }
				</td>
                <td>@LocalizationData.DeviceControl.TableFieldScaleFactor</td>
                <td>
                    <RadzenNumeric Style="width: 100%; text-align: center;" Disabled=false 
                        TValue="int?" @bind-Value=@ItemCast.ScaleFactor />
				</td>
            </tr>
        </tbody>
    </MudSimpleTable>
    
    <Plus Table=@Table ScaleId=@ItemCast.Id />
    
    <ActionsSave ParentRazor=@this ButtonSettings=@ButtonSettings />
    <ItemDates ParentRazor=@this />
}
