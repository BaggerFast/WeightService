@page "/item/save"
@using BlazorCore
@using BlazorCore.DAL.TableModels
@using BlazorCore.Utils
@inherits BlazorCore.Models.BaseRazorEntity
@inject IDialogService DialogService

<div class="row col-sm-12 col-md-12 col-lg-12" style="margin-top: 5px; height: 25px;">
    @if (Item == null)
    {
        <RadzenLabel Text=@LocalizationStrings.Share.DataLoading Style="width: 20%" />
        <RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" Style="width: 77%; height: 15px" />
    }
    else
    {
        <RadzenButton Click=@(args => ItemSaveAsync(Item, LocalizationStrings.DeviceControl.UriRouteSectionScales, true))
            Text=@LocalizationStrings.DeviceControl.TableActionSave Style="margin-left: 30px; width: 250px; " />
        <RadzenButton Click=@(args => ItemCancelAsync(Item, LocalizationStrings.DeviceControl.UriRouteSectionScales))
            ButtonStyle="ButtonStyle.Secondary"
            Text=@LocalizationStrings.DeviceControl.TableActionCancel Style="margin-left: 30px; width: 250px; " />
    }
</div>
