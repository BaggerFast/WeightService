@*
    switch (Table)
    {
        case ProjectsEnums.TableScale.Contragents:
            List<ContragentEntityV2> contragentsEntities = new List<ContragentEntityV2>();
            foreach (BaseIdEntity entity in Items)
            {
                contragentsEntities.Add((ContragentEntityV2)entity);
            }
            <RadzenGrid Data=@contragentsEntities TItem="ContragentEntityV2"
