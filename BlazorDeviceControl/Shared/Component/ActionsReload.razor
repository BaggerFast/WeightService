@page "/component/actionsreload"
@using BlazorCore.Models
@using DataCore
@using DataCore.Utils
@using static DataCore.ShareEnums
@inherits RazorDisposable

<MudElement HtmlTag="h3" Class="ma-0">
    <RadzenLabel Style="margin-top: 3px; margin-left: 2%; font-size: 20px; " Text=@Title />
    @if (IsShowMarkedFilter)
    {
        <RadzenLabel Style="margin-top: 3px; margin-left: 2%; font-size: 14px; " Text=@LocalizationCore.Strings.ActionIsShowMarked />
        <RadzenCheckBox Disabled=false TValue="bool" @bind-Value=@IsShowMarkedItems
            Change=@(args => OnChangeCheckBox(args, nameof(IsShowMarkedItems)))
        />
    }
    <RadzenButton 
        Style="margin-top: 0px; margin-left: 50px; min-width: 80px; width: 5%; height: 30px; font-size: 12px; "
        class="oi oi-reload"
        ButtonStyle="ButtonStyle.Primary"
        Disabled=@AppSettings.DataAccess.IsDisabled 
        Click=@(args => SetParameters.InvokeAsync())
        MouseEnter="@(args => TooltipService.Open(args, LocalizationData.DeviceControl.TableReadData))"
    />
    @if (IsShowItemsCount)
    {
        <RadzenLabel Style="margin-top: 3px; margin-left: 2%; font-size: 14px; " Text=@ItemsCountResult />
    }
</MudElement>
