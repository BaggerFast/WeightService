@page "/component/actionsreload"
@using BlazorCore.Models
@using DataProjectsCore
@using DataProjectsCore.Utils
@using static DataShareCore.ShareEnums
@inherits RazorDisposable

<MudElement HtmlTag="h3" Class="ma-0">
    @Title
    <RadzenButton 
        Style="margin-top: 3px; margin-left: 30px; width: 15%; height: 25px; font-size: 14px; "
        class="oi oi-reload"
        ButtonStyle="ButtonStyle.Primary"
        Disabled=@AppSettings.DataAccess.IsDisabled 
        Click=@(args => SetParameters.InvokeAsync())
        MouseEnter="@(args => TooltipService.Open(args, LocalizationData.DeviceControl.TableReadData))"
    />
    @if (IsShowItemsCount)
    {
        <RadzenLabel 
            Style="margin-top: 3px; margin-left: 2%; font-size: 14px; "
            Text=@ItemsCountResult
        />
    }
</MudElement>

