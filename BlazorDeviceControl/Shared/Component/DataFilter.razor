@page "/component/datafilter"
@    using BlazorProjectsCore
@    using BlazorProjectsCore.Models
@    using DataProjectsCore
@    using DataProjectsCore.Utils
@    using DataCore
@    using DataShareCore
@inherits BaseRazorEntity

<MudElement HtmlTag="h3" Class="ma-0">
    @if (Items == null)
    {
        <DataLoad DataLoadItem=ShareEnums.DataLoad.Loading IsShowProgress=true />
    }
    else
    {
        <RadzenLabel Style="" TValue="string" Text=@LocalizationData.DeviceControl.TableFieldCategoryName />
        <RadzenDropDown Style="margin-left: 10px; margin-top: -10px; width: 200px;"
                        TValue="string" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                        AllowFiltering="true" AllowClear="true" AllowFilteringByAllStringColumns="true"
                        Data=@Items PageSize="5" TextProperty="Name" ValueProperty="Value"
                        Value=@Item 
                        Change=@(args => OnChange(args, ItemTypeName, Item)) />
    }
</MudElement>
