@inherits BlazorCore.Models.RazorBase
@page "/component/itemdates"
@using BlazorCore
@using DataCore
@using DataCore.Utils
@using LocalizationCore = DataCore.Localization.Core
@using static DataCore.ShareEnums

<MudPaper Width="100%" Height="31px" Square=false Color="Color.Default" >
    <div class="row col-sm-12 col-md-12 col-lg-12" Style="margin-top: 5px; " >
        @if (IdentityId == null && IdentityUid == null && TableAction != DbTableAction.New)
        {
            <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
        }
        else
        {
            <RadzenLabel Style="margin-top: 3px; text-align: center; width: 24%; height: 25px; font-size: 14px; "
                Text=@LocalizationCore.TableField.CreateDt />
            <RadzenLabel Style="margin-top: 3px; text-align: left; width: 24%; height: 25px; font-size: 14px; "
                Text=@CreateDt />
            <RadzenLabel Style="margin-top: 3px; text-align: center; width: 24%; height: 25px; font-size: 14px; "
                Text=@LocalizationCore.TableField.ChangeDt />
            <RadzenLabel Style="margin-top: 3px; text-align: left; width: 24%; height: 25px; font-size: 14px; "
                Text=@ChangeDt />
        }
    </div>
</MudPaper>
