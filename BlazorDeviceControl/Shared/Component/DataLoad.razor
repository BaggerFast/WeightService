@page "/component/dataload"
@using BlazorProjectsCore
@using BlazorProjectsCore.Models
@using DataProjectsCore.Utils
@using DataShareCore
@inherits BaseRazorEntity

<MudPaper Width="100%" Height="31px" Square=false Color="Color.Default" >
    <div class="row col-sm-12 col-md-12 col-lg-12" Style="margin-top: 5px; " >
        @if (DataLoadItem == ShareEnums.DataLoad.None)
        {
            @if (IsShowProgress)
            {
                <RadzenProgressBar 
                    Style="margin-top: 4px; margin-left: 5%; width: 100%; height: 22px; "
                    Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate"
                />
            }
        }
        else
        {
            @switch (DataLoadItem)
            {
                case ShareEnums.DataLoad.Loading:
                    <RadzenLabel 
                        Style="margin-top: 3px; margin-left: 2%; width: 10%; height: 25px; font-size: 14px; "
                        Text=@LocalizationCore.Strings.Main.DataLoading
                    />
                    break;
                case ShareEnums.DataLoad.Success:
                    <RadzenLabel 
                        Style="margin-top: 3px; margin-left: 2%; width: 10%; height: 25px; font-size: 14px; "
                        Text=@LocalizationCore.Strings.Main.DataLoadComplete 
                    />
                    break;
                case ShareEnums.DataLoad.Error:
                    <RadzenLabel 
                        Style="margin-top: 3px; margin-left: 2%; width: 10%; height: 25px; font-size: 14px; "
                        Text=@LocalizationCore.Strings.Main.DataLoadError
                    />
                    break;
            }
            @if (IsShowProgress)
            {
                <RadzenProgressBar 
                    Style="margin-top: 3px; margin-left: 2%; width: 85%; height: 22px; "
                    Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate"
                />
            }
        }
    </div>
</MudPaper>
