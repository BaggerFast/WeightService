@page "/component/actionsbuttons"
@using BlazorCore.Models
@using DataCore
@using DataCore.Utils
@using BlazorCore
@using static DataCore.ShareEnums
@inherits RazorDisposable

<MudPaper Width="100%" Height="31px" Square=false Color="Color.Default" >
    <div class="row col-sm-12 col-md-12 col-lg-12" Style="margin-top: 5px; " >
        @if (ButtonSettings.IsShowNew && (byte)UserSettings.Identity.AccessRights > (byte)AccessRights.Write)
        {
            <RadzenButton Click=@(args => ActionAsync(UserSettings, DbTableAction.New, false, true))
                ButtonStyle="ButtonStyle.Primary"
                Style="margin-top: 3px; margin-left: 30px; width: 15%; height: 25px; font-size: 14px; "
                Text=@LocalizationData.DeviceControl.TableActionNew Disabled=@AppSettings.DataAccess.IsDisabled />
        }
        @if (ButtonSettings.IsShowEdit && (byte)UserSettings.Identity.AccessRights > (byte)AccessRights.Read)
        {
            <RadzenButton Click=@(args => ActionAsync(UserSettings, DbTableAction.Edit, false, true))
                ButtonStyle="ButtonStyle.Primary"
                Style="margin-top: 3px; margin-left: 30px; width: 15%; height: 25px; font-size: 14px; "
                Text=@LocalizationData.DeviceControl.TableActionEdit Disabled=@AppSettings.DataAccess.IsDisabled />
        }
        @if (ButtonSettings.IsShowCopy && (byte)UserSettings.Identity.AccessRights > (byte)AccessRights.Write)
        {
            <RadzenButton Click=@(args => ActionAsync(UserSettings, DbTableAction.Copy, false, true))
                ButtonStyle="ButtonStyle.Primary"
                Style="margin-top: 3px; margin-left: 30px; width: 15%; height: 25px; font-size: 14px; "
                Text=@LocalizationData.DeviceControl.TableActionCopy Disabled=@AppSettings.DataAccess.IsDisabled />
        }
        @if (ButtonSettings.IsShowMark && (byte)UserSettings.Identity.AccessRights > (byte)AccessRights.Read)
        {
            <RadzenButton Click=@(args => ActionAsync(UserSettings, DbTableAction.Mark, false, true))
                ButtonStyle="ButtonStyle.Primary"
                Style="margin-top: 3px; margin-left: 30px; width: 15%; height: 25px; font-size: 14px; "
                Text=@LocalizationData.DeviceControl.TableActionMark Disabled=@AppSettings.DataAccess.IsDisabled />
        }
        @if (ButtonSettings.IsShowDelete && (byte)UserSettings.Identity.AccessRights > (byte)AccessRights.Write)
        {
            <RadzenButton Click=@(args => ActionAsync(UserSettings, DbTableAction.Delete, false, true))
                ButtonStyle="ButtonStyle.Primary"
                Style="margin-top: 3px; margin-left: 30px; width: 15%; height: 25px; font-size: 14px; "
                Text=@LocalizationData.DeviceControl.TableActionDelete Disabled=@AppSettings.DataAccess.IsDisabled />
        }
    </div>
</MudPaper>
