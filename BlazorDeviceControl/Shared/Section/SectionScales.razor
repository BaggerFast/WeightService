@inherits BlazorCore.Models.RazorBase
@page "/section/scales"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using DataCore
@using DataCore.Sql
@using DataCore.Sql.DataModels
@using DataCore.Sql.TableScaleModels
@using DataCore.Localizations
@using DataCore.Utils
@using static DataCore.ShareEnums

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this 
        Title=@LocaleData.DeviceControl.Sections.Scales SetParameters=@SetParametersAsync />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="ScaleEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true ColumnWidth="200px">
        <Columns >
            @if (@IsShowMarkedItems)
            {
                <RadzenGridColumn TItem="ScaleEntity" TextAlign=TextAlign.Center SortProperty="IsMarked" 
                    Title=@LocaleCore.Table.MarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast">
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn 
                TItem="ScaleEntity" Title=@LocaleCore.Table.Description Type="string" Width="20%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Scale}/{itemCast.IdentityId}")
                        Text=@itemCast.Description />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ScaleEntity" Title=@LocaleCore.Table.Number Type="string" Width="5%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Scale}/{itemCast.IdentityId}")
                        Text=@itemCast.Number.ToString() />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ScaleEntity" Title=@LocaleCore.Table.Host Type="string" Width="16%" >
                <Template Context="itemCast">
                    @if (itemCast.Host == null)
                    {
                        <RadzenLabel Style="width: 100%; margin-left: 0px; "
                            Text=@LocaleCore.Table.FieldNull />
                    }
                    else
                    {
                        <RadzenLink Style="width: 100%; margin-left: 0px; "
                            Path=@($"{LocaleData.DeviceControl.UriRouteItem.Host}/{itemCast.Host.IdentityId}")
                            Text=@itemCast.Host.Name />
                    }
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ScaleEntity" Property="Host.Ip" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.DeviceIp 
                Type="string" Width="10%" />
            <RadzenGridColumn 
                TItem="ScaleEntity" Title=@LocaleCore.Print.NameMain Type="string" Width="15%" >
                <Template Context="itemCast">
                    @if (itemCast.PrinterMain == null)
                    {
                        <RadzenLabel Style="width: 100%; margin-left: 0px; "
                            Text=@LocaleCore.Table.FieldNull />
                    }
                    else
                    {
                        <RadzenLink Style="width: 100%; margin-left: 0px; "
                            Path=@($"{LocaleData.DeviceControl.UriRouteItem.Printer}/{itemCast.PrinterMain.IdentityId}")
                            Text=@itemCast.PrinterMain.Name />
                    }
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ScaleEntity" Title=@LocaleCore.Print.NameShipping Type="string" Width="13%" >
                <Template Context="itemCast">
                    @if (itemCast.PrinterShipping == null)
                    {
                        <RadzenLabel Style="width: 100%; margin-left: 0px; "
                            Text=@LocaleCore.Table.FieldNull />
                    }
                    else
                    {
                        <RadzenLink Style="width: 100%; margin-left: 0px; "
                            Path=@($"{LocaleData.DeviceControl.UriRouteItem.Printer}/{itemCast.PrinterShipping.IdentityId}")
                            Text=@itemCast.PrinterShipping.Name />
                    }
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ScaleEntity" Property="WorkShop.Name" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.WorkShopName 
                Type="string" Width="11%" />
            <RadzenGridColumn 
                TItem="ScaleEntity" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.IsShippingShort
                Type="string" Width="5%">
                <Template Context="itemCast">
                    <RadzenCheckBox Disabled=true ReadOnly=true TValue="bool" @bind-Value=@itemCast.IsShipping />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ScaleEntity" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.Order
                Type="string" Width="5%">
                <Template Context="itemCast">
                    <RadzenCheckBox Disabled=true ReadOnly=true TValue="bool" @bind-Value=@itemCast.IsOrder />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
