@inherits BlazorCore.Models.RazorBase
@page "/section/scales"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using DataCore
@using DataCore.DAL
@using DataCore.DAL.DataModels
@using DataCore.DAL.TableScaleModels
@using DataCore.Localizations
@using DataCore.Utils
@using static DataCore.ShareEnums

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this 
        Title=@LocaleData.DeviceControl.Sections.Scales SetParameters=@SetParametersAsync />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="ScaleEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.SectionRowCount AllowSorting=true ColumnWidth="200px">
        <Columns >
            @if (@IsShowMarkedItems)
            {
                <RadzenGridColumn TItem="ScaleEntity" TextAlign=TextAlign.Center 
                    Title=@LocaleCore.TableField.MarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast">
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn 
                TItem="ScaleEntity" Title=@LocaleCore.TableField.Description Type="string" Width="15%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Scale}/{itemCast.IdentityId}")
                        Text=@itemCast.Description />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ScaleEntity" Property="Host.Name" TextAlign=TextAlign.Left
                Title=@LocaleCore.TableField.Host 
                Type="string" Width="15%" />
            <RadzenGridColumn 
                TItem="ScaleEntity" Property="Host.Ip" TextAlign=TextAlign.Center
                Title=@LocaleCore.TableField.DeviceIp 
                Type="string" Width="10%" />
            <RadzenGridColumn 
                TItem="ScaleEntity" Property="Printer.Name" TextAlign=TextAlign.Left
                Title=@LocaleCore.Print.Name
                Type="string" Width="15%" />
            <RadzenGridColumn 
                TItem="ScaleEntity" Property="WorkShop.Name" TextAlign=TextAlign.Center
                Title=@LocaleCore.TableField.WorkShopName 
                Type="string" Width="10%" />
            <RadzenGridColumn 
                TItem="ScaleEntity" TextAlign=TextAlign.Center
                Title=@LocaleCore.TableField.Order
                Type="string" Width="5%">
                <Template Context="itemCast">
                    <RadzenCheckBox Disabled=false TValue="bool" @bind-Value=@itemCast.UseOrder />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ScaleEntity" TextAlign=TextAlign.Left
                Title=@LocaleCore.TableField.TemplateDefault 
                Type="string" Width="30%">
                <Template Context="itemCast">
                    <RadzenLabel Text=@(itemCast.TemplateDefault != null ? itemCast.TemplateDefault.Title : "")
                        Disabled=false ReadOnly=true Style="white-space: pre-wrap;" />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
