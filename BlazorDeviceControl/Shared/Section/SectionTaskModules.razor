@inherits BlazorCore.Models.RazorDisposable
@page "/section/taskmodules"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using DataCore
@using DataCore.DAL
@using DataCore.DAL.DataModels
@using DataCore.DAL.TableScaleModels
@using DataCore.Utils
@using static DataCore.ShareEnums

@if (ItemsCast == null)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReload ParentRazor=@this Items=@Items 
        Title=@LocalizationData.DeviceControl.SectionTaskModules SetParameters=@SetParametersAsync IsShowItemsCount=true />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="TaskEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionAsync(UserSettings, DbTableAction.Edit, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettings.SectionRowCount AllowSorting=true ColumnWidth="100px">
        <Columns >
            <RadzenGridColumn 
                TItem="TaskEntity" Title=@LocalizationData.DeviceControl.TableFieldHost Type="string" Width="45%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{@LocalizationData.DeviceControl.UriRouteItem.TaskModule}/{itemCast.Uid}")
                        Text=@itemCast.Scale?.Host?.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="TaskEntity" TextAlign=TextAlign.Left Type="string" Width="45%"
                Title=@LocalizationData.DeviceControl.TableFieldTaskType >
                <Template Context="itemCast">
                    <RadzenLabel Text=@itemCast.TaskType?.Name Disabled=false ReadOnly=true Style="white-space: pre-wrap;" />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="TaskEntity" Property="Enabled" TextAlign=TextAlign.Center Width="10%" 
                Title=@LocalizationData.DeviceControl.TableFieldEnabled >
                <Template Context="itemCast">
                    <RadzenCheckBox TValue="bool" @bind-Value=@itemCast.Enabled Disabled=@Disabled />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
