@inherits BlazorCore.Models.RazorBase
@page "/section/plu_refs"
@using BlazorDeviceControl.Shared.Component
@using DataCore.Sql.TableScaleModels
@using DataCore.Localizations

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
	<ActionsReloadSection ParentRazor=@this Title=@LocaleData.DeviceControl.Sections.Plus 
		IsShowMarkedItems=@IsShowMarkedItems IsShowAdditionalFilter=@IsShowAdditionalFilter
		ItemsFilter=@ItemsFilter ItemFilter=@ItemFilter FilterTable=@ProjectsEnums.TableScale.Scales
		FilterCaption=LocaleData.DeviceControl.ItemScale FilterName=@nameof(ScaleEntity) />

    <RadzenGrid 
        Data=@ItemsCast TItem="PluRefV2Entity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true ColumnWidth="100px">
        <Columns>
	        <RadzenGridColumn TItem="PluRefV2Entity" Width="5%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.NumberShort >
		        <Template Context="itemCast" >
			        <RadzenLink Style="width: 100%; "
			                    Path=@($"{LocaleData.DeviceControl.UriRouteItem.PluV2}/{itemCast.Plu.IdentityUid}")
			                    Text=@itemCast.Plu.Number.ToString() />
		        </Template>
	        </RadzenGridColumn>
	        <RadzenGridColumn TItem="PluRefV2Entity" Width="5%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.DeactiveShort >
		        <Template Context="itemCast" >
			        <RadzenCheckBox Disabled=false ReadOnly=false TValue="bool" @bind-Value=@itemCast.IsMarked />
		        </Template>
	        </RadzenGridColumn>
	        <RadzenGridColumn TItem="PluRefV2Entity" Width="5%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.WeightShort >
		        <Template Context="itemCast" >
			        <RadzenCheckBox Disabled=true ReadOnly=true TValue="bool" @bind-Value=@itemCast.Plu.IsCheckWeight />
		        </Template>
	        </RadzenGridColumn>
	        <RadzenGridColumn TItem="PluRefV2Entity" Width="5%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.Description >
		        <Template Context="itemCast" >
			        <RadzenCheckBox Disabled=true ReadOnly=true TValue="bool" Value=@(!string.IsNullOrEmpty(itemCast.Plu.Description)) />
		        </Template>
	        </RadzenGridColumn>
			<RadzenGridColumn TItem="PluRefV2Entity" Width="19%" TextAlign=TextAlign.Left Title=@LocaleCore.Table.GoodsName >
		        <Template Context="itemCast" >
					<RadzenLink Text=@itemCast.Plu.Name
						Path=@($"{LocaleData.DeviceControl.UriRouteItem.PluV2}/{itemCast.Plu.IdentityUid}") />
		        </Template>
	        </RadzenGridColumn>
	        @if (IsShowAdditionalFilter)
	        {
				<RadzenGridColumn TItem="PluRefV2Entity" Width="10%" TextAlign=TextAlign.Left Title=@LocaleCore.Table.Scale>
	                <Template Context="itemCast" >
		                <RadzenLink Text=@itemCast.Scale.Description 
							Path=@($"{LocaleData.DeviceControl.UriRouteItem.Scale}/{itemCast.Scale.IdentityId}") />
	                </Template>
	            </RadzenGridColumn>
	        }
			<RadzenGridColumn TItem="PluRefV2Entity" Width="14%" TextAlign=TextAlign.Left Title=@LocaleCore.Table.Template>
		        <Template Context="itemCast" >
			        <RadzenLabel Style="white-space: pre-wrap;" Text=@itemCast.Plu.Template.Title></RadzenLabel>
		        </Template>
	        </RadzenGridColumn>
			<RadzenGridColumn TItem="PluRefV2Entity" Width="21%" TextAlign=TextAlign.Left Title=@LocaleCore.Table.Nomenclature >
		        <Template Context="itemCast" >
			        <RadzenLink Style="width: 100%; " Text=@itemCast.Plu.Nomenclature.Name
			            Path=@($"{LocaleData.DeviceControl.UriRouteItem.Nomenclature}/{itemCast.Plu.Nomenclature.IdentityId}") />
		        </Template>
	        </RadzenGridColumn>
	        <RadzenGridColumn TItem="PluRefV2Entity" Width="7%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.ShelfLifeDaysShort >
		        <Template Context="itemCast" >
					<RadzenLabel Style="white-space: pre-wrap;" Text=@itemCast.Plu.ShelfLifeDays.ToString() />
		        </Template>
		    </RadzenGridColumn>
	        <RadzenGridColumn TItem="PluRefV2Entity" Width="7%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.GoodsTareWeightShort >
		        <Template Context="itemCast" >
					<RadzenLabel Style="white-space: pre-wrap;" Text=@itemCast.Plu.TareWeight.ToString() />
		        </Template>
	        </RadzenGridColumn>
			<RadzenGridColumn TItem="PluRefV2Entity" Width="7%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.GoodsBoxQuantlyShort >
				<Template Context="itemCast" >
					<RadzenLabel Style="white-space: pre-wrap;" Text=@itemCast.Plu.BoxQuantly.ToString() />
				</Template>
			</RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this />
}
