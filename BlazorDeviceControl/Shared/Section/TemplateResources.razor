@page "/section/templateresources"
@using BlazorCore.Models
@using DataCore
@using DataCore.DAL
@using DataCore.DAL.DataModels
@using DataCore.DAL.TableScaleModels
@using DataCore.Utils
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using BlazorCore
@using static DataCore.ShareEnums
@inherits RazorDisposable

<ActionsReload Title=@LocalizationData.DeviceControl.SectionTemplateResources SetParameters=@SetParametersAsync IsShowItemsCount=true Items=@Items />

<RadzenGrid Style="margin-top: 5px;" 
    Data=@ItemsCast TItem="TemplateResourceEntity"
    RowSelect=@(args => ItemSelectAsync(args)) 
    RowDoubleClick=@(args => ActionAsync(UserSettings, DbTableAction.Edit, false))
    AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterMode="FilterMode.Advanced"
    AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettings.SectionRowCount AllowSorting="true" ColumnWidth="100px">
    <Columns >
        <RadzenGridColumn 
            TItem="TemplateResourceEntity" Property="Type" TextAlign="TextAlign.Center"
            Title=@LocalizationData.DeviceControl.TableFieldType 
            Type="string" Width="10%" />
        <RadzenGridColumn 
            TItem="TemplateResourceEntity" Property="Name"
            Title=@LocalizationData.DeviceControl.TableFieldName 
            Type="string" Width="25%" />
        <RadzenGridColumn 
            TItem="TemplateResourceEntity" Property="Description"
            Title=@LocalizationData.DeviceControl.TableFieldDescription 
            Type="string" Width="40%" />
        <RadzenGridColumn 
            TItem="TemplateResourceEntity" Property="ImageDataInfo"
            Title=@LocalizationData.DeviceControl.TableFieldImageDataInfo 
            Type="string" Width="25%" />
    </Columns>
</RadzenGrid>

<ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
