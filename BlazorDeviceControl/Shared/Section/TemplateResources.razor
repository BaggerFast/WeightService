@page "/section/templateresources"
@using BlazorCore
@using DataCore
@using DataCore.DAL
@using DataCore.DAL.DataModels
@using DataCore.DAL.TableModels
@using DataCore.Utils
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@inherits DataCore.Models.BaseRazorIdEntity

@if (AppSettings.IdentityItem.AccessLevel is true or false)
{
    <DataReload Title=@LocalizationData.DeviceControl.SectionTemplateResources SetParameters=@SetParametersAsync IsShowItemsCount=true 
        ItemsCount=@ItemsCount />
    <RadzenGrid Style="margin-top: 5px;" 
        Data=@Items TItem="TemplateResourceEntity"
        RowSelect=@(args => ItemSelectAsync(args)) 
        RowDoubleClick=@(args => ActionEditAsync())
        AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=20 AllowSorting="true" ColumnWidth="100px">
        <Columns >
            <RadzenGridColumn 
                TItem="TemplateResourceEntity" Property="Id" TextAlign="TextAlign.Center"
                Title=@LocalizationData.DeviceControl.TableFieldId 
                Type="int" Width="7.5%" />
            <RadzenGridColumn 
                TItem="TemplateResourceEntity" Property="Type" TextAlign="TextAlign.Center"
                Title=@LocalizationData.DeviceControl.TableFieldType 
                Type="string" Width="10%" />
            <RadzenGridColumn 
                TItem="TemplateResourceEntity" Property="Name"
                Title=@LocalizationData.DeviceControl.TableFieldName 
                Type="string" Width="30%" />
            <RadzenGridColumn 
                TItem="TemplateResourceEntity" Property="Description"
                Title=@LocalizationData.DeviceControl.TableFieldDescription 
                Type="string" Width="28%" />
            <RadzenGridColumn 
                TItem="TemplateResourceEntity" Property="ImageDataInfo"
                Title=@LocalizationData.DeviceControl.TableFieldImageDataInfo 
                Type="string" Width="22.5%" />
        </Columns>
    </RadzenGrid>
    @if (Items == null)
    {
        <DataLoad DataLoadItem=EnumDataLoad.Loading IsShowProgress=true />
    }
    else
    {
        <SectionActions IsShowNew=true IsShowEdit=true IsShowCopy=true IsShowMark=true IsShowDelete=true />
    }
}
else
{
    <RadzenLabel Text=@LocalizationCore.Strings.SectionAccessDeny></RadzenLabel>
}
