@page "/section/scales"
@using BlazorCore.Models
@using DataProjectsCore
@using DataProjectsCore.DAL
@using DataProjectsCore.DAL.DataModels
@using DataProjectsCore.DAL.TableModels
@using DataProjectsCore.DAL.TableScaleModels
@using DataProjectsCore.Utils
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using DataShareCore
@using static DataShareCore.ShareEnums
@inherits RazorDisposable

<DataReload Title=@LocalizationData.DeviceControl.SectionScales SetParameters=@SetParametersAsync IsShowItemsCount=true Items=@Items />

<RadzenGrid Style="margin-top: 5px;" 
    Data=@ItemsCast TItem="ScaleEntity"
    RowSelect=@(args => ItemSelectAsync(args)) 
    RowDoubleClick=@(args => ActionAsync(UserSettings, DbTableAction.Edit, false))
    AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterMode="FilterMode.Advanced"
    AllowPaging="true" PageSize=15 AllowSorting="true" ColumnWidth="200px">
    <Columns >
        <RadzenGridColumn 
            TItem="ScaleEntity" Property="Id" TextAlign="TextAlign.Center"
            Title=@LocalizationData.DeviceControl.TableFieldId 
            Type="int" Width="6%" />
        <RadzenGridColumn 
            TItem="ScaleEntity" Property="Description" TextAlign="TextAlign.Left"
            Title=@LocalizationData.DeviceControl.TableFieldDescription 
            Type="string" Width="13%" />
        <RadzenGridColumn 
            TItem="ScaleEntity" Property="Host.Name" TextAlign="TextAlign.Left"
            Title=@LocalizationData.DeviceControl.TableFieldHost 
            Type="string" Width="13%" />
        <RadzenGridColumn 
            TItem="ScaleEntity" Property="Host.Ip" TextAlign="TextAlign.Center"
            Title=@LocalizationData.DeviceControl.TableFieldDeviceIp 
            Type="string" Width="8%" />
        <RadzenGridColumn 
            TItem="ScaleEntity" TextAlign="TextAlign.Left"
            Title=@LocalizationData.DeviceControl.TableFieldIdRRef
            Type="string" Width="15%">
            <Template Context="item">
                <RadzenLabel Text=@item.Host?.IdRRef.ToString() Disabled="true" Style="white-space: pre-wrap;" />
            </Template>
        </RadzenGridColumn>
        <RadzenGridColumn 
            TItem="ScaleEntity" Property="Printer.Name" TextAlign="TextAlign.Left"
            Title=@LocalizationData.DeviceControl.TableFieldPrinter 
            Type="string" Width="12%" />
        <RadzenGridColumn 
            TItem="ScaleEntity" Property="WorkShop.Name" TextAlign="TextAlign.Center"
            Title=@LocalizationData.DeviceControl.TableFieldWorkShopName 
            Type="string" Width="7%" />
        <RadzenGridColumn 
            TItem="ScaleEntity" Property="TemplateDefault.Title" TextAlign="TextAlign.Left"
            Title=@LocalizationData.DeviceControl.TableFieldTemplateDefault 
            Type="string" Width="26%">
            <Template Context="item">
                <RadzenLabel Text=@item.TemplateDefault.Title Disabled="true" Style="white-space: pre-wrap;" />
            </Template>
        </RadzenGridColumn>
    </Columns>
</RadzenGrid>

<SectionActions ParentRazor=@this ButtonSettings=@ButtonSettings />
