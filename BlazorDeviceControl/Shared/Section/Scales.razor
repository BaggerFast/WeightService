@page "/section/scales"
@using BlazorCore.Models
@using DataCore
@using DataCore.DAL
@using DataCore.DAL.DataModels
@using DataCore.DAL.TableScaleModels
@using DataCore.Utils
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using BlazorCore
@using static DataCore.ShareEnums
@inherits RazorDisposable

@if (ItemsCast == null)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReload ParentRazor=@this Items=@Items 
        Title=@LocalizationData.DeviceControl.SectionScales SetParameters=@SetParametersAsync 
        IsShowItemsCount=true IsShowMarkedFilter=true />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="ScaleEntity"
        RowSelect=@(args => ItemSelectAsync(args)) 
        RowDoubleClick=@(args => ActionAsync(UserSettings, DbTableAction.Edit, false, false))
        AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettings.SectionRowCount AllowSorting="true" ColumnWidth="200px">
        <Columns >
            @if (@IsShowMarkedItems)
            {
                <RadzenGridColumn TItem="ScaleEntity" TextAlign="TextAlign.Center" 
                    Title=@LocalizationData.DeviceControl.TableFieldMarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast">
                        @if (itemCast.IsMarked)
                        {
                            <RadzenIcon Disabled=false ReadOnly=true Icon="delete" />
                        }
                        else
                        {
                            <RadzenIcon Disabled=false ReadOnly=true Icon="" />
                        }
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn 
                TItem="ScaleEntity" Property="Description" TextAlign="TextAlign.Left"
                Title=@LocalizationData.DeviceControl.TableFieldDescription 
                Type="string" Width="15%" />
            <RadzenGridColumn 
                TItem="ScaleEntity" Property="Host.Name" TextAlign="TextAlign.Left"
                Title=@LocalizationData.DeviceControl.TableFieldHost 
                Type="string" Width="15%" />
            <RadzenGridColumn 
                TItem="ScaleEntity" Property="Host.Ip" TextAlign="TextAlign.Center"
                Title=@LocalizationData.DeviceControl.TableFieldDeviceIp 
                Type="string" Width="10%" />
    @*        <RadzenGridColumn 
                TItem="ScaleEntity" TextAlign="TextAlign.Left"
                Title=@LocalizationData.DeviceControl.TableFieldIdRRef
                Type="string" Width="15%">
                <Template Context="item">
                    <RadzenLabel Text=@item.Host?.IdRRef.ToString() Disabled=false ReadOnly=true Style="white-space: pre-wrap;" />
                </Template>
            </RadzenGridColumn>*@
            <RadzenGridColumn 
                TItem="ScaleEntity" Property="Printer.Name" TextAlign="TextAlign.Left"
                Title=@LocalizationData.DeviceControl.TableFieldPrinter 
                Type="string" Width="15%" />
            <RadzenGridColumn 
                TItem="ScaleEntity" Property="WorkShop.Name" TextAlign="TextAlign.Center"
                Title=@LocalizationData.DeviceControl.TableFieldWorkShopName 
                Type="string" Width="10%" />
            <RadzenGridColumn 
                TItem="ScaleEntity" Property="TemplateDefault.Title" TextAlign="TextAlign.Left"
                Title=@LocalizationData.DeviceControl.TableFieldTemplateDefault 
                Type="string" Width="35%">
                <Template Context="item">
                    <RadzenLabel Text=@item.TemplateDefault.Title Disabled=false ReadOnly=true Style="white-space: pre-wrap;" />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
