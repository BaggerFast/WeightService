@inherits BlazorCore.Models.RazorBase
@page "/section/measurements/labels"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using BlazorDeviceControl.Shared.Section
@using DataCore
@using DataCore.Sql.DataModels
@using DataCore.Sql.TableScaleModels
@using DataCore.Localizations
@using DataCore.Utils
@using static DataCore.ShareEnums

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this 
        Title=@LocaleCore.System.SystemLogs SetParameters=@SetParametersAsync />

    <RadzenGrid Style="margin-top: 5px; "
        Data=@ItemsCast TItem="LabelQuickEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true ColumnWidth="100px">
        <Columns >
            <RadzenGridColumn 
                TItem="LabelQuickEntity" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.CreateDt Type="date" Width="15%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Label}/{itemCast.IdentityId}")
                        Text=@itemCast.CreateDt.ToString("yyyy-MM-dd HH:mm:ss") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="LabelQuickEntity" Title=@LocaleCore.Table.Scale Type="string" Width="25%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Scale}/{itemCast.ScaleId}")
                        Text=@itemCast.ScaleDescription />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="LabelQuickEntity" Title=@LocaleCore.Table.Nomenclature Type="string" Width="35%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Plu}/{itemCast.PluId}")
                        Text=@itemCast.PluGoodName />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="LabelQuickEntity" Property="PluNumber" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.PluNumber Type="int" Width="6%" />
            <RadzenGridColumn 
                TItem="LabelQuickEntity" Property="NetWeight" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.NetWeight Type="decimal" Width="6%" />
            <RadzenGridColumn 
                TItem="LabelQuickEntity" Property="TareWeight" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.TareWeight Type="decimal" Width="6%" />
            <RadzenGridColumn 
                TItem="LabelQuickEntity" Property="RegNum" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.RegNum Type="int" Width="7%" />
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
