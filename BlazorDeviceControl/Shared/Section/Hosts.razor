@page "/section/hosts"
@    using BlazorProjectsCore
@    using DataCore
@    using DataProjectsCore
@    using DataProjectsCore.DAL
@    using DataProjectsCore.DAL.DataModels
@    using DataProjectsCore.DAL.TableModels
@    using DataProjectsCore.DAL.TableSystemModels
@    using DataProjectsCore.Utils
@    using BlazorDeviceControl.Shared.Component
@    using BlazorDeviceControl.Shared.Item
@    using DataShareCore
@inherits             BaseRazorEntity

@if (AppSettings.IdentityItem.AccessLevel is true or false)
{
    <DataReload Title=@LocalizationData.DeviceControl.SectionHosts SetParameters=@SetParametersAsync IsShowItemsCount=true Items=@Items />
    <RadzenGrid Style="margin-top: 5px;"
        Data=@ItemsCast TItem="HostEntity"
        RowSelect=@(args => ItemSelectAsync(args)) 
        RowDoubleClick=@(args => ActionEditAsync())
        AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=20 AllowSorting="true" ColumnWidth="100px">
        <Columns>
            <RadzenGridColumn 
                TItem="HostEntity" Property="Id" TextAlign="TextAlign.Center"
                Title=@LocalizationData.DeviceControl.TableFieldId
                Type="int" Width="6%" />
            <RadzenGridColumn 
                TItem="HostEntity" Property="Name" Title=@LocalizationData.DeviceControl.TableFieldName
                Type="string" Width="23.5%" />
            <RadzenGridColumn 
                TItem="HostEntity" Property="Ip" Title=@LocalizationData.DeviceControl.TableFieldDeviceIp
                Type="string" Width="23.5%" />
            <RadzenGridColumn 
                TItem="HostEntity" Property="IdRRef" Title=@LocalizationData.DeviceControl.TableFieldIdRRef
                Type="string" Width="23.5%" />
            <RadzenGridColumn 
                TItem="HostEntity" Property="Mac" Title=@LocalizationData.DeviceControl.TableFieldDeviceMac
                Type="string" Width="23.5%" />
        </Columns>
    </RadzenGrid>
    @if (Items == null)
    {
        <DataLoad DataLoadItem=ShareEnums.DataLoad.Loading IsShowProgress=true />
    }
    else
    {
        <SectionActions IsShowNew=true IsShowEdit=true IsShowCopy=true IsShowMark=true IsShowDelete=true />
    }
}
else
{
    <RadzenLabel Text=@LocalizationCore.Strings.SectionAccessDeny></RadzenLabel>
}
