@inherits BlazorCore.Models.RazorBase
@page "/section/logs"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using BlazorDeviceControl.Shared.Section
@using DataCore
@using DataCore.DAL.DataModels
@using DataCore.Localizations
@using DataCore.Utils
@using static DataCore.ShareEnums

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this 
        Title=@LocaleCore.System.SystemLogs SetParameters=@SetParametersAsync />

    <RadzenGrid Style="margin-top: 5px; "
        Data=@ItemsCast TItem="LogQuickEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.SectionRowCount AllowSorting=true ColumnWidth="100px">
        <Columns >
            <RadzenGridColumn 
                TItem="LogQuickEntity" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.CreateDt Type="date" Width="15%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Log}/{itemCast.IdentityUid}")
                        Text=@itemCast.CreateDt.ToString("yyyy-MM-dd HH:mm:ss.fff") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="LogQuickEntity" Title=@LocaleCore.Table.Host Type="string" Width="14%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Log}/{itemCast.IdentityUid}")
                        Text=@itemCast.Host />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="LogQuickEntity" Property="App" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.App Type="string" Width="7%" />
            <RadzenGridColumn 
                TItem="LogQuickEntity" Property="File" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.File Type="string" Width="12%" />
            <RadzenGridColumn 
                TItem="LogQuickEntity" Property="Line" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.Row Type="int" Width="5%">
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="LogQuickEntity" Property="Version" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.Member Type="string" Width="5%" />
            <RadzenGridColumn 
                TItem="LogQuickEntity" Property="Icon" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.Icon Type="string" Width="7%" />
            <RadzenGridColumn 
                TItem="LogQuickEntity" Property="Message" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.Message Type="string" Width="35%">
                <Template Context="logItem">
                    <RadzenLabel 
                        Style="height: 80%; width=80%; white-space: pre-wrap; " 
                        Text=@logItem.Message Disabled=false />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
