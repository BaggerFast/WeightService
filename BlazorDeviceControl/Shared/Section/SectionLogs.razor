@inherits BlazorCore.Models.RazorDisposable
@page "/section/logs"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using BlazorDeviceControl.Shared.Section
@using DataCore
@using DataCore.DAL.DataModels
@using DataCore.Utils
@using static DataCore.ShareEnums

@if (ItemsCast == null)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReload ParentRazor=@this Items=@Items 
        Title=@LocalizationCore.Strings.SysLogs SetParameters=@SetParametersAsync IsShowItemsCount=true />

    <RadzenGrid Style="margin-top: 5px; "
        Data=@ItemsCast TItem="LogQuickEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionAsync(UserSettings, DbTableAction.Edit, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettings.SectionRowCount AllowSorting=true ColumnWidth="100px">
        <Columns >
            <RadzenGridColumn 
                TItem="LogQuickEntity" TextAlign=TextAlign.Center
                Title=@LocalizationData.DeviceControl.TableFieldCreateDt Type="date" Width="15%" >
                <Template Context="logItem" >
                    <RadzenDatePicker 
                        TValue="string" Value=@logItem.CreateDt Disabled=false ReadOnly=true DateFormat="yyyy-MM-dd HH:mm:ss" />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="LogQuickEntity" Title=@LocalizationData.DeviceControl.TableFieldHost Type="string" Width="12%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{@LocalizationData.DeviceControl.UriRouteItem.Log}/{itemCast.Uid}")
                        Text=@itemCast.Host />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="LogQuickEntity" Property="App" TextAlign=TextAlign.Left
                Title=@LocalizationData.DeviceControl.TableFieldApp Type="string" Width="7%" />
            <RadzenGridColumn 
                TItem="LogQuickEntity" Property="File" TextAlign=TextAlign.Left
                Title=@LocalizationData.DeviceControl.TableFieldFile Type="string" Width="12%" />
            <RadzenGridColumn 
                TItem="LogQuickEntity" Property="Line" TextAlign=TextAlign.Center
                Title=@LocalizationData.DeviceControl.TableFieldRow Type="int" Width="5%">
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="LogQuickEntity" Property="Member" TextAlign=TextAlign.Left
                Title=@LocalizationData.DeviceControl.TableFieldMember Type="string" Width="14%" />
            <RadzenGridColumn 
                TItem="LogQuickEntity" Property="Icon" TextAlign=TextAlign.Left
                Title=@LocalizationData.DeviceControl.TableFieldIcon Type="string" Width="7%" />
            <RadzenGridColumn 
                TItem="LogQuickEntity" Property="Message" TextAlign=TextAlign.Left
                Title=@LocalizationData.DeviceControl.TableFieldMessage Type="string" Width="28%">
                <Template Context="logItem">
                    <RadzenLabel 
                        Style="height: 80%; width=80%; white-space: pre-wrap; " 
                        Text=@logItem.Message Disabled=false />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
