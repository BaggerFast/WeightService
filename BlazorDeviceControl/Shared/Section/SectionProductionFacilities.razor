@inherits BlazorCore.Models.RazorBase
@page "/section/productionfacilities"
@using BlazorDeviceControl.Shared.Component
@using DataCore.Sql.TableScaleModels
@using DataCore.Localizations

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this Title=@LocaleData.DeviceControl.Items.ProductionFacility />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="ProductionFacilityEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true ColumnWidth="100px">
        <Columns >
            @if (IsShowMarkedItems)
            {
                <RadzenGridColumn TItem="ProductionFacilityEntity" TextAlign=TextAlign.Center SortProperty="IsMarked" 
                    Title=@LocaleCore.Table.IsMarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast" >
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn TItem="ProductionFacilityEntity" Title=@LocaleCore.Table.Id Width="5%">
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                            Path=@($"{LocaleData.DeviceControl.UriRouteItem.ProductionFacility}/{itemCast.IdentityId}")
                            Text=@itemCast.IdentityId.ToString() />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ProductionFacilityEntity" Title=@LocaleCore.Table.Name Width="20%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.ProductionFacility}/{itemCast.IdentityId}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ProductionFacilityEntity" Title=@LocaleCore.Table.Address Width="75%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.ProductionFacility}/{itemCast.IdentityId}")
                        Text=@itemCast.Address />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this />
}
