@page "/section/actions"
@using BlazorCore
@using BlazorCore.Utils
@inherits BlazorCore.Models.BaseRazorActionsEntity

<div class="row col-sm-12 col-md-12 col-lg-12" style="margin-top: 5px">
    @if (AppSettings.IdentityItem.AccessLevel is true or false)
    {
        @if (IsShowNew)
        {
            <RadzenButton Click=@(args => ActionNewAsync(Table, Item))
                            ButtonStyle="ButtonStyle.Secondary"
                            Style="margin-left: 30px; margin-top: 5px; width: 250px; height: 30px; font-size: 12px;"
                            Text=@LocalizationStrings.DeviceControl.TableActionNew Disabled=@AppSettings.DataAccess.IsDisabled />
        }
        @if (IsShowAdd)
        {
            <RadzenButton Click=@(args => ActionAddAsync(Table, Item))
                            ButtonStyle="ButtonStyle.Secondary"
                            Style="margin-left: 30px; margin-top: 5px; width: 250px; height: 30px; font-size: 12px;"
                            Text=@LocalizationStrings.DeviceControl.TableActionAdd Disabled=@AppSettings.DataAccess.IsDisabled />
        }
        @if (IsShowEdit)
        {
            <RadzenButton Click=@(args => ActionEditAsync(Table, Item, LocalizationStrings.DeviceControl.UriRouteItemScale, false))
                            ButtonStyle="ButtonStyle.Secondary"
                            Style="margin-left: 30px; margin-top: 5px; width: 250px; height: 30px; font-size: 12px;"
                            Text=@LocalizationStrings.DeviceControl.TableActionEdit Disabled=@AppSettings.DataAccess.IsDisabled />
        }
        @if (IsShowCopy && AppSettings.IsDebug)
        {
            <RadzenButton Click=@(args => ActionCopyAsync(Table, Item))
                            ButtonStyle="ButtonStyle.Secondary"
                            Style="margin-left: 30px; margin-top: 5px; width: 250px; height: 30px; font-size: 12px;"
                            Text=@LocalizationStrings.DeviceControl.TableActionCopy Disabled=@AppSettings.DataAccess.IsDisabled />
        }
        @if (IsShowMark)
        {
            <RadzenButton Click=@(args => ActionMarkAsync(Table, Item))
                            ButtonStyle="ButtonStyle.Secondary"
                            Style="margin-left: 30px; margin-top: 5px; width: 250px; height: 30px; font-size: 12px;"
                            Text=@LocalizationStrings.DeviceControl.TableActionMarked Disabled=@AppSettings.DataAccess.IsDisabled />
        }
        @if (IsShowDelete && AppSettings.IsDebug)
        {
            <RadzenButton Click=@(args => ActionDeleteAsync(Table, Item))
                            ButtonStyle="ButtonStyle.Secondary"
                            Style="margin-left: 30px; margin-top: 5px; width: 250px; height: 30px; font-size: 12px;"
                            Text=@LocalizationStrings.DeviceControl.TableActionDelete Disabled=@AppSettings.DataAccess.IsDisabled />
        }
    }
    else
    {
        <RadzenLabel Text=@LocalizationStrings.Share.SectionAccessDeny />
    }
</div>