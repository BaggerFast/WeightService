@page "/section/printerresources"
@page "/section/printerresources/{PrinterId:int}"
@using BlazorCore
@using BlazorCore.DAL.TableModels
@using BlazorCore.Utils
@using BlazorDeviceControl.Shared.Component
@inherits BlazorCore.Models.BaseRazorIdEntity
@inject IDialogService DialogService

@if (AppSettings.IdentityItem.AccessLevel is true or false)
{
    <DataReload Title=@LocalizationStrings.DeviceControl.SectionPrinterResources SetParameters=@SetParametersAsync IsShowItemsCount=true 
        ItemsCount=@ItemsCount />
    <RadzenGrid Style="margin-top: 5px;"
        Data=@Items TItem="PrinterResourceEntity"
        RowSelect=@(args => ItemSelectAsync(args)) 
        RowDoubleClick=@(args => ActionEditAsync(Item))
        AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.JsonAppSettings.SectionRowCount AllowSorting="true" ColumnWidth="100px">
        <Columns>
            <RadzenGridColumn TItem="PrinterResourceEntity" Property="Id"
                                Title=@LocalizationStrings.DeviceControl.TableFieldId Type="int" Width="10%" />
            <RadzenGridColumn TItem="PrinterResourceEntity" Property="Description"
                                Title=@LocalizationStrings.DeviceControl.TableFieldDescription Type="string" Width="30%" />
            <RadzenGridColumn TItem="PrinterResourceEntity" Property="Resource.Name"
                                Title=@LocalizationStrings.DeviceControl.TableFieldResource Type="string" Width="30%" />
        </Columns>
    </RadzenGrid>
    @if (Items == null)
    {
        <DataLoad DataLoadItem=EnumDataLoad.Loading IsShowProgress=true />
    }
    else
    {
        <SectionActions IsShowNew=true IsShowAdd=true IsShowEdit=true IsShowCopy=true IsShowMark=true IsShowDelete=true />
    }
}
else
{
    <RadzenLabel Text=@LocalizationStrings.Share.SectionAccessDeny></RadzenLabel>
}
