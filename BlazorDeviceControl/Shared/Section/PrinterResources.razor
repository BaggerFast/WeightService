@page "/section/printerresources"
@page "/section/printerresources/{PrinterId:int}"
@using BlazorCore.Models
@using DataCore
@using DataCore.DAL.TableScaleModels
@using DataCore.Utils
@using BlazorDeviceControl.Shared.Component
@using BlazorCore
@using static DataCore.ShareEnums
@inherits RazorDisposable

<ActionsReload Title=@LocalizationData.DeviceControl.SectionPrinterResources SetParameters=@SetParametersAsync IsShowItemsCount=true Items=@Items />

<RadzenGrid Style="margin-top: 5px;"
    Data=@ItemsCast TItem="PrinterResourceEntity"
    RowSelect=@(args => ItemSelectAsync(args)) 
    RowDoubleClick=@(args => ActionAsync(UserSettings, DbTableAction.Edit, false))
    AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterMode="FilterMode.Advanced"
    AllowPaging="true" PageSize=@AppSettings.JsonAppSettings.SectionRowCount AllowSorting="true" ColumnWidth="100px">
    <Columns>
        <RadzenGridColumn TItem="PrinterResourceEntity" Property="Id"
                            Title=@LocalizationData.DeviceControl.TableFieldId Type="int" Width="10%" />
        <RadzenGridColumn TItem="PrinterResourceEntity" Property="Description"
                            Title=@LocalizationData.DeviceControl.TableFieldDescription Type="string" Width="30%" />
        <RadzenGridColumn TItem="PrinterResourceEntity" Property="Resource.Name"
                            Title=@LocalizationData.DeviceControl.TableFieldResource Type="string" Width="30%" />
    </Columns>
</RadzenGrid>

<ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
