@inherits BlazorCore.Models.RazorBase
@page "/section/workshops"
@using BlazorDeviceControl.Shared.Component
@using DataCore.Sql.TableScaleModels
@using DataCore.Localizations

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this 
        Title=@LocaleData.DeviceControl.Sections.WorkShops />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="WorkShopEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true ColumnWidth="100px">
        <Columns >
            @if (@IsShowMarkedItems)
            {
                <RadzenGridColumn TItem="WorkShopEntity" TextAlign=TextAlign.Center SortProperty="IsMarked" 
                    Title=@LocaleCore.Table.MarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast">
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn 
                TItem="WorkShopEntity" Title=@LocaleCore.Table.WorkShopName Width="50%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.WorkShop}/{itemCast.IdentityId}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="WorkShopEntity" Title=@LocaleCore.Table.ProductionFacilityName Width="50%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.ProductionFacility}/{itemCast.ProductionFacility.IdentityId}")
                        Text=@itemCast.ProductionFacility.Name />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this />
}
