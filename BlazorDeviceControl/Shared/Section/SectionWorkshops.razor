@inherits BlazorCore.Models.RazorBase
@page "/section/workshops"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using DataCore
@using DataCore.DAL
@using DataCore.DAL.DataModels
@using DataCore.DAL.TableScaleModels
@using DataCore.Utils
@using static DataCore.ShareEnums

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this 
        Title=@LocalizationData.DeviceControl.Sections.WorkShops SetParameters=@SetParametersAsync />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="WorkShopEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettings.SectionRowCount AllowSorting=true ColumnWidth="100px">
        <Columns >
            @if (@IsShowMarkedItems)
            {
                <RadzenGridColumn TItem="WorkShopEntity" TextAlign=TextAlign.Center 
                    Title=@LocalizationData.DeviceControl.TableFieldMarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast">
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn 
                TItem="WorkShopEntity" Title=@LocalizationData.DeviceControl.TableFieldWorkShopName Width="50%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{@LocalizationData.DeviceControl.UriRouteItem.WorkShop}/{itemCast.IdentityId}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="WorkShopEntity" Title=@LocalizationData.DeviceControl.TableFieldProductionFacilityName Width="50%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{@LocalizationData.DeviceControl.UriRouteItem.ProductionFacility}/{itemCast.ProductionFacility.IdentityId}")
                        Text=@itemCast.ProductionFacility.Name />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
