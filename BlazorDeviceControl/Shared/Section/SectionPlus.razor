@inherits BlazorCore.Models.RazorBase
@page "/section/plus"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using DataCore
@using DataCore.Sql.TableScaleModels
@using DataCore.Localizations
@using DataCore.Utils
@using static DataCore.ShareEnums

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this 
        Title=@LocaleData.DeviceControl.Sections.Plus SetParameters=@SetParametersAsync 
        IsShowMarkedItems=@IsShowMarkedItems IsShowAdditionalFilter=@IsShowAdditionalFilter 
        ItemsFilter=@ItemsFilter ItemFilter=@ItemFilter 
        FilterCaption=LocaleData.DeviceControl.ItemScale FilterName=@nameof(ScaleEntity) />

    <RadzenGrid Style="margin-top: 5px;"
        Data=@ItemsCast TItem="PluEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true ColumnWidth="100px">
        <Columns>
            @if (@IsShowMarkedItems)
            {
                <RadzenGridColumn TItem="PluEntity" TextAlign=TextAlign.Center SortProperty="IsMarked" 
                    Title=@LocaleCore.Table.MarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast">
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn TItem="PluEntity" Title=@LocaleCore.Table.Id Type="string" Width="5%" SortProperty="IdentityId" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; center; margin-left: 0px; " 
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Plu}/{itemCast.IdentityId}")
                        Text=@itemCast.IdentityId.ToString() />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluEntity" Title=@LocaleCore.Table.PluNumber Type="string" Width="5%" SortProperty="PluNumber" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; center; margin-left: 0px; " 
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Plu}/{itemCast.IdentityId}")
                        Text=@itemCast.PluNumber.ToString() />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluEntity" Property="Active" Width="4%" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.Active >
                <Template Context="pluEntity">
                    <RadzenCheckBox Disabled=true ReadOnly=true TValue="bool" @bind-Value=@pluEntity.Active />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluEntity" Property="CheckWeight" Width="4%" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.CheckWeight >
                <Template Context="pluEntity">
                    <RadzenCheckBox Disabled=true ReadOnly=true TValue="bool" @bind-Value=@pluEntity.IsCheckWeight />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluEntity" Width="20%" Title=@LocaleCore.Table.GoodsName SortProperty="GoodsName" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Plu}/{itemCast.IdentityId}")
                        Text=@itemCast.GoodsName />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluEntity" Width="15%"
                Title=@LocaleCore.Table.Template >
                <Template Context="pluEntity">
                    <RadzenLabel Style="white-space: pre-wrap;" Text=@pluEntity.Template.Title></RadzenLabel>
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluEntity" Property="Gtin" Width="11%" TextAlign=TextAlign.Center 
                Title=@LocaleCore.Table.Gtin />
            <RadzenGridColumn TItem="PluEntity" Property="GtinCheck" Width="3%" TextAlign=TextAlign.Center
                Title="" >
                <Template Context="pluEntity">
                    @if (pluEntity.GtinCheck())
                    {
                        <RadzenIcon Icon="" />
                    }
                    else
                    {
                        <RadzenIcon Icon="announcement" />
                    }
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluEntity" Width="21%"
                Title=@LocaleCore.Table.NomenclatureName >
                <Template Context="pluEntity">
                    <RadzenLabel Style="white-space: pre-wrap;" Text=@pluEntity.Nomenclature.Name></RadzenLabel>
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluEntity" Property="GoodsShelfLifeDays" Width="5%" TextAlign=TextAlign.Center 
                Title=@LocaleCore.Table.ShelfLifeDays />
            <RadzenGridColumn TItem="PluEntity" Property="GoodsTareWeight" Width="5%" TextAlign=TextAlign.Center 
                Title=@LocaleCore.Table.GoodsTareWeight />
            <RadzenGridColumn TItem="PluEntity" Property="GoodsBoxQuantly" Width="5%" TextAlign=TextAlign.Center 
                Title=@LocaleCore.Table.GoodsBoxQuantly />
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
