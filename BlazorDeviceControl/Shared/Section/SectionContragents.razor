@inherits BlazorCore.Models.RazorBase
@page "/section/contragents"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using DataCore
@using DataCore.DAL.DataModels
@using DataCore.DAL.TableScaleModels
@using DataCore.Utils
@using Microsoft.VisualBasic.CompilerServices
@using static DataCore.ShareEnums

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this 
        Title=@LocalizationData.DeviceControl.Sections.Contragents SetParameters=@SetParametersAsync />
    
    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="ContragentEntityV2" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettings.SectionRowCount AllowSorting=true ColumnWidth="200px">
        <Columns >
            @if (@IsShowMarkedItems)
            {
                <RadzenGridColumn TItem="ContragentEntityV2" TextAlign=TextAlign.Center 
                    Title=@LocalizationData.DeviceControl.TableFieldMarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast">
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn 
                TItem="ContragentEntityV2" TextAlign=TextAlign.Center
                Title=@LocalizationData.DeviceControl.TableFieldCreateDt Type="date" Width="20%">
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{@LocalizationData.DeviceControl.UriRouteItem.Label}/{itemCast.IdentityUid}")
                        Text=@itemCast.CreateDt.ToString("yyyy-MM-dd HH:mm:ss") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ContragentEntityV2" TextAlign=TextAlign.Center
                    Title=@LocalizationData.DeviceControl.TableFieldChangeDt Type="date" Width="20%">
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{@LocalizationData.DeviceControl.UriRouteItem.Label}/{itemCast.IdentityUid}")
                        Text=@itemCast.ChangeDt.ToString("yyyy-MM-dd HH:mm:ss") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ContragentEntityV2" Title=@LocalizationData.DeviceControl.TableFieldName Width="25%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{@LocalizationData.DeviceControl.UriRouteItem.Contragent}/{itemCast.IdentityUid}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ContragentEntityV2" Property="FullName" TextAlign=TextAlign.Left
                Title=@LocalizationData.DeviceControl.TableFieldName
                Type="string" Width="35%" />
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}