@inherits BlazorCore.Models.RazorBase
@page "/section/contragents"
@using BlazorDeviceControl.Shared.Component
@using DataCore.Sql.TableScaleModels
@using DataCore.Localizations

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this Title=@LocaleData.DeviceControl.Sections.Contragents />
    
    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="ContragentV2Entity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true ColumnWidth="200px">
        <Columns >
            @if (@IsShowMarkedItems)
            {
                <RadzenGridColumn TItem="ContragentV2Entity" TextAlign=TextAlign.Center SortProperty="IsMarked" 
                    Title=@LocaleCore.Table.MarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast" >
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn 
                TItem="ContragentV2Entity" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.CreateDt Type="date" Width="20%">
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Label}/{itemCast.IdentityUid}")
                        Text=@itemCast.CreateDt.ToString("yyyy-MM-dd HH:mm:ss") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ContragentV2Entity" TextAlign=TextAlign.Center
                    Title=@LocaleCore.Table.ChangeDt Type="date" Width="20%">
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Label}/{itemCast.IdentityUid}")
                        Text=@itemCast.ChangeDt.ToString("yyyy-MM-dd HH:mm:ss") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ContragentV2Entity" Title=@LocaleCore.Table.Name Width="25%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Contragent}/{itemCast.IdentityUid}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ContragentV2Entity" Property="FullName" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.Name
                Type="string" Width="35%" />
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this />
}