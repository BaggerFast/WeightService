@page "/section/printers"
@using BlazorProjectsCore
@using DataProjectsCore
@using DataProjectsCore.DAL
@using DataProjectsCore.DAL.DataModels
@using DataProjectsCore.DAL.TableModels
@using DataProjectsCore.Utils
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@inherits BaseRazorIdEntity

@if (AppSettings.IdentityItem.AccessLevel is true or false)
{
    <DataReload Title=@LocalizationData.DeviceControl.SectionPrinters SetParameters=@SetParametersAsync IsShowItemsCount=true 
        ItemsCount=@ItemsCount />
    <RadzenGrid Style="margin-top: 5px;"
        Data=@Items TItem="PrinterEntity"
        RowSelect=@(args => ItemSelectAsync(args)) 
        RowDoubleClick=@(args => ActionEditAsync())
        AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=15 AllowSorting="true" ColumnWidth="100px">
        <Columns>
            <RadzenGridColumn TItem="PrinterEntity" Property="Id" TextAlign="TextAlign.Center"
                                Title=@LocalizationData.DeviceControl.TableFieldId
                                Type="int" Width="7.5%" />
            <RadzenGridColumn TItem="PrinterEntity" Property="Name" Title=@LocalizationData.DeviceControl.TableFieldPrinter
                                Type="string" Width="17%" />
            <RadzenGridColumn TItem="PrinterEntity" Property="PrinterType.Name"
                                Title=@LocalizationData.DeviceControl.TableFieldPrinterType
                                Type="string" Width="16.5%" />
            <RadzenGridColumn TItem="PrinterEntity" Property="Ip" Title=@LocalizationData.DeviceControl.TableFieldPrinterIp
                                Type="string" Width="20%" />
            <RadzenGridColumn TItem="PrinterEntity" Property="Port" Title=@LocalizationData.DeviceControl.TableFieldPrinterPort
                                Type="string" Width="20%" />
            <RadzenGridColumn TItem="PrinterEntity" Property="Mac" Title=@LocalizationData.DeviceControl.TableFieldPrinterMac
                                Type="string" Width="20%" />
        </Columns>
    </RadzenGrid>
    @if (Items == null)
    {
        <DataLoad DataLoadItem=EnumDataLoad.Loading IsShowProgress=true />
    }
    else
    {
        <SectionActions IsShowNew=true IsShowEdit=true IsShowCopy=true IsShowMark=true IsShowDelete=true />
    }
}
else
{
    <RadzenLabel Text=@LocalizationCore.Strings.SectionAccessDeny></RadzenLabel>
}
