@inherits BlazorCore.Models.RazorBase
@page "/section/access"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using BlazorDeviceControl.Shared.Section
@using DataCore
@using DataCore.Sql.DataModels
@using DataCore.Sql.TableScaleModels
@using DataCore.Localizations
@using DataCore.Utils
@using static DataCore.ShareEnums

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this 
        Title=@LocaleCore.Strings.AccessRights SetParameters=@SetParametersAsync />

    <RadzenGrid Style="margin-top: 5px; " 
        Data=@ItemsCast TItem="AccessEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true ColumnWidth="100px">
        <Columns >
            @if (@IsShowMarkedItems)
            {
                <RadzenGridColumn TItem="AccessEntity" TextAlign=TextAlign.Center 
                    Title=@LocaleCore.Table.MarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast">
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn 
                TItem="AccessEntity" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.CreateDt Type="date" Width="20%">
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Access}/{itemCast.IdentityUid}")
                        Text=@itemCast.CreateDt.ToString("yyyy-MM-dd HH:mm:ss") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="AccessEntity" TextAlign=TextAlign.Center
                    Title=@LocaleCore.Table.ChangeDt Type="date" Width="20%">
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Access}/{itemCast.IdentityUid}")
                        Text=@itemCast.ChangeDt.ToString("yyyy-MM-dd HH:mm:ss") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="AccessEntity" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.User Type="string" Width="30%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Access}/{itemCast.IdentityUid}")
                        Text=@itemCast.User />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="AccessEntity" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.AccessLevel Type="string" Width="30%">
                <Template Context="accessItem">
                    <RadzenLabel Text=@UserSettings.Identity.GetDescriptionAccessRights(accessItem.Rights) Disabled=false ReadOnly=true />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
