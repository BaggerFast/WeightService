@page "/section/access"
@using DataCore.DAL.TableScaleModels
@using BlazorCore.Models
@using DataCore
@using DataCore.DAL.DataModels
@using DataCore.Utils
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using BlazorDeviceControl.Shared.Section
@using BlazorCore
@using static DataCore.ShareEnums
@inherits RazorDisposable

@if (ItemsCast == null)
{
    <ActionsLoad ParentRazor=@this DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReload ParentRazor=@this 
        Title=@LocalizationCore.Strings.SysAccess SetParameters=@SetParametersAsync 
        Items=@Items IsShowItemsCount=true IsShowMarkedFilter=true />

    <RadzenGrid Style="margin-top: 5px; "
        Data=@ItemsCast TItem="AccessEntity"
        RowSelect=@(args => ItemSelectAsync(args))
        RowDoubleClick=@(args => ActionAsync(UserSettings, DbTableAction.Edit, false))
        AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettings.SectionRowCount AllowSorting="true" ColumnWidth="100px">
        <Columns >
            <RadzenGridColumn 
                TItem="AccessEntity" TextAlign="TextAlign.Center"
                Title=@LocalizationData.DeviceControl.TableFieldCreateDt Type="date" Width="20%">
                <Template Context="logItem">
                    <RadzenDatePicker 
                        TValue="string" Value=@logItem.CreateDt Disabled=false ReadOnly=true DateFormat="yyyy-MM-dd HH:mm:ss" />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="AccessEntity" TextAlign="TextAlign.Center"
                    Title=@LocalizationData.DeviceControl.TableFieldChangeDt Type="date" Width="20%">
                <Template Context="logItem">
                    <RadzenDatePicker TValue="string" Value=@logItem.ChangeDt Disabled=false ReadOnly=true DateFormat="yyyy-MM-dd HH:mm:ss" />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="AccessEntity" Property="User" TextAlign="TextAlign.Left"
                Title=@LocalizationData.DeviceControl.TableFieldUser Type="string" Width="30%" />
            @if (IsShowMarkedItems)
            {
                <RadzenGridColumn TItem="AccessEntity" Property="IsMarked" TextAlign="TextAlign.Center"
                    Title=@LocalizationData.DeviceControl.TableFieldMarkedShort Type="string" Width="5%">
                    <Template Context="accessItem">
                        <RadzenCheckBox Disabled=true TValue="bool" @bind-Value=@accessItem.IsMarked />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn TItem="AccessEntity" TextAlign="TextAlign.Left"
                Title=@LocalizationData.DeviceControl.TableFieldAccessLevel Type="string" Width="30%">
                <Template Context="accessItem">
                    @switch(accessItem.Rights)
                    {
                        default:
                            <RadzenLabel Text=@LocalizationCore.Strings.Main.AccessRightsNone Disabled=false ReadOnly=true />
                            break;
                        case 1:
                            <RadzenLabel Text=@LocalizationCore.Strings.Main.AccessRightsRead Disabled=false ReadOnly=true />
                            break;
                        case 2:
                            <RadzenLabel Text=@LocalizationCore.Strings.Main.AccessRightsWrite Disabled=false ReadOnly=true />
                            break;
                        case 3:
                            <RadzenLabel Text=@LocalizationCore.Strings.Main.AccessRightsAdmin Disabled=false ReadOnly=true />
                            break;
                    }
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
