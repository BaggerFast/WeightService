@inherits BlazorCore.Models.RazorBase
@page "/section/labels"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using BlazorDeviceControl.Shared.Section
@using DataCore
@using DataCore.DAL.DataModels
@using DataCore.DAL.TableScaleModels
@using DataCore.Utils
@using LocalizationCore = DataCore.Localization.Core
@using static DataCore.ShareEnums

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this 
        Title=@LocalizationCore.Strings.SysLogs SetParameters=@SetParametersAsync />

    <RadzenGrid Style="margin-top: 5px; "
        Data=@ItemsCast TItem="LabelQuickEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettings.SectionRowCount AllowSorting=true ColumnWidth="100px">
        <Columns >
            <RadzenGridColumn 
                TItem="LabelQuickEntity" TextAlign=TextAlign.Center
                Title=@LocalizationData.DeviceControl.TableFieldCreateDt Type="date" Width="15%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{@LocalizationData.DeviceControl.UriRouteItem.Label}/{itemCast.IdentityId}")
                        Text=@itemCast.CreateDt.ToString("yyyy-MM-dd HH:mm:ss") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="LabelQuickEntity" Title=@LocalizationData.DeviceControl.TableFieldScale Type="string" Width="30%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{@LocalizationData.DeviceControl.UriRouteItem.Label}/{itemCast.IdentityId}")
                        Text=@itemCast.ScaleDescription />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="LabelQuickEntity" Property="PluId" TextAlign=TextAlign.Left
                Title=@LocalizationData.DeviceControl.TableFieldPlu Type="int" Width="10%" />
            <RadzenGridColumn 
                TItem="LabelQuickEntity" Property="NetWeight" TextAlign=TextAlign.Left
                Title=@LocalizationData.DeviceControl.TableFieldNetWeight Type="decimal" Width="10%" />
            <RadzenGridColumn 
                TItem="LabelQuickEntity" Property="TareWeight" TextAlign=TextAlign.Left
                Title=@LocalizationData.DeviceControl.TableFieldTareWeight Type="decimal" Width="10%" />
            <RadzenGridColumn 
                TItem="LabelQuickEntity" Property="RegNum" TextAlign=TextAlign.Left
                Title=@LocalizationData.DeviceControl.TableFieldRegNum Type="int" Width="10%" />
            <RadzenGridColumn 
                TItem="LabelQuickEntity" Property="ZplInfo" TextAlign=TextAlign.Left
                Title=@LocalizationData.DeviceControl.TableFieldImageDataInfo Type="string" Width="15%" />
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
