@inherits BlazorCore.Models.RazorBase
@page "/section/templateresources"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using DataCore
@using DataCore.DAL
@using DataCore.DAL.DataModels
@using DataCore.DAL.TableScaleModels
@using DataCore.Utils
@using LocalizationCore = DataCore.Localization.Core
@using static DataCore.ShareEnums

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this 
        Title=@LocalizationData.DeviceControl.Sections.TemplateResources SetParameters=@SetParametersAsync />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="TemplateResourceEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettings.SectionRowCount AllowSorting=true ColumnWidth="100px">
        <Columns >
            <RadzenGridColumn 
                TItem="TemplateResourceEntity" Property="Type" TextAlign=TextAlign.Center
                Title=@LocalizationCore.TableField.Type 
                Type="string" Width="10%" />
            <RadzenGridColumn 
                TItem="TemplateResourceEntity" Title=@LocalizationCore.TableField.Name Width="25%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{@LocalizationData.DeviceControl.UriRouteItem.TemplateResource}/{itemCast.IdentityId}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="TemplateResourceEntity" Property="Description"
                Title=@LocalizationCore.TableField.Description 
                Type="string" Width="40%" />
            <RadzenGridColumn 
                TItem="TemplateResourceEntity" Property="ImageData.Info"
                Title=@LocalizationCore.TableField.ImageDataInfo 
                Type="string" Width="25%" />
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
