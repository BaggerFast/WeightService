@inherits BlazorCore.Models.RazorBase
@page "/section/templates"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using DataCore
@using DataCore.Sql
@using DataCore.Sql.DataModels
@using DataCore.Sql.TableScaleModels
@using DataCore.Localizations
@using DataCore.Utils
@using static DataCore.ShareEnums

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this 
        Title=@LocaleData.DeviceControl.Sections.Templates SetParameters=@SetParametersAsync />

    <RadzenGrid Style="margin-top: 5px;"
        Data=@ItemsCast TItem="TemplateEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true ColumnWidth="100px">
        <Columns>
            @if (@IsShowMarkedItems)
            {
                <RadzenGridColumn TItem="TemplateEntity" TextAlign=TextAlign.Center SortProperty="IsMarked" 
                    Title=@LocaleCore.Table.MarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast">
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn 
                TItem="TemplateEntity" Property="CategoryId" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.CategoryName Width="15%" />
            <RadzenGridColumn 
                TItem="TemplateEntity" Title=@LocaleCore.Table.Title Width="60%" SortProperty="Title" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Template}/{itemCast.IdentityId}")
                        Text=@itemCast.Title />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="TemplateEntity" Property="ImageData.Info"
                Title=@LocaleCore.Table.ImageDataInfo 
                Type="string" Width="25%" />
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
