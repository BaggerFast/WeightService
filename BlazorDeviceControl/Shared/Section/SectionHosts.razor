@inherits BlazorCore.Models.RazorBase
@page "/section/hosts"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using DataCore
@using DataCore.DAL
@using DataCore.DAL.DataModels
@using DataCore.DAL.TableScaleModels
@using DataCore.Utils
@using static DataCore.ShareEnums

@if (ItemsCast == null)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReload ParentRazor=@this Items=@Items 
        Title=@LocalizationData.DeviceControl.Sections.Hosts SetParameters=@SetParametersAsync 
        IsShowItemsCount=true IsShowMarkedFilter=true />

    <RadzenGrid Style="margin-top: 5px;"
        Data=@ItemsCast TItem="HostEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettings.SectionRowCount AllowSorting=true ColumnWidth="100px">
        <Columns>
            @if (@IsShowMarkedItems)
            {
                <RadzenGridColumn TItem="HostEntity" TextAlign=TextAlign.Center 
                    Title=@LocalizationData.DeviceControl.TableFieldMarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast">
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn 
                TItem="HostEntity" Title=@LocalizationData.DeviceControl.TableFieldName Width="25.0%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; center; margin-left: 0px; "
                        Path=@($"{@LocalizationData.DeviceControl.UriRouteItem.Host}/{itemCast.IdentityId}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="HostEntity" Property="Ip" Title=@LocalizationData.DeviceControl.TableFieldDeviceIp
                Type="string" Width="25.0%" />
            <RadzenGridColumn 
                TItem="HostEntity" Property="IdRRef" Title=@LocalizationData.DeviceControl.TableFieldIdRRef
                Type="string" Width="25.0%" />
            <RadzenGridColumn 
                TItem="HostEntity" TextAlign=TextAlign.Center Property="MacAddress.ValuePrettyLookMinus" Title=@LocalizationData.DeviceControl.TableFieldDeviceMac
                Type="string" Width="25.0%" />
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
