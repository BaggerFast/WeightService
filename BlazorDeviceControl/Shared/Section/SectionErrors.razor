@inherits BlazorCore.Models.RazorBase
@page "/section/errors"
@using BlazorDeviceControl.Shared.Component
@using DataCore.Sql.TableScaleModels
@using DataCore.Localizations

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this 
        Title=@LocaleCore.System.SystemLogs SetParameters=@SetParametersAsync />

    <RadzenGrid Style="margin-top: 5px; "
        Data=@ItemsCast TItem="ErrorEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true ColumnWidth="100px">
        <Columns >
            <RadzenGridColumn 
                TItem="ErrorEntity" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.CreateDt Type="date" Width="14%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Error}/{itemCast.IdentityId}")
                        Text=@itemCast.CreateDt.ToString("yyyy-MM-dd HH:mm:ss.fff") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ErrorEntity" Title=@LocaleCore.Table.File Type="string" Width="14%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.Error}/{itemCast.IdentityId}")
                        Text=@itemCast.FilePathShort />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ErrorEntity" Property="LineNumber" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.Row Type="int" Width="4%" />
            <RadzenGridColumn 
                TItem="ErrorEntity" Property="MemberName" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.Member Type="string" Width="18%" />
            <RadzenGridColumn 
                TItem="ErrorEntity" Property="Exception" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.Exception Type="int" Width="50%">
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
