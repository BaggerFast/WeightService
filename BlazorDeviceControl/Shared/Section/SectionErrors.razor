@inherits BlazorCore.Models.RazorDisposable
@page "/section/errors"
@using BlazorCore
@using BlazorDeviceControl.Shared.Component
@using BlazorDeviceControl.Shared.Item
@using BlazorDeviceControl.Shared.Section
@using DataCore
@using DataCore.DAL.DataModels
@using DataCore.DAL.TableScaleModels
@using DataCore.Utils
@using static DataCore.ShareEnums

@if (ItemsCast == null)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReload ParentRazor=@this Items=@Items 
        Title=@LocalizationCore.Strings.SysLogs SetParameters=@SetParametersAsync IsShowItemsCount=true />

    <RadzenGrid Style="margin-top: 5px; "
        Data=@ItemsCast TItem="ErrorEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionAsync(UserSettings, DbTableAction.Edit, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging="true" PageSize=@AppSettings.DataAccess.JsonSettings.SectionRowCount AllowSorting=true ColumnWidth="100px">
        <Columns >
            <RadzenGridColumn 
                TItem="ErrorEntity" TextAlign=TextAlign.Center
                Title=@LocalizationData.DeviceControl.TableFieldCreateDt Type="date" Width="15%" >
                <Template Context="errorItem" >
                    <RadzenDatePicker 
                        TValue="string" Value=@errorItem.CreatedDate Disabled=false ReadOnly=true DateFormat="yyyy-MM-dd HH:mm:ss" />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ErrorEntity" Title=@LocalizationData.DeviceControl.TableFieldFile Type="string" Width="13%" >
                <Template Context="itemCast">
                    <RadzenLink Style="width: 100%; margin-left: 0px; "
                        Path=@($"{@LocalizationData.DeviceControl.UriRouteItem.Error}/{itemCast.Id}")
                        Text=@itemCast.FilePathShort />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ErrorEntity" Property="LineNumber" TextAlign=TextAlign.Center
                Title=@LocalizationData.DeviceControl.TableFieldRow Type="int" Width="6%" />
            <RadzenGridColumn 
                TItem="ErrorEntity" Property="MemberName" TextAlign=TextAlign.Left
                Title=@LocalizationData.DeviceControl.TableFieldMember Type="string" Width="12%" />
            <RadzenGridColumn 
                TItem="ErrorEntity" Property="Exception" TextAlign=TextAlign.Left
                Title=@LocalizationData.DeviceControl.TableFieldException Type="int" Width="54%">
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this ButtonSettings=@ButtonSettings />
}
