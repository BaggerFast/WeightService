@inherits BlazorCore.Models.RazorBase
@page "/components/actions_filter_scale"
@using BlazorCore.Utils
@using DataCore.Localizations
@using DataCore.Sql.Models
@using DataCore.Sql.TableScaleModels
@using Microsoft.AspNetCore.Components
@using static DataCore.ShareEnums

@if (ParentRazor == null)
{
	<ActionsLoad ParentRazor=@this DataLoadItem=ActionLoad.Loading IsShowProgress=true/>
}
else
{
	<MudSelect Variant=@Variant.Outlined Margin=@Margin.Dense
		Style="margin-top: -3px; margin-left: 2px; margin-right: 2px; margin-bottom: 2px;
		       font-size: 10px; background-color: transparent; border-color: transparent;"
	    @bind-Value=@ItemFilterCast>
		@foreach (ScaleEntity item in ItemsCast)
		{
			<MudSelectItem Value=@item>@item.Description</MudSelectItem>
		}
	</MudSelect>
}
