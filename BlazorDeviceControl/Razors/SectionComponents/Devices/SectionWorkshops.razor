@using DataCore.Sql.TableScaleModels.WorkShops
@using BlazorDeviceControl.Razors.CustomComponents
@inherits RazorComponentSectionBase<WorkShopModel>
@page "/section/workshops"

<RazorSectionReload
  TItem="@WorkShopModel"
  Title="@LocaleCore.DeviceControl.SectionWorkShops"
  OnSectionUpdate="@GetSectionData"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"
/>

<RadzenDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@WorkShopModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSetAsync"
  RowRender="RowRender"
  RowDoubleClick="SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@WorkShopModel">
      <RazorSectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RazorSectionField RazorFieldConfig="@RazorFieldConfigUtils.Base.GetName()" Width="40%"/>
      <RazorSectionField RazorFieldConfig="@RazorFieldConfigUtils.WorkShop.GetProductionFacility()" Width="40%"/>
    </TItemContent>
  </Columns>
</RadzenDataGridLocal>
