@inherits RazorComponentSectionBase<DataCore.Sql.TableScaleModels.Scales.ScaleModel, SqlTableBase>
@page "/section/scales"
@using BlazorCore.Razors
@using DataCore.Sql.TableScaleModels.Scales


<RazorSectionReload TItem=@ScaleModel TItemFilter=@SqlTableBase ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionScales SqlCrudConfigSection="@SqlCrudConfigSection" />

<RadzenDataGrid 
	PagerHorizontalAlign=@HorizontalAlign.Justify 
    Style="margin-top: 5px;"
    Data=@SqlSectionCast
    TItem=@ScaleModel 
    RowSelect=@(SqlItemSetAsync)
    RowRender=@(args => RowRender(args))
    RowDoubleClick=@(_ => SqlItemEditAsync())
    PagerPosition="@PagerPos"
    PageSize=@DataAccess.JsonSettings.Local.SectionRowsCount
    AllowSorting=true
	AllowPaging=true>
    <Columns>
        <RazorSectionFieldIsMarked TItem=@ScaleModel ParentRazor=@(this) SqlCrudConfigSection="@SqlCrudConfigSection" />
        <RazorSectionField TItem=@ScaleModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("30%", true))
            RazorFieldConfig=@RazorFieldConfigUtils.Base.GetDescription(LocaleCore.Table.Arm) />
        <RazorSectionField TItem=@ScaleModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("20%", true))
            RazorFieldConfig=@RazorFieldConfigUtils.Scale.GetNumber() />
        <RazorSectionField TItem=@ScaleModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("35%", true))
            RazorFieldConfig=@RazorFieldConfigUtils.Scale.GetWorkShop() />
        <RazorSectionField TItem=@ScaleModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("35%", true))
            RazorFieldConfig=@RazorFieldConfigUtils.Scale.GetPrinterMain() />
