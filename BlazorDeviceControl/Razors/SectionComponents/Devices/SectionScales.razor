@inherits RazorComponentSectionBase<DataCore.Sql.TableScaleModels.Scales.ScaleModel, SqlTableBase>
@page "/section/scales"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.SystemComponents
@using DataCore.Sql.TableScaleModels.Devices
@using DataCore.Sql.TableScaleModels.Printers
@using DataCore.Sql.TableScaleModels.Scales
@using DataCore.Sql.TableScaleModels.WorkShops

<SystemIdentity ParentRazor=@(this) />

<RazorSectionReload TItem=@ScaleModel TItemFilter=@SqlTableBase ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionScales />

<RadzenGrid 
	PagerHorizontalAlign=@HorizontalAlign.Justify 
	Style="margin-top: 5px;" 
	Data=@SqlSectionCast TItem=@ScaleModel 
	RowClick=@(SqlItemSetAsync) RowRender=@(args => RowRender(args))
	RowDoubleClick=@(_ => SqlItemEditAsync())
	AllowPaging=true PageSize=@DataAccess.JsonSettings.Local.SectionRowsCount AllowSorting=true >
    <Columns >
        <RazorSectionFieldIsMarked TItem=@ScaleModel ParentRazor=@(this) />
        <RazorSectionField TItem=@ScaleModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("20%", true))
            RazorFieldConfig=@RazorFieldConfigUtils.Base.GetDescription(LocaleCore.Table.Name) />
        <RazorSectionField TItem=@ScaleModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("10%", true))
            RazorFieldConfig=@RazorFieldConfigUtils.Scale.GetNumber() />
        <RazorSectionField TItem=@ScaleModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("25%", true))
            RazorFieldConfig=@RazorFieldConfigUtils.Scale.GetPrinterMain(GetRouteItemPathShort<PrinterModel>()) />
        <RazorSectionField TItem=@ScaleModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("25%", true))
            RazorFieldConfig=@RazorFieldConfigUtils.Scale.GetWorkShop(GetRouteItemPathShort<WorkShopModel>()) />
        <RadzenGridColumn TItem=@ScaleModel Width="15%" Title=@LocaleCore.Table.Device TextAlign=@TextAlign.Left>
            <Template Context="itemCast">
                @if (DataAccess.GetItemDeviceScaleFkNotNullable(itemCast).Device is DeviceModel device)
                {
                    @if (device.IsNew)
                    {
                        <RadzenText 
                            Style="margin-top: 10px; "
                            Text=@LocaleCore.Table.FieldEmpty
                            TextStyle=@TextStyle.Body2
                            TextAlign=@TextAlign.Left />
                    }
                    else
                    {
                        <RadzenLink 
                            Path=@($"{LocaleCore.DeviceControl.RouteItemDevice}/{device.IdentityValueUid}")
                            Text=@(device.Name) />
                    }
                }
            </Template>
        </RadzenGridColumn>
    </Columns>
</RadzenGrid>

<RazorSectionActions TItem=@ScaleModel ParentRazor=@(this) />