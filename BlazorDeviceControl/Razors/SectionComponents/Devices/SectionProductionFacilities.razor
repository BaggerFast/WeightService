@inherits RazorComponentSectionBase<ProductionFacilityModel, SqlTableBase>
@page "/section/production_facilities"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.SystemComponents

<SystemIdentity ParentRazor=@(this) />

<RazorSectionReload TItem=@ProductionFacilityModel TItemFilter=@SqlTableBase ParentRazor=@(this) Title=@LocaleCore.DeviceControl.ItemProductionFacility />

<RadzenGrid 
	PagerHorizontalAlign=@HorizontalAlign.Justify 
	Style="margin-top: 5px;" 
	Data=@SqlItemsCast TItem=@ProductionFacilityModel 
	RowClick=@(SqlItemSetAsync) RowRender=@(args => RowRender(args))
	RowDoubleClick=@(_ => SqlItemEditAsync())
    AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
    AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
    <Columns >
        <RazorSectionFieldIsMarked TItem=@ProductionFacilityModel ParentRazor=@(this) />
        <RazorSectionFieldIdentity TItem=@ProductionFacilityModel ParentRazor=@(this) />
        <RazorSectionField TItem=@ProductionFacilityModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("19%", true))
            RazorFieldConfig=@RazorFieldConfigUtils.ProductionFacility.GetName() />
        <RazorSectionField TItem=@ProductionFacilityModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("55%", true))
            RazorFieldConfig=@RazorFieldConfigUtils.ProductionFacility.GetAddress() />
    </Columns>
</RadzenGrid>

<RazorSectionActions TItem=@ProductionFacilityModel ParentRazor=@(this) />
