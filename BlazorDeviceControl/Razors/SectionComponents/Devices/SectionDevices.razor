@using DataCore.Sql.TableScaleModels.Devices
@inherits RazorComponentSectionBase<DataCore.Sql.TableScaleModels.Devices.DeviceModel, SqlTableBase>
@page "/section/devices"

<RazorSectionReload TItem="@DeviceModel" TItemFilter="@SqlTableBase" ParentRazor="@(this)" Title="@LocaleCore.DeviceControl.SectionHosts" SqlCrudConfigSection="@SqlCrudConfigSection"/>

<RadzenDataGrid
  class="DataGridSection"
  @bind-Value="@SelectedRow"
  CellContextMenu="@OnCellContextMenu"
  PagerHorizontalAlign="@HorizontalAlign.Justify"
  Data="@SqlSectionCast"
  TItem="@DeviceModel"
  RowSelect="@(SqlItemSetAsync)"
  RowRender="@(args => RowRender(args))"
  RowDoubleClick="@(_ => SqlItemEditAsync())"
  PagerPosition="@PagerPos"
  PageSize="@DataAccess.JsonSettings.Local.SectionRowsCount"
  AllowPaging="true"
  AllowSorting="true">
  <Columns>
    <RazorSectionFieldIsMarked TItem="@DeviceModel" ParentRazor="@(this)" SqlCrudConfigSection="@SqlCrudConfigSection"/>

    <RazorSectionField TItem="@DeviceModel" ParentRazor="@(this)" CssStyleRadzenColumn=@(new("15%", true))
                       RazorFieldConfig="@RazorFieldConfigUtils.Device.GetLoginDt()"/>
    <RazorSectionField TItem="@DeviceModel" ParentRazor="@(this)" CssStyleRadzenColumn=@(new("20%", true))
                       RazorFieldConfig="@RazorFieldConfigUtils.Base.GetName()"/>
    <RazorSectionField TItem="@DeviceModel" ParentRazor="@(this)" CssStyleRadzenColumn=@(new("20%", true))
                       RazorFieldConfig="@RazorFieldConfigUtils.Device.GetTypePrettyName()"/>
    <RazorSectionField TItem="@DeviceModel" ParentRazor="@(this)" CssStyleRadzenColumn=@(new("20%", true))
                       RazorFieldConfig="@RazorFieldConfigUtils.Device.GetIpv4()"/>
    <RazorSectionField TItem="@DeviceModel" ParentRazor="@(this)" CssStyleRadzenColumn=@(new("20%", true))
                       RazorFieldConfig="@RazorFieldConfigUtils.Device.GetMacAddress()"/>
  </Columns>
</RadzenDataGrid>

<RazorSectionActions TItem="@DeviceModel" ButtonSettings="@ButtonSettings" ParentRazor="@(this)"/>
