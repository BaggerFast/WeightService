@inherits RazorComponentSectionBase<BarCodeModel, SqlTableBase>
@page "/section/barcodes"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.SystemComponents

<SystemIdentity ParentRazor=@(this) />

<RazorSectionReload TItem=@BarCodeModel TItemFilter=@SqlTableBase ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionBarCodeTypes />

<RadzenGrid 
	PagerHorizontalAlign=@HorizontalAlign.Justify 
	Style="margin-top: 5px;" 
    Data=@SqlItemsCast TItem=@BarCodeModel 
	RowClick=@(SqlItemSetAsync) RowRender=@(args => RowRender(args))
	RowDoubleClick=@(_ => SqlItemEditAsync())
    AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
    AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
    <Columns >
        <RazorSectionFieldIsMarked TItem=@BarCodeModel ParentRazor=@(this) />
        <RazorSectionFieldIdentity TItem=@BarCodeModel ParentRazor=@(this) />
        <RazorSectionField TItem=@BarCodeModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("12%", true))
                  RazorFieldConfig=@RazorFieldConfigUtils.Base.GetChangeDt() />
        <RazorSectionField TItem=@BarCodeModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("50%", true))
            RazorFieldConfig=@RazorFieldConfigUtils.BarCode.GetValue() />
    </Columns>
</RadzenGrid>

<RazorSectionActions TItem=@BarCodeModel ParentRazor=@(this) />
