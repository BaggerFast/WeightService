@inherits RazorComponentSectionBase<TemplateModel, SqlTableBase>
@page "/section/templates"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.SystemComponents

<SystemIdentity ParentRazor=@(this) />

<RazorSectionReload TItem=@TemplateModel TItemFilter=@SqlTableBase ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionTemplates />

<RadzenGrid 
	PagerHorizontalAlign=@HorizontalAlign.Justify 
	Style="margin-top: 5px;"
	Data=@SqlItemsCast TItem=@TemplateModel 
	RowClick=@(SqlItemSetAsync) RowRender=@(args => RowRender(args))
	RowDoubleClick=@(_ => SqlItemEditAsync())
    AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
    AllowPaging=true PageSize=@BlazorAppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
    <Columns>
        <RazorSectionFieldIsMarked TItem=@TemplateModel ParentRazor=@(this) />
        <RazorSectionFieldIdentity TItem=@TemplateModel ParentRazor=@(this) />

        <RadzenGridColumn 
            TItem=@TemplateModel Property="CategoryId" TextAlign=@TextAlign.Center
            Title=@LocaleCore.Table.CategoryName Width="15%" />
        <RadzenGridColumn 
            TItem=@TemplateModel Title=@LocaleCore.Table.Title Width="60%" SortProperty="Title" >
            <Template Context="itemCast" >
                <RadzenLink Style="width: 100%; margin-left: 0; "
                            Path=@($"{LocaleCore.DeviceControl.RouteItemTemplate}/{itemCast.IdentityValueId}")
                    Text=@itemCast.Title />
            </Template>
        </RadzenGridColumn>
        <RadzenGridColumn 
            TItem=@TemplateModel Property="ImageData.Info"
            Title=@LocaleCore.Table.ImageDataInfo 
            Type="string" Width="25%" />
    </Columns>
</RadzenGrid>

<RazorSectionActions TItem=@TemplateModel ParentRazor=@(this) />
