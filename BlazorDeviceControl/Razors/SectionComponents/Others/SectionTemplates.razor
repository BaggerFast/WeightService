@using DataCore.Sql.TableScaleModels.Templates
@using BlazorDeviceControl.Razors.CustomComponents
@inherits RazorComponentSectionBase<DataCore.Sql.TableScaleModels.Templates.TemplateModel>
@page "/section/templates"

<RazorSectionReload TItem="@TemplateModel" ParentRazor="@(this)" Title="@LocaleCore.DeviceControl.SectionTemplates" SqlCrudConfigSection="@SqlCrudConfigSection"/>

<RadzenDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@TemplateModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSetAsync"
  RowRender="@(args => RowRender(args))"
  RowDoubleClick="@(_ => SqlItemEditAsync())">
  <Columns>
    <TItemContent TItem="@TemplateModel">
      <RazorSectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn TItem="@TemplateModel" Property="CategoryId" TextAlign="@TextAlign.Center"
                              Title="@LocaleCore.Table.CategoryName" Width="15%"/>
      <RadzenDataGridColumn TItem="@TemplateModel" Title="@LocaleCore.Table.Title" Width="60%" SortProperty="Title">
        <Template Context="itemCast">
          <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemTemplate}/{itemCast.IdentityValueId}")
                        Text="@itemCast.Title"/>
          </Template>
        </RadzenDataGridColumn>
      <RadzenGridColumn TItem="@TemplateModel" Property="ImageData.Info" Title="@LocaleCore.Table.ImageDataInfo"
                        Type="string" Width="25%"/>
    </TItemContent>
  </Columns>
</RadzenDataGridLocal>
