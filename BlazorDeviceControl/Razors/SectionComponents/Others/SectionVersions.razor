@using DataCore.Sql.TableScaleModels.Versions
@using BlazorDeviceControl.Razors.CustomComponents
@inherits RazorComponentSectionBase<DataCore.Sql.TableScaleModels.Versions.VersionModel>
@page "/section/versions"

<RazorSectionReload TItem="@VersionModel" ParentRazor="@(this)" Title="@LocaleCore.Strings.VersionsDb" SqlCrudConfigSection="@SqlCrudConfigSection"/>

<RadzenDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@VersionModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@(SqlItemSetAsync)"
  RowRender="@(args => RowRender(args))">
  <Columns>
    <TItemContent TItem="@VersionModel">
      <RazorSectionField Width="10%" RazorFieldConfig="@RazorFieldConfigUtils.Version.GetReleaseDt()"/>
      <RazorSectionField Width="10%" RazorFieldConfig="@RazorFieldConfigUtils.Version.GetVersion()"/>
      <RazorSectionField Width="80%" RazorFieldConfig="@RazorFieldConfigUtils.Base.GetDescription()"/>
    </TItemContent>
  </Columns>
</RadzenDataGridLocal>
