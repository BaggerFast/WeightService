@inherits RazorComponentSectionBase<DataCore.Sql.TableScaleModels.Versions.VersionModel, SqlTableBase>
@page "/section/versions"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.SystemComponents
@using DataCore.Sql.TableScaleModels.Versions

<SystemIdentity ParentRazor=@(this) />

<RazorSectionReload TItem=@VersionModel TItemFilter=@SqlTableBase ParentRazor=@(this) Title=@LocaleCore.Strings.VersionsDb />

<RadzenGrid 
	PagerHorizontalAlign=@HorizontalAlign.Justify 
	Style="margin-top: 5px; " 
	Data=@SqlSectionCast TItem=@VersionModel 
	RowClick=@(SqlItemSetAsync) RowRender=@(args => RowRender(args))
	RowDoubleClick=@(_ => SqlItemEditAsync())
	AllowPaging=true PageSize=@BlazorAppSettings.DataAccess.JsonSettings.Local.SectionRowsCount AllowSorting=true >
    <Columns >
        <RazorSectionField TItem=@VersionModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("10%"))
            RazorFieldConfig=@RazorFieldConfigUtils.Version.GetReleaseDt() />
        <RazorSectionField TItem=@VersionModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("10%"))
            RazorFieldConfig=@RazorFieldConfigUtils.Version.GetVersion() />
        <RazorSectionField TItem=@VersionModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("80%"))
            RazorFieldConfig=@RazorFieldConfigUtils.Base.GetDescription() />
    </Columns>
</RadzenGrid>

<RazorSectionActions TItem=@VersionModel ParentRazor=@(this) />