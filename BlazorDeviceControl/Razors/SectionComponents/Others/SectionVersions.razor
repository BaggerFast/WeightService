@inherits RazorComponentSectionBase<VersionModel>
@page "/section/versions"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.SystemComponents

@if (!IsActionsParametersSetFinished)
{
    <RazorActionLoad ActionLoad=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <RazorSectionReload TItem=VersionModel ParentRazor=@(this) Title=@LocaleCore.Strings.VersionsDb />

    <RadzenGrid Style="margin-top: 5px; " 
        Data=@SqlItemsCast TItem=VersionModel 
        RowDoubleClick=@(_ => SqlItemEditAsync())
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
            <RazorSectionField TItem=VersionModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("10%"))
                RazorFieldConfig=@RazorFieldConfigUtils.Version.GetReleaseDt() />
            <RazorSectionField TItem=VersionModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("10%"))
                RazorFieldConfig=@RazorFieldConfigUtils.Version.GetVersion() />
            <RazorSectionField TItem=VersionModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("80%"))
                RazorFieldConfig=@RazorFieldConfigUtils.Base.GetDescription() />
        </Columns>
    </RadzenGrid>

    <RazorSectionActions TItem=VersionModel ParentRazor=@(this) />
}
