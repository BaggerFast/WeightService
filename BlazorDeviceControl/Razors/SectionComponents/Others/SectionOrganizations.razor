@using DataCore.Sql.TableScaleModels.Organizations
@using BlazorDeviceControl.Razors.CustomComponents
@inherits RazorComponentSectionBase<DataCore.Sql.TableScaleModels.Organizations.OrganizationModel>
@page "/section/organizations"

<RazorSectionReload TItem="@OrganizationModel" ParentRazor="@(this)" Title="@LocaleCore.DeviceControl.SectionOrganizations" SqlCrudConfigSection="@SqlCrudConfigSection"/>

<RadzenDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@OrganizationModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSetAsync"
  RowRender="@(args => RowRender(args))"
  RowDoubleClick="@(_ => SqlItemEditAsync())">
  <Columns>
    <TItemContent TItem="@OrganizationModel">
      <RazorSectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection" />
      <RazorSectionField RazorFieldConfig="@RazorFieldConfigUtils.Base.GetName()" Width="75%" />
      <RazorSectionField RazorFieldConfig="@RazorFieldConfigUtils.Organization.GetGln()" />
    </TItemContent>
  </Columns>
</RadzenDataGridLocal>
