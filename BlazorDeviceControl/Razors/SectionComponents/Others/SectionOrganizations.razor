@inherits RazorComponentSectionBase<OrganizationModel>
@page "/section/organizations"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.SystemComponents

<SystemIdentity ParentRazor=@(this) />

<RazorSectionReload TItem=OrganizationModel ParentRazor=@(this) Title=@LocaleCore.Strings.VersionsDb />

<RadzenGrid Style="margin-top: 5px; " 
    Data=@SqlItemsCast TItem=OrganizationModel 
    RowDoubleClick=@(_ => SqlItemEditAsync())
    AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
    AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
    <Columns >
        <RazorSectionFieldIsMarked TItem=OrganizationModel ParentRazor=@(this) />
        <RazorSectionField TItem=OrganizationModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("75%"))
			RazorFieldConfig=@RazorFieldConfigUtils.Organization.GetName() />
        <RazorSectionField TItem=OrganizationModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("20%"))
            RazorFieldConfig=@RazorFieldConfigUtils.Organization.GetGln() />
    </Columns>
</RadzenGrid>

<RazorSectionActions TItem=OrganizationModel ParentRazor=@(this) />
