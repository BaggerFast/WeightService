@inherits RazorComponentSectionBase<DataCore.Sql.TableScaleModels.Organizations.OrganizationModel, SqlTableBase>
@page "/section/organizations"
@using BlazorCore.Razors
@using DataCore.Sql.TableScaleModels.Organizations

<RazorSectionReload TItem=@OrganizationModel TItemFilter=@SqlTableBase ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionOrganizations />

<RadzenGrid 
	PagerHorizontalAlign=@HorizontalAlign.Justify 
	Style="margin-top: 5px; " 
    Data=@SqlSectionCast TItem=@OrganizationModel 
    RowClick=@(SqlItemSetAsync) RowRender=@(args => RowRender(args))
    RowDoubleClick=@(_ => SqlItemEditAsync())
	AllowPaging=true PageSize=@BlazorAppSettings.DataAccess.JsonSettings.Local.SectionRowsCount AllowSorting=true >
    <Columns >
        <RazorSectionFieldIsMarked TItem=@OrganizationModel ParentRazor=@(this) />
        <RazorSectionField TItem=@OrganizationModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("75%", true))
			RazorFieldConfig=@RazorFieldConfigUtils.Base.GetName() />
        <RazorSectionField TItem=@OrganizationModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("20%"))
            RazorFieldConfig=@RazorFieldConfigUtils.Organization.GetGln() />
    </Columns>
</RadzenGrid>

<RazorSectionActions TItem="@OrganizationModel" ButtonSettings="@ButtonSettings" />