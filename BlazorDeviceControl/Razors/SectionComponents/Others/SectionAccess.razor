@using DataCore.Sql.TableScaleModels.Access
@using BlazorDeviceControl.Razors.CustomComponents
@inherits RazorComponentSectionBase<AccessModel>
@page "/section/access"

<RazorSectionReload TItem="@AccessModel" ParentRazor="@(this)" Title="@LocaleCore.Strings.AccessRights" SqlCrudConfigSection="@SqlCrudConfigSection"/>

<RadzenDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@AccessModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSetAsync"
  RowDoubleClick="@SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@AccessModel">
      <RazorSectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RazorSectionField RazorFieldConfig="@RazorFieldConfigUtils.Access.GetLoginDt()" Width="50%" />
      <RazorSectionField RazorFieldConfig="@RazorFieldConfigUtils.Base.GetName(LocaleCore.Table.User)" />
      <RazorSectionField RazorFieldConfig="@RazorFieldConfigUtils.Access.GetRights()" Width="25%" />
    </TItemContent>
  </Columns>
</RadzenDataGridLocal>
