@inherits RazorComponentSectionBase<AccessModel, SqlTableBase>
@page "/section/access"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.SystemComponents

<SystemIdentity ParentRazor=@(this) />

<RazorSectionReload TItem=@AccessModel TItemFilter=@SqlTableBase ParentRazor=@(this) Title=@LocaleCore.Strings.AccessRights />

<RadzenGrid 
	PagerHorizontalAlign=@HorizontalAlign.Justify
	Style="margin-top: 5px; " 
    Data=@SqlSectionCast TItem=@AccessModel 
	RowClick=@(SqlItemSetAsync) RowRender=@(args => RowRender(args))
	RowDoubleClick=@(_ => SqlItemEditAsync()) 
    AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
    AllowPaging=true PageSize=@DataAccess.JsonSettings.Local.SectionRowsCount AllowSorting=true >
    <Columns >
		<RazorSectionFieldIsMarked TItem=@AccessModel ParentRazor=@(this) />
		<RazorSectionField TItem=@AccessModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("20%", true))
			RazorFieldConfig=@RazorFieldConfigUtils.Access.GetLoginDt() />
		<RazorSectionField TItem=@AccessModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("50%", true))
		 RazorFieldConfig=@RazorFieldConfigUtils.Base.GetName(LocaleCore.Table.User) />
		<RazorSectionField TItem=@AccessModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("25%", false))
			RazorFieldConfig=@RazorFieldConfigUtils.Access.GetRights() />
    </Columns>
</RadzenGrid>

<RazorSectionActions TItem=@AccessModel ParentRazor=@(this) />
