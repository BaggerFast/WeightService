@using DataCore.Sql.TableScaleModels.Printers
@using BlazorDeviceControl.Razors.CustomComponents
@using System.Net
@inherits RazorComponentSectionBase<PrinterModel>
@page "/section/printers"

<RazorSectionReload
  TItem="@PrinterModel"
  Title="@LocaleCore.Print.Names"
  OnSectionUpdate="@GetSectionData"
  SectionCount="@SqlSectionCast.Count"
  SqlCrudConfigSection="@SqlCrudConfigSection"
  ButtonSettings="@ButtonSettings"
  />

<RadzenDataGridLocal
  class="DataGridSection"
  @bind-Value="@SelectedRow"
  TItem="@PrinterModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSetAsync"
  RowRender="@RowRender"
  RowDoubleClick="@SqlItemEditAsync">
  <Columns>
    <TItemContent TItem="@PrinterModel">
      <RazorSectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RazorSectionField RazorFieldConfig="@RazorFieldConfigUtils.Base.GetName()"/>
      <RazorSectionField RazorFieldConfig="@RazorFieldConfigUtils.Printer.GetPrinterType()"/>
      <RazorSectionField RazorFieldConfig="@RazorFieldConfigUtils.Printer.GetIp()"/>
      <RadzenGridColumn TextAlign="@TextAlign.Center" Title="@LocaleCore.Table.HttpStatusCode" Type="string" Width="10%">
        <Template Context="item">
          <RadzenIcon
            IconStyle="@IconStyle.Primary"
            Icon=@(item.HttpStatusCode == HttpStatusCode.OK ? "network_wifi_3_bar" : "signal_wifi_statusbar_null") />
        </Template>
      </RadzenGridColumn>
      <RazorSectionField RazorFieldConfig="@RazorFieldConfigUtils.Printer.GetMacAddress()"/>
    </TItemContent>
  </Columns>
</RadzenDataGridLocal>
