@using DataCore.Sql.TableScaleModels.Printers
@using BlazorDeviceControl.Razors.CustomComponents
@using System.Net
@inherits RazorComponentSectionBase<DataCore.Sql.TableScaleModels.Printers.PrinterModel, SqlTableBase>
@page "/section/printers"

<RazorSectionReload TItem="@PrinterModel" TItemFilter="@SqlTableBase" ParentRazor="@(this)" Title="@LocaleCore.Print.Names" SqlCrudConfigSection="@SqlCrudConfigSection"/>

<RadzenDataGridLocal
  class="DataGridSection"
  @bind-Value="@SelectedRow"
  TItem="@PrinterModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@(SqlItemSetAsync)"
  RowRender="@(args => RowRender(args))"
  RowDoubleClick="@(_ => SqlItemEditAsync())">
  <Columns>
    <RazorSectionFieldIsMarked TItem="@PrinterModel" ParentRazor="@(this)" SqlCrudConfigSection="@SqlCrudConfigSection"/>
    <RazorSectionField TItem="@PrinterModel" ParentRazor="@(this)" CssStyleRadzenColumn=@(new("20%", true))
                       RazorFieldConfig="@RazorFieldConfigUtils.Base.GetName()"/>
    <RazorSectionField TItem="@PrinterModel" ParentRazor="@(this)" CssStyleRadzenColumn=@(new("20%", true))
                       RazorFieldConfig="@RazorFieldConfigUtils.Printer.GetPrinterType()"/>
    <RazorSectionField TItem="@PrinterModel" ParentRazor="@(this)" CssStyleRadzenColumn=@(new("20%", true))
                       RazorFieldConfig="@RazorFieldConfigUtils.Printer.GetIp()"/>
    <RadzenGridColumn TItem="@PrinterModel" TextAlign="@TextAlign.Center"
                      Title="@LocaleCore.Table.HttpStatusCode" Type="string" Width="10%">
      <Template Context="item">
        <RadzenIcon
          IconStyle="@IconStyle.Primary"
          Icon=@(item.HttpStatusCode == HttpStatusCode.OK ? "network_wifi_3_bar" : "signal_wifi_statusbar_null") />
      </Template>
    </RadzenGridColumn>
    <RazorSectionField TItem="@PrinterModel" ParentRazor="@(this)" CssStyleRadzenColumn=@(new("20%", true))
                       RazorFieldConfig="@RazorFieldConfigUtils.Printer.GetMacAddress()"/>
  </Columns>
</RadzenDataGridLocal>
