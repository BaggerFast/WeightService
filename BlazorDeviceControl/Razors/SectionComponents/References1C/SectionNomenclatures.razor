@inherits RazorComponentSectionBase<DataCore.Sql.TableScaleModels.Nomenclatures.NomenclatureModel, SqlTableBase>
@page "/section/nomenclatures"
@using BlazorCore.Razors
@using DataCore.Sql.TableScaleModels.Nomenclatures

<RazorSectionReload TItem=@NomenclatureModel TItemFilter=@SqlTableBase ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionNomenclatures SqlCrudConfigSection="@SqlCrudConfigSection" />

<RadzenDataGrid 
	PagerHorizontalAlign=@HorizontalAlign.Justify 
	Style="margin-top: 5px;" 
    Data=@SqlSectionCast 
    TItem=@NomenclatureModel 
    RowSelect=@(SqlItemSetAsync)
    RowRender=@(args => RowRender(args))
    RowDoubleClick=@(_ => SqlItemEditAsync())
    PageSize=@DataAccess.JsonSettings.Local.SectionRowsCount 
    PagerPosition="@PagerPos"
    AllowPaging=true 
    AllowSorting=true >
    <Columns >
        <RazorSectionFieldIsMarked TItem=@NomenclatureModel ParentRazor=@(this) SqlCrudConfigSection="@SqlCrudConfigSection" />
        <RadzenDataGridColumn TItem=@NomenclatureModel Title=@LocaleCore.Table.Name Width="45%" >
            <Template Context="itemCast" >
	            <RadzenLink Style="width: 100%; margin-left: 0; "
                            Path=@($"{LocaleCore.DeviceControl.RouteItemNomenclature}/{itemCast.IdentityValueId}")
	                        Text=@itemCast.Name />
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn 
            TItem=@NomenclatureModel Property="Code" 
            Title=@LocaleCore.Table.Code
            Width="20%" />
        <RadzenDataGridColumn 
            TItem=@NomenclatureModel TextAlign=@TextAlign.Center Width="5%" 
            Title=@LocaleCore.Table.Weighted >
            <Template Context="itemCast" >
                <RadzenCheckBox Disabled=true ReadOnly=true TValue="bool" @bind-Value=@itemCast.Weighted />
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>

<RazorSectionActions TItem="@NomenclatureModel" ButtonSettings="@ButtonSettings" ParentRazor=@(this) />