@inherits RazorComponentSectionBase<DataCore.Sql.TableScaleModels.Plus.PluModel, SqlTableBase>
@page "/section/plus"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.SystemComponents
@using DataCore.Sql.TableScaleModels.Plus

<SystemIdentity ParentRazor=@(this) />

<RazorSectionReload TItem=@PluModel TItemFilter=@SqlTableBase ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionPlus />

<RadzenGrid 
	PagerHorizontalAlign=@HorizontalAlign.Justify
	Style="margin-top: 5px;"
	Data=@SqlSectionCast TItem=@PluModel
	RowClick=@(SqlItemSetAsync) RowRender=@(args => RowRender(args))
    RowDoubleClick=@(_ => SqlItemEditAsync())
	AllowPaging=true PageSize=@DataAccess.JsonSettings.Local.SectionRowsCount AllowSorting=true >
    <Columns>
		<RazorSectionFieldIsMarked TItem=@PluModel ParentRazor=@(this) />
		<RazorSectionField TItem=@PluModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("75%", true))
		    RazorFieldConfig=@RazorFieldConfigUtils.Base.GetName() />
		<RazorSectionField TItem=@PluModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("10%", true))
			RazorFieldConfig=@RazorFieldConfigUtils.Plu.GetNumber() />
		<RazorSectionField TItem=@PluModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("10%", true))
			RazorFieldConfig=@RazorFieldConfigUtils.Plu.GetShelfLifeDays() />
    </Columns>
</RadzenGrid>

<RazorSectionActions TItem=@PluModel ParentRazor=@(this) />