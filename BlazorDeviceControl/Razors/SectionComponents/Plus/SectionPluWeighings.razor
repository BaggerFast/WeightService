@inherits RazorComponentSectionBase<PluWeighingModel, SqlTableBase>
@page "/section/plu_weighings"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.SystemComponents

<SystemIdentity ParentRazor=@(this) />

<RazorSectionReload TItem=@PluWeighingModel TItemFilter=@SqlTableBase ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionPlusWeighings />

<RadzenGrid 
	PagerHorizontalAlign=@HorizontalAlign.Justify 
	Style="margin-top: 5px;"
	Data=@SqlItemsCast TItem=@PluWeighingModel 
	RowClick=@(SqlItemSetAsync) RowRender=@(args => RowRender(args))
	RowDoubleClick=@(_ => SqlItemEditAsync())
    AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
    AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
    <Columns>
        <RazorSectionFieldIsMarked TItem=@PluWeighingModel ParentRazor=@(this) />
		<RadzenGridColumn TItem=@PluWeighingModel Width="14%" Title=@LocaleCore.Table.WeithingDt TextAlign=@TextAlign.Center >
	        <Template Context="itemCast">
		        <RadzenLink 
			        Path=@($"{LocaleCore.DeviceControl.RouteItemPluWeighing}/{itemCast.Identity.Uid}")
					Text=@(StringUtils.FormatDtRus(itemCast.ProductDt, false)) />
	        </Template>
        </RadzenGridColumn>
        <RadzenGridColumn TItem=@PluWeighingModel Width="10%" Title=@LocaleCore.Table.DayOfWeek TextAlign=@TextAlign.Center >
            <Template Context="itemCast" >
	            <RadzenText 
		            TextStyle=@TextStyle.Body2
		            Text=@EnumUtils.GetDayOfWeekRu(itemCast.ProductDt.DayOfWeek) />
            </Template>
        </RadzenGridColumn>
		<RadzenGridColumn TItem=@PluWeighingModel Width="20%" Title=@LocaleCore.Table.Scale TextAlign=@TextAlign.Left >
			<Template Context="itemCast">
				<RadzenLink
					Path=@($"{LocaleCore.DeviceControl.RouteItemScale}/{itemCast.PluScale.Scale.Identity.Id}")
					Text=@(itemCast.PluScale.Scale.Description)/>
			</Template>
        </RadzenGridColumn>
        <RadzenGridColumn TItem=@PluWeighingModel Width="13%" Title=@LocaleCore.Table.Host TextAlign=@TextAlign.Left >
	        <Template Context="itemCast">
				@if (itemCast.PluScale.Scale.Host is not null)
				{
					<RadzenLink
						Path=@($"{LocaleCore.DeviceControl.RouteItemHost}/{itemCast.PluScale.Scale.Host.Identity.Id}")
						Text=@(itemCast.PluScale.Scale.Host.HostName)/>
				}
	        </Template>
        </RadzenGridColumn>
		<RadzenGridColumn TItem=@PluWeighingModel Width="18%" Title=@LocaleCore.Table.Plu TextAlign=@TextAlign.Left >
	        <Template Context="itemCast" >
		        <RadzenLink
			        Path=@($"{LocaleCore.DeviceControl.RouteItemPlu}/{itemCast.PluScale.Plu.Identity.Uid}")
					Text=@(itemCast.PluScale.Plu.Name) />
	        </Template>
        </RadzenGridColumn>
		<RadzenGridColumn TItem=@PluWeighingModel Width="10%" Title=@LocaleCore.Table.TareWeight TextAlign=@TextAlign.Center >
	        <Template Context="itemCast" >
		        <RadzenText 
			        TextStyle=@TextStyle.Body2
					Text=@itemCast.TareWeight.ToString(CultureInfo.InvariantCulture) />
	        </Template>
        </RadzenGridColumn>
		<RadzenGridColumn TItem=@PluWeighingModel Width="10%" Title=@LocaleCore.Table.NetWeight TextAlign=@TextAlign.Center >
	        <Template Context="itemCast" >
		        <RadzenText 
			        TextStyle=@TextStyle.Body2
			        Text=@itemCast.NettoWeight.ToString(CultureInfo.InvariantCulture) />
	        </Template>
        </RadzenGridColumn>
    </Columns>
</RadzenGrid>

<RazorSectionActions TItem=@PluWeighingModel ParentRazor=@(this) />
