@inherits RazorComponentSectionBase<PluWeighingModel, SqlTableBase>
@page "/section/plu_weighings"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.SystemComponents

<SystemIdentity ParentRazor=@(this) />

<RazorSectionReload TItem=@PluWeighingModel TItemFilter=@SqlTableBase ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionPlusWeighings />

<RadzenGrid 
	Style="margin-top: 5px;"
	Data=@SqlItemsCast TItem=@PluWeighingModel 
	RowClick=@(SqlItemSetAsync) RowRender=@(args => RowRender(args))
	RowDoubleClick=@(_ => SqlItemEditAsync())
    AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
    AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
    <Columns>
        <RazorSectionFieldIsMarked TItem=@PluWeighingModel ParentRazor=@(this) />
        <RadzenGridColumn 
	        TItem=@PluWeighingModel Width="20%" Title=@LocaleCore.Table.WeithingDt >
	        <Template Context="itemCast">
		        <RadzenLink 
			        Path=@($"{LocaleCore.DeviceControl.RouteItemPluWeighing}/{itemCast.Identity.Uid}") 
			        Text=@itemCast.ProductDt.ToString("yyyy-MM-dd HH:mm:ss") />
	        </Template>
        </RadzenGridColumn>
        <RadzenGridColumn 
	        TItem=@PluWeighingModel Width="10%" Title=@LocaleCore.Table.DayOfWeek >
            <Template Context="itemCast" >
	            <RadzenText 
		            TextAlign=@TextAlign.Center TextStyle=@TextStyle.Body2
		            Text=@EnumUtils.GetDayOfWeekRu(itemCast.ProductDt.DayOfWeek) />
            </Template>
        </RadzenGridColumn>
        <RadzenGridColumn 
	        TItem=@PluWeighingModel Width="20%" Title=@LocaleCore.Table.Scale >
	        <Template Context="itemCast" >
		        <RadzenText 
			        TextAlign=@TextAlign.Left TextStyle=@TextStyle.Body2
			        Text=@itemCast.PluScale.Scale.Description />
	        </Template>
        </RadzenGridColumn>
        <RadzenGridColumn 
	        TItem=@PluWeighingModel Width="15%" Title=@LocaleCore.Table.Host >
	        <Template Context="itemCast" >
		        <RadzenText 
			        TextAlign=@TextAlign.Left TextStyle=@TextStyle.Body2
			        Text=@itemCast.PluScale.Scale.Host.HostName />
	        </Template>
        </RadzenGridColumn>
        <RadzenGridColumn 
	        TItem=@PluWeighingModel Width="20%" Title=@LocaleCore.Table.Plu >
	        <Template Context="itemCast" >
		        <RadzenText 
			        TextAlign=@TextAlign.Left TextStyle=@TextStyle.Body2
			        Text=@itemCast.PluScale.Plu.Name />
	        </Template>
        </RadzenGridColumn>
        <RadzenGridColumn 
	        TItem=@PluWeighingModel Width="5%" Title=@LocaleCore.Table.TareWeight >
	        <Template Context="itemCast" >
		        <RadzenText 
			        TextAlign=@TextAlign.Center TextStyle=@TextStyle.Body2
					Text=@itemCast.TareWeight.ToString(CultureInfo.InvariantCulture) />
	        </Template>
        </RadzenGridColumn>
        <RadzenGridColumn 
	        TItem=@PluWeighingModel Width="5%" Title=@LocaleCore.Table.NetWeight >
	        <Template Context="itemCast" >
		        <RadzenText 
			        TextAlign=@TextAlign.Center TextStyle=@TextStyle.Body2
			        Text=@itemCast.NettoWeight.ToString(CultureInfo.InvariantCulture) />
	        </Template>
        </RadzenGridColumn>
    </Columns>
</RadzenGrid>

<RazorSectionActions TItem=@PluWeighingModel ParentRazor=@(this) />
