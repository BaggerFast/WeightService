@using DataCore.Sql.Xml
@using BlazorDeviceControl.Razors.CustomComponents
@inherits RazorComponentSectionBase<DataCore.Sql.Xml.WeithingFactSummaryModel>
@page "/section/plus_weighings_aggr"

<RazorSectionReload TItem="@WeithingFactSummaryModel" ParentRazor="@(this)" Title="@LocaleCore.DeviceControl.SectionWeithingFactsAggregation" SqlCrudConfigSection="@SqlCrudConfigSection"/>

<RadzenDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@WeithingFactSummaryModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@SqlItemSetAsync"
  RowRender="@(args => RowRender(args))">
  <Columns>
    <TItemContent TItem="@WeithingFactSummaryModel">
      <RazorSectionFieldIsMarked SqlCrudConfigSection="@SqlCrudConfigSection"/>
      <RadzenDataGridColumn TItem="@WeithingFactSummaryModel" Width="15%"
                            Title="@LocaleCore.Table.WeithingDt">
        <Template Context="itemCast">
          <RadzenText
            TextAlign="@TextAlign.Center" TextStyle="@TextStyle.Body2"
            Text="@(StringUtils.FormatDtRus(itemCast.WeithingDate, true))"/>
        </Template>
      </RadzenDataGridColumn>
      <RadzenDataGridColumn TItem="@WeithingFactSummaryModel" Width="15%"
                            Title="@LocaleCore.Table.DayOfWeek">
        <Template Context="itemCast">
          <RadzenText
            TextAlign="@TextAlign.Center" TextStyle="@TextStyle.Body2"
            Text="@EnumUtils.GetDayOfWeekRu(itemCast.WeithingDate.DayOfWeek)"/>
        </Template>
      </RadzenDataGridColumn>
      <RadzenDataGridColumn TItem="@WeithingFactSummaryModel" Width="15%"
                            Title="@LocaleCore.Table.Count">
        <Template Context="itemCast">
          <RadzenText
            TextAlign="@TextAlign.Center" TextStyle="@TextStyle.Body2"
            Text="@itemCast.Count.ToString()"/>
        </Template>
      </RadzenDataGridColumn>
      <RadzenDataGridColumn TItem="@WeithingFactSummaryModel" Width="55%"
                            Title="@LocaleCore.Table.Scale">
        <Template Context="itemCast">
          <RadzenText
            TextAlign="@TextAlign.Center" TextStyle="@TextStyle.Body2"
            Text="@itemCast.Scale"/>
        </Template>
      </RadzenDataGridColumn>
    </TItemContent>
  </Columns>
</RadzenDataGridLocal>
