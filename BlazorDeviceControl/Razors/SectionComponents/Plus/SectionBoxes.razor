@using DataCore.Sql.TableScaleModels.Boxes
@using BlazorDeviceControl.Razors.CustomComponents
@inherits RazorComponentSectionBase<DataCore.Sql.TableScaleModels.Boxes.BoxModel, SqlTableBase>
@page "/section/boxes"

<RazorSectionReload TItem="@BoxModel" TItemFilter="@SqlTableBase" ParentRazor="@(this)" Title="@LocaleCore.DeviceControl.SectionBoxes" SqlCrudConfigSection="@SqlCrudConfigSection"/>

<RadzenDataGridLocal
  @bind-Value="@SelectedRow"
  TItem="@BoxModel"
  Data="@SqlSectionCast"
  CellContextMenu="@OnCellContextMenu"
  RowSelect="@(SqlItemSetAsync)"
  RowRender="@(args => RowRender(args))"
  RowDoubleClick="@(_ => SqlItemEditAsync())">
  <Columns>
    <RazorSectionFieldIsMarked TItem="@BoxModel" ParentRazor="@(this)" SqlCrudConfigSection="@SqlCrudConfigSection"/>
    <RazorSectionField TItem="@BoxModel" ParentRazor="@(this)" CssStyleRadzenColumn=@(new("75%", true))
                       RazorFieldConfig="@RazorFieldConfigUtils.Box.GetName()"/>
    <RazorSectionField TItem="@BoxModel" ParentRazor="@(this)" CssStyleRadzenColumn=@(new("20%", true))
                       RazorFieldConfig="@RazorFieldConfigUtils.Box.GetWeight()"/>
  </Columns>
</RadzenDataGridLocal>
