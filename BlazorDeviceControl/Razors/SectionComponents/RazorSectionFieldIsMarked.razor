@typeparam TItem
@inherits RazorComponentSectionBase<TItem>
@page "/section/field_ismarked"
@using BlazorCore.Razors
@using DataCore.Localizations
@using MudBlazor
@using Radzen
@using Radzen.Blazor

@if (RazorComponentConfig.IsShowMarked)
{
	<RadzenGridColumn TItem=@TItem
			TextAlign=TextAlign.Center Width=@(CssStyleRadzenColumn.Width) SortProperty="IsMarked"
			Title=@LocaleCore.Table.IsMarkedShort >
		<Template Context="item">
			<RadzenIcon Icon=@(item.IsMarked ? "delete" : "")/>
		</Template>
	</RadzenGridColumn>
}
