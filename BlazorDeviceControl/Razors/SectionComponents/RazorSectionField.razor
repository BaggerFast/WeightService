@typeparam TItem
@inherits RazorComponentSectionBase<TItem, SqlTableBase>
@page "/section/field"
@using BlazorCore.Razors
@using MudBlazor
@using Radzen
@using Radzen.Blazor
@using BlazorDeviceControl.Razors.SystemComponents

<RadzenGridColumn TItem=@TItem Type=@RazorFieldConfig.Type TextAlign=@RazorFieldConfig.TextAlign
                  Width=@(CssStyleRadzenColumn.Width) Title=@RazorFieldConfig.Title>
	<Template Context="item">
		@switch (RazorFieldConfig.Type)
		{
			case "bool":
				<RadzenCheckBox Disabled=true TValue="bool" Value=@item.GetPropertyAsBool(nameof(RazorFieldConfig.Name)) />
				break;
			default:
				@if (CssStyleRadzenColumn.IsShowLink)
				{
					@if (RazorFieldConfig.LinkUrl != "")
					{
					    <RadzenLink 
                            Text=@item.GetPropertyAsString(RazorFieldConfig.Name)
                            Path=@RazorFieldConfig.LinkUrl  />
					}
					else
					{
					    <RadzenLink 
                            Text=@item.GetPropertyAsString(RazorFieldConfig.Name)
                            Path=@GetRouteItemPathForLink(item) />
					}
				}
				else
				{
					<RadzenText 
						Style="margin-top: 10px; "
						Text=@item.GetPropertyAsString(RazorFieldConfig.Name)
						TextStyle=@TextStyle.Body2 
						TextAlign=@RazorFieldConfig.TextAlign />
				}
				break;
		}
	</Template>
</RadzenGridColumn>