@typeparam TItem
@inherits RazorComponentSectionBase<TItem>
@page "/section/field"
@using BlazorCore.Razors
@using MudBlazor
@using Radzen
@using Radzen.Blazor
@using BlazorDeviceControl.Razors.SystemComponents

<SystemIdentity ParentRazor=@(this) />

<RadzenGridColumn TItem=@TItem Type=@RazorFieldConfig.Type TextAlign=@RazorFieldConfig.TextAlign
                  Width=@(CssStyleRadzenColumn.Width) Title=@RazorFieldConfig.Title>
	<Template Context="item">
		@switch (RazorFieldConfig.Type)
		{
			case "bool":
				<RadzenCheckBox Disabled=true TValue="bool" Value=@item.GetPropertyAsBool(RazorFieldConfig.Name)/>
				break;
			default:
				@if (CssStyleRadzenColumn.IsShowLink)
				{
					<RadzenLink Text=@item.GetPropertyAsString(RazorFieldConfig.Name)
					            Path=@GetRouteItemPathForLink(item) />
				}
				else
				{
					<RadzenText Text=@item.GetPropertyAsString(RazorFieldConfig.Name)
					            TextStyle=@TextStyle.Body1 TextAlign=@TextAlign.Justify />
				}
				break;
		}
	</Template>
</RadzenGridColumn>
