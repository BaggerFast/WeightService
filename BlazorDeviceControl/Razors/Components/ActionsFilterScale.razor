@inherits BlazorCore.Models.RazorPageBase
@page "/action/filter_scale"

@if (ParentRazor == null)
{
	<ActionsLoad ParentRazor=@(this) DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true/>
}
else
{
	<MudSelect Variant=@Variant.Outlined Margin=@Margin.Dense
	    Class=@BlazorCoreUtuls.GetCssName.MudSelect 
	    Style="margin-top: -3px; margin-left: 2px; margin-right: 2px; margin-bottom: 2px; font-size: 10px; "
	    @bind-Value=@ItemFilterCast>
		@foreach (ScaleModel item in ItemsCast)
		{
			<MudSelectItem T=@ScaleModel Value=@item>@item.Description</MudSelectItem>
		}
	</MudSelect>
}
