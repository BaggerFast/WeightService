@inherits BlazorCore.Models.RazorPageModel
@page "/item/table_head"
@using BlazorCore

@if (TableStyle != null)
{
	<thead>
		<tr>
			@if (TableStyle.ColumnsWidths.Count > 0)
			{
				<th style="color: @TableStyle.Color; text-align: @TableStyle.TextAlign; font-weight: @TableStyle.FontWeight; width: @TableStyle.ColumnsWidths[0]%;">
					@if (TableStyle.ColumnsTitles.Count > 0)
					{
						<RadzenLabel Text=@TableStyle.ColumnsTitles[0]/>
					}
				</th>
			}
			@if (TableStyle.ColumnsWidths.Count > 1)
			{
				<th style="color: @TableStyle.Color; text-align: @TableStyle.TextAlign; font-weight: @TableStyle.FontWeight; width: @TableStyle.ColumnsWidths[1]%;">
					@if (TableStyle.ColumnsTitles.Count > 1)
					{
						<RadzenLabel Text=@TableStyle.ColumnsTitles[1] />
					}
				</th>
			}
			@if (TableStyle.ColumnsWidths.Count > 2)
			{
				<th style="color: @TableStyle.Color; text-align: @TableStyle.TextAlign; font-weight: @TableStyle.FontWeight; width: @TableStyle.ColumnsWidths[2]%;">
					@if (TableStyle.ColumnsTitles.Count > 2)
					{
						<RadzenLabel Text=@TableStyle.ColumnsTitles[2] />
					}
				</th>
			}
			@if (TableStyle.ColumnsWidths.Count > 3)
			{
				<th style="color: @TableStyle.Color; text-align: @TableStyle.TextAlign; font-weight: @TableStyle.FontWeight; width: @TableStyle.ColumnsWidths[3]%;">
					@if (TableStyle.ColumnsTitles.Count > 3)
					{
						<RadzenLabel Text=@TableStyle.ColumnsTitles[3] />
					}
				</th>
			}
		</tr>
	</thead>
}
