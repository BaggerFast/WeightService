@inherits ActionsReloadBase
@page "/action/reload_item"
@using static DataCore.ProjectsEnums

<MudPaper Width="100%" Height="32px;" Style="margin-bottom: 10px;" Square=false >
    @if (!string.IsNullOrEmpty(Title))
    {
        <RadzenLabel Style="margin-top: 3px; margin-left: 1%; font-size: 14px; " Text=@Title />
    }
    
    @if (ParentRazor == null)
    {
        <ActionsLoad ParentRazor=@(this) DataLoadItem=ActionLoad.Loading IsShowProgress=true />
    }
    else
    {
        <RadzenButton Icon="refresh" ButtonStyle=@ButtonStyle.Primary
            Style="margin-top: 0; margin-left: 1%; margin-right: 1%; width: 60px; height: 26px; "
	        Disabled=@(!AppSettings.DataAccess.IsConnected) Click=@(_ => ParentRazor.OnChange()) />
	    @if (ParentRazor.Item != null)
	    {
	        <RadzenIcon Style="margin-top: 3px; margin-left: 1%; font-size: 12px; " Disabled=false ReadOnly=true 
	            Icon=@(ParentRazor.Item.IsMarked ? "delete" : "") />
	    }
    }
</MudPaper>
