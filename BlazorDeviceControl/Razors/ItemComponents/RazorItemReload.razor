@typeparam TItem
@inherits RazorComponentItemBase<TItem>
@page "/item/reload"
@using BlazorCore.Razors
@using MudBlazor
@using Radzen
@using Radzen.Blazor

<MudPaper Width="100%" Height="32px;" Style="margin-bottom: 10px;" Square=false >
    @if (!string.IsNullOrEmpty(Title))
    {
        <RadzenLabel Style="margin-top: 3px; margin-left: 1%; font-size: 14px; " Text=@RazorFieldConfig?.Title />
    }
    
    @if (ParentRazor is null)
    {
        <RazorActionLoad ParentRazor=@(this) ActionLoad=ActionLoadEnum.Loading IsShowProgress=true />
    }
    else
    {
        <RadzenButton Icon="refresh" ButtonStyle=@ButtonStyle.Primary
            Style="margin-top: 0; margin-left: 1%; margin-right: 1%; width: 60px; height: 26px; "
            Disabled=@(!AppSettings.DataAccess.IsConnected()) Click=@(_ => OnChange()) />
	    @if (ParentRazor.SqlItem != null)
	    {
	        <RadzenIcon Style="margin-top: 3px; margin-left: 1%; font-size: 12px; " Disabled=false ReadOnly=true 
	            Icon=@(ParentRazor.SqlItem.IsMarked ? "delete" : "") />
	    }
    }
</MudPaper>
