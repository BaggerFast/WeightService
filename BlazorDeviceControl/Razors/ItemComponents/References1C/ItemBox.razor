@using DataCore.Sql.TableScaleModels.Boxes
@using BlazorDeviceControl.Razors.CustomComponents;
@inherits RazorComponentItemBase<DataCore.Sql.TableScaleModels.Boxes.BoxModel>
@page "/item/box"
@page "/item/box/new"
@page "/item/box/{IdentityUidStr}"

<RazorItemReload TItem="BoxModel" ParentRazor="@(this)" Title="@LocaleCore.DeviceControl.ItemBox"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <RazorItemTableHead CssTableStyleHead="@RazorComponentUtils.GetTableHeadStyle(new() { 20, 30, 20, 30 })"/>
  <tbody>
  <RazorItemTableBody TItem="BoxModel" ParentRazor="@(this)"/>
  <tr>
    <td>@LocaleCore.Table.Name</td>
    <td>
      <RadzenTextBox
        Style="width: 100%;" @bind-Value="@SqlItemCast.Name"/>
    </td>
    <td>@LocaleCore.Table.Weight</td>
    <td>
      <MudNumericLocal @bind-Value="@SqlItemCast.Weight"/>
    </td>
  </tr>
  </tbody>
</MudSimpleTable>

<RazorItemDates SqlItem="@SqlItem"/>
<RazorItemActions TItem="@BoxModel" ButtonSettings="@ButtonSettings" ParentRazor="@(this)"/>
