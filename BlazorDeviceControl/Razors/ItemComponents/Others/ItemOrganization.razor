@using DataCore.Sql.TableScaleModels.Organizations
@inherits RazorComponentItemBase<DataCore.Sql.TableScaleModels.Organizations.OrganizationModel>
@page "/item/organization"
@page "/item/organization/new"
@page "/item/organization/{IdentityUidStr}"

<RazorItemReload TItem="OrganizationModel" ParentRazor="@(this)" Title="@LocaleCore.DeviceControl.ItemContragent"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <RazorItemTableHead CssTableStyleHead="@RazorComponentUtils.GetTableHeadStyle(new() { 20, 30, 20, 30 })"/>
  <tbody>
  <RazorItemTableBody TItem="OrganizationModel" ParentRazor="@(this)"/>
  <tr>
    <td>@LocaleCore.Table.Name</td>
    <td colspan="3">
      <RadzenTextBox Style="width: 100%; " @bind-Value="@SqlItemCast.Name"/>
    </td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.Description</td>
    <td colspan="3">
      <RadzenTextBox Style="width: 100%; " @bind-Value="@SqlItemCast.Description"/>
    </td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.Gln</td>
    <td colspan="3">
      <RadzenNumeric Style="width: 100%; text-align: center; "
                     TValue="int" @bind-Value="@SqlItemCast.Gln"/>
    </td>
  </tr>
  </tbody>
</MudSimpleTable>

<RazorItemActions TItem="@OrganizationModel" ButtonSettings="@ButtonSettings" ParentRazor="@(this)"/>

<RazorItemDates SqlItem="@SqlItem"/>
