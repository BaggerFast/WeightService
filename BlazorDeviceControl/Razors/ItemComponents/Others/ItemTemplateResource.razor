@using DataCore.Sql.TableScaleModels.TemplatesResources
@inherits RazorComponentItemBase<DataCore.Sql.TableScaleModels.TemplatesResources.TemplateResourceDeprecatedModel>
@page "/item/template_resource"
@page "/item/template_resource/new"
@page "/item/template_resource/{IdentityId:long}"

<RazorItemReload TItem="@TemplateResourceDeprecatedModel" ParentRazor="@(this)" Title="@LocaleCore.DeviceControl.ItemTemplateResource"/>

<MudSimpleTable Class="MudItemTable" Dense="true" Bordered="true" FixedHeader="false">
  <RazorItemTableHead CssTableStyleHead="@RazorComponentUtils.GetTableHeadStyle(new() { 20, 30, 20, 30 })"/>
  <tbody>
  <RazorItemTableBody TItem="@TemplateResourceDeprecatedModel" ParentRazor="@(this)"/>
  <tr>
    <td>@LocaleCore.Table.Name</td>
    <td>
      <RadzenTextBox Style="width: 100%; text-align: left;" @bind-Value="@SqlItemCast.Name"/>
    </td>
    <td>@LocaleCore.Table.Description</td>
    <td>
      <RadzenTextBox Style="width: 100%; text-align: left;" @bind-Value="@SqlItemCast.Description"/>
    </td>
  </tr>
  <tr>
    <td>@LocaleCore.Table.Type</td>
    <td>
      <RadzenTextBox Style="width: 100%; text-align: left;" @bind-Value="@SqlItemCast.Type"/>
    </td>
  </tr>
  @if (SqlItemCast.Type != "TTF")
  {
    <tr>
      <td>@LocaleCore.Table.ImageData</td>
      <td colspan="3">
        <RadzenTextArea
          Style="width: 100%; text-align: left; font-size: 12px; line-height: 18px;"
          Rows="25"
          @bind-Value="@(SqlItemCast.ImageData.ValueUnicode)"/>
      </td>
    </tr>
  }
  </tbody>
</MudSimpleTable>

<RazorItemDates SqlItem="@SqlItem"/>
<RazorItemActions TItem="@TemplateResourceDeprecatedModel" ButtonSettings="@ButtonSettings" ParentRazor="@(this)"/>

