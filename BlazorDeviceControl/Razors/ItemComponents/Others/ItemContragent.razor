@inherits RazorComponentItemBase<ContragentModel>
@page "/item/contragent"
@page "/item/contragent/new"
@page "/item/contragent/{IdentityUidStr}"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.SystemComponents

<SystemIdentity ParentRazor=@(this) />

<RazorItemReload TItem=ContragentModel ParentRazor=@(this) Title=@LocaleCore.DeviceControl.ItemContragent />

<MudSimpleTable Style="overflow-x: auto; " Dense=true Bordered=true FixedHeader=false>
    <RazorItemTableHead TItem=ContragentModel ParentRazor=@(this) CssTableStyleHead=@RazorComponentUtils.GetTableHeadStyle(new() { 20, 30, 20, 30 }) />
    <tbody>
		<RazorItemTableBody TItem=ContragentModel ParentRazor=@(this) CssTableStyleBody=@RazorComponentUtils.GetTableBodyStyle(SqlFieldIdentityEnum.Uid, true) />
        <tr>
            <td>@LocaleCore.Table.Name</td>
            <td colspan=3>
                <RadzenTextBox Style="width: 100%; " @bind-Value=@SqlItemCast.Name />
			</td>
        </tr>
        <tr>
            <td>@LocaleCore.Table.FullName</td>
            <td colspan=3>
                <RadzenTextBox Style="width: 100%; " @bind-Value=@SqlItemCast.FullName />
			</td>
        </tr>
        <tr>
            <td>@LocaleCore.Table.IdRRef</td>
            <td>
                <RadzenTextBox Style="width: 100%; text-align: center; background-color: lightgray; "
                    ReadOnly=true @bind-Value=@SqlItemCast.IdRRefAsString />
            </td>
            <td>@LocaleCore.Table.IdDwh</td>
            <td>
                <RadzenNumeric Style="width: 100%; text-align: center; background-color: lightgray; " 
					ReadOnly=true TValue="int" @bind-Value=@SqlItemCast.DwhId />
			</td>
        </tr>
        <tr>
            <td>@LocaleCore.Table.Xml</td>
            <td colspan=3>
                <RadzenTextArea Style="width: 100%; text-align: left; font-size: 11px; line-height: 20px; background-color: lightgray; " 
                    Disabled=false ReadOnly=true
                    TValue="string" @bind-Value=@SqlItemCast.Xml Rows=6 />
			</td>
        </tr>
    </tbody>
</MudSimpleTable>

<RazorItemActions TItem=ContragentModel ParentRazor=@(this) />
<RazorItemDates TItem=ContragentModel ParentRazor=@(this) />
