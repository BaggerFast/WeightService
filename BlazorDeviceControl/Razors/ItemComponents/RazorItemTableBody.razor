@typeparam TItem
@inherits RazorComponentItemBase<TItem>
@page "/item/table_body"
@using BlazorCore.Razors
@using DataCore.Localizations
@using MudBlazor
@using Radzen
@using Radzen.Blazor

<tr>
	<td>
		@switch (CssTableStyleBody.IdentityName)
		{
			case SqlFieldIdentityEnum.Id:
				@LocaleCore.Table.Id;
				break;
			case SqlFieldIdentityEnum.Uid:
				@LocaleCore.Table.Uid;
				break;
		}
	</td>
	<td>
		@if (SqlItem != null)
		{
			@switch (CssTableStyleBody.IdentityName)
			{
				case SqlFieldIdentityEnum.Id:
					<RadzenTextBox 
						Style="width: 100%; text-align: center; background-color: lightgray;"
						ReadOnly=true Value=@SqlItem.Identity.Id.ToString() />
					break;
				case SqlFieldIdentityEnum.Uid:
					<RadzenTextBox 
						Style="width: 100%; text-align: center; background-color: lightgray;"
					    ReadOnly=true Value=@SqlItem.Identity.Uid.ToString() />
					break;
			}
		}
	</td>
	<td>
		@if (CssTableStyleBody.IsShowMarked)
		{
			@LocaleCore.Table.IsMarked
		}
	</td>
	<td>
		@if (CssTableStyleBody.IsShowMarked)
		{
			@if (SqlItem != null)
			{
				<RadzenCheckBox TValue="bool" @bind-Value=@SqlItem.IsMarked />
			}
		}
	</td>
</tr>
