@typeparam TItem
@inherits RazorComponentItemBase<TItem>

@if (ButtonSettings is not null && UserSettings is not null)
{
  <MudPaper Outlined="true" Class="mb-2">
    <MudToolBar Dense="true" DisableGutters="true">
      @if (ButtonSettings.IsShowSave && UserSettings.AccessRightsIsWrite)
      {
        <RadzenButton
          class="RadzenButtonLong"
          Click=@OnItemSave
          ButtonStyle=@ButtonStyle.Primary
          Size=@ButtonSize.Small
          Style="width: 50%; "
          Text=@LocaleCore.DeviceControl.TableActionSave/>
        <MudSpacer/>
      }
      @if (ButtonSettings.IsShowCancel && UserSettings.AccessRightsIsRead)
      {
        <RadzenButton
          class="RadzenButtonLong"
          Click=@OnItemCancel
          ButtonStyle=@ButtonStyle.Secondary Size=@ButtonSize.Small
          Style="width: 50%; "
          Text=@LocaleCore.DeviceControl.TableActionCancel/>
      }
    </MudToolBar>
  </MudPaper>
}
