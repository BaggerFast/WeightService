@inherits RazorPageSectionBase<BarCodeModel, SqlTableBase>
@page "/items/barcodes"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.ItemsComponents.Components
@using BlazorDeviceControl.Razors.ShareComponents

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload TItems=BarCodeModel TItemFilter=BarCodeModel ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionBarCodeTypes />
    
    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem=BarCodeModel 
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
	    <Columns >
            <SectionFieldIsMarked TItems=BarCodeModel TItemFilter=BarCodeModel ParentRazor=@(this) />
            <SectionFieldIdentity TItems=BarCodeModel TItemFilter=BarCodeModel ParentRazor=@(this) />
            <SectionField TItems=BarCodeModel TItemFilter=BarCodeModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("12%", true))
                      RazorFieldConfig=@RazorFieldConfigUtils.Base.GetChangeDt() />
            <SectionField TItems=BarCodeModel TItemFilter=BarCodeModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("50%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.BarCode.GetValue() />
	    </Columns>
    </RadzenGrid>

    <SectionButtons TItems=BarCodeModel TItemFilter=BarCodeModel ParentRazor=@(this) />
}
