@inherits RazorPageSectionBase<BarCodeTypeModel, SqlTableBase>
@page "/items/barcodetypes"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.ItemsComponents.Components
@using BlazorDeviceControl.Razors.ShareComponents

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload TItems=BarCodeTypeModel TItemFilter=BarCodeTypeModel ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionBarCodeTypes />
    
    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem=BarCodeTypeModel 
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
            <SectionFieldIsMarked TItems=BarCodeTypeModel TItemFilter=BarCodeTypeModel ParentRazor=@(this) />
            <SectionFieldIdentity TItems=BarCodeTypeModel TItemFilter=BarCodeTypeModel ParentRazor=@(this) />
            <SectionField TItems=BarCodeTypeModel TItemFilter=BarCodeTypeModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("12%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.Base.GetChangeDt() />
            <RadzenGridColumn 
                TItem=BarCodeTypeModel Title=@LocaleCore.Table.Name Width="60%" SortProperty="Name" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemBarCodeType}/{itemCast.Identity.Uid}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <SectionButtons TItems=BarCodeTypeModel TItemFilter=BarCodeTypeModel ParentRazor=@(this) />
}