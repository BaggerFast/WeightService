@inherits RazorPageSectionBase<ProductionFacilityModel, SqlTableBase>
@page "/items/production_facilities"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.ItemsComponents.Components
@using BlazorDeviceControl.Razors.ShareComponents

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload TItems=ProductionFacilityModel TItemFilter=ProductionFacilityModel ParentRazor=@(this) Title=@LocaleCore.DeviceControl.ItemProductionFacility />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem=ProductionFacilityModel 
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
            <SectionFieldIsMarked TItems=ProductionFacilityModel TItemFilter=ProductionFacilityModel ParentRazor=@(this) />
            <SectionFieldIdentity TItems=ProductionFacilityModel TItemFilter=ProductionFacilityModel ParentRazor=@(this) />
            <SectionField TItems=ProductionFacilityModel TItemFilter=ProductionFacilityModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("19%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.ProductionFacility.GetName() />
            <SectionField TItems=ProductionFacilityModel TItemFilter=ProductionFacilityModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("55%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.ProductionFacility.GetAddress() />
        </Columns>
    </RadzenGrid>

    <SectionButtons TItems=ProductionFacilityModel TItemFilter=ProductionFacilityModel ParentRazor=@(this) />
}
