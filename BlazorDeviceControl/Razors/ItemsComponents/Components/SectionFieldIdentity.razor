@typeparam TItems
@typeparam TItemFilter
@inherits RazorPageSectionBase<TItems, TItemFilter>
@page "/items/field_identity"
@using BlazorCore.Razors

<RadzenGridColumn TItem=TItems TextAlign=TextAlign.Center Width=@(CssStyleRadzenColumn.Width) Title=@(GetColumnIdentityName<TItems>())>
	<Template Context="item">
		@if (CssStyleRadzenColumn.IsShowLink)
		{
			<RadzenLink Style="width: 100%; margin-left: 0;" Text=@item.Identity.GetValueAsString()
				Path=@(GetRouteItemPath(item)) />
		}
		else
		{
			<RadzenLabel Style="width: 100%; margin-left: 0;" Text=@item.Identity.GetValueAsString() />
		}
	</Template>
</RadzenGridColumn>
