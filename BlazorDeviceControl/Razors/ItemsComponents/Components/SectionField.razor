@typeparam TItems
@typeparam TItemFilter
@inherits RazorPageSectionBase<TItems, TItemFilter>
@page "/items/field"
@using BlazorCore.Razors

<RadzenGridColumn TItem=TItems Type=@RazorFieldConfig.Type TextAlign=@RazorFieldConfig.TextAlign
                  Width=@(CssStyleRadzenColumn.Width) Title=@RazorFieldConfig.Title>
	<Template Context="item">
		@if (Template is not null)
		{
			@Template
		}
		else
		{
			@switch (RazorFieldConfig.Type)
			{
				case "bool":
					<RadzenCheckBox Disabled=true TValue="bool" Value=@item.GetPropertyAsBool(RazorFieldConfig.Name)/>
					break;
				default:
					@if (CssStyleRadzenColumn.IsShowLink)
					{
						<RadzenLink Style="width: 100%; margin-left: 0;" Text=@item.GetPropertyAsString(RazorFieldConfig.Name)
						            Path=@GetRouteItemPathForLink(item)/>
					}
					else
					{
						<RadzenLabel Style="width: 100%; margin-left: 0;" Text=@item.GetPropertyAsString(RazorFieldConfig.Name)/>
					}
					break;
			}
		}
	</Template>
</RadzenGridColumn>
