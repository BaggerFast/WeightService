@inherits RazorPageSectionBase<TemplateResourceModel, SqlTableBase>
@page "/items/templates_resources"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.ItemsComponents.Components
@using BlazorDeviceControl.Razors.ShareComponents

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload TItems=TemplateResourceModel TItemFilter=TemplateResourceModel ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionTemplateResources />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem=TemplateResourceModel 
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
            <SectionFieldIsMarked TItems=TemplateResourceModel TItemFilter=TemplateResourceModel ParentRazor=@(this) />
            <SectionFieldIdentity TItems=TemplateResourceModel TItemFilter=TemplateResourceModel ParentRazor=@(this) />

            <RadzenGridColumn 
                TItem=TemplateResourceModel Property="Type" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.Type 
                Type="string" Width="10%" />
            <RadzenGridColumn 
                TItem=TemplateResourceModel Title=@LocaleCore.Table.Name Width="25%" SortProperty="Name" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemTemplateResource}/{itemCast.Identity.Id}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <SectionField TItems=TemplateResourceModel TItemFilter=TemplateResourceModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("40%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.Version.GetDescription() />
            <RadzenGridColumn 
                TItem=TemplateResourceModel Property="ImageData.Info"
                Title=@LocaleCore.Table.ImageDataInfo 
                Type="string" Width="25%" />
        </Columns>
    </RadzenGrid>

    <SectionButtons TItems=TemplateResourceModel TItemFilter=TemplateResourceModel ParentRazor=@(this) />
}
