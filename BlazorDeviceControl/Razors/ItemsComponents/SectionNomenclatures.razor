@inherits RazorPageSectionBase<NomenclatureModel, SqlTableBase>
@page "/items/nomenclatures"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.ItemsComponents.Components
@using BlazorDeviceControl.Razors.ShareComponents

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload TItems=NomenclatureModel TItemFilter=NomenclatureModel ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionNomenclatures />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem=NomenclatureModel 
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
            <SectionFieldIsMarked TItems=NomenclatureModel TItemFilter=NomenclatureModel ParentRazor=@(this) />
            <SectionFieldIdentity TItems=NomenclatureModel TItemFilter=NomenclatureModel ParentRazor=@(this) />
            <SectionField TItems=NomenclatureModel TItemFilter=NomenclatureModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("12%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.Base.GetChangeDt() />
            @*
            <RadzenGridColumn 
                TItem=NomenclatureModel TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.ChangeDt Type="date" Width="15%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.UriRouteItem.Nomenclature}/{itemCast.Identity.Id}")
                        TValue="string" Value=@itemCast.ChangeDt Disabled=false ReadOnly=true DateFormat="yyyy-MM-dd HH:mm:ss" />
                </Template>
            </RadzenGridColumn>*@
            <RadzenGridColumn TItem=NomenclatureModel Title=@LocaleCore.Table.Name Width="45%" >
	            <Template Context="itemCast" >
		            <RadzenLink Style="width: 100%; margin-left: 0; "
		                        Path=@($"{LocaleCore.DeviceControl.RouteItemNomenclature}/{itemCast.Identity.Id}")
		                        Text=@itemCast.Name />
	            </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem=NomenclatureModel Property="Code" 
                Title=@LocaleCore.Table.Code
                Type="string" Width="10%" />
            <RadzenGridColumn 
                TItem=NomenclatureModel TextAlign=TextAlign.Center Width="5%" 
                Title=@LocaleCore.Table.Weighted >
                <Template Context="itemCast" >
                    <RadzenCheckBox Disabled=true ReadOnly=true TValue="bool" @bind-Value=@itemCast.Weighted />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <SectionButtons TItems=NomenclatureModel TItemFilter=NomenclatureModel ParentRazor=@(this) />
}
