@inherits RazorPageSectionBase<AccessModel, SqlTableBase>
@page "/items/access"

@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.ItemsComponents.Components
@using BlazorDeviceControl.Razors.ShareComponents

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
	<SectionReload TItems=AccessModel TItemFilter=AccessModel ParentRazor=@(this) Title=@LocaleCore.Strings.AccessRights />

    <RadzenGrid Style="margin-top: 5px; " Data=@ItemsCast TItem=AccessModel 
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings)) RowRender=@RowRender
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
	    <Columns >
			<SectionFieldIsMarked TItems=AccessModel TItemFilter=AccessModel ParentRazor=@(this) />
			<SectionFieldIdentity TItems=AccessModel TItemFilter=AccessModel ParentRazor=@(this) />
			<SectionField TItems=AccessModel TItemFilter=AccessModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("13%", true))
				RazorFieldConfig=@RazorFieldConfigUtils.Base.GetChangeDt() />
			<SectionField TItems=AccessModel TItemFilter=AccessModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("30%", true))
					  RazorFieldConfig=@RazorFieldConfigUtils.Access.GetUser() />
			<SectionField TItems=AccessModel TItemFilter=AccessModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("30%", true))
				RazorFieldConfig=@RazorFieldConfigUtils.Access.GetRights() />
	    </Columns>
    </RadzenGrid>

    <SectionButtons TItems=AccessModel TItemFilter=AccessModel ParentRazor=@(this) />
}
