@inherits RazorPageSectionBase<PrinterResourceModel, SqlTableBase>
@page "/items/printers_resources"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.ItemsComponents.Components
@using BlazorDeviceControl.Razors.ShareComponents

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload TItems=PrinterResourceModel TItemFilter=PrinterResourceModel ParentRazor=@(this) Title=@LocaleCore.Print.Resources />

    <RadzenGrid Style="margin-top: 5px;"
        Data=@ItemsCast TItem=PrinterResourceModel 
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns>
            <SectionFieldIsMarked TItems=PrinterResourceModel TItemFilter=PrinterResourceModel ParentRazor=@(this) />
            <SectionFieldIdentity TItems=PrinterResourceModel TItemFilter=PrinterResourceModel ParentRazor=@(this) />
            <SectionField TItems=PrinterResourceModel TItemFilter=PrinterResourceModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("25%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.PrinterResource.GetDescription() />
            <SectionField TItems=PrinterResourceModel TItemFilter=PrinterResourceModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("30%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.PrinterResource.GetPrinter(GetRouteItemPathShort<PrinterModel>()) />
            <SectionField TItems=PrinterResourceModel TItemFilter=PrinterResourceModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("30%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.PrinterResource.GetResource(GetRouteItemPathShort<TemplateResourceModel>()) />
        </Columns>
    </RadzenGrid>

    <SectionButtons TItems=PrinterResourceModel TItemFilter=PrinterResourceModel ParentRazor=@(this) />
}
