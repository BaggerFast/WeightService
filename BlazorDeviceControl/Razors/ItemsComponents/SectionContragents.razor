@inherits RazorPageSectionBase<ContragentModel>
@page "/items/contragents"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.ItemsComponents.Components
@using BlazorDeviceControl.Razors.ShareComponents

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload TItem=ContragentModel ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionContragents />
    
    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem=ContragentModel 
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
	        <SectionFieldIsMarked TItem=ContragentModel ParentRazor=@(this) />
	        <SectionFieldIdentity TItem=ContragentModel ParentRazor=@(this) />
            <SectionField TItem=ContragentModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("12%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.Base.GetChangeDt() />
            <RadzenGridColumn 
                TItem=ContragentModel Title=@LocaleCore.Table.Name Width="25%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemContragent}/{itemCast.Identity.Uid}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem=ContragentModel Property="FullName" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.Name
                Type="string" Width="35%" />
        </Columns>
    </RadzenGrid>

    <SectionButtons TItem=ContragentModel ParentRazor=@(this) />
}