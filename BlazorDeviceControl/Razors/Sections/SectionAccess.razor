@inherits BlazorCore.Models.RazorPageModel
@page "/section/access"
@using ActionsLoad = BlazorDeviceControl.Razors.Components.ActionsLoad
@using ActionsReloadSection = BlazorDeviceControl.Razors.Components.ActionsReloadSection
@using BlazorDeviceControl.Razors.Components

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@(this) Title=@LocaleCore.Strings.AccessRights />

    <RadzenGrid Style="margin-top: 5px; " 
        Data=@ItemsCast TItem="AccessModel" @bind-Value=@ItemObject
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings, false, false))
        RowRender=@RowRender
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
            @if (IsShowMarked)
            {
                <RadzenGridColumn TItem="AccessModel" TextAlign=TextAlign.Center SortProperty="IsMarked" 
                    Title=@LocaleCore.Table.IsMarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast" >
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn 
                TItem="AccessModel" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.CreateDt Type="date" Width="20%">
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemAccess}/{itemCast.Identity.Uid}")
                        Text=@itemCast.CreateDt.ToString("yyyy-MM-dd HH:mm:ss") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="AccessModel" TextAlign=TextAlign.Center
                    Title=@LocaleCore.Table.ChangeDt Type="date" Width="20%">
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemAccess}/{itemCast.Identity.Uid}")
                        Text=@itemCast.ChangeDt.ToString("yyyy-MM-dd HH:mm:ss") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="AccessModel" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.User Type="string" Width="30%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemAccess}/{itemCast.Identity.Uid}")
                        Text=@itemCast.User />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="AccessModel" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.AccessLevel Type="string" Width="30%">
                <Template Context="itemCast" >
                    <RadzenLabel Text=@UserSettings.GetDescriptionAccessRights(itemCast.Rights) Disabled=false ReadOnly=true />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@(this) />
}
