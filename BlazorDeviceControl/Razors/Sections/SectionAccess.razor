@inherits BlazorCore.Models.RazorPageSectionBase<AccessModel>
@page "/section/access"

@using BlazorDeviceControl.Razors.Components
@using BlazorDeviceControl.Razors.Sections.Components

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload T=AccessModel ParentRazor=@(this) Title=@LocaleCore.Strings.AccessRights />

    <RadzenGrid Style="margin-top: 5px; " 
        Data=@ItemsCast TItem="AccessModel" @bind-Value=@ItemObject
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings))
        RowRender=@RowRender
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
	    <Columns >
			<SectionFieldIsMarked T=AccessModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("4%", false)) />
			<SectionFieldIdentity T=AccessModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("20%", true)) />
			<SectionField T=AccessModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("12%", true)) 
				FieldName=@(nameof(VersionModel.ChangeDt)) Title=@LocaleCore.Table.ChangeDt />

		    <RadzenGridColumn TItem="AccessModel" TextAlign=TextAlign.Left Title=@LocaleCore.Table.User Type="string" Width="30%">
			    <Template Context="itemCast">
				    <RadzenLink Style="width: 100%; margin-left: 0;"
				                Path=@($"{LocaleCore.DeviceControl.RouteItemAccess}/{itemCast.Identity.Uid}")
				                Text=@itemCast.User/>
			    </Template>
		    </RadzenGridColumn>
		    <RadzenGridColumn TItem="AccessModel" TextAlign=TextAlign.Left
		                      Title=@LocaleCore.Table.AccessLevel Type="string" Width="30%">
			    <Template Context="itemCast">
				    <RadzenLabel Text=@UserSettings.GetDescriptionAccessRights(itemCast.Rights) Disabled=false ReadOnly=true/>
			    </Template>
		    </RadzenGridColumn>
	    </Columns>
    </RadzenGrid>

    <SectionButtons T=AccessModel ParentRazor=@(this) />
}
