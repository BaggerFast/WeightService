@inherits BlazorCore.Models.RazorPageSectionBase<PluWeighingModel>
@page "/section/plu_weighings"
@using BlazorDeviceControl.Razors.Components

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload T=PluWeighingModel ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionPlusWeighings />

    <RadzenGrid Style="margin-top: 5px;"
        Data=@ItemsCast TItem="PluWeighingModel" @bind-Value=@ItemObject
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns>
            @if (IsShowMarked)
            {
                <RadzenGridColumn TItem="PluWeighingModel" TextAlign=TextAlign.Center SortProperty="IsMarked" 
                    Title=@LocaleCore.Table.IsMarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast" >
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            @*<RadzenGridColumn TItem="PluWeighingModel" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.WeithingDate
                Type="date" Width="17.5%">
	            <Template Context="itemCast">
		            <RadzenLink Style="width: 100%; margin-left: 0;"
		                Path=@GetPath(UriRouteItem.PluWeighing, itemCast, itemCast.Identity.Id)
		                Text=@itemCast.ProductDt.ToString("yyyy-MM-dd HH:mm:ss")/>
	            </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluWeighingModel" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.DayOfWeek
                Type="string" Width="12.5%">
                <Template Context="itemCast" >
                    <RadzenLabel Style="width: 100%; margin-left: 0; "
                        Text=@EnumUtils.GetDayOfWeekRu(itemCast.ProductDt.DayOfWeek) />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluWeighingModel" Property="Scale.Description" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.Scale
                Type="string" Width="20.0%" />
            <RadzenGridColumn TItem="PluWeighingModel" Property="Scale.Host.HostName" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.Host
                Type="string" Width="20.0%" />
            <RadzenGridColumn TItem="PluWeighingModel" Property="Plu.GoodsName" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.GoodsName
                Type="string" Width="33.0%" />
            <RadzenGridColumn TItem="PluWeighingModel" Property="TareWeight" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.TareWeight
                Type="decimal" Width="13.0%" />
            <RadzenGridColumn TItem="PluWeighingModel" Property="NetWeight" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.NetWeight
                Type="decimal" Width="13.0%" />
            <RadzenGridColumn TItem="PluWeighingModel" Property="RegNum" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.RegNum
                Type="int" Width="16.0%" />*@
        </Columns>
    </RadzenGrid>

    <SectionButtons T=PluWeighingModel ParentRazor=@(this) />
}
