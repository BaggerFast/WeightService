@inherits BlazorCore.Models.RazorPageModel
@page "/section/plus_obsolete"
@using BlazorCore
@using BlazorDeviceControl.Razors.Components
@using ActionsLoad = BlazorDeviceControl.Razors.Components.ActionsLoad
@using ActionsReloadSection = BlazorDeviceControl.Razors.Components.ActionsReloadSection

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionPlus
        IsShowMarked=@IsShowMarked IsShowAdditionalFilter=@IsShowAdditionalFilter 
        ItemsFilter=@ItemsFilter ItemFilter=@ItemFilter 
        FilterCaption=LocaleCore.DeviceControl.ItemScale FilterName=@nameof(ScaleModel) />

    <RadzenGrid Style="margin-top: 5px;"
        Data=@ItemsCast TItem="PluObsoleteModel" @bind-Value=@ItemObject
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns>
            @if (IsShowMarked)
            {
                <RadzenGridColumn TItem="PluObsoleteModel" Width="3.5%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.IsMarkedShort >
                    <Template Context="itemCast" >
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn TItem="PluObsoleteModel" Width="5%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.NumberShort>
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; " 
                        Path=@($"{LocaleCore.DeviceControl.RouteItemPluObsolete}/{itemCast.Identity.Id}")
                        Text=@itemCast.PluNumber.ToString() />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluObsoleteModel" Width="5%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.ActiveShort >
                <Template Context="itemCast" >
                    <RadzenCheckBox Disabled=true ReadOnly=true TValue="bool" @bind-Value=@itemCast.Active />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluObsoleteModel" Width="5%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.WeightShort >
                <Template Context="itemCast" >
                    <RadzenCheckBox Disabled=true ReadOnly=true TValue="bool" @bind-Value=@itemCast.IsCheckWeight />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluObsoleteModel" Width="5%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.Description >
                <Template Context="itemCast" >
                    <RadzenCheckBox Disabled=true ReadOnly=true TValue="bool" Value=@(!string.IsNullOrEmpty(itemCast.GoodsDescription)) />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluObsoleteModel" Width="19%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.GoodsName >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemPluObsolete}/{itemCast.Identity.Id}")
                        Text=@itemCast.GoodsName />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluObsoleteModel" Width="14%" Title=@LocaleCore.Table.Template >
                <Template Context="itemCast" >
                    <RadzenLabel Style="white-space: pre-wrap;" Text=@itemCast.Template.Title></RadzenLabel>
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluObsoleteModel" Property="Gtin" Width="10%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.Gtin />
            <RadzenGridColumn TItem="PluObsoleteModel" Width="21%" Title=@LocaleCore.Table.Nomenclature >
                <Template Context="itemCast" >
                    <RadzenLabel Style="white-space: pre-wrap;" Text=@itemCast.Nomenclature.Name></RadzenLabel>
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluObsoleteModel" Width="7%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.ShelfLifeDaysShort >
	            <Template Context="itemCast" >
		            <RadzenLabel Style="white-space: pre-wrap;" Text=@itemCast.GoodsShelfLifeDays.ToString() />
	            </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluObsoleteModel" Width="7%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.GoodsTareWeightShort >
	            <Template Context="itemCast" >
                    <RadzenLabel Style="white-space: pre-wrap;" Text=@itemCast.GoodsTareWeight.ToString(CultureInfo.InvariantCulture) />
	            </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PluObsoleteModel" Width="7%" TextAlign=TextAlign.Center Title=@LocaleCore.Table.GoodsBoxQuantlyShort >
	            <Template Context="itemCast" >
                    <RadzenLabel Style="white-space: pre-wrap;" Text=@itemCast.GoodsBoxQuantly.ToString() />
	            </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@(this) />
}
