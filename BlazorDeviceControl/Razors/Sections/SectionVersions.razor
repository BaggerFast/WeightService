@inherits BlazorCore.Models.RazorPageSectionBase<VersionModel>
@page "/section/versions"
@using BlazorDeviceControl.Razors.Components
@using BlazorDeviceControl.Razors.Sections.Components

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload T=VersionModel ParentRazor=@(this) Title=@LocaleCore.Strings.VersionsDb />

    <RadzenGrid Style="margin-top: 5px; " 
        Data=@ItemsCast TItem="VersionModel" @bind-Value=@ItemObject
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
            <SectionField T=VersionModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("10%"))
                FieldName=@(nameof(VersionModel.ReleaseDt)) Title=@LocaleCore.Table.ReleaseDt />
            <SectionField T=VersionModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("10%", false))
                FieldName=@(nameof(VersionModel.Version)) Title=@LocaleCore.Table.Version />
            <SectionField T=VersionModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("80%", false))
                FieldName=@(nameof(VersionModel.Description)) Title=@LocaleCore.Table.Description TextAlign=TextAlign.Left />
        </Columns>
    </RadzenGrid>

    <SectionButtons T=VersionModel ParentRazor=@(this) />
}
