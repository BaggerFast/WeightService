@inherits BlazorCore.Models.RazorPageSectionBase<ContragentModel>
@page "/section/contragents"

@using BlazorDeviceControl.Razors.Components
@using BlazorDeviceControl.Razors.Sections.Componets

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload T=ContragentModel ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionContragents />
    
    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="ContragentModel" @bind-Value=@ItemObject
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
	        <SectionFieldIsMarked T=ContragentModel ParentRazor=@(this) />
            <RadzenGridColumn 
                TItem="ContragentModel" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.CreateDt Type="date" Width="20%">
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemPluLabel}/{itemCast.Identity.Uid}")
                        Text=@itemCast.CreateDt.ToString("yyyy-MM-dd HH:mm:ss") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ContragentModel" TextAlign=TextAlign.Center
                    Title=@LocaleCore.Table.ChangeDt Type="date" Width="20%">
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemPluLabel}/{itemCast.Identity.Uid}")
                        Text=@itemCast.ChangeDt.ToString("yyyy-MM-dd HH:mm:ss") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ContragentModel" Title=@LocaleCore.Table.Name Width="25%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemContragent}/{itemCast.Identity.Uid}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ContragentModel" Property="FullName" TextAlign=TextAlign.Left
                Title=@LocaleCore.Table.Name
                Type="string" Width="35%" />
        </Columns>
    </RadzenGrid>

    <SectionButtons T=ContragentModel ParentRazor=@(this) />
}