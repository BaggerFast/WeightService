@inherits BlazorCore.Models.RazorPageSectionBase<PrinterModel>
@page "/section/printers"
@using BlazorDeviceControl.Razors.Components
@using BlazorDeviceControl.Razors.Sections.Components

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload TItem=PrinterModel ParentRazor=@(this) PageTitle=@LocaleCore.Print.Names />

    <RadzenGrid Style="margin-top: 5px;"
        Data=@ItemsCast TItem="PrinterModel" 
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns>
            <SectionFieldIsMarked TItem=PrinterModel ParentRazor=@(this) />
            <SectionFieldIdentity TItem=PrinterModel ParentRazor=@(this) />
            <SectionField TItem=PrinterModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("12%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.Base.GetChangeDt() />
            <RadzenGridColumn TItem="PrinterModel" PageTitle=@LocaleCore.Print.Name Width="18%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                                Path=@($"{LocaleCore.DeviceControl.RouteItemPrinter}/{itemCast.Identity.Id}") 
                                Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PrinterModel" PageTitle=@LocaleCore.Print.Model Width="17%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemPrinterType}/{itemCast.PrinterType.Identity.Id}") 
                        Text=@itemCast.PrinterType.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PrinterModel" PageTitle=@LocaleCore.Print.Ip Type="string" Width="14%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; " Target="_blank" 
                        Path=@itemCast.Link
                        Text=@itemCast.Ip />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PrinterModel" Property="HttpStatusCode" TextAlign=TextAlign.Center
                PageTitle=@LocaleCore.Table.HttpStatusCode Type="string" Width="8%" >
                <Template Context="itemCast" >
                    <RadzenIcon 
                        Icon=@(itemCast.HttpStatusCode == System.Net.HttpStatusCode.OK ? "network_wifi_3_bar" : "signal_wifi_statusbar_null")/>
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PrinterModel" Property="HttpStatusException.Message" 
                PageTitle=@LocaleCore.Table.HttpStatusException Type="string" Width="14%" />
            <RadzenGridColumn TItem="PrinterModel" Property="Port" 
                TextAlign=TextAlign.Center Type="string" Width="7%" 
                PageTitle=@LocaleCore.Print.PortShort />
            <RadzenGridColumn TItem="PrinterModel" Property="MacAddress.ValuePrettyLookMinus" 
                TextAlign=TextAlign.Center Type="string" Width="14%" 
                PageTitle=@LocaleCore.Print.Mac />
        </Columns>
    </RadzenGrid>

    <SectionButtons TItem=PrinterModel ParentRazor=@(this) />
}
