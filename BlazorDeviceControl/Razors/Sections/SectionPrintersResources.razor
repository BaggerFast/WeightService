@inherits BlazorCore.Models.RazorPageSectionBase<PrinterResourceModel>
@page "/section/printers_resources"
@using BlazorDeviceControl.Razors.Components
@using BlazorDeviceControl.Razors.Sections.Components

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload T=PrinterResourceModel ParentRazor=@(this) Title=@LocaleCore.Print.Resources />

    <RadzenGrid Style="margin-top: 5px;"
        Data=@ItemsCast TItem="PrinterResourceModel" 
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns>
            <SectionFieldIsMarked T=PrinterResourceModel ParentRazor=@(this) />
	        <SectionFieldIdentity T=PrinterResourceModel ParentRazor=@(this) />
            <SectionField T=PrinterResourceModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("25%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.Version.GetDescription() />
            <RadzenGridColumn TItem="PrinterResourceModel" Title=@LocaleCore.Table.Printer Width="30%">
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemPrinter}/{itemCast.Printer.Identity.Id}")
                        Text=@itemCast.Printer.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="PrinterResourceModel" Title=@LocaleCore.Table.Resource Width="30%">
                <Template Context="itemCast" >
                    <RadzenLabel Style="width: 100%; margin-left: 0; " Text=@itemCast.Resource.Name />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <SectionButtons T=PrinterResourceModel ParentRazor=@(this) />
}
