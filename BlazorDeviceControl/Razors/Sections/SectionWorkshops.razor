@inherits BlazorCore.Models.RazorPageBase
@page "/section/workshops"
@using ActionsLoad = BlazorDeviceControl.Razors.Components.ActionsLoad
@using ActionsReloadSection = BlazorDeviceControl.Razors.Components.ActionsReloadSection
@using BlazorDeviceControl.Razors.Components

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionWorkShops />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="WorkShopModel" @bind-Value=@ItemObject
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
            @if (IsShowMarked)
            {
                <RadzenGridColumn TItem="WorkShopModel" TextAlign=TextAlign.Center SortProperty="IsMarked" 
                    Title=@LocaleCore.Table.IsMarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast" >
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn 
                TItem="WorkShopModel" Title=@LocaleCore.Table.WorkShopName Width="50%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemWorkShop}/{itemCast.Identity.Id}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="WorkShopModel" Title=@LocaleCore.Table.ProductionFacilityName Width="50%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemProductionFacility}/{itemCast.ProductionFacility.Identity.Id}")
                        Text=@itemCast.ProductionFacility.Name />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@(this) />
}
