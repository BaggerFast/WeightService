@inherits BlazorCore.Models.RazorPageSectionBase<TemplateResourceModel>
@page "/section/templates_resources"
@using BlazorDeviceControl.Razors.Components

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload T=TemplateResourceModel ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionTemplateResources />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="TemplateResourceModel" @bind-Value=@ItemObject
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
            @if (RazorConfig.IsShowMarked)
            {
                <RadzenGridColumn TItem="TemplateResourceModel" TextAlign=TextAlign.Center SortProperty="IsMarked" 
                    Title=@LocaleCore.Table.IsMarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast" >
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn 
                TItem="TemplateResourceModel" Property="Type" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.Type 
                Type="string" Width="10%" />
            <RadzenGridColumn 
                TItem="TemplateResourceModel" Title=@LocaleCore.Table.Name Width="25%" SortProperty="Name" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemTemplateResource}/{itemCast.Identity.Id}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="TemplateResourceModel" Property="Description"
                Title=@LocaleCore.Table.Description 
                Type="string" Width="40%" />
            <RadzenGridColumn 
                TItem="TemplateResourceModel" Property="ImageData.Info"
                Title=@LocaleCore.Table.ImageDataInfo 
                Type="string" Width="25%" />
        </Columns>
    </RadzenGrid>

    <SectionButtons T=TemplateResourceModel ParentRazor=@(this) />
}
