@inherits BlazorCore.Models.RazorBase
@page "/section/templateresources"
@using ActionsLoad = BlazorDeviceControl.Razors.Components.ActionsLoad
@using ActionsReloadSection = BlazorDeviceControl.Razors.Components.ActionsReloadSection
@using BlazorDeviceControl.Razors.Components

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ShareEnums.ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@this Title=@LocaleData.DeviceControl.Sections.TemplateResources />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="TemplateResourceEntity" @bind-Value=@ItemObject
        RowDoubleClick=@(args => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
            @if (IsShowMarkedItems)
            {
                <RadzenGridColumn TItem="TemplateResourceEntity" TextAlign=TextAlign.Center SortProperty="IsMarked" 
                    Title=@LocaleCore.Table.IsMarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast" >
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn 
                TItem="TemplateResourceEntity" Property="Type" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.Type 
                Type="string" Width="10%" />
            <RadzenGridColumn 
                TItem="TemplateResourceEntity" Title=@LocaleCore.Table.Name Width="25%" SortProperty="Name" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleData.DeviceControl.UriRouteItem.TemplateResource}/{itemCast.IdentityId}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="TemplateResourceEntity" Property="Description"
                Title=@LocaleCore.Table.Description 
                Type="string" Width="40%" />
            <RadzenGridColumn 
                TItem="TemplateResourceEntity" Property="ImageData.Info"
                Title=@LocaleCore.Table.ImageDataInfo 
                Type="string" Width="25%" />
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@this />
}
