@inherits RazorPageSectionBase<ScaleModel>
@page "/section/scales"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.Components
@using BlazorDeviceControl.Razors.Sections.Components

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload TItem=ScaleModel ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionScales />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem=ScaleModel 
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
			<SectionFieldIsMarked TItem=ScaleModel ParentRazor=@(this) />
            <SectionFieldIdentity TItem=ScaleModel ParentRazor=@(this) />
            <SectionField TItem=ScaleModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("10%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.Scale.GetNumber() />
            <SectionField TItem=ScaleModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("20%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.Scale.GetDescription() />
            <SectionField TItem=ScaleModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("20%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.Scale.GetHost(GetRouteItemPathShort<HostModel>()) />
            <SectionField TItem=ScaleModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("10%"))
                RazorFieldConfig=@RazorFieldConfigUtils.Scale.GetDeviceIp() />
            <SectionField TItem=ScaleModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("10%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.Scale.GetPrinterMain(GetRouteItemPathShort<PrinterModel>()) />
            <SectionField TItem=ScaleModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("10%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.Scale.GetWorkShop(GetRouteItemPathShort<WorkShopModel>()) />
            @*
            <RadzenGridColumn TItem=ScaleModel Title=@LocaleCore.Print.NameMain Width="20%">
                <Template Context="item" >
                    <RadzenLink Style="width: 100%; "
                        Path=@(item.PrinterMain is null ? "" : $"{LocaleCore.DeviceControl.RouteItemPrinter}/{item.PrinterMain.Identity.Id}")
                        Text=@(item.PrinterMain is null ? LocaleCore.Table.FieldNull : item.PrinterMain.Name) />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem=ScaleModel Title=@LocaleCore.Table.WorkShopName Width="20%" TextAlign=TextAlign.Left >
	            <Template Context="item">
		            <RadzenLink Style="width: 100%; "
		                Path=@(item.WorkShop is null ? "" : $"{LocaleCore.DeviceControl.RouteItemWorkShop}/{item.WorkShop.Identity.Id}")
                        Text=@(item.WorkShop is null ? LocaleCore.Table.FieldNull : item.WorkShop.Name) />
	            </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem=ScaleModel TextAlign=TextAlign.Center Title=@LocaleCore.Table.IsKneading Width="5%">
                <Template Context="item" >
                    <RadzenCheckBox Disabled=true ReadOnly=true TValue="bool" @bind-Value=@item.IsKneading />
                </Template>
            </RadzenGridColumn>*@
        </Columns>
    </RadzenGrid>

    <SectionButtons TItem=ScaleModel ParentRazor=@(this) />
}
