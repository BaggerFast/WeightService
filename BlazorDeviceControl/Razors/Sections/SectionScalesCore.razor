@inherits BlazorCore.Models.RazorPageSectionBase<ScaleModel>
@page "/section/scales_core"
@using ActionsLoad = BlazorDeviceControl.Razors.Components.ActionsLoad
@using ActionsReloadSection = BlazorDeviceControl.Razors.Components.ActionsReloadSection
@using BlazorDeviceControl.Razors.Components

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionScales />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="ScaleModel" @bind-Value=@ItemObject
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
            @if (IsShowMarked)
            {
                <RadzenGridColumn TItem="ScaleModel" TextAlign=TextAlign.Center SortProperty="IsMarked" 
                    Title=@LocaleCore.Table.IsMarkedShort Width="3.5%">
                    <Template Context="itemCast" >
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn TItem="ScaleModel" Title=@LocaleCore.Table.Number Width="5%" >
	            <Template Context="itemCast" >
		            <RadzenLink Style="width: 100%; "
		                Path=@(IsPluNew ? $"{LocaleCore.DeviceControl.RouteItemScale}/{itemCast.Identity.Id}"
							: $"{LocaleCore.DeviceControl.RouteItemScaleObsolete}/{itemCast.Identity.Id}")
		                Text=@itemCast.Number.ToString() />
	            </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ScaleModel" Title=@LocaleCore.Table.Description Width="20%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; "
                        Path=@(IsPluNew ? $"{LocaleCore.DeviceControl.RouteItemScale}/{itemCast.Identity.Id}"
							: $"{LocaleCore.DeviceControl.RouteItemScaleObsolete}/{itemCast.Identity.Id}")
                        Text=@itemCast.Description />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ScaleModel" Title=@LocaleCore.Table.Host Width="20%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; "
                        Path=@(itemCast.Host is null ? "" : $"{LocaleCore.DeviceControl.RouteItemHost}/{itemCast.Host.Identity.Id}")
                            Text=@(itemCast.Host is null ? LocaleCore.Table.FieldNull : itemCast.Host.Name) />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ScaleModel" Title=@LocaleCore.Table.DeviceIp Width="10%" TextAlign=TextAlign.Left >
                <Template Context="itemCast" >
                    <RadzenLabel Style="width: 100%; " Text=@itemCast.DeviceIp />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ScaleModel" Title=@LocaleCore.Print.NameMain Width="20%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; "
                        Path=@(itemCast.PrinterMain is null ? "" : $"{LocaleCore.DeviceControl.RouteItemPrinter}/{itemCast.PrinterMain.Identity.Id}")
                        Text=@(itemCast.PrinterMain is null ? LocaleCore.Table.FieldNull : itemCast.PrinterMain.Name) />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ScaleModel" Title=@LocaleCore.Table.WorkShopName Width="20%" TextAlign=TextAlign.Left >
	            <Template Context="itemCast">
		            <RadzenLink Style="width: 100%; "
		                Path=@(itemCast.WorkShop is null ? "" : $"{LocaleCore.DeviceControl.RouteItemWorkShop}/{itemCast.WorkShop.Identity.Id}")
                        Text=@(itemCast.WorkShop is null ? LocaleCore.Table.FieldNull : itemCast.WorkShop.Name) />
	            </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ScaleModel" TextAlign=TextAlign.Center Title=@LocaleCore.Table.IsKneading Width="5%">
                <Template Context="itemCast" >
                    <RadzenCheckBox Disabled=true ReadOnly=true TValue="bool" @bind-Value=@itemCast.IsKneading />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@(this) />
}
