@inherits BlazorCore.Models.RazorPageSectionBase<HostModel>
@page "/section/hosts"
@using BlazorDeviceControl.Razors.Components
@using BlazorDeviceControl.Razors.Sections.Components

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload TItem=HostModel ParentRazor=@(this) PageTitle=@LocaleCore.DeviceControl.SectionHosts />

    <RadzenGrid Style="margin-top: 5px;"
        Data=@ItemsCast TItem="HostModel" 
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns>
            <SectionFieldIsMarked TItem=HostModel ParentRazor=@(this) />
	        <SectionFieldIdentity TItem=HostModel ParentRazor=@(this) />
            <SectionField TItem=HostModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("12%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.Base.GetChangeDt() />
            <RadzenGridColumn 
                TItem="HostModel" PageTitle=@LocaleCore.Table.NamePretty Width="22.5%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemHost}/{itemCast.Identity.Id}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="HostModel" PageTitle=@LocaleCore.Table.Host Width="22.5%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemHost}/{itemCast.Identity.Id}")
                        Text=@itemCast.HostName />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="HostModel" Property="Ip" PageTitle=@LocaleCore.Table.DeviceIp Type="string" Width="20.0%" />
            <RadzenGridColumn 
                TItem="HostModel" TextAlign=TextAlign.Center Property="MacAddress.ValuePrettyLookMinus" PageTitle=@LocaleCore.Table.DeviceMac
                Type="string" Width="20.0%" />
        </Columns>
    </RadzenGrid>

    <SectionButtons TItem=HostModel ParentRazor=@(this) />
}
