@inherits BlazorCore.Models.RazorPageModel
@page "/section/hosts"
@using ActionsLoad = BlazorDeviceControl.Razors.Components.ActionsLoad
@using ActionsReloadSection = BlazorDeviceControl.Razors.Components.ActionsReloadSection
@using BlazorDeviceControl.Razors.Components

@if (!IsLoaded)
{
    <ActionsLoad DataLoadItem=ActionLoad.Loading IsShowProgress=true />
}
else
{
    <ActionsReloadSection ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionHosts />

    <RadzenGrid Style="margin-top: 5px;"
        Data=@ItemsCast TItem="HostModel" @bind-Value=@ItemObject
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns>
            @if (IsShowMarked)
            {
                <RadzenGridColumn TItem="HostModel" TextAlign=TextAlign.Center SortProperty="IsMarked" 
                    Title=@LocaleCore.Table.IsMarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast" >
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn TItem="HostModel" TextAlign=TextAlign.Center
                Title=@LocaleCore.Table.CreateDt Type="date" Width="15.0%">
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemHost}/{itemCast.Identity.Id}")
                        Text=@itemCast.CreateDt.ToString("yyyy-MM-dd HH:mm:ss") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="HostModel" Title=@LocaleCore.Table.NamePretty Width="22.5%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemHost}/{itemCast.Identity.Id}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="HostModel" Title=@LocaleCore.Table.Host Width="22.5%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemHost}/{itemCast.Identity.Id}")
                        Text=@itemCast.HostName />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="HostModel" Property="Ip" Title=@LocaleCore.Table.DeviceIp Type="string" Width="20.0%" />
            <RadzenGridColumn 
                TItem="HostModel" TextAlign=TextAlign.Center Property="MacAddress.ValuePrettyLookMinus" Title=@LocaleCore.Table.DeviceMac
                Type="string" Width="20.0%" />
        </Columns>
    </RadzenGrid>

    <ActionsButtons ParentRazor=@(this) />
}
