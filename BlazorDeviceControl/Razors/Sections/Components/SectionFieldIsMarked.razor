@typeparam T
@inherits BlazorCore.Models.RazorPageSectionBase<T>
@page "/section/field_ismarked"

@if (RazorConfig.IsShowMarked)
{
	<RadzenGridColumn TItem=T TextAlign=TextAlign.Center Width=@(CssStyleRadzenColumn.Width) Title=@LocaleCore.Table.IsMarkedShort Type="bool" 
	    SortProperty="IsMarked" >
		<Template Context="itemCast">
			<RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "")/>
		</Template>
	</RadzenGridColumn>
}
