@typeparam T
@inherits BlazorCore.Models.RazorPageSectionBase<T>
@page "/section/field_change_dt"

<RadzenGridColumn TItem=T Type="date" TextAlign=TextAlign.Center Width=@(CssStyleRadzenColumn.Width) Title=@LocaleCore.Table.ChangeDt >
	<Template Context="itemCast">
		@if (CssStyleRadzenColumn.IsShowLink)
		{
			<RadzenLink Style="width: 100%; margin-left: 0;" 
			            Path=@(GetRoutePath(itemCast)) Text=@itemCast.ChangeDt.ToString("yyyy-MM-dd HH:mm:ss") />
		}
		else
		{
			<RadzenLabel Style="width: 100%; margin-left: 0;" Text=@itemCast.ChangeDt.ToString("yyyy-MM-dd HH:mm:ss") />
		}
	</Template>
</RadzenGridColumn>
