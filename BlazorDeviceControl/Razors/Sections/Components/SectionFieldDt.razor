@typeparam T
@inherits BlazorCore.Models.RazorPageSectionBase<T>
@page "/section/field_dt"

<RadzenGridColumn TItem=T Type="date" TextAlign=TextAlign.Center Width=@(CssStyleRadzenColumn.Width) >
	<Template Context="itemCast">
		@if (CssStyleRadzenColumn.IsShowLink)
		{
			<RadzenLink Style="width: 100%; margin-left: 0;" 
			    Path=@(GetRouteItemPath(itemCast)) Text=@itemCast.GetFieldDt(FieldName) />
		}
		else
		{
			<RadzenLabel Style="width: 100%; margin-left: 0;" Text=@itemCast.GetFieldDt(FieldName) />
		}
	</Template>
</RadzenGridColumn>
