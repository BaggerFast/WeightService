@typeparam T
@inherits BlazorCore.Models.RazorPageSectionBase<T>
@page "/section/field"

<RadzenGridColumn TItem=T Type=@RazorFieldConfig.FieldType TextAlign=@RazorFieldConfig.FieldTextAlign
				  Width=@(CssStyleRadzenColumn.Width) Title=@RazorFieldConfig.FieldTitle >
	<Template Context="itemCast">
		@if (CssStyleRadzenColumn.IsShowLink)
		{
			<RadzenLink Style="width: 100%; margin-left: 0;"
				Path=@(string.IsNullOrEmpty(RazorFieldConfig.FieldLink) ? (GetRouteItemPath(itemCast)) : RazorFieldConfig.FieldLink)
				Text=@itemCast.GetFieldAsString(RazorFieldConfig.FieldName) />
		}
		else
		{
			<RadzenLabel Style="width: 100%; margin-left: 0;"
				Text=@itemCast.GetFieldAsString(RazorFieldConfig.FieldName) />
		}
	</Template>
</RadzenGridColumn>
