@typeparam T
@inherits BlazorCore.Models.RazorPageSectionBase<T>
@page "/section/field"

<RadzenGridColumn TItem=T Type="date" TextAlign=@TextAlign Width=@(CssStyleRadzenColumn.Width) Title=@Title >
	<Template Context="itemCast">
		@if (CssStyleRadzenColumn.IsShowLink)
		{
			<RadzenLink Style="width: 100%; margin-left: 0;" Path=@(GetRouteItemPath(itemCast)) Text=@itemCast.GetFieldAsString(FieldName) />
		}
		else
		{
			<RadzenLabel Style="width: 100%; margin-left: 0;" Text=@itemCast.GetFieldAsString(FieldName) />
		}
	</Template>
</RadzenGridColumn>
