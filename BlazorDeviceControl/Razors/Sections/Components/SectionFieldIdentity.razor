@typeparam T
@inherits BlazorCore.Models.RazorPageSectionBase<T>
@page "/section/field_identity"

<RadzenGridColumn TItem=T TextAlign=TextAlign.Center Width=@(CssStyleRadzenColumn.Width) Title=@(GetColumnIdentityName<T>()) >
	<Template Context="itemCast">
		@if (CssStyleRadzenColumn.IsShowLink)
		{
			<RadzenLink Style="width: 100%; margin-left: 0;" Path=@(GetRoutePath(itemCast)) Text=@itemCast.Identity.GetValueAsString() />
		}
		else
		{
			<RadzenLabel Style="width: 100%; margin-left: 0;" Text=@itemCast.Identity.GetValueAsString() />
		}
	</Template>
</RadzenGridColumn>
