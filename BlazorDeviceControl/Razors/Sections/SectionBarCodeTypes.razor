@inherits BlazorCore.Models.RazorPageSectionBase<BarCodeTypeModel>
@page "/section/barcodetypes"

@using BlazorDeviceControl.Razors.Components

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload T=BarCodeTypeModel ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionBarCodeTypes />
    
    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="BarCodeTypeModel" @bind-Value=@ItemObject
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
            @if (RazorConfig.IsShowMarked)
            {
                <RadzenGridColumn TItem="BarCodeTypeModel" TextAlign=TextAlign.Center SortProperty="IsMarked" 
                    Title=@LocaleCore.Table.IsMarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast" >
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn 
                TItem="BarCodeTypeModel" TextAlign=TextAlign.Center SortProperty="CreateDt"
                Title=@LocaleCore.Table.CreateDt Type="date" Width="20%">
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemBarCodeType}/{itemCast.Identity.Uid}")
                        Text=@itemCast.CreateDt.ToString("yyyy-MM-dd HH:mm:ss") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="BarCodeTypeModel" TextAlign=TextAlign.Center SortProperty="ChangeDt"
                    Title=@LocaleCore.Table.ChangeDt Type="date" Width="20%">
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemBarCodeType}/{itemCast.Identity.Uid}")
                        Text=@itemCast.ChangeDt.ToString("yyyy-MM-dd HH:mm:ss") />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="BarCodeTypeModel" Title=@LocaleCore.Table.Name Width="60%" SortProperty="Name" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemBarCodeType}/{itemCast.Identity.Uid}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <SectionButtons T=BarCodeTypeModel ParentRazor=@(this) />
}