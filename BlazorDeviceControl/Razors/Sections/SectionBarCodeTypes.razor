@inherits BlazorCore.Models.RazorPageSectionBase<BarCodeTypeModel>
@page "/section/barcodetypes"
@using BlazorDeviceControl.Razors.Components
@using BlazorDeviceControl.Razors.Sections.Components

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload TItem=BarCodeTypeModel ParentRazor=@(this) Title=@LocaleCore.DeviceControl.SectionBarCodeTypes />
    
    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem=BarCodeTypeModel 
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
	        <SectionFieldIsMarked TItem=BarCodeTypeModel ParentRazor=@(this) />
	        <SectionFieldIdentity TItem=BarCodeTypeModel ParentRazor=@(this) />
            <SectionField TItem=BarCodeTypeModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("12%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.Base.GetChangeDt() />
            <RadzenGridColumn 
                TItem=BarCodeTypeModel Title=@LocaleCore.Table.Name Width="60%" SortProperty="Name" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemBarCodeType}/{itemCast.Identity.Uid}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <SectionButtons TItem=BarCodeTypeModel ParentRazor=@(this) />
}