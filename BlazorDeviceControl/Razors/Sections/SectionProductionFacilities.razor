@inherits RazorPageSectionBase<ProductionFacilityModel>
@page "/section/production_facilities"
@using BlazorCore.Razors
@using BlazorDeviceControl.Razors.Components
@using BlazorDeviceControl.Razors.Sections.Components

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload TItem=ProductionFacilityModel ParentRazor=@(this) Title=@LocaleCore.DeviceControl.ItemProductionFacility />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem=ProductionFacilityModel 
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
            <SectionFieldIsMarked TItem=ProductionFacilityModel ParentRazor=@(this) />
	        <SectionFieldIdentity TItem=ProductionFacilityModel ParentRazor=@(this) />
            <SectionField TItem=ProductionFacilityModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("19%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.ProductionFacility.GetName() />
            <SectionField TItem=ProductionFacilityModel ParentRazor=@(this) CssStyleRadzenColumn=@(new("55%", true))
                RazorFieldConfig=@RazorFieldConfigUtils.ProductionFacility.GetAddress() />
        </Columns>
    </RadzenGrid>

    <SectionButtons TItem=ProductionFacilityModel ParentRazor=@(this) />
}
