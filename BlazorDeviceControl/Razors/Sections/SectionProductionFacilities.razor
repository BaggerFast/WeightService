@inherits BlazorCore.Models.RazorPageSectionBase<ProductionFacilityModel>
@page "/section/productionfacilities"

@using BlazorDeviceControl.Razors.Components

@if (!IsActionsParametersSetFinished)
{
    <ActionsLoad DataLoadItem=ActionLoadEnum.Loading IsShowProgress=true />
}
else
{
    <SectionReload T=ProductionFacilityModel ParentRazor=@(this) Title=@LocaleCore.DeviceControl.ItemProductionFacility />

    <RadzenGrid Style="margin-top: 5px;" 
        Data=@ItemsCast TItem="ProductionFacilityModel" @bind-Value=@ItemObject
        RowDoubleClick=@(_ => ActionEditAsync(UserSettings, false, false))
        AllowFiltering=true FilterCaseSensitivity=FilterCaseSensitivity.CaseInsensitive FilterMode="FilterMode.Advanced"
        AllowPaging=true PageSize=@AppSettings.DataAccess.JsonSettingsLocal.SectionRowsCount AllowSorting=true >
        <Columns >
            @if (IsShowMarked)
            {
                <RadzenGridColumn TItem="ProductionFacilityModel" TextAlign=TextAlign.Center SortProperty="IsMarked" 
                    Title=@LocaleCore.Table.IsMarkedShort Type="bool" Width="3.5%">
                    <Template Context="itemCast" >
                        <RadzenIcon Icon=@(itemCast.IsMarked ? "delete" : "") />
                    </Template>
                </RadzenGridColumn>
            }
            <RadzenGridColumn TItem="ProductionFacilityModel" Title=@LocaleCore.Table.Id Width="5%">
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                            Path=@($"{LocaleCore.DeviceControl.RouteItemProductionFacility}/{itemCast.Identity.Id}")
                            Text=@itemCast.Identity.Id.ToString() />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ProductionFacilityModel" Title=@LocaleCore.Table.Name Width="20%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemProductionFacility}/{itemCast.Identity.Id}")
                        Text=@itemCast.Name />
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn 
                TItem="ProductionFacilityModel" Title=@LocaleCore.Table.Address Width="75%" >
                <Template Context="itemCast" >
                    <RadzenLink Style="width: 100%; margin-left: 0; "
                        Path=@($"{LocaleCore.DeviceControl.RouteItemProductionFacility}/{itemCast.Identity.Id}")
                        Text=@itemCast.Address />
                </Template>
            </RadzenGridColumn>
        </Columns>
    </RadzenGrid>

    <SectionButtons T=ProductionFacilityModel ParentRazor=@(this) />
}
