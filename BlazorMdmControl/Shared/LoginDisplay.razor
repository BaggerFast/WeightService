@inherits MdmControlBlazor.Data.BaseRazorEntity
@page "/login"
@using BlazorCore
@using DataCore
@using DataCore.Localizations

<AuthorizeView>
    <Authorizing>
        <div>@LocaleCore.Strings.Main.AuthorizingProcess</div>
    </Authorizing>
    <Authorized>
        @if (context.User.Identity != null)
        {
            //BlazorSettings.State = context;
            <div>@context.User.Identity.Name</div>
        }!
        <div>User detect error!</div>
    </Authorized>
    <NotAuthorized>
        <div>@LocaleCore.Strings.Main.AuthorizingNot</div>
    </NotAuthorized>
</AuthorizeView>
